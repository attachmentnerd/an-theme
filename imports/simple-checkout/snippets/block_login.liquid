<div class="col-6 text-center">
  <div class="auth__content">
    {% if section.settings.show_image %}
      <div class="auth__image" kjb-settings-id="{{ 'image' | settings_id: section: section }}">
        {{ section.settings.image | image_picker_url: 'placeholder.png' | image_tag: alt: section.settings.image_alt, class: "image" }}
      </div>
    {% endif %}
    <h1
      class="auth__title"
      kjb-settings-id="{{ 'login_text' | settings_id: section: section }}"
      {% element_attributes "section.settings.login_text" %}
    >
      {{ section.settings.login_text }}
    </h1>
    {% form 'new_member_session', current_site_user %}
      {% if form.notice %}
        <div class="auth__message alert alert--danger">{{ form.notice }}</div>
      {% endif %}
      {% if form.errors.messages['form'] %}
        <div class="auth__message alert alert--danger">{{ form.errors.messages['form'] }}</div>
      {% endif %}
      <div class="form-group">
        <label
          class="auth__label"
          for="member_email"
          kjb-settings-id="{{ 'email' | settings_id: section: section }}"
          {% element_attributes "section.settings.email" %}
        >
          {{ section.settings.email }}
        </label>
        <input class="form-control auth__field" spellcheck="false" autocorrect="off" autofocus="autofocus" type="text" name="member[email]" id="member_email" value="{{form.email}}" />
      </div>
      <div class="form-group">
        <label
          class="auth__label"
          for="member_password"
          kjb-settings-id="{{ 'password' | settings_id: section: section }}"
          {% element_attributes "section.settings.password" %}
        >
          {{ section.settings.password }}
        </label>
        <input class="form-control auth__field" type="password" name="member[password]" id="member_password" />
      </div>
      <div class="form-group">
        <label kjb-settings-id="{{ 'remember_me' | settings_id: section: section }}">
          <input
            class="boolean optional"
            type="checkbox"
            value="1"
            name="member[remember_me]"
            id="member_remember_me"
          />
            <span class="auth__label" {% element_attributes "section.settings.remember_me" %}>{{ section.settings.remember_me }}</span>
        </label>
      </div>
      <button
        id="form-button"
        class="form-btn btn--{{ btn_style }} btn--{{ btn_width }} btn--{{ btn_size }}"
        type="submit"
        kjb-settings-id="{{ 'btn_text' | settings_id: section: section, block: block }}"
      >
        {%- element "section.settings.btn_text" -%}
          {{ section.settings.btn_text }}
        {%- endelement -%}
      </button>
    {% endform %}

    {% unless enabled_social_login_settings == empty %}
      <div>
        <div class="divider" kjb-settings-id="{{ 'social_divider_text' | settings_id: section: section }}">
          {% element "section.settings.social_divider_text" %}
            {{ section.settings.social_divider_text }}
          {% endelement %}
        </div>
        {% for setting in enabled_social_login_settings %}
          {% assign mapped_setting = "_oauth2" | prepend: setting %}

          {% form 'members_oauth_form', mapped_setting %}
            <button kjb-settings-id="{{ 'social_login_button_text' | settings_id: section: section }}" class="gsi-material-button gsi-material-button__{{ section.settings.social_button_style }} gsi-material-button__{{ section.settings.social_button_theme }} gsi-material-button__{{ section.settings.social_button_width }}">
              <div class="gsi-material-button-state"></div>
              <div class="gsi-material-button-content-wrapper">
                <div class="gsi-material-button-icon">
                  <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
                    <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
                    <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
                    <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
                    <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
                    <path fill="none" d="M0 0h48v48H0z"></path>
                  </svg>
                </div>
                <span class="gsi-material-button-contents">{{ section.settings.social_login_button_text | t }}</span>
                <span style="display: none;">{{ section.settings.social_login_button_text | t }}</span>
              </div>
            </button>
          {% endform %}
        {% endfor %}
      </div>
    {% endunless %}
    <div class="auth__link">
      <a
        href="/password/new"
        kjb-settings-id="{{ 'forgot_password' | settings_id: section: section }}"
        {% element_attributes "section.settings.forgot_password" %}
      >
        {{ section.settings.forgot_password }}
      </a>
    </div>
  </div>
</div>
