{% comment %}
  Modern Product Hero Section
  Clean hero section for product pages
{% endcomment %}

<style>
  /* Modern Product Hero Styles */
  .product-hero-modern {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 80px 0 60px;
    margin-bottom: 40px;
  }
  
  .product-hero-modern .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .product-hero-modern h1 {
    font-size: 48px;
    font-weight: 700;
    margin: 0 0 16px 0;
    line-height: 1.2;
  }
  
  .product-hero-modern .subtitle {
    font-size: 20px;
    opacity: 0.9;
    margin-bottom: 32px;
    max-width: 600px;
  }
  
  .product-hero-modern .meta {
    display: flex;
    gap: 32px;
    align-items: center;
    flex-wrap: wrap;
  }
  
  .product-hero-modern .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  .product-hero-modern .meta-icon {
    width: 20px;
    height: 20px;
    opacity: 0.8;
  }
  
  .product-hero-modern .cta-button {
    background: white;
    color: #667eea;
    padding: 12px 32px;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.2s;
  }
  
  .product-hero-modern .cta-button:hover {
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .product-hero-modern h1 {
      font-size: 32px;
    }
    
    .product-hero-modern .subtitle {
      font-size: 18px;
    }
  }
</style>

<div class="product-hero-modern">
  <div class="container">
    <h1>{{ product.title }}</h1>
    {% if product.tagline %}
      <p class="subtitle">{{ product.tagline }}</p>
    {% endif %}
    
    <div class="meta">
      <div class="meta-item">
        <svg class="meta-icon" fill="currentColor" viewBox="0 0 20 20">
          <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path>
        </svg>
        <span>{{ product.instructor.name | default: "Instructor" }}</span>
      </div>
      
      {% if product.categories.size > 0 %}
        <div class="meta-item">
          <svg class="meta-icon" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z"></path>
          </svg>
          <span>{{ product.categories.size }} Modules</span>
        </div>
      {% endif %}
      
      {% if product.posts.size > 0 %}
        <div class="meta-item">
          <svg class="meta-icon" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"></path>
          </svg>
          <span>{{ product.posts.size }} Lessons</span>
        </div>
      {% endif %}
    </div>
    
    {% if product.started == false %}
      <div style="margin-top: 32px;">
        <a href="{{ product.first_post.url }}" class="cta-button">Start Course</a>
      </div>
    {% endif %}
  </div>
</div>

