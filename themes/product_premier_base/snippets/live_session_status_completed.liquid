<div class="live-session-details-status__container">
  <span class="live-session-details-status__icon">{% include "icon", icon: 'calendar', size: 16, color: 'currentColor', aria_label: 'Calendar' %}</span>
  <div>
    <div kjb-settings-id="{{ 'completed_text' | settings_id: section: section }}">
      <span {% element_attributes "section.settings.completed_text" %}>{{ section.settings.completed_text }}</span>
      <span>{{ live_session.completed_at | default: page_state.fallback_completed_at | local_time: user: current_site_user, format: "%A, %B %d, %Y, %l:%M%p %Z" }}</span>
    </div>
  </div>
</div>
