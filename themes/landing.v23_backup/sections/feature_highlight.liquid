{% comment %} Feature Highlight Section - Split layout with gradient accents {% endcomment %}
<section class="feature-highlight" 
         id="{{ section.settings.section_id | default: 'feature-highlight' }}-{{ section.id }}"
         style="{% if section.settings.background_color %}background-color: {{ section.settings.background_color }};{% endif %}">
  
  <div class="container">
    <div class="feature-highlight__wrapper">
      
      {% comment %} Text content {% endcomment %}
      <div class="feature-highlight__content">
        {% if section.settings.eyebrow_text != blank %}
          <div class="feature-highlight__eyebrow">
            <span class="eyebrow-dot" style="background-color: {{ section.settings.accent_color }};"></span>
            {{ section.settings.eyebrow_text }}
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2 class="feature-highlight__heading" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="feature-highlight__description" kjb-settings-id="{{ 'description' | settings_id: section: section }}">
            {{ section.settings.description }}
          </p>
        {% endif %}

        {% comment %} Feature points and additional content blocks {% endcomment %}
        {% if section.blocks.size > 0 %}
          <div class="feature-highlight__points">
            {% for block in section.blocks %}
              {% if block.type == 'feature_point' %}
                <div class="feature-point" {{ block.shopify_attributes }}>
                  <div class="feature-point__header">
                    {% if block.settings.title != blank %}
                      <h3 class="feature-point__title">{{ block.settings.title }}</h3>
                    {% endif %}
                    {% if block.settings.link_text != blank and block.settings.link_url != blank %}
                      <a href="{{ block.settings.link_url }}" class="feature-point__link">
                        {{ block.settings.link_text }} →
                      </a>
                    {% endif %}
                  </div>
                  {% if block.settings.description != blank %}
                    <p class="feature-point__description">{{ block.settings.description }}</p>
                  {% endif %}
                </div>

              {% elsif block.type == 'bulleted_list' %}
                {% assign lines = block.settings.items | default: '' | strip | split: '\n' %}
                {% assign has_items = false %}
                {% for l in lines %}
                  {% assign l_stripped = l | strip %}
                  {% if l_stripped != '' %}
                    {% assign has_items = true %}
                    {% break %}
                  {% endif %}
                {% endfor %}
                {% if has_items %}
                <div class="feature-list" {{ block.shopify_attributes }}>
                  {% if block.settings.title != blank %}
                    <h3 class="feature-list__title">{{ block.settings.title }}</h3>
                  {% endif %}
                  <ul class="feature-list__ul">
                    {% for l in lines %}
                      {% assign item = l | strip %}
                      {% if item != '' %}
                        {% assign item = item | replace_first: '- ', '' | replace_first: '• ', '' %}
                        <li class="feature-list__li">{{ item }}</li>
                      {% endif %}
                    {% endfor %}
                  </ul>
                </div>
                {% endif %}

              {% elsif block.type == 'rich_text' %}
                {% if block.settings.content != blank %}
                  <div class="feature-richtext" {{ block.shopify_attributes }}>
                    {{ block.settings.content }}
                  </div>
                {% endif %}

              {% elsif block.type == 'custom_html_block' %}
                {% if block.settings.html != blank %}
                  <div class="feature-html" {{ block.shopify_attributes }}>
                    {{ block.settings.html }}
                  </div>
                {% endif %}
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <div class="feature-highlight__cta">
            <a href="{{ section.settings.button_link }}" 
               class="btn btn-primary-modern"
               style="color: var(--c-white) !important;">
              {{ section.settings.button_text }}
            </a>
          </div>
        {% endif %}
      </div>

      {% comment %} Visual showcase {% endcomment %}
      <div class="feature-highlight__visual">
        <div class="visual-container" 
             style="{% if section.settings.card_gradient_start and section.settings.card_gradient_end %}
                    background: linear-gradient({{ section.settings.card_gradient_angle }}deg, 
                                              {{ section.settings.card_gradient_start }} 0%, 
                                              {{ section.settings.card_gradient_end }} 100%);
                    {% endif %}">
          
          {% if section.settings.visual_type == 'image' %}
            {% if section.settings.main_image != blank %}
              <img src="{{ section.settings.main_image | image_picker_url: '800x450' }}" 
             alt="{{ section.settings.main_image_alt }}" 
             class="visual-container__image"
             loading="lazy"
             style="object-fit: cover;">
            {% else %}
              <div class="visual-container__placeholder" style="width: 100%; height: 100%; min-height: 400px; display: flex; align-items: center; justify-content: center; background: rgba(255,255,255,0.1); border-radius: 20px;">
                <div style="text-align: center;">
                  <svg width="100" height="100" viewBox="0 0 24 24" fill="white" opacity="0.5">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                  <p style="margin-top: 20px; color: white; font-weight: 500; font-size: 18px;">Feature Image</p>
                </div>
              </div>
            {% endif %}
          {% elsif section.settings.visual_type == 'video' and section.settings.video_url != blank %}
            <div class="visual-container__video">
              <video autoplay muted loop playsinline>
                <source src="{{ section.settings.video_url }}" type="video/mp4">
              </video>
            </div>
          {% elsif section.settings.visual_type == 'custom' %}
            <div class="visual-container__custom">
              {{ section.settings.custom_content }}
            </div>
          {% endif %}

          {% comment %} Floating elements {% endcomment %}
          {% for block in section.blocks %}
            {% if block.type == 'floating_element' %}
              <div class="floating-element floating-element--{{ block.settings.animation_style }}"
                   style="--delay: {{ block.settings.animation_delay }}s;"
                   {{ block.shopify_attributes }}>
                {% if block.settings.element_type == 'text' %}
                  <div class="floating-element__text">{{ block.settings.text_content }}</div>
                {% elsif block.settings.element_type == 'icon' %}
                  <div class="floating-element__icon">{{ block.settings.icon_content }}</div>
                {% elsif block.settings.element_type == 'image' and block.settings.element_image != blank %}
                  <img src="{{ block.settings.element_image | image_picker_url: '800x450' }}" 
             alt="{{ block.settings.element_alt }}" 
             class="img-fluid"
             loading="lazy"
             style="object-fit: cover;">
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Feature Highlight Section */
  .feature-highlight {
    padding: var(--space-2xl) 0;
    background-color: var(--c-white);
  }

  .feature-highlight__wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Content area */
  .feature-highlight__content {
    padding-right: var(--space-xl);
  }

  .feature-highlight__eyebrow {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--fs-caption);
    color: var(--c-ink-500);
    margin-bottom: var(--space-md);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .eyebrow-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: var(--c-accent-peach);
  }

  .feature-highlight__heading {
    font-size: var(--fs-h1);
    color: var(--c-ink-900);
    margin-bottom: var(--space-lg);
    font-weight: 500;
    line-height: 1.2;
  }

  .feature-highlight__description {
    font-size: var(--fs-body-lg);
    color: var(--c-ink-700);
    margin-bottom: var(--space-xl);
    line-height: 1.6;
  }

  /* Feature points */
  .feature-highlight__points {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }

  .feature-point {
    padding: var(--space-lg);
    background: var(--c-brand-100);
    border-radius: var(--radius-md);
    transition: all 0.2s var(--ease-out);
  }

  .feature-point:hover {
    transform: translateX(8px);
    box-shadow: var(--shadow-card);
  }

  .feature-point__header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: var(--space-sm);
  }

  .feature-point__title {
    font-size: var(--fs-body-lg);
    color: var(--c-ink-900);
    font-weight: 500;
    margin: 0;
  }

  .feature-point__link {
    font-size: var(--fs-caption);
    color: var(--c-brand-600);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.15s var(--ease-out);
  }

  .feature-point__link:hover {
    color: var(--c-brand-800);
  }

  .feature-point__description {
    font-size: var(--fs-body);
    color: var(--c-ink-700);
    margin: 0;
  }

  /* Additional blocks: Bulleted list, Rich text, HTML */
  .feature-list { background: var(--c-white); border: 1px solid var(--c-brand-100); border-radius: var(--radius-md); padding: var(--space-lg); }
  .feature-list__title { font-size: var(--fs-body-lg); color: var(--c-ink-900); font-weight: 600; margin: 0 0 var(--space-sm); }
  .feature-list__ul { list-style: none; padding: 0; margin: 0; display: grid; gap: 8px; }
  .feature-list__li { position: relative; padding-left: 26px; color: var(--c-ink-700); }
  .feature-list__li::before { content: "\2713"; /* checkmark */ position: absolute; left: 0; top: 2px; width: 18px; height: 18px; border-radius: 9999px; display: grid; place-items: center; font-size: 12px; color: #fff; background: var(--c-brand-600); box-shadow: 0 2px 6px rgba(94,59,255,.25); }
  .feature-richtext { color: var(--c-ink-700); font-size: var(--fs-body); line-height: 1.65; background: var(--c-white); border: 1px solid var(--c-brand-100); border-radius: var(--radius-md); padding: var(--space-lg); }
  .feature-html { background: var(--c-white); border: 1px solid var(--c-brand-100); border-radius: var(--radius-md); padding: var(--space-lg); }

  /* CTA */
  .feature-highlight__cta {
    margin-top: var(--space-xl);
  }

  /* Visual showcase */
  .feature-highlight__visual {
    position: relative;
  }

  .visual-container {
    position: relative;
    background: var(--g-purple-dark);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  }

  .visual-container__image {
    width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    position: relative;
    z-index: 2;
  }

  .visual-container__video {
    width: 100%;
    height: 100%;
    position: relative;
    z-index: 2;
  }

  .visual-container__video video {
    width: 100%;
    height: auto;
    border-radius: var(--radius-md);
  }

  /* Floating elements */
  .floating-element {
    position: absolute;
    background: var(--c-white);
    border-radius: var(--radius-sm);
    padding: var(--space-sm) var(--space-md);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    z-index: 3;
    animation-delay: var(--delay);
  }

  .floating-element--bounce {
    animation: bounce 3s ease-in-out infinite;
  }

  .floating-element--float {
    animation: float 6s ease-in-out infinite;
  }

  .floating-element--pulse {
    animation: pulse 2s ease-in-out infinite;
  }

  .floating-element__text {
    font-size: var(--fs-caption);
    color: var(--c-ink-700);
    font-weight: 500;
  }

  .floating-element__icon {
    font-size: 20px;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.05); opacity: 0.8; }
  }

  /* Responsive */
  @media (max-width: 991px) {
    .feature-highlight__wrapper {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .feature-highlight__content {
      padding-right: 0;
      text-align: center;
    }

    .feature-highlight__eyebrow {
      justify-content: center;
    }

    .feature-highlight__cta {
      display: flex;
      justify-content: center;
    }
  }

  @media (max-width: 767px) {
    .feature-highlight {
      padding: var(--space-xl) 0;
    }

    .feature-highlight__heading {
      font-size: var(--fs-h2);
    }

    .visual-container {
      padding: var(--space-lg);
      min-height: 300px;
    }

    .floating-element {
      display: none;
    }
  }
</style>

