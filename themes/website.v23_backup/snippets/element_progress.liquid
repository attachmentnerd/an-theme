{% if section.settings.progress %}
  {% assign progress_percent = percent | default: 0 | round %}
  <div class="progress" 
       role="progressbar"
       aria-valuenow="{{ progress_percent }}" 
       aria-valuemin="0" 
       aria-valuemax="100"
       aria-label="{% if label %}{{ label }}: {{ progress_percent }}%{% else %}Progress: {{ progress_percent }}%{% endif %}">
    <div class="progress__outer" kjb-settings-id="{{ 'progress' | settings_id: section: section }}">
      <div class="progress__inner" style="width: {{ progress_percent }}%">
        <span class="visually-hidden">{{ progress_percent }}% complete</span>
      </div>
    </div>
  </div>
{% endif %}
