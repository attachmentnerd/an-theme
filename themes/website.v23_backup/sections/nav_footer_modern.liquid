{% assign footer_visible = section.settings.show_footer %}
{% if footer_visible != false %}
  {% assign social_links_string = 'Instagram=>https://www.instagram.com/attachmentnerd/|TikTok=>https://www.tiktok.com/@attachmentnerd|YouTube=>https://www.youtube.com/@attachmentnerd|Facebook=>https://www.facebook.com/attachmentnerd' %}
  {% assign social_links = social_links_string | split: '|' %}
  {% assign explore_links_string = 'About=>/about|Programs=>/program/secure-parenting|Courses=>/courses|Speaking=>/speaking' %}
  {% assign explore_links = explore_links_string | split: '|' %}
  {% assign resources_links_string = 'Podcast=>/podcast|Book=>/books|Blog=>/blog|Resource Library=>/resources' %}
  {% assign resources_links = resources_links_string | split: '|' %}
  {% assign support_links_string = 'Help Center=>/support|Contact=>mailto:hello@attachmentnerd.com|Press Kit=>/press|Affiliate Program=>/affiliate' %}
  {% assign support_links = support_links_string | split: '|' %}

  <style>
    #an-footer-{{ section.id }} {
      position: relative;
      background: #0f172a;
      color: #e2e8f0;
      padding: 3.5rem 0 2.5rem;
      overflow: hidden;
    }

    #an-footer-{{ section.id }}::before {
      content: '';
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at top left, rgba(99, 102, 241, 0.18), transparent 55%);
      pointer-events: none;
    }

    #an-footer-{{ section.id }} .an-footer__grid {
      position: relative;
      display: grid;
      gap: 2.5rem;
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    #an-footer-{{ section.id }} .an-footer__column {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    #an-footer-{{ section.id }} .an-footer__logo {
      font-family: var(--font-heading, var(--font-sans));
      font-size: 1.6rem;
      font-weight: 600;
      letter-spacing: -0.02em;
      color: #ffffff;
    }

    #an-footer-{{ section.id }} .an-footer__description {
      margin-top: 1rem;
      max-width: 22rem;
      font-size: 0.95rem;
      line-height: 1.6;
      color: #cbd5f5;
    }

    #an-footer-{{ section.id }} .an-footer__social {
      margin-top: 1.5rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    #an-footer-{{ section.id }} .an-footer__social a {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 2.5rem;
      height: 2.5rem;
      border-radius: 50%;
      border: 1px solid rgba(148, 163, 184, 0.35);
      color: #f8fafc;
      text-decoration: none;
      font-size: 0.85rem;
      transition: background 0.2s ease, border-color 0.2s ease;
    }

    #an-footer-{{ section.id }} .an-footer__social a:hover,
    #an-footer-{{ section.id }} .an-footer__social a:focus {
      background: rgba(99, 102, 241, 0.18);
      border-color: rgba(99, 102, 241, 0.4);
      color: #ffffff;
    }

    #an-footer-{{ section.id }} .an-footer__heading {
      font-size: 1rem;
      font-weight: 600;
      letter-spacing: 0.01em;
      color: #f8fafc;
      margin-bottom: 0.25rem;
    }

    #an-footer-{{ section.id }} a.an-footer__link {
      color: #cbd5f5;
      text-decoration: none;
      font-size: 0.95rem;
      transition: color 0.2s ease;
    }

    #an-footer-{{ section.id }} a.an-footer__link:hover,
    #an-footer-{{ section.id }} a.an-footer__link:focus {
      color: #ffffff;
    }

    #an-footer-{{ section.id }} .an-footer__form {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      margin-top: 0.75rem;
    }

    #an-footer-{{ section.id }} .an-footer__form-input {
      width: 100%;
      padding: 0.75rem 1rem;
      border-radius: 0.75rem;
      border: 1px solid rgba(148, 163, 184, 0.4);
      background: rgba(148, 163, 184, 0.08);
      color: #f1f5f9;
      font-size: 0.95rem;
      transition: border-color 0.2s ease, background 0.2s ease;
    }

    #an-footer-{{ section.id }} .an-footer__form-input:focus {
      outline: none;
      border-color: rgba(99, 102, 241, 0.6);
      background: rgba(99, 102, 241, 0.12);
    }

    #an-footer-{{ section.id }} .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      border: 0;
    }

    #an-footer-{{ section.id }} .an-footer__form-button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1.25rem;
      border-radius: 0.75rem;
      background: linear-gradient(135deg, #4338ca, #6366f1);
      color: #ffffff;
      font-weight: 600;
      font-size: 0.95rem;
      border: none;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    #an-footer-{{ section.id }} .an-footer__form-button:hover,
    #an-footer-{{ section.id }} .an-footer__form-button:focus {
      transform: translateY(-1px);
      box-shadow: 0 12px 26px -12px rgba(79, 70, 229, 0.7);
    }

    #an-footer-{{ section.id }} .an-footer__disclaimer {
      font-size: 0.8rem;
      color: #94a3b8;
      line-height: 1.6;
    }

    #an-footer-{{ section.id }} .an-footer__divider {
      position: relative;
      margin: 3rem 0 2rem;
      border-top: 1px solid rgba(148, 163, 184, 0.25);
    }

    #an-footer-{{ section.id }} .an-footer__bottom {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
      font-size: 0.85rem;
      color: #94a3b8;
    }

    #an-footer-{{ section.id }} .an-footer__legal {
      display: inline-flex;
      flex-wrap: wrap;
      gap: 1.25rem;
    }

    #an-footer-{{ section.id }} .an-footer__legal a {
      color: #cbd5f5;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    #an-footer-{{ section.id }} .an-footer__legal a:hover,
    #an-footer-{{ section.id }} .an-footer__legal a:focus {
      color: #ffffff;
    }

    @media (max-width: 1024px) {
      #an-footer-{{ section.id }} .an-footer__grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }

    @media (max-width: 640px) {
      #an-footer-{{ section.id }} {
        padding: 3rem 0 2rem;
      }

      #an-footer-{{ section.id }} .an-footer__grid {
        grid-template-columns: 1fr;
      }

      #an-footer-{{ section.id }} .an-footer__bottom {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>

  <footer id="an-footer-{{ section.id }}" class="an-footer">
    <div class="container">
      <div class="an-footer__grid">
        <div class="an-footer__column">
          <div class="an-footer__logo">Attachment Nerd</div>
          <p class="an-footer__description">
            Attachment education, tools, and programs from therapist and author Eli Harwood to help families create secure, lasting connections.
          </p>
          <div class="an-footer__social">
            {% for social_item in social_links %}
              {% assign social_parts = social_item | split: '=>' %}
              {% assign social_label = social_parts[0] | strip %}
              {% assign social_url = social_parts[1] | strip %}
              {% assign social_abbr = social_label | slice: 0, 2 | upcase %}
              <a href="{{ social_url }}" target="_blank" rel="noopener" data-evt="footer_social_{{ social_label | handle }}">
                {{ social_abbr }}
              </a>
            {% endfor %}
          </div>
        </div>

        <div class="an-footer__column">
          <div class="an-footer__heading">Explore</div>
          {% for link_item in explore_links %}
            {% assign parts = link_item | split: '=>' %}
            {% assign label = parts[0] | strip %}
            {% assign url = parts[1] | strip %}
            <a href="{{ url }}" class="an-footer__link" data-evt="footer_link_explore_{{ label | handle }}">{{ label }}</a>
          {% endfor %}
        </div>

        <div class="an-footer__column">
          <div class="an-footer__heading">Resources</div>
          {% for link_item in resources_links %}
            {% assign parts = link_item | split: '=>' %}
            {% assign label = parts[0] | strip %}
            {% assign url = parts[1] | strip %}
            <a href="{{ url }}" class="an-footer__link" data-evt="footer_link_resources_{{ label | handle }}">{{ label }}</a>
          {% endfor %}
        </div>

        <div class="an-footer__column">
          <div class="an-footer__heading">Support</div>
          {% for link_item in support_links %}
            {% assign parts = link_item | split: '=>' %}
            {% assign label = parts[0] | strip %}
            {% assign url = parts[1] | strip %}
            <a href="{{ url }}" class="an-footer__link" data-evt="footer_link_support_{{ label | handle }}">{{ label }}</a>
          {% endfor %}
          <div class="an-footer__heading" style="margin-top: 1.5rem;">Stay Connected</div>
          <form class="an-footer__form" action="#" method="post" data-form-type="newsletter">
            <label class="sr-only" for="an-footer-email-{{ section.id }}">Email address</label>
            <input id="an-footer-email-{{ section.id }}" type="email" name="email" class="an-footer__form-input" placeholder="Email address" required aria-required="true">
            <button type="submit" class="an-footer__form-button" data-evt="footer_newsletter_submit">Subscribe</button>
          </form>
          <p class="an-footer__disclaimer">We respect your inbox. Unsubscribe at any time.</p>
        </div>
      </div>

      <div class="an-footer__divider"></div>

      <div class="an-footer__bottom">
        <p>Â© {{ 'now' | date: '%Y' }} Attachment Nerd. All rights reserved.</p>
        <div class="an-footer__legal">
          <a href="/privacy" data-evt="footer_privacy">Privacy Policy</a>
          <a href="/terms" data-evt="footer_terms">Terms of Service</a>
          <a href="mailto:hello@attachmentnerd.com" data-evt="footer_contact">Contact</a>
        </div>
      </div>
    </div>
  </footer>
{% endif %}

{% schema %}
{
  "name": "Footer",
  "elements": [
    {
      "type": "checkbox",
      "id": "show_footer",
      "label": "Show footer",
      "default": true
    }
  ]
}
{% endschema %}
