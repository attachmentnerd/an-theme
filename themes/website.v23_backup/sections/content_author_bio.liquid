<!-- Author Bio Section - Modern Design -->
<section id="{{ section.settings.section_id | default: 'content-author-bio' }}-{{ section.id }}" class="author-bio-modern py-5 position-relative overflow-hidden" style="background: linear-gradient(180deg, #FFFFFF 0%, var(--c-brand-100) 100%);">
  <div class="container">
    <div class="row align-items-center g-5">
      <div class="col-lg-5 text-center text-lg-start">
        <div class="author-visual animate-fade-in position-relative">
          <!-- Author image with decorative elements -->
          <div class="author-image-wrapper position-relative d-inline-block">
            {% if section.settings.author_image != blank %}
              <div kjb-settings-id="{{ '>
  <img src="{{ section.settings.author_image | image_picker_url: '120x120' }}" 
             alt="{{ section.settings.author_name }}" 
             class="author-image"
             loading="lazy"
             style="object-fit: cover;">
</div>
            {% else %}
              <div style="width: 320px; height: 320px; border-radius: 24px; overflow: hidden; box-shadow: 0 12px 24px rgba(0,0,0,.08); background: #f5f5f5; display: flex; align-items: center; justify-content: center;">
                <svg width="160" height="160" viewBox="0 0 160 160" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <circle cx="80" cy="60" r="30" fill="#BDBDBD"/>
                  <path d="M30 140c0-27.614 22.386-50 50-50s50 22.386 50 50" fill="#BDBDBD"/>
                </svg>
              </div>
            {% endif %}
            
            <!-- Decorative badge -->
            <div class="author-badge position-absolute" style="bottom: -10px; right: -10px; background: var(--c-brand-600); color: white; padding: 12px 20px; border-radius: 9999px; font-weight: 500; box-shadow: 0 4px 12px rgba(94,59,255,.3);">
              <span style="font-size: var(--fs-caption);">{{ section.settings.badge_text | default: 'Licensed Therapist' }}</span>
            </div>
          </div>
          
          <!-- Social links -->
          <div class="social-links d-flex justify-content-center justify-content-lg-start gap-3 mt-4">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'social_link' %}
                  <a href="{{ block.settings.link }}" 
                     class="social-link"
                     style="width: 44px; height: 44px; background: var(--c-white); border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 2px 8px rgba(0,0,0,.05); transition: all 0.2s ease;"
                     kjb-settings-id="{{ 'link' | settings_id: section: section, block: block }}">
                    <i class="fab fa-{{ block.settings.platform }}" style="color: var(--c-brand-600); font-size: 20px;"></i>
                  </a>
              {% endcase %}
            {% endfor %}
          </div>
        </div>
      </div>
      
      <div class="col-lg-7">
        <div class="author-content animate-fade-up">
          <!-- Micro label -->
          <div class="mb-3">
            <span style="color: var(--c-accent-peach); font-size: var(--fs-caption); font-weight: 500; text-transform: uppercase; letter-spacing: 0.05em;">
              âœ¨ MEET YOUR GUIDE
            </span>
          </div>
          
          <h3 style="font-size: var(--fs-h1); font-weight: 500; color: var(--c-ink-900); margin-bottom: 16px;" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">
            {{ section.settings.heading }}
          </h3>
          
          <p style="font-size: var(--fs-body-lg); color: var(--c-ink-700); margin-bottom: 24px;" kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">
            {{ section.settings.subheading }}
          </p>
          
          <!-- Stats Grid -->
          <div class="stats-grid row g-3 mb-4">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'stat' %}
                  <div class="col-6 col-md-4">
                    <div class="stat-card" style="background: var(--c-white); padding: 20px; border-radius: 12px; text-align: center; box-shadow: 0 2px 8px rgba(0,0,0,.05);">
                      <h4 style="font-size: var(--fs-h2); font-weight: 500; color: var(--c-brand-600); margin: 0;" kjb-settings-id="{{ 'number' | settings_id: section: section, block: block }}">
                        {{ block.settings.number }}
                      </h4>
                      <p style="font-size: var(--fs-caption); color: var(--c-ink-500); margin: 0;" kjb-settings-id="{{ 'label' | settings_id: section: section, block: block }}">
                        {{ block.settings.label }}
                      </p>
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
          
          <div style="font-size: var(--fs-body); color: var(--c-ink-500); margin-bottom: 32px;" kjb-settings-id="{{ 'bio_text' | settings_id: section: section }}">
            {{ section.settings.bio_text }}
          </div>
          
          {% if section.settings.button_text %}
            <a href="{{ section.settings.button_link }}" 
               class="btn btn-primary-modern"
               kjb-settings-id="{{ 'button_text' | settings_id: section: section }}">
              {{ section.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
  
  <!-- Decorative elements -->
  <div class="position-absolute" style="top: 20%; right: 5%; opacity: 0.3;">
    <span style="color: var(--c-accent-lemon); font-size: 3rem;">ðŸŒŸ</span>
  </div>
</section>

<style>
/* Social link hover effects */
.social-link:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0,0,0,.1);
  background: var(--c-brand-600) !important;
}

.social-link:hover i {
  color: var(--c-white) !important;
}

/* Author image animation */
.author-image {
  transition: transform 0.3s ease;
}

.author-bio-modern:hover .author-image {
  transform: scale(1.02);
}

/* Stat card hover */
.stat-card {
  transition: all 0.2s ease;
}

.stat-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 16px rgba(0,0,0,.08);
}
</style>

