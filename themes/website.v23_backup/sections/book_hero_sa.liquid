<section id="{{ section.settings.section_id | default: 'book-hero-sa' }}-{{ section.id }}" 
         class="sa-book-showcase py-{{ section.settings.padding_y }}"
         style="background: {{ section.settings.section_background }};">
  <div class="container">
    <div class="row align-items-center g-{{ section.settings.column_gap }}">
      <div class="col-lg-6 {% if section.settings.image_position == 'right' %}order-lg-2{% endif %}">
        <!-- Book visual -->
        <div class="position-relative animate-fade-up">
          <div class="book-showcase-visual">
            <!-- Background shape -->
            {% if section.settings.show_background_shape %}
              <div class="position-absolute" 
                   style="top: {{ section.settings.shape_top }}px; 
                          right: {{ section.settings.shape_right }}px; 
                          width: 100%; 
                          height: 100%; 
                          background: {{ section.settings.shape_color }}; 
                          opacity: {{ section.settings.shape_opacity }}; 
                          border-radius: {{ section.settings.shape_radius }}px; 
                          transform: rotate({{ section.settings.shape_rotation }}deg);">
              </div>
            {% endif %}
            
            <!-- Main image -->
            <div class="position-relative" 
                 style="background: {{ section.settings.image_container_bg }}; 
                        padding: {{ section.settings.image_padding }}px; 
                        border-radius: {{ section.settings.image_border_radius }}px; 
                        box-shadow: {{ section.settings.image_shadow }};">
              <div kjb-settings-id="{{ 'showcase_image' | settings_id: section: section }}">
                <img src="{{ section.settings.showcase_image | image_picker_url: '600x400' }}" 
                     alt="{{ section.settings.image_alt }}" 
                     class="img-fluid"
                     width="600" height="400"
                     decoding="async"
                     {% if section.settings.lazy_load %}
                       loading="lazy"
                     {% else %}
                       loading="eager" fetchpriority="high"
                     {% endif %}
                     style="object-fit: {{ section.settings.image_fit }}; 
                            border-radius: {{ section.settings.inner_image_radius }}px;">
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6 {% if section.settings.image_position == 'right' %}order-lg-1{% endif %}">
        <div class="animate-fade-up" style="animation-delay: 0.1s;">
          <!-- Section badge -->
          {% if section.settings.badge_text != blank and section.settings.show_badge %}
            <div class="d-inline-flex align-items-center mb-{{ section.settings.badge_spacing }}" 
                 style="background: {{ section.settings.badge_background }}; 
                        padding: {{ section.settings.badge_padding }}; 
                        border-radius: {{ section.settings.badge_radius }}px;
                        border: {{ section.settings.badge_border_width }}px solid {{ section.settings.badge_border_color }};">
              {% if section.settings.badge_icon != blank and section.settings.show_badge_icon %}
                <span style="margin-right: 8px; font-size: {{ section.settings.badge_icon_size }}px;">
                  {{ section.settings.badge_icon }}
                </span>
              {% endif %}
              <span style="color: {{ section.settings.badge_text_color }}; 
                           font-weight: {{ section.settings.badge_font_weight }}; 
                           font-size: {{ section.settings.badge_font_size }}px;
                           text-transform: {{ section.settings.badge_text_transform }};"
                    kjb-settings-id="{{ 'badge_text' | settings_id: section: section }}">
                {{ section.settings.badge_text }}
              </span>
            </div>
          {% endif %}
          
          <h2 class="mb-{{ section.settings.heading_spacing }}" 
              style="font-size: var(--{{ section.settings.heading_size }}); 
                     color: {{ section.settings.heading_color }}; 
                     font-weight: {{ section.settings.heading_weight }};
                     line-height: {{ section.settings.heading_line_height }};"
              kjb-settings-id="{{ 'heading' | settings_id: section: section }}">
            {{ section.settings.heading }}
          </h2>
          
          <p class="mb-{{ section.settings.description_spacing }}" 
             style="font-size: var(--{{ section.settings.description_size }}); 
                    color: {{ section.settings.description_color }}; 
                    line-height: {{ section.settings.description_line_height }};"
             kjb-settings-id="{{ 'description' | settings_id: section: section }}">
            {{ section.settings.description }}
          </p>
          
          <!-- Feature list -->
          <div class="mb-{{ section.settings.features_spacing }}">
            {% for block in section.blocks %}
              {% if block.type == 'feature' %}
                <div class="d-flex align-items-start mb-{{ section.settings.feature_item_spacing }} animate-fade-up" 
                     style="animation-delay: {{ forloop.index | times: 0.1 | plus: 0.2 }}s;">
                  {% if section.settings.show_feature_icons %}
                    <div class="flex-shrink-0 me-3">
                      <div style="width: {{ section.settings.icon_size }}px; 
                                  height: {{ section.settings.icon_size }}px; 
                                  background: {{ section.settings.icon_background }}; 
                                  border-radius: {{ section.settings.icon_radius }}%; 
                                  display: flex; 
                                  align-items: center; 
                                  justify-content: center;
                                  border: {{ section.settings.icon_border_width }}px solid {{ section.settings.icon_border_color }};">
                        {% if block.settings.custom_icon != blank %}
                          <span style="font-size: {{ section.settings.icon_inner_size }}px; color: {{ section.settings.icon_color }};">
                            {{ block.settings.custom_icon }}
                          </span>
                        {% else %}
                          <svg width="{{ section.settings.icon_inner_size }}" 
                               height="{{ section.settings.icon_inner_size }}" 
                               viewBox="0 0 24 24" 
                               fill="{{ section.settings.icon_color }}">
                            <path d="{{ section.settings.icon_svg_path }}"/>
                          </svg>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}
                  <div>
                    <p class="mb-0" 
                       style="color: {{ section.settings.feature_text_color }}; 
                              font-weight: {{ section.settings.feature_text_weight }};
                              font-size: {{ section.settings.feature_text_size }}px;
                              text-transform: {{ section.settings.feature_text_transform }};"
                       kjb-settings-id="{{ 'feature_text' | settings_id: section: section, block: block }}">
                      {{ block.settings.feature_text }}
                    </p>
                    {% if block.settings.feature_description != blank %}
                      <p class="mb-0 mt-1" 
                         style="font-size: {{ section.settings.feature_desc_size }}px; 
                                color: {{ section.settings.feature_desc_color }};
                                line-height: {{ section.settings.feature_desc_line_height }};"
                         kjb-settings-id="{{ 'feature_description' | settings_id: section: section, block: block }}">
                        {{ block.settings.feature_description }}
                      </p>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>
          
          <!-- CTA -->
          {% if section.settings.cta_text != blank and section.settings.show_cta %}
            <a href="{{ section.settings.cta_url }}" 
               class="btn"
               style="background: {{ section.settings.cta_background }};
                      color: {{ section.settings.cta_text_color }} !important;
                      padding: {{ section.settings.cta_padding }};
                      font-size: {{ section.settings.cta_font_size }}px;
                      font-weight: {{ section.settings.cta_font_weight }};
                      border-radius: {{ section.settings.cta_radius }}px;
                      border: {{ section.settings.cta_border_width }}px solid {{ section.settings.cta_border_color }};
                      text-transform: {{ section.settings.cta_text_transform }};
                      transition: all {{ section.settings.cta_transition }}ms ease;"
               onmouseover="this.style.background='{{ section.settings.cta_hover_bg }}'; this.style.transform='translateY({{ section.settings.cta_hover_lift }}px)';"
               onmouseout="this.style.background='{{ section.settings.cta_background }}'; this.style.transform='translateY(0)';"
               kjb-settings-id="{{ 'cta_text' | settings_id: section: section }}">
              {% if section.settings.cta_icon != blank and section.settings.show_cta_icon %}
                <span style="margin-right: 8px;">{{ section.settings.cta_icon }}</span>
              {% endif %}
              {{ section.settings.cta_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

