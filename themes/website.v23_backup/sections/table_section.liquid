                      </a>
                    {% elsif block.settings.col4_text2 != blank %}
                      <span>{{ block.settings.col4_text2 }}</span>
                    {% endif %}
                  </div>
                </td>
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</section>

<style>
  /* Table Section */
  .table-section {
    position: relative;
    overflow: hidden;
  }

  /* Header */
  .table-section__header {
    position: relative;
    z-index: 1;
  }

  .table-section__heading {
    margin: 0;
    line-height: 1.2;
  }

  .table-section__subheading {
    max-width: 800px;
    margin: 0 auto;
  }

  .table-section__subheading p {
    margin: 0 0 var(--an-space-md);
  }

  .table-section__subheading p:last-child {
    margin-bottom: 0;
  }

  /* Table Wrapper */
  .table-section__table-wrapper {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  /* Table */
  .table-section__table {
    width: 100%;
    border-collapse: collapse;
  }

  /* Table Headers */
  .table-header {
    text-align: left;
    letter-spacing: 0.05em;
    border-bottom: 2px solid;
    border-color: inherit;
  }

  .table-header--col1 {
    width: 25%;
  }

  .table-header--col2,
  .table-header--col3,
  .table-header--col4 {
    width: 25%;
  }

  /* Table Rows */
  .table-row:hover {
    background: {{ section.settings.row_hover_color }} !important;
  }

  /* Table Cells */
  .table-cell {
    vertical-align: middle;
    border-bottom: 1px solid;
    border-color: inherit;
  }

  .table-row:last-child .table-cell {
    border-bottom: none;
  }

  /* Cell Icons */
  .cell-icon {
    display: inline-block;
    margin-right: var(--an-space-sm);
  }

  /* Cell Content */
  .cell-content {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }

  /* Table Links */
  .table-link {
    display: inline-flex;
    align-items: center;
    gap: var(--an-space-xs);
    text-decoration: {{ section.settings.link_underline }};
    transition: all var(--an-transition-base);
    position: relative;
  }

  {% if section.settings.link_hover_effect == 'underline' %}
  .table-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: currentColor;
    transition: width var(--an-transition-base);
  }

  .table-link:hover::after {
    width: 100%;
  }
  {% endif %}

  .table-link:hover {
    {% if section.settings.link_hover_effect == 'opacity' %}
    opacity: 0.8;
    {% elsif section.settings.link_hover_effect == 'color' %}
    color: {{ section.settings.link_hover_color }} !important;
    {% endif %}
  }

  .link-icon {
    flex-shrink: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 767px) {
    .table-section__heading {
      font-size: clamp(1.5rem, 5vw, 2rem) !important;
    }

    .table-section__subheading {
      font-size: var(--fs-body) !important;
    }

    {% if section.settings.mobile_layout == 'stack' %}
    /* Mobile Table - Stack Layout */
    .table-section__table,
    .table-section__table thead,
    .table-section__table tbody,
    .table-section__table th,
    .table-section__table td,
    .table-section__table tr {
      display: block;
    }

    .table-section__table thead {
      display: none;
    }

    .table-row {
      margin-bottom: var(--an-space-lg);
      border: 1px solid;
      border-color: inherit;
      border-radius: var(--an-radius-md);
      overflow: hidden;
    }

    .table-cell {
      border-bottom: 1px solid;
      border-color: inherit;
      position: relative;
      padding-left: 40% !important;
    }

    .table-cell:last-child {
      border-bottom: none;
    }

    .table-cell::before {
      content: attr(data-label);
      position: absolute;
      left: var(--an-space-md);
      width: 35%;
      font-weight: 600;
      text-transform: uppercase;
      font-size: var(--an-font-xs);
      color: var(--c-ink-700);
    }

    .table-cell--col1::before { content: "{{ section.settings.column1_header }}"; }
    .table-cell--col2::before { content: "{{ section.settings.column2_header }}"; }
    .table-cell--col3::before { content: "{{ section.settings.column3_header }}"; }
    .table-cell--col4::before { content: "{{ section.settings.column4_header }}"; }

    .table-cell--col1 {
      background: rgba(0, 0, 0, 0.02);
      font-weight: 600;
      padding-left: var(--an-space-md) !important;
    }

    .table-cell--col1::before {
      display: none;
    }

    .cell-content {
      justify-content: flex-start;
    }
    {% endif %}
  }

  /* Animations */
  .animate-fade-up {
    animation: fadeUp 0.6s ease-out both;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

