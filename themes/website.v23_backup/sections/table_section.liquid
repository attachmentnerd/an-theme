<section id="{{ section.settings.section_id | default: 'table-section' }}-{{ section.id }}" 
         class="table-section py-{{ section.settings.padding_y }}" 
         style="background: {{ section.settings.background_color }};">
  <div class="container">
    <!-- Section Header -->
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="table-section__header text-{{ section.settings.text_alignment }} mb-{{ section.settings.header_spacing }} animate-fade-up">
        {% if section.settings.heading != blank %}
          <h2 class="table-section__heading mb-{{ section.settings.heading_spacing }}" 
              style="font-size: var(--{{ section.settings.heading_size }}); 
                     color: {{ section.settings.heading_color }}; 
                     font-weight: {{ section.settings.heading_weight }};"
              kjb-settings-id="{{ 'heading' | settings_id: section: section }}">
            {{ section.settings.heading }}
          </h2>
        {% endif %}
        
        {% if section.settings.subheading != blank %}
          <div class="table-section__subheading" 
               style="font-size: var(--{{ section.settings.subheading_size }}); 
                      color: {{ section.settings.subheading_color }}; 
                      line-height: {{ section.settings.subheading_line_height }};"
               kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">
            {{ section.settings.subheading }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <!-- Table -->
    <div class="table-section__table-wrapper animate-fade-up" 
         style="animation-delay: 0.2s; 
                border-radius: {{ section.settings.table_border_radius }}px; 
                box-shadow: {{ section.settings.table_shadow }};">
      <table class="table-section__table" 
             style="border-color: {{ section.settings.border_color }}; 
                    background: {{ section.settings.table_background }}; 
                    font-size: var(--{{ section.settings.table_font_size }});">
        {% if section.settings.show_header %}
          <thead>
            <tr>
              <th class="table-header table-header--col1" 
                  style="background: {{ section.settings.header_background }}; 
                         color: {{ section.settings.header_text_color }}; 
                         font-weight: {{ section.settings.header_font_weight }}; 
                         text-transform: {{ section.settings.header_text_transform }};">
                {{ section.settings.column1_header }}
              </th>
              <th class="table-header table-header--col2" 
                  style="background: {{ section.settings.header_background }}; 
                         color: {{ section.settings.header_text_color }}; 
                         font-weight: {{ section.settings.header_font_weight }}; 
                         text-transform: {{ section.settings.header_text_transform }};">
                {{ section.settings.column2_header }}
              </th>
              <th class="table-header table-header--col3" 
                  style="background: {{ section.settings.header_background }}; 
                         color: {{ section.settings.header_text_color }}; 
                         font-weight: {{ section.settings.header_font_weight }}; 
                         text-transform: {{ section.settings.header_text_transform }};">
                {{ section.settings.column3_header }}
              </th>
              <th class="table-header table-header--col4" 
                  style="background: {{ section.settings.header_background }}; 
                         color: {{ section.settings.header_text_color }}; 
                         font-weight: {{ section.settings.header_font_weight }}; 
                         text-transform: {{ section.settings.header_text_transform }};">
                {{ section.settings.column4_header }}
              </th>
            </tr>
          </thead>
        {% endif %}
        
        <tbody>
          {% for block in section.blocks %}
            {% if block.type == 'row' %}
              <tr class="table-row" 
                  style="background: {% cycle section.settings.row_color_1, section.settings.row_color_2 %}; 
                         transition: all {{ section.settings.hover_transition }}ms ease;"
                  kjb-settings-id="{{ 'row' | settings_id: section: section, block: block }}">
                <!-- Column 1 -->
                <td class="table-cell table-cell--col1" 
                    style="color: {{ section.settings.col1_text_color }}; 
                           font-weight: {{ section.settings.col1_font_weight }}; 
                           padding: {{ section.settings.cell_padding }};">
                  {% if block.settings.col1_icon != blank %}
                    <span class="cell-icon" style="font-size: {{ section.settings.icon_size }}em;">
                      {{ block.settings.col1_icon }}
                    </span>
                  {% endif %}
                  <strong kjb-settings-id="{{ 'col1_text' | settings_id: section: section, block: block }}">
                    {{ block.settings.col1_text }}
                  </strong>
                </td>
                
                <!-- Column 2 -->
                <td class="table-cell table-cell--col2" style="padding: {{ section.settings.cell_padding }};">
                  <div class="cell-content" style="gap: {{ section.settings.link_gap }}px;">
                    {% if block.settings.col2_link1 != blank %}
                      <a href="{{ block.settings.col2_link1 }}" 
                         class="table-link" 
                         {% if section.settings.open_links_new_tab %}target="_blank" rel="noopener"{% endif %}
                         style="color: {{ section.settings.link_color }}; 
                                font-weight: {{ section.settings.link_font_weight }};">
                        {% if block.settings.col2_icon1 != blank %}
                          <span class="link-icon" style="font-size: {{ section.settings.link_icon_size }}em;">
                            {{ block.settings.col2_icon1 }}
                          </span>
                        {% endif %}
                        {{ block.settings.col2_text1 }}
                      </a>
                    {% elsif block.settings.col2_text1 != blank %}
