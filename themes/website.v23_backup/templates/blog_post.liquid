{% capture __blog_post_sections %}{% dynamic_sections_for "blog_post" %}{% endcapture %}
{% if __blog_post_sections and __blog_post_sections != '' %}
  {{ __blog_post_sections }}
{% else %}
  <article class="website-blog-post-fallback an-theme">
    <div class="wp-wrap">
      <header class="wp-head">
        <h1 class="wp-title">{{ blog_post.title }}</h1>
        {% if blog_post.published_at %}<div class="wp-meta">{{ blog_post.published_at | date: "%b %d, %Y" }}</div>{% endif %}
      </header>
      <div class="wp-body">{{ blog_post.content }}</div>
    </div>
  </article>
  <style>
    .website-blog-post-fallback .wp-wrap{max-width:800px;margin:0 auto;padding:32px 18px}
    .website-blog-post-fallback .wp-title{margin:0 0 6px;font-weight:800;color:var(--c-ink-900)}
    .website-blog-post-fallback .wp-meta{color:var(--c-ink-500);margin-bottom:16px}
    .website-blog-post-fallback .wp-body{color:var(--c-ink-800);line-height:1.7}
    .website-blog-post-fallback .wp-body img{max-width:100%;height:auto}
  </style>
{% endif %}
