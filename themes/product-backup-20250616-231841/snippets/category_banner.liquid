<div class="category-banner">
  <div class="row align-items-center">
    <div class="col-8">
      <h1 class="category-banner-title">
        {% if category.show_as_paywalled? %}
          <div class="icon-row">
            {{ category.title }}
            {% include "icon_paywall" %}
          </div>
        {% else %}
          {{ category.title }}
        {% endif %}
      </h1>
      <p class="category-banner-description">{{ category.description }}</p>
    </div>
    <div class="col-4">
      {% if category.poster_image_url %}
        <img src="{{ category.poster_image_url }}" class="category-banner-img">
      {% endif %}
    </div>
  </div>
</div>
