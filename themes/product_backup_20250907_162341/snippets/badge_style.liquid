{%if version == "badge_only"%}
<style>
    #block-{{ block.id}} .badge-wrapper{
    margin: 10px;
    padding: 30px 20px;
    background: var(--bg-color-1);
    border-radius: 5px;
    }
    #block-{{ block.id}} .badge-title{
    text-align: center;
    font-size: 16px;
    text-transform: uppercase;
    margin-top: 10px;
    }
</style>
{%elsif version == "badge_and_progress" %}
<style>
#block-{{ block.id}}{
    margin-top: 60px;
}
#block-{{ block.id}} .badge-wrapper{
    padding: 20px;
    background: var(--bg-color-1);
    position: relative;
border-radius: 10px 10px 0 0;
}
#block-{{ block.id}} .badge-title{
text-align: center;
font-size: 16px;
text-transform: uppercase;
margin-top: 45px;
}
#block-{{ block.id}} .badge-image{
    position: absolute;
    width: 100px;
    aspect-ratio: 1;
    object-fit: cover;
    top: -50px;
    left: calc(50% - 50px);
    background: var(--bg-color-1);
    border-radius: 50%;
    padding: 20px;
    box-shadow: 0 10px 10px rgb(0 0 0 / 5%);
}

#block-{{ block.id}} .badge-image:after {
    content: '\f336';
    font-family: 'Font Awesome 5 Pro';
    font-weight: 900;
    font-size: 26px;
    position: absolute;
    bottom: 0px;
    right: 0px;
    color: var(--accent-color-1);
}
#block-{{ block.id}} .badge-user-name{
margin: 5px 0px 5px 0px;
    text-align: center;
    font-size: 18px;
    font-weight: 600;
text-transform: uppercase;
}
#block-{{ block.id}} .badge-user-completed{
text-align: center;
font-weight: 600;
}
#block-{{ block.id}} .badge-post-text{
padding: 20px;
text-align: center;
background: var(--accent-color-1);
color: #fff;
border-radius: 0 0 10px 10px;
}
#block-{{ block.id}} .badge-post-text p{
margin-bottom: 0;
}
#block-{{ block.id}} .badge-post-text p:first-child{
text-transform: uppercase;
margin-bottom: 10px;
}
</style>
{%elsif version == "badge_and_avatar"%}
<style>
#block-{{ block.id}} {
    position: relative;
padding: 30px 20px 15px 20px;
border-radius: 10px;
box-shadow: 0 0 20px rgb(0 0 0 / 5%);
margin: 0 10px 10px;
text-align: center;
}
#block-{{ block.id}} .badge-image{
    position: absolute;
    width: 50px;
    height: 50px;
    top: 10px;
    right: 10px;
    }
    #block-{{ block.id}} .avatar-sm{
    width: 103px;
    height: 103px;
    margin-bottom: 10px;
    z-index: 1;
    }
    #block-{{ block.id}} .avatar-sm .avatar-img{
    width:100px;
    height:100px;
    border:8px solid var(--bg-color-2) !important;
    }
    #block-{{ block.id}} .avatar-wrap{
    position: relative;
    justify-content: center;
    }
    #block-{{ block.id}} .avatar-wrap:after {
    position: absolute;
    z-index: 9;
    bottom: 0;
    padding: 3px 17px;
    background: var(--accent-color-1);
    border-radius: 15px;
    left: 50%;
    transform: translateX(-50%);
    color: #fff;
    border: 2px solid var(--bg-color-2);
    font-size: 12px;
    }
    #block-{{ block.id}} .badge-user-name{
    font-weight: 600;
    color: var(--text-color-1);
    margin: 15px 0 5px;
    }
    #block-{{ block.id}} .badge-lesson-count{
    font-size: 13px;
    opacity: 0.6;
    }
</style>
{%elsif version == "badge_list"%}
    <style>
        #block-{{ block.id}} .badge-wrapper {
            display: flex;
            flex-wrap: wrap;
            width: 100%;
            gap: 10px;
            justify-content: center;
            text-align: center;
            padding: 10px;
        }
        
        #block-{{ block.id}} .badges {
            flex: 1;
            flex-basis: 30%;
        }
        
        #block-{{ block.id}} .badge-image {
            /* max-width: 70px; */
        }
        
        #block-{{ block.id}} .badge-title {
            margin-top: 10px;
        }
    </style>

{%endif%}