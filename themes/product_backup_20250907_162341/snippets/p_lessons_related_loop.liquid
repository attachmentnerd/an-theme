{% if use_lesson_from == "same_category" %}
  {% if category_s.title == post_category %}
    {% assign match = true %}
  {% endif %}
{% elsif use_lesson_from == "specific_categories" %}
  {% assign category_names = match_value | split: "," %}

  {% for name in category_names %}
    {% assign name_strip = name | strip %}
    {% assign name_str = "'" | append: name_strip | append: "'" %}
    {% if name_str contains category_s.title %}
      {% assign match = true %}
    {% endif %}
  {% endfor %}
{% else %}
  {% assign match = true %}
{% endif %}

{% if match == false %}
  {% continue %}
{% endif %}
