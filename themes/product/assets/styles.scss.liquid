@mixin avatarSize($width, $border) {
  $size: $width + ( $border * 2 );
  height: $size;
  width: $size;
  .avatar-img {
    width: $width;
    height: $width;
    border-width: 2px;
  }
}

.avatar {
  position: relative;
  display: inline-block;
  border-radius: 50%;
  overflow: hidden;
  padding: 0;
  border: none;
  position: relative;
  &-img {
    position: relative;
    display: block;
    border-radius: 50%;
    overflow: hidden;
    z-index: 100;
    border-style: solid;
    border-color: #c3c3c3;
  }
  &-sm {
    @include avatarSize(44px,3px);
  }
  &-md {
    @include avatarSize(90px,4px);
  }
  &-lg {
    @include avatarSize(100px,7px);
  }
  &-light {
    background: $color-back;
  }
  &-dark {
    background: $color-back-dark;
  }
  &-grey {
    background: $color-grey-back;
    .avatar-img {
      border-color: #c3c3c3; 
    }
  }
}
