@mixin simple-ease($value) {
  -webkit-transition: $value .2s ease-in-out;
  -moz-transition: $value .2s ease-in-out;
  -o-transition: $value .2s ease-in-out;
  transition: $value .2s ease-in-out;
}
@mixin color-muted-1($value) {
  color: rgba($value, .8);
}
@mixin color-muted-2($value) {
  color: rgba($value, .7);
}
@mixin center-element() {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
@mixin panel-style() {
  display: block;
  background: var(--bg-color-1);
  border-radius: $border-radius;
  box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

