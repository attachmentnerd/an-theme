$step: 1;
$loops: round(100 / $step);
$increment: 360 / $loops;
$half: round($loops / 2);

@for $i from 1 through $loops {

  .avatar-#{$i*$step} {
    @if $i < $half {
      $nextdeg: 90deg +  ( $increment * $i ) ;
      background-image: linear-gradient(90deg, $color-bar 50%, transparent 50%, transparent), linear-gradient($nextdeg, var(--accent-color-1) 50%, $color-bar 50%, $color-bar);
    } @else {
      $nextdeg: -90deg + ( $increment * ( $i - $half ) );
      background-image: linear-gradient($nextdeg, var(--accent-color-1) 50%, transparent 50%, transparent), linear-gradient(270deg, var(--accent-color-1) 50%, $color-bar 50%, $color-bar);
    }
  }

}

