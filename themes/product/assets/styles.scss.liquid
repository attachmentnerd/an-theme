    font-size: 16px;
    font-weight: 600;
  }
  &-completion {
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 1px;
    font-size: 11px;
    opacity: .8;
  }
  .avatar {
    margin-right: 20px;
  }
}

.post-actions {
  @include color-muted-1($text-dark);
  padding: 30px 0;
  background: #fff;
  border-bottom: solid 1px #e5e7e9;
  &-container {
    max-width: 900px;
    margin: 0 auto;
  }
  &-pagination {
    width: 60px;
    text-align: center;
    a {
      @include color-muted-2($text-dark);
      font-size: 20px;
    }
  }
  &-duration {
    margin-right: 30px;
  }
  &-favorite {
    display: inline-block;
    border: 1px solid rgba($text-dark, .3);
    color: rgba($text-dark, .3);
    border-radius: $border-radius;
    padding: 10px 10px;
    font-size: 16px;
    line-height: 1;
    margin-right: 15px;
    &:hover {
      border: 1px solid $accent-color;
    }
    &.favorited {
      background: $accent-color;
      color: $text-light;
      &:hover {
        background: darken($accent-color, 5%);
        color: $text-light;
      }
    }
  }
  &-complete {
    display: inline-block;
    border: 1px solid $accent-color;
    border-radius: $border-radius;
    font-weight: 600;
    padding: 11px 13px;
    line-height: 1;
  }
  svg {
    transform: translateY(-2px);
    margin-right: 5px;
  }
}
@media (max-width: $md-max) {
  .post-actions {
    padding: 20px 0;
    &-duration {
      display: none;
    }
    &-favorite {
      padding: 7px 7px;
      margin-right: 5px;
      font-size: 12px;
    }
    &-complete {
      font-size: 10px;
      padding: 8px 10px;
    }
    &-pagination {
      width: 50px;
    }
  }
}

.post-body {
  padding: 30px 0;
  font-size: 18px;
  &-title {
    font-size: 42px;
    margin-bottom: 30px;
  }
  h1,h2,h3,h4,h5,h6,p,ul,ol {
    margin: 20px 0;
  }
  hr {
    margin-top: 40px;
  }
}
@media (max-width: $md-max) {
  .post-body {
    padding: 20px 0;
    font-size: 14px;
    &-title {
      font-size: 24px;
    }
  }
}

.post-completion {
  z-index: 20000000;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(13, 13, 13, 0.8);
  overflow: scroll;
  display: none;
  #canvas{
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 100%;
  }
  &-box {
    @include panel-style();
    @include center-element();
    box-shadow: 0 20px 40px 0 rgba(0, 0, 0, 0.3);
    padding: 60px 100px;
    text-align: center;
    &-percent {
      @include color-muted-2($text-dark);
      font-size: 12px;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      margin: 10px 0 30px 0;
    }
    &-post {
      @include color-muted-2($text-dark);
      margin: 10px 0 20px 0;
    }
    &-btn {
      color: $text-light;
      background: var(--accent-color-1);
      font-weight: 600;
      padding: 15px 30px;
      &:hover {
        background: darken($accent-color, 5%);
        color: #fff;
      }
    }
    &-cancel {
      display: block;
      font-size: 12px;
      color: var(--text-color-1);
      opacity: 0.7;
      padding: 15px 30px;
      &:hover {
        opacity: .5;
      }
    }
  }
  &-next {
    @include panel-style();
    min-width: 300px;
    background-color: #494849;
    z-index: 2001;
    position: fixed;
    right: 30px;
    top: 30px;
    &-starts {
      font-size: 12px;
      font-weight: 600;
      letter-spacing: 1px;
      text-transform: uppercase;
      color: #c9c9cf;
      line-height: 1.27;
      margin: 15px 20px 0 20px;
    }
    &-title {
      display: block;
      margin: 5px 20px 15px 20px;
      color: #fff;
      &:hover {
        color: darken(#fff, 15%);
      }
    }
    &-img {
      width: 170px;
    }
  }
}
@media (max-width: $md-max) {
  .post-completion {
    padding: 10px;
    &-box {
      position: static;
      transform: translate(0,0);
      padding: 20px;
      margin-bottom: 10px;
      &-percent {
        margin: 10px 0 10px 0;
      }
      &-message {
        font-size: 14px;
      }
      &-post {
        font-size: 11px;
      }
      &-btn {
        padding: 10px 20px;
        font-size: 11px;
      }
    }
    &-next {
      position: static;
      &-img {
        display: none;
      }
      &-starts {
        font-size: 11px;
      }
      &-title {
        font-size: 11px;
      }
    }
  }
}

.product-outline {
  padding: 0 20px 30px;
  &-category {
    font-size: 16px;
    margin-top: 20px;
    margin-bottom: 0;
    a {
      color: $sidebar-text;
    }
    &.dripped {
      @include color-muted-2($sidebar-text);
    }
    &.locked {
      @include color-muted-2($sidebar-text);
    }
  }
  &-subcategory {
    @include color-muted-1($sidebar-text);
    font-size: 12px;
    margin: 20px 0;
    a {
      color: $sidebar-text;
    }
    &.dripped {
      @include color-muted-2($sidebar-text);
    }
    &.locked {
      @include color-muted-2($sidebar-text);
    }
  }
  &-post {
    display: block;
    margin: 8px 0;
    svg {
      transform: translateY(-2px);
      margin-right: 10px;
      .color-stroke {
        stroke: $sidebar-icon;
      }
      .color-fill {
        fill: $sidebar-icon;
      }
    }
  }
  &-favorite {
    display: none;
    &.favorited {
      opacity: .5;
      display: block;
    }
  }
}

.product-title {
  position: relative;
  padding: 25px 30px;
  &-icon {
    display: none;
    padding-right: 0 !important;
    color: $sidebar-text !important;
    font-size: 16px !important;
    position: absolute;
    top: 30px;
    right: 30px;
    opacity: .3;
    width: 20px;
    height: 20px;
    text-align: right;
    &:hover {
      cursor: pointer;
    }
  }
  &-back {
    display: inline-block;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 1px;
    font-size: 11px;
    color: $sidebar-text;
    opacity: .8;
    margin-bottom: 15px;
    i {
      margin-right: 2px;
      font-size: 14px;
      transform: translateY(1px);
    }
  }
  h1 {
    color: $sidebar-text;
    font-size: 20px;
    margin-bottom: 0;
  }
}
@media (max-width: $md-max) {
  .product-title {
    &-icon {
      display: block;
    }
  }
}

.responsive-toggle {
  display: none;
  background: $primary-color;
  padding: 0 30px;
  &-trigger {
    font-size: 24px;
    color: $responsive-toggle-text;
    padding-right: 30px;
  }
  .media {
    height: 50px;
  }
}
@media (max-width: $md-max) {
  .responsive-toggle {
    display: block;
    .search {
      display: flex;
      &-icon {
        color: $responsive-toggle-text;
      }
      &-input {
        color: $responsive-toggle-text;
        &::-webkit-input-placeholder {
          color: $responsive-toggle-text;
        }
        &::-moz-placeholder {
          color: $responsive-toggle-text;
        }
        &:-ms-input-placeholder {
          color: $responsive-toggle-text;
        }
        &:-moz-placeholder {
          color: $responsive-toggle-text;
        }
      }
    }
  }
}
