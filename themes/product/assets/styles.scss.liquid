.audio {
  .audiojs {
    border: solid 1px #e5e7e9;
    border-top-right-radius: $border-radius;
    border-top-left-radius: $border-radius;
    .play-pause, .scrubber-container, .time {
      display: table-cell;
      vertical-align: middle;
      padding: 30px 20px;
    }
    .play-pause {
      p {
        margin: 0;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        border: 2px solid $primary-color;
        position: relative;
        &::before {
          font-family: "Font Awesome 5 Free";
          font-weight: 900;
          height: auto;
          font-style: normal;
          font-variant: normal;
          text-rendering: auto;
          -webkit-font-smoothing: antialiased;
          font-size: 18px;
          position: absolute;
          left: 50%;
          top: 50%;
          transform: translate(-50%,-50%);
          text-align: center;
          color: $primary-color;
        }
      }
      .play::before {
        content: "\f04b";
        left: 55%;
      }
      .pause::before { content: "\f04c"; }
      .loading::before { content: "\f021"; }
      .error::before { content: "\f071"; }
    }
    .scrubber-container {
      width: 1000px;
    }
    .scrubber {
      background: #f6f8f9;
      position: relative;
      height: 3px;
      border-radius: 2px;
      overflow: hidden;
      .progress, .loaded {
        position: absolute;
        left: 0;
        top: 0;
        height: 3px;
      }
      .progress {
        background: $primary-color;
        z-index: 10;
      }
      .loaded {
        background: var(--text-color-1);
        z-index: 9;
        opacity: 0.2;
      }
    }
    .time {
      color: var(--text-color-1);
      font-weight: bold;
      font-size: 12px;
      letter-spacing: 1px;
      em {
        font-style: normal;
      }
    }
  }
  ol {
    border-bottom-left-radius: $border-radius;
    border-bottom-right-radius: $border-radius;
    border: solid 1px #e5e7e9;
    border-top: 0;
    padding-top: 1px;
    padding-left: 10px;
    margin: 0 !important;
    font-size: 14px;
    li {
      margin: 20px 0;
    }
    a {
      color: var(--text-color-1);
    }
  }
}

