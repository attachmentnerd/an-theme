{% if section.blocks.size > 0 %}
  <style>
    .post-body-modern {
      padding-top: {{ section.settings.padding_y | default: 16 }}px;
      padding-bottom: {{ section.settings.padding_y | default: 16 }}px;
    }
    .post-body-modern .panel__body {
      max-width: {{ section.settings.content_max_width | default: 900 }}px;
      margin: 0 auto;
    }
    .post-body-modern .panel__body > * + * { margin-top: {{ section.settings.block_gap_y | default: 16 }}px; }

    .post-body-modern.panel {
      {% if section.settings.card_style == 'outline' %}
        background: #fff;
        border: {{ section.settings.card_border_width | default: 1 }}px solid {{ section.settings.card_border_color | default: 'rgba(0,0,0,.08)' }};
        box-shadow: none;
      {% elsif section.settings.card_style == 'flat' %}
        background: {{ section.settings.card_bg | default: '#fff' }};
        border: 0;
        box-shadow: none;
      {% else %}
        background: #fff;
        border: 0;
        {% if section.settings.card_shadow %}
          box-shadow: 0 10px 28px rgba(0,0,0,.10);
        {% else %}
          box-shadow: none;
        {% endif %}
      {% endif %}
      border-radius: {{ section.settings.card_radius | default: 12 }}px;
    }
  </style>
  <div class="panel panel--{{ p-AutoTextColor }} panel--{{ p-ID }} post-body-modern" style="text-align: {{ section.settings.alignment }}"  kjb-settings-id="{{ 'alignment' | settings_id: section: section }}">
    <div class="panel__body">
      {% if section.settings.mark_as_complete_position == "top" %}
        {% include "post_mark_as_complete" %}
      {% endif %}
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'post_info' %}
            {% include "post_info" %}
          {% when 'post_downloads' %}
            {% include "post_downloads" %}
          {% when 'post_audio' %}
            {% include "post_audio" %}
          {% when 'post_video_download' %}
            {% include "post_video_download" %}
          {% when 'post_cta' %}
            {% include "panel_cta" %}
          {% when 'post_code' %}
            {% include "panel_code" %}
          {% when 'coaching_scheduling_widget' %}
            {% include "coaching_scheduling_widget", sectionType: 'body' %}
        {% endcase %}
      {% endfor %}
      {% if section.settings.mark_as_complete_position == "bottom" %}
        {% include "post_mark_as_complete" %}
      {% endif %}
    </div>
  </div>
{% endif %}

