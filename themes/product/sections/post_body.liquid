      { "type": "range", "id": "padding_y", "label": "Vertical Padding", "min": 0, "max": 64, "step": 4, "unit": "px", "default": 16 },
      { "type": "range", "id": "block_gap_y", "label": "Space Between Blocks", "min": 0, "max": 40, "step": 2, "unit": "px", "default": 16 },
      { "type": "range", "id": "content_max_width", "label": "Content Max Width", "min": 720, "max": 1200, "step": 20, "unit": "px", "default": 900 },
      { "type": "header", "content": "Card Style" },
      { "type": "select", "id": "card_style", "label": "Card Style", "default": "elevated", "options": [ {"label":"Elevated","value":"elevated"}, {"label":"Outline","value":"outline"}, {"label":"Flat","value":"flat"} ] },
      { "type": "range", "id": "card_radius", "label": "Card Corner Radius", "min": 0, "max": 24, "step": 2, "unit": "px", "default": 12 },
      { "type": "checkbox", "id": "card_shadow", "label": "Show Shadow (Elevated)", "default": true },
      { "type": "color", "id": "card_bg", "label": "Card Background (Flat)", "allow_blank": true },
      { "type": "color", "id": "card_border_color", "label": "Card Border Color (Outline)", "allow_blank": true },
      { "type": "range", "id": "card_border_width", "label": "Card Border Width (Outline)", "min": 0, "max": 3, "step": 1, "unit": "px", "default": 1 },
      {
