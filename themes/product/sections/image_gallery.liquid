 {% include "base_html" %}
 

{% schema %}
{
  "name": "Image Gallery", 
  "elements": [
  {
      "type": "select",
      "id": "gallery_style",
      "label": "Gallery Style",
      "default": "Style 1",
      "options": [
          { "label": "Style 1", "value": "Style 1" },
          { "label": "Style 2", "value": "Style 2" },
          { "label": "Style 3", "value": "Style 3" },
          { "label": "Style 4", "value": "Style 4" }
      ]
    },
    {
      "type": "select",
      "id": "transition_style",
      "label": "Transition Style",
      "default": "lg-slide",
      "options": [
          { "label": "Slide", "value": "lg-slide" },
          { "label": "Fade", "value": "lg-fade" },
          { "label": "Zoom In", "value": "lg-zoom-in" }
      ]
    },
    {
      "type": "text",
      "id": "Speed",
      "label": "Transition Speed",
      "default": "400"
    },
    {
      "type": "checkbox",
      "id": "animateThumb",
      "label": "Animate Thumb",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "preload",
      "label": "Preload Slides",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "controls",
      "label": "Show Controls",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "download",
      "label": "Download Button",
      "default": true
    },
    {
      "type": "textarea",
      "id": "section_style",
      "label": "Section Style",
      "default": "/* -- Desktop Style --*/\n\n\n/* -- Mobile Style --*/\n\n"
    }
    
  ],   
  "groups": [
      {
    "name": "Background",
    "elements": [
      {
        "type": "select",
        "label": "Background Color",
        "id": "background_color_preset",
        "options": [
          {
            "value": "--bg-color-1",
            "label": "Background Color 1"
          },
          {
            "value": "--bg-color-2",
            "label": "Background Color 2"
          },
          {
            "value": "--bg-color-3",
            "label": "Background Color 3"
          },
          {
            "value": "--bg-color-4",
            "label": "Background Color 4"
          },
          {
            "value": "--accent-color-1",
            "label": "Accent Color 1"
          },
          {
            "value": "--accent-color-2",
            "label": "Accent Color 2"
          },
          {
            "value": "--accent-color-3",
            "label": "Accent Color 3"
          },
          {
            "value": "--accent-color-4",
            "label": "Accent Color 4"
          },     
          {
            "value": "No Background Color",
            "label": "No Background Color"
          }
        ]
      },
      {
        "type": "color",
        "label": "Custom Background Color",
        "id": "background_color",
        "allow_blank": true,
        "info": "Set a background color or apply a color overlay to your background image or video. Use the color wheel slider to adjust opacity."
      },
      {
        "type": "select",
        "id": "bg_type",
        "label": "Background Media Type",
        "default": "none",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "image",
            "label": "Image"
          },
          {
            "value": "video",
            "label": "Video"
          }
        ]
      },
      {
        "type": "video",
        "id": "bg_video",
        "label": "Background Video"
      },
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image",
        "info": "A good background image sets the tone for your website without distracting from your content. Suggested dimensions: 2880 × 1200.",
        "fit": "max",
        "width": 3000,
        "height": 3000
      },
      {
        "type": "select",
        "id": "bg_position",
        "label": "Background Image Position",
        "default": "center center",
        "info": "Positioning of the background image.",
        "options": [
          {"value": "left top", "label": "Left Top"},
          {"value": "left center", "label": "Left Center"},
          {"value": "left bottom", "label": "Left Bottom"},
          {"value": "right top", "label": "Right Top"},
          {"value": "right center", "label": "Right Center"},
          {"value": "right bottom", "label": "Right Bottom"},
          {"value": "center top", "label": "Center Top"},
          {"value": "center center", "label": "Center Center"},
          {"value": "center bottom", "label": "Center Bottom"}
        ]
      },

      {
        "type": "radio",
        "id": "bg_size",
        "label": "Background Size",
        "default": "cover",
        "options": [
          {"value": "contain", "label": "Contain"},
          {"value": "cover", "label": "Cover"}
        ]
      },
      
      {
        "type": "checkbox",
        "id": "bg_repeat",
        "label": "Repeat Background",
        "default": "false"
      },
      {
        "type": "text",
        "id": "bg_precise_position",
        "label": "Precise Background position - exmp:30% 50%",
        "default": ""
      },
      {
        "type": "checkbox",
        "id": "bg_mobie_hide",
        "label": "Hide Background on mobile",
        "default": "false"
      },
      { 
        "type": "checkbox",
        "id": "background_fixed",
        "label": "Fixed Background Image (Parallax)",
        "default": "true",
        "info": "Make this section's background image fixed on scroll. Does not apply to mobile devices."
      }
    ]
  },
      {
    "name": "Desktop Layout",
    "elements": [
      {
        "type": "checkbox",
        "id": "hide_on_desktop",
        "label": "Hide Section",
        "default": "false",
        "info": "This will hide this section on desktop."
      },
      {
        "type": "spacer",
        "id": "padding_desktop",
        "label": "Desktop Section Padding",
        "info": "Adjust padding inside of the section. Hold shift to increment/decrement by 10.",
        "placeholder": {
          "top": "100",
          "right": "40",
          "bottom": "100",
          "left": "40"
        }
      },
      {
        "type": "text",
        "id": "content_width",
        "label": "Content Width",
        "default": "",
        "info": "Leave blank to use theme default."
      },
      {
        "type": "checkbox",
        "id": "equal_height",
        "label": "Equal Height Blocks",
        "default": "false",
        "info": "Make this section's blocks equal height."
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Make Section Full Width",
        "default": "false",
        "info": "This section will fill the full width of the browser window."
      },
      {
        "type": "checkbox",
        "id": "full_height",
        "label": "Make Section Full Height",
        "default": "false",
        "info": "This section will fill the full height of the browser window."
      }
    ]
  },
      {
    "name": "Mobile Layout",
    "elements": [
      {
        "type": "checkbox",
        "id": "hide_on_mobile",
        "label": "Hide Section",
        "default": "false",
        "info": "This will hide this section on mobile."
      },
      {
        "type": "spacer",
        "id": "padding_mobile",
        "label": "Mobile Section Padding",
        "info": "Adjust padding inside of the section",
        "placeholder": {
          "top": "40",
          "right": "10",
          "bottom": "40",
          "left": "10"
        }
      }
    ]
  }
  ],
  "blocks": [
      { 
          "type": "image_gallery_item",
          "name": "Image",
           "elements": [
            { 
              "type": "header", 
              "content": "Gallery Item"
            },
            { 
              "type": "image_picker",
              "label": "Large Image",
              "id": "large_image",
              "default": "https://kajabi-themes.s3.amazonaws.com/assets/images/placeholder.png"
            },  
            { 
              "type": "image_picker",
              "label": "Small Image",
              "id": "small_image",
              "default": "https://kajabi-themes.s3.amazonaws.com/assets/images/placeholder.png"
            }, 
            {
              "type": "textarea",
              "id": "text",
              "label": "Text",
              "default": ""
            }
          ]
        }
  ], 
  "presets": [
 
  ]
}


{% endschema %}