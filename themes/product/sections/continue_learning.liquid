<!-- Continue Learning Section -->
<style>
  .continue-learning {
    background: {{ section.settings.background_color | default: '#F8F9FA' }};
    padding: {{ section.settings.padding_top | default: 40 }}px 0 {{ section.settings.padding_bottom | default: 40 }}px;
    {% if section.settings.use_gradient %}
      background: linear-gradient(135deg, {{ section.settings.gradient_start | default: '#5E3BFF' }}10, {{ section.settings.gradient_end | default: '#18D5E4' }}10);
    {% endif %}
  }

  .continue-learning__card {
    background: {{ section.settings.card_background | default: '#FFFFFF' }};
    border-radius: {{ section.settings.card_radius | default: 16 }}px;
    padding: {{ section.settings.card_padding | default: 32 }}px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    {% if section.settings.show_border %}
      border: 2px solid {{ section.settings.border_color | default: '#E9E6FF' }};
    {% endif %}
  }

  .continue-learning__icon {
    width: {{ section.settings.icon_size | default: 48 }}px;
    height: {{ section.settings.icon_size | default: 48 }}px;
    background: {{ section.settings.icon_bg | default: '#E9E6FF' }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
  }

  .continue-learning__icon svg {
    width: 24px;
    height: 24px;
    fill: {{ section.settings.icon_color | default: '#5E3BFF' }};
  }

  .continue-learning__title {
    font-size: {{ section.settings.title_size | default: 24 }}px;
    font-weight: 600;
    color: {{ section.settings.title_color | default: '#1A2D4E' }};
    margin-bottom: 8px;
  }

  .continue-learning__subtitle {
    color: {{ section.settings.subtitle_color | default: '#6B7280' }};
    margin-bottom: 24px;
  }

  .continue-learning__progress {
    background: #E5E7EB;
    height: 8px;
    border-radius: 4px;
    overflow: hidden;
    margin-bottom: 16px;
  }

  .continue-learning__progress-fill {
    height: 100%;
    background: {{ section.settings.progress_color | default: '#5E3BFF' }};
    transition: width 0.3s ease;
    border-radius: 4px;
  }

  .continue-learning__stats {
    display: flex;
    justify-content: space-between;
    margin-bottom: 24px;
    font-size: 14px;
    color: {{ section.settings.stats_color | default: '#6B7280' }};
  }

  .continue-learning__button {
    display: inline-block;
    padding: 14px 32px;
    background: {{ section.settings.button_bg | default: '#5E3BFF' }};
    color: {{ section.settings.button_color | default: '#FFFFFF' }};
    text-decoration: none;
    border-radius: {{ section.settings.button_radius | default: 8 }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    {% if section.settings.button_gradient %}
      background: linear-gradient(135deg, {{ section.settings.button_bg | default: '#5E3BFF' }}, {{ section.settings.button_gradient_end | default: '#4025E0' }});
    {% endif %}
  }

  .continue-learning__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px {{ section.settings.button_bg | default: '#5E3BFF' }}33;
    color: {{ section.settings.button_color | default: '#FFFFFF' }};
  }

  .continue-learning__next-lesson {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid #E5E7EB;
  }

  .continue-learning__next-title {
    font-size: 12px;
    text-transform: uppercase;
    color: #6B7280;
    letter-spacing: 0.5px;
    margin-bottom: 8px;
  }

  .continue-learning__lesson-name {
    font-size: 16px;
    font-weight: 500;
    color: {{ section.settings.title_color | default: '#1A2D4E' }};
  }

  @media (max-width: 767px) {
    .continue-learning__card {
      padding: 24px;
    }

    .continue-learning__title {
      font-size: 20px;
    }
  }
</style>

{% if member and current_product %}
  {% assign completion = current_product.completion %}
  {% comment %} Find next uncompleted post {% endcomment %}
  {% assign next_post = nil %}
  {% for post in current_product.posts %}
    {% unless post.is_completed %}
      {% assign next_post = post %}
      {% break %}
    {% endunless %}
  {% endfor %}
  {% assign progress_percent = completion.percent %}

  <section class="continue-learning">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-{{ section.settings.card_width | default: 8 }}">
          <div class="continue-learning__card">
            {% if section.settings.show_icon %}
              <div class="continue-learning__icon">
                <svg viewBox="0 0 24 24">
                  <path d="M5 13l4 4L19 7" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            {% endif %}

            <h2 class="continue-learning__title">
              {% if progress_percent == 0 %}
                {{ section.settings.title_start | default: 'Ready to Begin Your Journey?' }}
              {% elsif progress_percent == 100 %}
                {{ section.settings.title_complete | default: 'Course Complete! ðŸŽ‰' }}
              {% else %}
                {{ section.settings.title_continue | default: 'Continue Learning' }}
              {% endif %}
            </h2>

            <p class="continue-learning__subtitle">
              {% if progress_percent == 0 %}
                {{ section.settings.subtitle_start | default: 'Start your learning journey with ' }}{{ current_product.title }}
              {% elsif progress_percent == 100 %}
                {{ section.settings.subtitle_complete | default: 'Congratulations on completing the course!' }}
              {% else %}
                {{ section.settings.subtitle_continue | default: 'Pick up right where you left off' }}
              {% endif %}
            </p>

            {% if section.settings.show_progress and progress_percent > 0 and progress_percent < 100 %}
              <div class="continue-learning__progress">
                <div class="continue-learning__progress-fill" style="width: {{ progress_percent }}%;"></div>
              </div>

              <div class="continue-learning__stats">
                <span>{{ completion.completed }} of {{ completion.total }} lessons completed</span>
                <span>{{ progress_percent }}% complete</span>
              </div>
            {% endif %}

            <a href="{% if progress_percent == 100 %}{{ current_product.url }}{% elsif next_post %}{{ next_post.url }}{% elsif current_product.posts.size > 0 %}{{ current_product.posts.first.url }}{% else %}{{ current_product.url }}{% endif %}"
               class="continue-learning__button">
              {% if progress_percent == 0 %}
                {{ section.settings.button_start | default: 'Start Course' }}
              {% elsif progress_percent == 100 %}
                {{ section.settings.button_restart | default: 'Start Again' }}
              {% else %}
                {{ section.settings.button_continue | default: 'Continue Course' }}
              {% endif %}
            </a>

            {% if section.settings.show_next_lesson and next_post and progress_percent < 100 and progress_percent > 0 %}
              <div class="continue-learning__next-lesson">
                <div class="continue-learning__next-title">Next Lesson</div>
                <div class="continue-learning__lesson-name">{{ next_post.title }}</div>
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </section>
{% elsif section.settings.show_preview %}
  <!-- Preview mode for non-members -->
  <section class="continue-learning">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-{{ section.settings.card_width | default: 8 }}">
          <div class="continue-learning__card">
            {% if section.settings.show_icon %}
              <div class="continue-learning__icon">
                <svg viewBox="0 0 24 24">
                  <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z" stroke="currentColor" stroke-width="2" fill="none"/>
                </svg>
              </div>
            {% endif %}

            <h2 class="continue-learning__title">
              {{ section.settings.preview_title | default: 'Members Only Content' }}
            </h2>

            <p class="continue-learning__subtitle">
              {{ section.settings.preview_subtitle | default: 'Log in to track your progress and continue learning' }}
            </p>

            <a href="{{ routes.login_url }}" class="continue-learning__button">
              {{ section.settings.preview_button | default: 'Log In to Continue' }}
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}

