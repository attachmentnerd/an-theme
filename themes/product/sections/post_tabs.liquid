{% include "base_html" %}
{% schema %}
  {
    "name": "Post Tabs",
    "elements": [
      {
        "type": "textarea",
        "id": "section_style",
        "label": "Section Style",
        "default": "/* -- Desktop Style --*/\n\n\n/* -- Mobile Style --*/\n\n"
      }

    ],
    "groups": [
      {
        "name": "Background",
        "elements": [
          {
            "type": "select",
            "label": "Background Color",
            "id": "background_color_preset",
            "options": [
              {
                "value": "--bg-color-1",
                "label": "Background Color 1"
              },
              {
                "value": "--bg-color-2",
                "label": "Background Color 2"
              },
              {
                "value": "--bg-color-3",
                "label": "Background Color 3"
              },
              {
                "value": "--bg-color-4",
                "label": "Background Color 4"
              },
              {
                "value": "--accent-color-1",
                "label": "Accent Color 1"
              },
              {
                "value": "--accent-color-2",
                "label": "Accent Color 2"
              },
              {
                "value": "--accent-color-3",
                "label": "Accent Color 3"
              },
              {
                "value": "--accent-color-4",
                "label": "Accent Color 4"
              },
              {
                "value": "No Background Color",
                "label": "No Background Color"
              }
            ]
          },
          {
            "type": "color",
            "label": "Custom Background Color",
            "id": "background_color",
            "allow_blank": true,
            "info": "Set a background color or apply a color overlay to your background image or video. Use the color wheel slider to adjust opacity."
          },
          {
            "type": "select",
            "id": "bg_type",
            "label": "Background Media Type",
            "default": "none",
            "options": [
              {
                "value": "none",
                "label": "None"
              },
              {
                "value": "image",
                "label": "Image"
              },
              {
                "value": "video",
                "label": "Video"
              }
            ]
          },
          {
            "type": "video",
            "id": "bg_video",
            "label": "Background Video"
          },
          {
            "type": "image_picker",
            "id": "bg_image",
            "label": "Background Image",
            "info": "A good background image sets the tone for your website without distracting from your content. Suggested dimensions: 2880 × 1200.",
            "fit": "max",
            "width": 3000,
            "height": 3000
          },
          {
            "type": "select",
            "id": "bg_position",
            "label": "Background Image Position",
            "default": "center center",
            "info": "Positioning of the background image.",
            "options": [
              {
                "value": "left top",
                "label": "Left Top"
              },
              {
                "value": "left center",
                "label": "Left Center"
              },
              {
                "value": "left bottom",
                "label": "Left Bottom"
              },
              {
                "value": "right top",
                "label": "Right Top"
              },
              {
                "value": "right center",
                "label": "Right Center"
              },
              {
                "value": "right bottom",
                "label": "Right Bottom"
              },
              {
                "value": "center top",
                "label": "Center Top"
              },
              {
                "value": "center center",
                "label": "Center Center"
              },
              {
                "value": "center bottom",
                "label": "Center Bottom"
              }
            ]
          },

          {
            "type": "radio",
            "id": "bg_size",
            "label": "Background Size",
            "default": "cover",
            "options": [
              {
                "value": "contain",
                "label": "Contain"
              },
              {
                "value": "cover",
                "label": "Cover"
              }
            ]
          },

          {
            "type": "checkbox",
            "id": "bg_repeat",
            "label": "Repeat Background",
            "default": "false"
          },
          {
            "type": "text",
            "id": "bg_precise_position",
            "label": "Precise Background position - exmp:30% 50%",
            "default": ""
          },
          {
            "type": "checkbox",
            "id": "bg_mobie_hide",
            "label": "Hide Background on mobile",
            "default": "false"
          },
          {
            "type": "checkbox",
            "id": "background_fixed",
            "label": "Fixed Background Image (Parallax)",
            "default": "true",
            "info": "Make this section's background image fixed on scroll. Does not apply to mobile devices."
          }
        ]
      },
      {
        "name": "Desktop Layout",
        "elements": [
          {
            "type": "checkbox",
            "id": "hide_on_desktop",
            "label": "Hide Section",
            "default": "false",
            "info": "This will hide this section on desktop."
          },
          {
            "type": "spacer",
            "id": "padding_desktop",
            "label": "Desktop Section Padding",
            "info": "Adjust padding inside of the section. Hold shift to increment/decrement by 10.",
            "placeholder": {
              "top": "100",
              "right": "40",
              "bottom": "100",
              "left": "40"
            }
          },
          {
            "type": "text",
            "id": "content_width",
            "label": "Content Width",
            "default": "",
            "info": "Leave blank to use theme default."
          },
          {
            "type": "checkbox",
            "id": "equal_height",
            "label": "Equal Height Blocks",
            "default": "false",
            "info": "Make this section's blocks equal height."
          },
          {
            "type": "checkbox",
            "id": "full_width",
            "label": "Make Section Full Width",
            "default": "false",
            "info": "This section will fill the full width of the browser window."
          },
          {
            "type": "checkbox",
            "id": "full_height",
            "label": "Make Section Full Height",
            "default": "false",
            "info": "This section will fill the full height of the browser window."
          }
        ]
      },
      {
        "name": "Mobile Layout",
        "elements": [
          {
            "type": "checkbox",
            "id": "hide_on_mobile",
            "label": "Hide Section",
            "default": "false",
            "info": "This will hide this section on mobile."
          },
          {
            "type": "spacer",
            "id": "padding_mobile",
            "label": "Mobile Section Padding",
            "info": "Adjust padding inside of the section",
            "placeholder": {
              "top": "40",
              "right": "10",
              "bottom": "40",
              "left": "10"
            }
          }
        ]
      }
    ],
    "blocks": [
      {
        "type": "tab",
        "name": "Tab",
        "elements": [
          {
            "type": "header",
            "content": "Tab"
          },
          {
            "type": "text",
            "label": "Tab Name",
            "id": "tab_name",
            "default": "Lorem"
          },
          {
            "type": "text",
            "label": "Icon",
            "id": "tab_icon",
            "default": "far fa-sticky-note"
          },
          {
            "type": "text",
            "label": "Section Name",
            "id": "tab_section",
            "default": "Post Comments"
          },
          {
            "type": "checkbox",
            "label": "Active",
            "id": "is_active",
            "default": false
          },
          {
            "type": "checkbox",
            "label": "Mobile Only",
            "id": "mobile_only",
            "default": false
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Post Tabs",
        "type": "post_tabs",
        "category": "Content",
        "settings": {}
      }
    ]
  }
{% endschema %}
