[
  {
    "name": "theme_info",
    "theme_name": "AN Product Theme",
    "theme_version": "10.4.3",
    "theme_author": "AN Themes",
    "theme_documentation_url": "https://anthemes.com/docs",
    "theme_support_url": "https://anthemes.com/support"
  },
  {
    "name": "Favicon",
    "elements": [
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon Image",
        "fit": "crop",
        "width": 32,
        "height": 32,
        "info": "Must be a 32x32 PNG file. Transparency is supported. Please allow some time for favicon to change."
      }
    ]
  },
  {
    "name": "Typography",
    "elements": [
      {
        "type": "header",
        "content": "Typography"
      },
      {
        "type": "divider"
      },
      {
        "type": "font_select",
        "label": "Base Font Family",
        "id": "font_family",
        "default": "Open Sans",
        "preset": "google_fonts",
        "options": []
      },
      {
        "type": "font_select",
        "label": "Heading Font Family",
        "id": "heading_font_family",
        "default": "Open Sans",
        "preset": "google_fonts",
        "options": []
      },
      {
        "type": "color",
        "id": "text_dark",
        "label": "Text Dark",
        "default": "#30373d"
      },
      {
        "type": "color",
        "id": "text_light",
        "label": "Text Light",
        "default": "#fff"
      }
    ]
  },
  {
    "name": "Color Scheme",
    "elements": [
      {
        "type": "header",
        "content": "Color Scheme"
      },
      {
        "type": "color",
        "id": "primary_color",
        "label": "Primary",
        "default": "#2e91fc"
      },
      {
        "type": "color",
        "id": "accent_color",
        "label": "Accent",
        "default": "#2e91fc"
      },
      {
        "type": "color",
        "id": "sidebar_background",
        "label": "Sidebar Background",
        "default": "#fff"
      }
    ]
  },
  {
    "name": "General Settings",
    "elements": [
      {
        "type": "header",
        "content": "Visibility"
      },
      {
        "type": "checkbox",
        "id": "show_dashboard",
        "label": "Show Dashboard",
        "default": "true"
      },
      {
        "type": "checkbox",
        "id": "welcome_banner_use_thumbnail",
        "label": "Show product image in welcome banner",
        "default": "false"
      },
      {
        "type": "checkbox",
        "id": "show_search",
        "label": "Show Search",
        "default": "true"
      },
      {
        "type": "text",
        "default": "Search for something...",
        "label": "Search Text",
        "id": "search_text"
      },
      {
        "type": "header",
        "content": "Pagination"
      },
      {
        "type": "text",
        "id": "previous_text",
        "label": "Previous Text",
        "default": "Previous"
      },
      {
        "type": "text",
        "id": "next_text",
        "label": "Next Text",
        "default": "Next"
      },
      {
        "type": "header",
        "content": "Comments"
      },
      {
        "type": "text",
        "id": "language_comment_locked",
        "label": "Comments Locked",
        "default": "Comments Locked"
      },
      {
        "type": "text",
        "id": "language_comment_placeholder",
        "label": "Comments Placeholder",
        "default": "Say Something..."
      },
      {
        "type": "text",
        "id": "language_comment_submitting",
        "label": "Comment Submitting",
        "default": "submitting"
      },
      {
        "type": "text",
        "id": "language_comment_add",
        "label": "Comment Submit",
        "default": "Post Comment"
      },
      {
        "type": "text",
        "id": "language_comment_reply",
        "label": "Comment Reply",
        "default": "REPLY"
      },
      {
        "type": "text",
        "id": "language_comment_edit",
        "label": "Comment Edit",
        "default": "EDIT"
      },
      {
        "type": "text",
        "id": "language_comment_show_more",
        "label": "Show More Comments",
        "default": "Show More"
      },
      {
        "type": "text",
        "id": "language_comment_show_more_loading",
        "label": "Show More Comments Loading",
        "default": "Loading More Comments..."
      }
    ]
  },
  {
    "name": "Custom Code",
    "elements": [
      {
        "type": "header",
        "content": "Custom Code"
      },
      {
        "type": "textarea",
        "id": "embedded_scripts",
        "label": "Embedded Scripts",
        "default": "<!-- Embedded '<script>' tags go here -->",
        "info": ""
      }
    ]
  }
]