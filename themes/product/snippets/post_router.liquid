{% assign post_body = post.body %}
{% assign post_detail_type = "lesson" %}
{% if post_body contains "post-type-body" %}
  {% assign post_detail_type = post_body | split: '{"postType":"' %}
  {% assign post_detail_type = post_detail_type[1] | split: '"' %}
  {% assign post_detail_type = post_detail_type[0] %}
{% endif %}

{% if post_detail_type == "lesson" %}
  {% dynamic_sections_for "post" %}
  {% include "post_sidebar_script" %}
{% elsif post_detail_type == "program" %}
  {% include "post_type_program" %}
{% else %}
  {% include "post_type_playlist" %}
{% endif %}
<script>
  document
    .querySelector(".main-content-spacer")
    .classList
    .add(`{{post_detail_type}}`)
</script>
