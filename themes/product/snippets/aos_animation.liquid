{%- assign anim_duration = "1000" -%}
{%- assign anim_delay = "0" -%}
{%- if a_animation == "" -%}
    {%- assign anim_type = "fade-up-center" -%}
{%- else -%}
    {%- assign anim_r = a_animation | split:"," -%}
    {%  assign r_size = anim_r | size -%}
    {%- assign anim_type = anim_r[0] -%}
    {% if r_size > 1 -%}
        {%- assign anim_duration = anim_r[1] -%}
    {%- endif -%}
    {% if r_size > 2 -%}
        {%- assign anim_delay = anim_r[2] -%}
    {%- endif -%}
{%- endif -%}
data-aos="{{anim_type}}" data-aos-duration="{{anim_duration}}"  data-aos-delay="{{anim_delay}}"