{%- if is_hero_slider  -%}
  {%- assign animation_type = "slide_animation_type_" | append: slider_index -%}
  {%- if block.settings[animation_type] != 'None' and  block.settings[animation_type] != ''  and  block.settings[animation_type] != blank -%}
    {%- assign animation_ri = block.settings[animation_type] | split: "," -%}
    {%- if animation_ri == ""  -%}
      {%- assign animation_ri = "none" -%}
    {%- endif -%}
    data-swiper-animation="{{animation_ri[0]}}" 
    data-duration="{{animation_ri[1]}}"
    data-delay="{{animation_ri[2]}}"
  {%- else -%}
  
    {%- if block.settings.animation_type != 'None' and block.settings.animation_type != '' and block.settings.animation_type != blank -%}
      {%- assign animation_ri = block.settings.animation_type | split: "," -%}
      data-swiper-animation="{{animation_ri[0]}}" 
      data-duration="{{animation_ri[1]}}"
      data-delay="{{animation_ri[2]}}"
    {%- endif -%}
  {%- endif -%}
{%- endif -%}