<div class="category_wrap" >
    {% if category.pending_drip? %}

        <h3 class="product-outline-category dripped">
            {{ category.title }}
            {% include "p_icon_drip" %}
        </h3>

    {% elsif category.locked? %}

    <h3 class="product-outline-category locked">
        <span>{{ category.title }}</span>
         {% include "p_icon_lock" %}
         <i class="fas fa-chevron-right"></i>
     </h3>

    {% else %}
    
        <h3 class="product-outline-category"><span >{{ category.title }}</span>
            <svg xmlns="http://www.w3.org/2000/svg" width="13.6" height="16" viewBox="0 0 13.6 16">
                <g id="Group_26" data-name="Group 26" transform="translate(-300 -488)">
                <path id="Fill_1" data-name="Fill 1" d="M1.423,5.367V4.294a2.967,2.967,0,0,1,3.008-2.9A2.982,2.982,0,0,1,7.251,3.356a.725.725,0,0,0,.91.429A.689.689,0,0,0,8.6,2.9,4.424,4.424,0,0,0,4.414,0,4.386,4.386,0,0,0,0,4.31V5.529Z" transform="translate(302.369 488)"/>
                <path id="Fill_4" data-name="Fill 4" d="M10.185,10.631H3.415A3.382,3.382,0,0,1,0,7.291V3.34A3.382,3.382,0,0,1,3.415,0h6.77A3.382,3.382,0,0,1,13.6,3.34V7.291A3.382,3.382,0,0,1,10.185,10.631ZM6.8,3.738a.7.7,0,0,0-.707.691V6.194a.711.711,0,0,0,1.422,0V4.429A.7.7,0,0,0,6.8,3.738Z" transform="translate(300 493.369)" />
                </g>
            </svg>

            <i class="fas fa-chevron-right"></i>
            
        </h3>

        <div class="category_posts_wrap {% if collapse %} collapsed {% endif %}" >
            {% if show_posts %}
                {% assign current_post_id = post.id %}

                {% for post in category.posts %}
                    {% include "outline_post1" %}
                {% endfor %}
            {% endif %}


            {% if category.children? %}
                <div class="outline_subcategory">
                    {% for category in category.subcategories %}
                        {% include "outline1" %}
                    {% endfor %}
                </div>
            {% endif %}

        </div>

    {% endif %}

</div>
