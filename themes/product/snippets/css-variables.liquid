<!--color-vars-start-->
<style class="color_vars">
  :root {
    /* Map Product Theme variables to Brand System with fallbacks */
    --accent-color-1: {{ settings.accent_color_1 | default: '#5E3BFF' }};
    --accent-color-2: {{ settings.accent_color_2 | default: '#18D5E4' }};
    --accent-color-3: {{ settings.accent_color_3 | default: '#FF8BCB' }};
    --accent-color-4: {{ settings.accent_color_4 | default: '#FFE86B' }};
    --bg-color-1: {{ settings.color_bg_1 | default: '#FFFFFF' }};
    --bg-color-2: {{ settings.color_bg_2 | default: '#E9E6FF' }};
    --bg-color-3: {{ settings.color_bg_3 | default: '#F8F9FA' }};
    --bg-color-4: {{ settings.color_bg_4 | default: '#1B1B29' }};

    --text-color-1: {{ settings.color_primary | default: '#1B1B29' }};
    --text-color-2: {{ settings.text_color_2 | default: '#323346' }};
    --text-color-dark: {{ settings.text_color_dark | default: '#1B1B29' }};
    --font-text: {{text_font | default: 'Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif'}};
    --font-heading: {{head_font | default: 'Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif'}};
    
    /* Additional mappings to ensure brand consistency */
    --primary-color: var(--accent-color-1);
    --secondary-color: var(--accent-color-2);
    --success-color: var(--accent-color-2);
    --warning-color: var(--accent-color-4);
    --danger-color: var(--accent-color-3);
  }

  body, html {
    font-family: var(--font-text);
    color: var(--text-color-2);
  }
  
  .heading, h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-heading);
    color: var(--text-color-1);
  }
</style>
<!--color-vars-end-->