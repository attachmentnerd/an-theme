{% include "nblock_width" p:p %}
<style> 
   
  #{{p}}block-{{ block.id }} {
    width:{{width_calc}};
     order:{{block.settings[order]}};
    {{desktop_style}};
   
  } 


 

    @media(max-width:768px){
      #{{p}}block-{{ block.id }} {
        width:{{width_calc_mobile}};
          {{mobile_style}}
      }
    }

  {%- unless tablet_style == "" %} 
    @media(min-width:586px) and (max-width:786px){
      #{{p}}block-{{ block.id }} {
          {{tablet_style}}
      }
    }
  {%- endunless -%}

 
  {%- unless astrix_style == "" -%}
     #{{p}}block-{{ block.id }} *{ 
       {{astrix_style}} 
    }
  {%- endunless -%}

    {%- unless astrix_style_mobile == "" -%}
      @media(max-width:768px){
        #{{p}}block-{{ block.id }} *{ 
          {{astrix_style_mobile}} 
        }
      }
    {%- endunless -%}

    {%- unless img_style == "" -%}
      #{{p}}block-{{ block.id }} img{ 
        {{img_style}}
      }
    {%- endunless -%}
    
    {%- unless image_style == "" -%}
      {{block_selector}} img{ 
        {{image_style}}
      }
    {%- endunless -%}

  {%- unless style_child == "" -%}
     #{{p}}block-{{ block.id }} > button, #{{p}}block-{{ block.id }} > div, #{{p}}block-{{ block.id }} > img{ 
      {{style_child}}
    }
  {%- endunless -%}
  {%- unless button_text_style == "" -%}
     #{{p}}block-{{ block.id }} a span{ 
       {{button_text_style}}
    }
  {%- endunless -%}

  {%- unless custom_selectors == "" -%}
      {{custom_selectors}}
  {%- endunless -%}

    {%- unless custom_selectors_mobile == "" -%}
        @media(max-width:768px){
          {{custom_selectors_mobile}}
        }
    {%- endunless -%}
    {%- unless custom_selectors_tablet == "" -%}
        @media(min-width:586px) and (max-width:786px){
          {{custom_selectors_tablet}}
        }
    {%- endunless -%}

</style>