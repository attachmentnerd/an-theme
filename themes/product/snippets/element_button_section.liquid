{% assign btn_background_color = block.settings.btn_background_color | default: settings.color_mark %}
{% assign btn_text_color = block.settings.btn_text_color | default: '#fff' %} 
{% assign btn_border_radius = block.settings.btn_border_radius | default: "5" | remove: "px" | append: "px" %}
{% assign btn_style = block.settings.btn_style | default: "solid" %}
{% assign btn_size = block.settings.btn_size | default: "medium" %}
{% assign btn_width = block.settings.btn_width | default: "auto" %}
<style>
  #btn-{{ section.id }} {
    border-color: {{ btn_background_color }};
    border-radius: {{ btn_border_radius }};
    color: {{ btn_text_color }};
    background-color: {{ btn_background_color }};
  }
  #btn-{{ section.id }}.btn--outline {
    background: transparent;
    color: {{ btn_background_color }};
  }
</style>

<a id="btn-{{ section.id }}" class="btn btn--{{ btn_style }} btn--{{ btn_size }} btn--{{ btn_width }}" href="{{ section.settings.btn_action }}" {% if section.settings.btn_action == "#two-step" %} data-target="#two-step" data-toggle="modal" {% endif %} {% if section.settings.new_tab == true %} target="_blank" rel="noopener" {% endif %} kjb-settings-id="{{ 'btn_background_color' | settings_id: section: section }}">
  {{ section.settings.btn_text }}
</a>
