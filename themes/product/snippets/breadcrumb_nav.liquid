<!-- Breadcrumb Navigation -->
<div class="breadcrumb-nav">
  <div class="container">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb-nav__list">
        <li class="breadcrumb-nav__item">
          <a href="{{ current_site.homepage_url }}" class="breadcrumb-nav__link">Home</a>
        </li>
        <li class="breadcrumb-nav__separator" aria-hidden="true">›</li>
        
        {% if current_user %}
          <li class="breadcrumb-nav__item">
            <a href="/products" class="breadcrumb-nav__link">My Courses</a>
          </li>
          <li class="breadcrumb-nav__separator" aria-hidden="true">›</li>
        {% endif %}
        
        {% if current_product %}
          <li class="breadcrumb-nav__item breadcrumb-nav__item--current" aria-current="page">
            {{ current_product.title }}
          </li>
        {% elsif current_category %}
          <li class="breadcrumb-nav__item">
            <a href="{{ current_product.url }}" class="breadcrumb-nav__link">{{ current_product.title }}</a>
          </li>
          <li class="breadcrumb-nav__separator" aria-hidden="true">›</li>
          <li class="breadcrumb-nav__item breadcrumb-nav__item--current" aria-current="page">
            {{ current_category.title }}
          </li>
        {% elsif current_post %}
          <li class="breadcrumb-nav__item">
            <a href="{{ current_product.url }}" class="breadcrumb-nav__link">{{ current_product.title }}</a>
          </li>
          <li class="breadcrumb-nav__separator" aria-hidden="true">›</li>
          {% if current_post.category %}
            <li class="breadcrumb-nav__item">
              <a href="{{ current_post.category.url }}" class="breadcrumb-nav__link">{{ current_post.category.title }}</a>
            </li>
            <li class="breadcrumb-nav__separator" aria-hidden="true">›</li>
          {% endif %}
          <li class="breadcrumb-nav__item breadcrumb-nav__item--current" aria-current="page">
            {{ current_post.title | truncate: 50 }}
          </li>
        {% endif %}
      </ol>
    </nav>
  </div>
</div>

<style>
  .breadcrumb-nav {
    background: var(--an-white);
    padding: var(--an-space-md) 0;
    border-bottom: 1px solid rgba(26, 45, 78, 0.08);
    margin-bottom: var(--an-space-lg);
  }
  
  .breadcrumb-nav__list {
    display: flex;
    align-items: center;
    gap: var(--an-space-sm);
    margin: 0;
    padding: 0;
    list-style: none;
    flex-wrap: wrap;
  }
  
  .breadcrumb-nav__item {
    color: var(--an-slate);
    font-size: 14px;
    line-height: 1.5;
  }
  
  .breadcrumb-nav__link {
    color: var(--an-teal);
    text-decoration: none;
    transition: var(--an-transition);
  }
  
  .breadcrumb-nav__link:hover {
    color: var(--an-navy);
    text-decoration: underline;
  }
  
  .breadcrumb-nav__separator {
    color: var(--an-slate);
    opacity: 0.5;
    font-size: 16px;
  }
  
  .breadcrumb-nav__item--current {
    font-weight: 500;
    color: var(--an-navy);
  }
  
  @media (max-width: 767px) {
    .breadcrumb-nav {
      padding: var(--an-space-sm) 0;
    }
    
    .breadcrumb-nav__list {
      font-size: 13px;
    }
  }
</style>