<!DOCTYPE html>
<html lang="{{ current_site.locale | default: "en" }}">
  {% include "global_head" %}

    <!-- Optional Background Image ======================================== -->
    {% if settings.use_bg_img %}
      {% assign p-BgImage = settings.page_background_img | image_picker_url: "page.jpg" %}
      <style>
        body {
          background-image: url({{ p-BgImage }});
          background-position: center center;
          background-repeat: no-repeat;
          -webkit-background-size: cover;
          -moz-background-size: cover;
          -o-background-size: cover;
          background-size: cover;
          background-attachment: fixed;
        }
      </style>
    {% else %}
      <style>
        .section--global {
          background: {{ settings.color_container_bg }};
        }
      </style>
    {% endif %}

    {% if settings.body_width == "small" %}
      <style>
        @media (min-width: 768px) {
          .section__body.col-lg-8 {
            width: 66.666667%;
            text-align: left;
          }
          .section__sidebar {
            text-align: left;
          }
        }
      </style>
    {% endif %}

  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TKCGMPHT" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <div class="container container--main">
      <div class="content-wrap">
        <div class="section-wrap section-wrap--{{ v-Align }}">
          {% include "navigation_controller" %}
          {% section "header" %}
          {% section "search" %}
          {{ content_for_layout }}
          {% unless settings.use_bg_img %}
            {% section "footer" %}
          {% endunless %}
        </div>
      </div>
      {% if settings.use_bg_img %}
        <div class="footer-wrap">
          {% section "footer" %}
        </div>
      {% endif %}
    </div>

    <!-- Core Scripts ================================================== -->
    {{ 'core.js' | kajabi_asset_url | script_tag }}

    <!-- Video Support -->
    <script charset='ISO-8859-1' src='https://fast.wistia.com/assets/external/E-v1.js' defer></script>
    <script charset='ISO-8859-1' src='https://fast.wistia.com/labs/crop-fill/plugin.js' defer></script>

    <!-- Modern Scripts -->
    {% include 'global_scripts' %}

    <!-- Legacy Support (loaded conditionally) -->
    {% comment %}
      Only load heavy libraries when actually needed
      - Slick carousel: Only if carousel sections exist
      - Ouibounce: Only if exit popups are configured
      - Bootstrap 4 Alpha: Should be updated to modern version
    {% endcomment %}

    {{ settings.embedded_scripts }}
  </body>
</html>
