<!doctype html>
<html lang="{{ current_site.locale | default: "en" }}">
  <head>
    <!-- Title and description ================================================== -->
    {% csrf_meta_tags %}
    <title>
      {% if page_title %}
        {{ page_title }}
      {% else %}
        {{ current_site.title }}
      {% endif %}
    </title>
    <meta charset="utf-8" />
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}" />
    {% endif %}

    <!-- Helpers ================================================== -->
    {% include "social_meta_tags" %}
    {% if settings.favicon and settings.favicon != "" %}
      <link href="{{ settings.favicon | image_picker_url: 'favicon.png' }}?v=2" rel="shortcut icon" />
    {% else %}
      <link href="{{ current_site.favicon_image | image_picker_url: 'favicon.png' }}?v=2" rel="shortcut icon" />
    {% endif %}
    <link rel="canonical" href="{{ canonical_url }}" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    {% if settings.font_family ==  settings.heading_font_family%}
      <link href="//fonts.googleapis.com/css?family={{ settings.font_family | replace: ' ', '+' }}:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    {% else %}
      <link href="//fonts.googleapis.com/css?family={{ settings.font_family | replace: ' ', '+' }}:400,700,400italic,700italic|{{ settings.heading_font_family | replace: ' ', '+' }}:400,700,400italic,700italic" rel="stylesheet" type="text/css">
    {% endif %}
    {{ 'core.css' | kajabi_asset_url | stylesheet_tag }}
    {{ 'styles.css' | asset_url | stylesheet_tag }}
    {{ 'overrides.css' | asset_url | stylesheet_tag }}
    
    <style>
      /* AN Theme Design System Variables - Attachment Nerd Brand */
      :root {
        /* Core Brand Colors */
        --an-navy: #1A2D4E;
        --an-teal: #2AB3B1;
        --an-coral: #F57C6F;
        --an-gold: #FFC63F;
        --an-plum: #A449A5;
        --an-peach: #FFF4F0;
        --an-white: #FFFFFF;
        --an-grey: #F8F7F5;
        --an-slate: #3A4A63;
        
        /* Legacy Mappings for Compatibility */
        --an-primary: var(--an-navy);
        --an-primary-hover: #152541;
        --an-primary-light: var(--an-teal);
        --an-secondary: var(--an-teal);
        --an-secondary-hover: #239A98;
        
        /* Text Colors */
        --an-text-dark: var(--an-slate);
        --an-text-medium: var(--an-slate);
        --an-text-light: #6B7280;
        --an-text-white: var(--an-white);
        
        /* Background Colors */
        --an-bg-white: var(--an-white);
        --an-bg-light: var(--an-grey);
        --an-bg-lighter: var(--an-peach);
        --an-border: #E5E7EB;
        --an-border-light: #F3F4F6;
        
        /* Spacing System */
        --an-space-xs: 4px;
        --an-space-sm: 8px;
        --an-space-md: 16px;
        --an-space-lg: 24px;
        --an-space-xl: 32px;
        --an-space-2xl: 48px;
        --an-space-3xl: 64px;
        
        /* Transitions */
        --an-transition-fast: 0.2s ease;
        --an-transition-smooth: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        --an-transition-bounce: 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        
        /* Z-index System */
        --an-z-dropdown: 50;
        --an-z-header: 100;
        --an-z-backdrop: 998;
        --an-z-mobile-menu: 999;
        --an-z-modal: 1000;
        
        /* Border Radius */
        --an-radius-sm: 4px;
        --an-radius-md: 6px;
        --an-radius-lg: 8px;
        --an-radius-xl: 12px;
        --an-radius-full: 9999px;
        
        /* Shadows */
        --an-shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --an-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        --an-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        --an-shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
      }
    </style>

    {%- if settings.welcome_banner_use_thumbnail and current_product.thumbnail_url -%}
      <style>
        .banner-image,
        .mini-dashboard
        {
          position: relative;
          background: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url({{current_product.thumbnail_url}}) no-repeat center center;
          background-size: cover;
        }
        .banner-image .responsive-toggle,
        .banner-image .dashboard-welcome {
          background: transparent;
        }
        .banner-image,
        .banner-image .dashboard-welcome-title,
        .banner-image .dashboard-welcome-subtitle,
        .banner-image .responsive-toggle-trigger,
        .banner-image .dashboard-welcome .text,
        .banner-image .responsive-toggle .search-icon,
        .banner-image .responsive-toggle .search-icon:hover,
        .banner-image .responsive-toggle .search-icon:active,
        .banner-image .responsive-toggle input.search-input,
        .banner-image .responsive-toggle .search-icon:hover,
        .banner-image .responsive-toggle input.search-input::placeholder {
          color: {{ settings.text_light }};
        }
        .mini-dashboard .mini-dashboard,
        .mini-dashboard .mini-dashboard-back,
        .mini-dashboard .mini-dashboard-title,
        .mini-dashboard .mini-dashboard-user,
        .mini-dashboard .mini-dashboard-completion {
          color: {{ settings.text_light }};
          opacity: 1;
        }
      </style>
    {%- endif -%}

    <!-- Header hook ================================================== -->
    {% content_for_header %}
  </head>
  <body class="d-flex flex-fill">

    {{ content_for_layout }}

    <!-- Javascripts ================================================== -->
    {{ 'core.js' | kajabi_asset_url | script_tag }}
    <script charset='ISO-8859-1' src='https://fast.wistia.com/assets/external/E-v1.js'></script>
    <script charset='ISO-8859-1' src='https://fast.wistia.com/labs/crop-fill/plugin.js'></script>
    {{ 'scripts.js' | asset_url | script_tag }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    {{ settings.embedded_scripts }}
  </body>
</html>
