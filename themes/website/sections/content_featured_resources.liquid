{%- comment -%}
  Attachment Nerd – Featured Resources Section
  A modern grid layout for showcasing free resources, downloads, and tools
  Drop in any Kajabi page via "Add Section › Featured Resources"
{%- endcomment -%}

<section id="featured-resources-{{ section.id }}" class="featured-resources" style="background: {{ section.settings.background_gradient }};">
  <div class="container">
    <!-- Section Header -->
    <div class="featured-resources__header text-center animate-fade-up">
      {% if section.settings.micro_label != blank %}
        <p class="featured-resources__micro-label">{{ section.settings.micro_label }}</p>
      {% endif %}
      
      {% if section.settings.heading != blank %}
        <h2 class="featured-resources__heading">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>

    <!-- Resources Grid -->
    {% assign resource_count = 0 %}
    {% for block in section.blocks %}
      {% if block.type == 'resource' %}
        {% assign resource_count = resource_count | plus: 1 %}
      {% endif %}
    {% endfor %}
    
    <div class="featured-resources__grid featured-resources__grid--{{ section.settings.layout_style }} featured-resources__grid--blocks-{{ resource_count }}" 
         style="gap: {{ section.settings.card_gap }}px;">
      {% for block in section.blocks %}
        {% if block.type == 'resource' %}
          {% assign row_index = forloop.index0 | modulo: 2 %}
          <div class="featured-resource {% if section.settings.layout_style == 'alternating' and row_index == 1 %}featured-resource--reversed{% endif %} animate-fade-up" 
               style="animation-delay: {{ forloop.index0 | times: 0.1 }}s;">
            
            <!-- Resource Image -->
            <div class="featured-resource__image-wrapper" style="{% if block.settings.image_aspect and block.settings.image_aspect != 'auto' %}aspect-ratio: {{ block.settings.image_aspect }}; height: auto;{% endif %}">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_picker_url: '800x450' }}" 
             alt="{{ block.settings.title }}" 
             class="featured-resource__image"
             loading="lazy"
             style="object-fit: {{ block.settings.image_fit | default: 'cover' }}; object-position: {{ block.settings.image_position | default: 'center center' }}; {% if block.settings.image_aspect and block.settings.image_aspect != 'auto' %}height: 100%;{% endif %}">
              {% else %}
                <div class="featured-resource__placeholder">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="var(--c-brand-600)">
                    <path d="M9 13h6v-2H9v2zm0-4h6V7H9v2zm0 8h6v-2H9v2zm-7 5V2c0-1.1.9-2 2-2h16c1.1 0 2 .9 2 2v16c0 1.1-.9 2-2 2H7l-5 5zm2-5h14V4H4v13z"/>
                  </svg>
                  <p style="margin-top: 10px; color: var(--c-brand-600); font-size: 14px;">Resource Preview</p>
                </div>
              {% endif %}
            </div>

            <!-- Resource Content -->
            <div class="featured-resource__content">
              {% if block.settings.category != blank %}
                <span class="featured-resource__category" style="background: {{ block.settings.category_color }};">
                  {{ block.settings.category }}
                </span>
              {% endif %}
              
              <h3 class="featured-resource__title">{{ block.settings.title }}</h3>
              
              {% if block.settings.description != blank %}
                <p class="featured-resource__description">{{ block.settings.description }}</p>
              {% endif %}
              
              <div class="featured-resource__action">
                <a href="{{ block.settings.download_url }}" 
                   class="featured-resource__download{% if block.settings.button_style == 'outline' %} is-outline{% elsif block.settings.button_style == 'link' %} is-link{% endif %}"
                   {% if block.settings.new_tab %}target="_blank" rel="noopener"{% endif %}
                   aria-label="Download {{ block.settings.title }}">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"/>
                  </svg>
                  <span>{{ block.settings.button_text | default: 'Download' }}</span>
                </a>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- CTA Section -->
    {% if section.settings.show_cta %}
      <div class="featured-resources__cta text-center animate-fade-up">
        <p class="featured-resources__cta-text">{{ section.settings.cta_text }}</p>
        <a href="{{ section.settings.cta_url }}" 
           class="btn btn-primary-modern">
          {{ section.settings.cta_button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  /* Typography size adjustments */
  #featured-resources-{{ section.id }} .featured-resources__micro-label {
    font-size: {{ section.settings.micro_label_size }}px !important;
  }

  #featured-resources-{{ section.id }} .featured-resources__heading {
    font-size: {{ section.settings.heading_size_mobile }}px !important;
    font-weight: {{ section.settings.heading_weight }} !important;
    letter-spacing: {{ section.settings.heading_letter_spacing }}em !important;
    text-transform: {{ section.settings.heading_transform }} !important;
  }

  @media (min-width: 768px) {
    #featured-resources-{{ section.id }} .featured-resources__heading {
      font-size: {{ section.settings.heading_size_desktop }}px !important;
    }
  }

  #featured-resources-{{ section.id }} .featured-resource__title {
    font-size: {{ section.settings.title_size }}px !important;
    font-weight: {{ section.settings.title_weight }} !important;
  }

  #featured-resources-{{ section.id }} .featured-resource__description {
    font-size: {{ section.settings.description_size }}px !important;
    line-height: {{ section.settings.description_line_height }} !important;
  }

  #featured-resources-{{ section.id }} .featured-resource__category {
    font-size: {{ section.settings.category_label_size }}px !important;
  }

  #featured-resources-{{ section.id }} .featured-resource__download {
    font-size: {{ section.settings.button_text_size }}px !important;
    padding: {{ section.settings.button_padding }}px {{ section.settings.button_padding | times: 2 }}px !important;
  }

  /* Featured Resources Section */
  .featured-resources {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
    position: relative;
    overflow: hidden;
  }

  /* Background decoration */
  .featured-resources::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 60%;
    height: 60%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
  }

  /* Header */
  .featured-resources__header {
    max-width: 800px;
    margin: 0 auto var(--an-space-3xl);
    position: relative;
    z-index: 1;
  }

  .featured-resources__micro-label {
    font-size: var(--an-font-sm);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--c-brand-800);
    margin-bottom: var(--an-space-md);
  }

  .featured-resources__heading {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 300;
    color: var(--c-brand-800);
    letter-spacing: -0.02em;
    margin: 0;
  }

  /* Grid Layout - Cards Style */
  .featured-resources__grid--cards {
    display: grid;
    margin: 0 auto;
    max-width: 1200px;
  }

  /* Dynamic grid based on number of blocks */
  .featured-resources__grid--cards.featured-resources__grid--blocks-1 {
    grid-template-columns: 1fr;
    max-width: 600px;
  }

  .featured-resources__grid--cards.featured-resources__grid--blocks-2 {
    grid-template-columns: repeat(2, 1fr);
    max-width: 900px;
  }

  .featured-resources__grid--cards.featured-resources__grid--blocks-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .featured-resources__grid--cards.featured-resources__grid--blocks-4 {
    grid-template-columns: repeat(4, 1fr);
  }

  .featured-resources__grid--cards.featured-resources__grid--blocks-5 {
    grid-template-columns: repeat(3, 1fr);
    max-width: 1000px;
  }

  .featured-resources__grid--cards.featured-resources__grid--blocks-6 {
    grid-template-columns: repeat(3, 1fr);
  }

  /* 7+ blocks */
  .featured-resources__grid--cards.featured-resources__grid--blocks-7,
  .featured-resources__grid--cards.featured-resources__grid--blocks-8 {
    grid-template-columns: repeat(4, 1fr);
  }

  /* Grid Layout - Compact Style */
  .featured-resources__grid--compact {
    display: grid;
    margin: 0 auto;
    max-width: 1200px;
    gap: 0 !important;
  }

  /* Dynamic grid for compact style */
  .featured-resources__grid--compact.featured-resources__grid--blocks-1 {
    grid-template-columns: 1fr;
    max-width: 600px;
  }

  .featured-resources__grid--compact.featured-resources__grid--blocks-2 {
    grid-template-columns: repeat(2, 1fr);
    max-width: 900px;
  }

  .featured-resources__grid--compact.featured-resources__grid--blocks-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .featured-resources__grid--compact.featured-resources__grid--blocks-4 {
    grid-template-columns: repeat(4, 1fr);
  }

  .featured-resources__grid--compact.featured-resources__grid--blocks-5 {
    grid-template-columns: repeat(3, 1fr);
    max-width: 1000px;
  }

  .featured-resources__grid--compact.featured-resources__grid--blocks-6 {
    grid-template-columns: repeat(3, 1fr);
  }

  /* 7+ blocks */
  .featured-resources__grid--compact.featured-resources__grid--blocks-7,
  .featured-resources__grid--compact.featured-resources__grid--blocks-8 {
    grid-template-columns: repeat(4, 1fr);
  }

  /* Grid Layout - Alternating Style */
  .featured-resources__grid--alternating {
    display: flex;
    flex-direction: column;
    max-width: 1000px;
    margin: 0 auto;
  }

  /* Individual Resource - Cards Style */
  .featured-resources__grid--cards .featured-resource {
    background: white;
    border-radius: var(--an-radius-lg);
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all var(--an-transition-base);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .featured-resources__grid--cards .featured-resource:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  /* Individual Resource - Compact Style */
  .featured-resources__grid--compact .featured-resource {
    background: white;
    border: 1px solid #e5e5e5;
    overflow: hidden;
    transition: all var(--an-transition-base);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .featured-resources__grid--compact .featured-resource:hover {
    z-index: 10;
    transform: scale(1.02);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  /* Individual Resource - Alternating Style */
  .featured-resources__grid--alternating .featured-resource {
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: 3rem;
    background: transparent;
    overflow: visible;
    margin-bottom: 3rem;
  }

  .featured-resources__grid--alternating .featured-resource--reversed {
    grid-template-columns: 1fr 400px;
  }

  .featured-resources__grid--alternating .featured-resource--reversed .featured-resource__image-wrapper {
    order: 2;
  }

  .featured-resources__grid--alternating .featured-resource--reversed .featured-resource__content {
    order: 1;
  }

  /* Image Section */
  .featured-resource__image-wrapper {
    position: relative;
    overflow: hidden;
  }

  /* Cards & Compact image styling */
  .featured-resources__grid--cards .featured-resource__image-wrapper,
  .featured-resources__grid--compact .featured-resource__image-wrapper {
    height: 200px;
  }

  .featured-resources__grid--cards .featured-resource__image,
  .featured-resources__grid--compact .featured-resource__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--an-transition-slow);
  }

  .featured-resources__grid--cards .featured-resource:hover .featured-resource__image,
  .featured-resources__grid--compact .featured-resource:hover .featured-resource__image {
    transform: scale(1.05);
  }

  /* Alternating image styling */
  .featured-resources__grid--alternating .featured-resource__image-wrapper {
    border-radius: var(--an-radius-lg);
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .featured-resources__grid--alternating .featured-resource__image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    transition: transform var(--an-transition-slow);
  }

  .featured-resources__grid--alternating .featured-resource:hover .featured-resource__image {
    transform: scale(1.05);
  }

  /* Placeholder styling */
  .featured-resource__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--c-brand-100) 0%, #f0edff 100%);
    text-align: center;
  }

  /* Content Section */
  .featured-resource__content {
    padding: var(--an-space-xl);
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  /* Alternating content styling */
  .featured-resources__grid--alternating .featured-resource__content {
    padding: var(--an-space-2xl) 0;
    background: white;
    border-radius: var(--an-radius-lg);
    padding: var(--an-space-2xl);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .featured-resource__category {
    display: inline-block;
    padding: 6px 16px;
    border-radius: var(--an-radius-full);
    font-size: var(--an-font-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: white;
    margin-bottom: var(--an-space-md);
    align-self: flex-start;
  }

  .featured-resource__title {
    font-size: var(--an-font-xl);
    font-weight: 600;
    color: var(--c-ink-900);
    margin: 0 0 var(--an-space-sm);
    line-height: 1.3;
  }

  .featured-resource__description {
    font-size: var(--an-font-base);
    color: var(--c-ink-700);
    line-height: 1.6;
    margin: 0 0 var(--an-space-lg);
    flex: 1;
  }

  .featured-resource__action {
    display: flex;
    align-items: center;
    gap: var(--an-space-sm);
  }

  .featured-resource__download {
    display: inline-flex;
    align-items: center;
    gap: var(--an-space-sm);
    padding: 10px 20px;
    border-radius: var(--an-radius-full);
    background: var(--c-brand-600);
    color: white;
    text-decoration: none;
    font-weight: 500;
    font-size: var(--an-font-sm);
    transition: all var(--an-transition-base);
    border: 2px solid transparent;
  }

  .featured-resource__download:hover {
    background: var(--c-brand-800);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(94, 59, 255, 0.3);
  }

  /* Download button variants */
  .featured-resource__download.is-outline {
    background: transparent;
    color: var(--c-brand-700);
    border-color: var(--c-brand-600);
  }

  .featured-resource__download.is-outline:hover {
    background: var(--c-brand-50);
    box-shadow: none;
  }

  .featured-resource__download.is-link {
    background: transparent;
    color: var(--c-brand-700);
    padding: 0;
    border: 0;
    border-radius: 0;
    gap: 8px;
  }

  .featured-resource__download.is-link:hover {
    color: var(--c-brand-800);
    transform: none;
    box-shadow: none;
    background: transparent;
  }

  .featured-resource__download svg {
    width: 20px;
    height: 20px;
  }

  /* CTA Section */
  .featured-resources__cta {
    margin-top: var(--an-space-3xl);
    position: relative;
    z-index: 1;
  }

  .featured-resources__cta-text {
    font-size: var(--an-font-lg);
    color: var(--c-brand-800);
    margin-bottom: var(--an-space-lg);
  }

  /* Animations */
  .animate-fade-up {
    animation: fadeUp 0.6s ease-out both;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Mobile Responsive */
  @media (max-width: 991px) {
    /* Cards style - max 2 columns on tablet */
    .featured-resources__grid--cards.featured-resources__grid--blocks-3,
    .featured-resources__grid--cards.featured-resources__grid--blocks-4,
    .featured-resources__grid--cards.featured-resources__grid--blocks-5,
    .featured-resources__grid--cards.featured-resources__grid--blocks-6,
    .featured-resources__grid--cards.featured-resources__grid--blocks-7,
    .featured-resources__grid--cards.featured-resources__grid--blocks-8 {
      grid-template-columns: repeat(2, 1fr);
      max-width: 900px;
    }

    /* Compact style - max 2 columns on tablet */
    .featured-resources__grid--compact.featured-resources__grid--blocks-3,
    .featured-resources__grid--compact.featured-resources__grid--blocks-4,
    .featured-resources__grid--compact.featured-resources__grid--blocks-5,
    .featured-resources__grid--compact.featured-resources__grid--blocks-6,
    .featured-resources__grid--compact.featured-resources__grid--blocks-7,
    .featured-resources__grid--compact.featured-resources__grid--blocks-8 {
      grid-template-columns: repeat(2, 1fr);
      max-width: 900px;
    }
  }

  @media (max-width: 767px) {
    .featured-resources__heading {
      font-size: 2.5rem;
    }

    .featured-resources__grid--cards,
    .featured-resources__grid--compact {
      grid-template-columns: 1fr !important;
    }

    .featured-resources__grid--alternating .featured-resource,
    .featured-resources__grid--alternating .featured-resource--reversed {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .featured-resources__grid--alternating .featured-resource--reversed .featured-resource__image-wrapper,
    .featured-resources__grid--alternating .featured-resource--reversed .featured-resource__content {
      order: unset;
    }

    .featured-resource__content {
      padding: var(--an-space-lg);
    }

    .featured-resource__title {
      font-size: var(--an-font-lg);
    }
  }
</style>

