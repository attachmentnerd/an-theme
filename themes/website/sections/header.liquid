<style>
  /* AN Theme Design System Variables - Attachment Nerd Brand */
  :root {
    /* Core Brand Colors */
    --an-navy: #1A2D4E;
    --an-teal: #2AB3B1;
    --an-coral: #F57C6F;
    --an-gold: #FFC63F;
    --an-plum: #A449A5;
    --an-peach: #FFF4F0;
    --an-white: #FFFFFF;
    --an-grey: #F8F7F5;
    --an-slate: #3A4A63;
    
    /* Legacy Mappings for Compatibility */
    --an-primary: var(--an-navy);
    --an-primary-hover: #152541;
    --an-primary-light: var(--an-teal);
    --an-secondary: var(--an-teal);
    --an-secondary-hover: #239A98;
    
    /* Text Colors */
    --an-text-dark: var(--an-slate);
    --an-text-medium: var(--an-slate);
    --an-text-light: #6B7280;
    --an-text-white: var(--an-white);
    
    /* Background Colors */
    --an-bg-white: var(--an-white);
    --an-bg-light: var(--an-grey);
    --an-bg-lighter: var(--an-peach);
    --an-border: #E5E7EB;
    --an-border-light: #F3F4F6;
    
    /* Spacing System */
    --an-space-xs: 4px;
    --an-space-sm: 8px;
    --an-space-md: 16px;
    --an-space-lg: 24px;
    --an-space-xl: 32px;
    --an-space-2xl: 48px;
    --an-space-3xl: 64px;
    
    /* Mobile Menu Specific */
    --an-mobile-menu-width: 85%;
    --an-mobile-menu-max: 400px;
    --an-mobile-backdrop: rgba(0, 0, 0, 0.5);
    --an-mobile-shadow: -10px 0 30px rgba(0, 0, 0, 0.1);
    
    /* Transitions */
    --an-transition-fast: 0.2s ease;
    --an-transition-smooth: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    --an-transition-bounce: 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    
    /* Z-index System */
    --an-z-dropdown: 50;
    --an-z-header: 100;
    --an-z-backdrop: 998;
    --an-z-mobile-menu: 999;
    --an-z-modal: 1000;
    
    /* Border Radius */
    --an-radius-sm: 4px;
    --an-radius-md: 6px;
    --an-radius-lg: 8px;
    --an-radius-xl: 12px;
    --an-radius-full: 9999px;
    
    /* Shadows */
    --an-shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --an-shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    --an-shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    --an-shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    
    /* Mobile Menu Specific Colors */
    --an-mobile-bg: var(--an-peach);
    --an-mobile-accent: var(--an-coral);
    --an-mobile-text: var(--an-slate);
  }
  /* Default Header Styles */
  .header {
    {% if section.settings.position == "overlay" %}
      background-color: {{ section.settings.background_color | default: "transparent" }};
    {% else %}
      background-color: {{ section.settings.background_color | default: "#FFFFFF" }};
    {% endif %}
    font-size: {{ section.settings.font_size_desktop | default: "16px" }};
    box-shadow: 0 1px 0 0 rgba(0,0,0,0.08);
    padding: 16px 0;
  }
  
  /* Navigation Link Styles */
  .header a,
  .header a.link-list__link {
    color: {{ section.settings.text_color | default: "#1F2937" }};
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease, background-color 0.2s ease;
    padding: 8px 16px;
    position: relative;
    border-radius: 6px;
    display: inline-block;
  }
  
  .header a.link-list__link:hover {
    color: {{ section.settings.text_color | default: "#1F2937" }};
    background-color: rgba(0,0,0,0.04);
  }
  
  .header a.social-icons__icon,
  .header .user__login a,
  .header .dropdown__item a {
    color: {{ section.settings.text_color | default: "#1F2937" }};
  }
  
  /* Dropdown Trigger Styles */
  .header .dropdown__trigger {
    color: {{ section.settings.text_color | default: "#1F2937" }} !important;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-weight: 500;
    padding: 8px 16px;
    border-radius: 6px;
    transition: background-color 0.2s ease;
  }
  
  .header .dropdown__trigger:hover {
    color: {{ section.settings.text_color | default: "#1F2937" }} !important;
    background-color: rgba(0,0,0,0.04);
  }
  
  /* Dropdown Icon */
  .header .dropdown__icon {
    font-size: 12px;
    transition: transform 0.2s ease;
  }
  
  .header .dropdown.active .dropdown__icon {
    transform: rotate(180deg);
  }
  
  /* Improved Link List Spacing */
  .header .link-list {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  
  /* Header Container Alignment */
  .header__container {
    align-items: center;
    min-height: 60px;
  }
  
  /* CTA Button Styling */
  .header .header__block--cta .btn {
    background-color: #4F46E5;
    color: white;
    padding: 10px 24px;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    display: inline-block;
    border: none;
    font-size: 16px;
    line-height: 1.5;
  }
  
  .header .header__block--cta .btn:hover {
    background-color: #4338CA;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
    color: white;
  }
  
  /* Logo Styles */
  .header .header__block--logo img {
    max-height: 40px;
    width: auto;
  }
  
  .header .header__block--logo a {
    padding: 0;
    background: none !important;
  }
  
  /* Dropdown Menu Styles */
  .header .dropdown {
    position: relative;
  }
  
  .header .dropdown__menu {
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 8px;
    background: white;
    border-radius: 8px;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    padding: 8px;
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.2s ease;
    z-index: 1000;
  }
  
  .header .dropdown.active .dropdown__menu,
  .header .dropdown:hover .dropdown__menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  .header .dropdown__item {
    display: block;
  }
  
  .header .dropdown__item a {
    display: block;
    padding: 8px 12px;
    border-radius: 6px;
    transition: background-color 0.2s ease;
    color: #374151;
    font-weight: 400;
  }
  
  .header .dropdown__item a:hover {
    background-color: #F3F4F6;
    color: #1F2937;
  }
  /* Mobile Header Styles */
  @media (max-width: 767px) {
    .header {
      {% if section.settings.mobile_header_background_color != blank %}
        background-color: {{ section.settings.mobile_header_background_color }};
      {% endif %}
      font-size: {{ section.settings.font_size_mobile }};
    }
    {% if section.settings.mobile_header_text_color != blank %}
      .header a,
      .header a.link-list__link,
      .header a.social-icons__icon,
      .header .dropdown__item a,
      .header .user__login a,
      .header a.link-list__link:hover,
      .header .dropdown__trigger:hover {
        color: {{ section.settings.mobile_header_text_color }};
      }
      .header .dropdown__trigger {
        color: {{ section.settings.mobile_header_text_color }} !important;
      }
    {% endif %}
    .header .hamburger__slices .hamburger__slice {
      {% if section.settings.hamburger_color != blank %}
        background-color: {{ section.settings.hamburger_color  }};
      {% else %}
        background-color: {{ section.settings.mobile_header_text_color | default: section.settings.text_color }};
      {% endif %}
    }
    {% if section.settings.mobile_menu_text_alignment != blank %}
      .header a.link-list__link, .dropdown__item a, .header__content--mobile {
        text-align: {{ section.settings.mobile_menu_text_alignment }};
      }
    {% endif %}
    .header--overlay .header__content--mobile  {
      padding-bottom: 20px;
    }
  }
  /* Sticky Styles */
  {% if section.settings.sticky == true %}
    .header.header--fixed {
      background-color: {{ section.settings.background_color }};
      {% if section.settings.mobile_header_background_color %}
        background-color: {{ section.settings.mobile_header_background_color }};
      {% endif %}
      {% if section.settings.sticky_background_color %}
        background-color: {{ section.settings.sticky_background_color }};
      {% endif %}
    }
    {% if section.settings.sticky_text_color != blank %}
      .header.header--fixed a,
      .header.header--fixed a.link-list__link,
      .header.header--fixed a.link-list__link:hover,
      .header.header--fixed a.social-icons__icon,
      .header.header--fixed .dropdown__trigger:hover,
      .header.header--fixed .dropdown__item a,
      .header.header--fixed .user__login a {
        color: {{ section.settings.sticky_text_color }};
      }
    {% endif %}
    {% if section.settings.sticky_text_color != blank %}
      .header.header--fixed .dropdown__trigger {
        color: {{ section.settings.sticky_text_color }} !important;
      }
    {% endif %}
    .header.header--fixed .hamburger__slice {
      {% if section.settings.sticky_hamburger_color != blank %}
        background-color: {{ section.settings.sticky_hamburger_color }};
      {% else %}
        background-color: {{ section.settings.sticky_text_color }};
      {% endif %}
    }
  {% endif %}
</style>

