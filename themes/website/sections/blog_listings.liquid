{% comment %}
  Blog Listings (Compatibility)
  - Minimal fallback for themes referencing `{% section "blog_listings" %}`.
  - Renders a simple list of published blog posts.
{% endcomment %}

<section id="blog-listings-{{ section.id }}" class="an-section an-theme">
  <div class="bl-wrap">
    <div class="bl-list">
      {% for blog_post in current_site.blog.posts_published %}
        <article class="bl-item">
          <a class="bl-link" href="{{ blog_post.url }}">
            <h3 class="bl-title">{{ blog_post.title }}</h3>
            {% if blog_post.published_at %}<div class="bl-meta">{{ blog_post.published_at | date: "%b %d, %Y" }}</div>{% endif %}
            {% if blog_post.page_description %}<p class="bl-desc">{{ blog_post.page_description }}</p>{% endif %}
          </a>
        </article>
      {% endfor %}
    </div>
  </div>

  <style>
    #blog-listings-{{ section.id }} .bl-wrap{max-width:1100px;margin:0 auto;padding:24px 18px}
    #blog-listings-{{ section.id }} .bl-list{display:grid;gap:14px}
    #blog-listings-{{ section.id }} .bl-item{border:1px solid var(--c-ink-100);background:#fff;border-radius:12px;box-shadow:0 6px 18px rgba(0,0,0,.05)}
    #blog-listings-{{ section.id }} .bl-link{display:block;text-decoration:none;color:inherit;padding:14px}
    #blog-listings-{{ section.id }} .bl-title{margin:0 0 6px;font-weight:800;color:var(--c-ink-900)}
    #blog-listings-{{ section.id }} .bl-meta{color:var(--c-ink-500);font-size:.95rem}
    #blog-listings-{{ section.id }} .bl-desc{margin:8px 0 0;color:var(--c-ink-700)}
  </style>

  {% schema %}
  {
    "name": "Blog - Listings (Compatibility)",
    "elements": [],
    "blocks": [],
    "presets": [
      {"name":"Blog Listings","category":"Content","description":"Simple blog listing for compatibility."}
    ]
  }
  {% endschema %}
</section>

