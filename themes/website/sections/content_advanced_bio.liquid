{% comment %}
  AN Advanced Bio Section
  - Split layout with text and image
  - Overlay product/book image
  - Logo bar for media mentions
  - Customizable colors and content
  - Mobile-responsive design
{% endcomment %}

<section id="{{ section.settings.section_id | default: 'content-advanced-bio' }}-{{ section.id }}" class="an-advanced-bio py-5" style="background: {{ section.settings.background_gradient | default: 'linear-gradient(135deg, #FFFBF0 0%, #E6F7F0 100%)' }};">
  <div class="container">
    <div class="an-advanced-bio__wrapper">
      <div class="row align-items-center">
        <!-- Text Content Column -->
        <div class="col-lg-6 {% if section.settings.image_position == 'left' %}order-lg-2{% endif %}">
          <div class="an-advanced-bio__content">
            <!-- Pre-title -->
            {% if section.settings.pretitle != blank %}
              <p class="bio-pretitle">
                {{ section.settings.pretitle }}
              </p>
            {% endif %}

            <!-- Main Heading -->
            <h1 class="bio-heading">
              {{ section.settings.heading | default: "I'm an online marketing expert and my business has earned over $120 million from my email list." }}
            </h1>

            <!-- Intro Text -->
            <div class="bio-intro">
              <p>
                {{ section.settings.intro_text | default: "I teach <strong>dreamers, entrepreneurs, and online business owners</strong> how to grow their business by growing their email list." }}
              </p>
            </div>

            <!-- Body Text -->
            {% if section.settings.body_text != blank %}
              <div class="bio-body">
                {{ section.settings.body_text }}
              </div>
            {% endif %}

            <!-- Highlight Text -->
            {% if section.settings.highlight_text != blank %}
              <div class="bio-highlight">
                <p>{{ section.settings.highlight_text }}</p>
              </div>
            {% endif %}

            <!-- CTAs -->
            {% if section.settings.show_primary_cta and section.settings.cta_text != blank or section.settings.show_secondary_cta and section.settings.secondary_cta_text != blank %}
              <div class="bio-cta">
                {% if section.settings.show_primary_cta and section.settings.cta_text != blank %}
                  <a href="{{ section.settings.cta_url | default: '#' }}" 
                     class="btn-primary-bio"
                     {% if section.settings.use_custom_colors %}style="background: {{ section.settings.cta_bg_color | default: '#FFD130' }}; color: {{ section.settings.cta_text_color | default: '#000000' }} !important;"{% endif %}
                     {% if section.settings.cta_new_tab %}target="_blank" rel="noopener"{% endif %}>
                    {{ section.settings.cta_text }}
                  </a>
                {% endif %}

                {% if section.settings.show_secondary_cta and section.settings.secondary_cta_text != blank %}
                  <a href="{{ section.settings.secondary_cta_url | default: '#' }}" 
                     class="btn-secondary-bio"
                     {% if section.settings.secondary_use_custom_colors %}style="background: {{ section.settings.secondary_cta_bg_color | default: 'transparent' }}; color: {{ section.settings.secondary_cta_text_color | default: 'var(--c-brand-600)' }} !important; border-color: {{ section.settings.secondary_cta_text_color | default: 'var(--c-brand-600)' }};"{% endif %}
                     {% if section.settings.secondary_cta_new_tab %}target="_blank" rel="noopener"{% endif %}>
                    {{ section.settings.secondary_cta_text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>

        <!-- Image Column -->
        <div class="col-lg-6 {% if section.settings.image_position == 'left' %}order-lg-1{% endif %}">
          <div class="an-advanced-bio__image-container">
            <!-- Main Image -->
            {% if section.settings.main_image %}
              <div class="bio-main-image">
                <img src="{{ section.settings.main_image | image_picker_url: '800x450' }}" 
             alt="{{ section.settings.main_image_alt | default: 'Image' }}" 
             class="img-fluid"
             width="800" height="450"
             decoding="async"
             loading="lazy"
             style="object-fit: cover;">
              </div>
            {% endif %}

            <!-- Overlay Product Image -->
            {% if section.settings.overlay_image %}
              <div class="bio-overlay-image" style="bottom: {{ section.settings.overlay_position_bottom | default: '50' }}px; {{ section.settings.overlay_position_side }}: {{ section.settings.overlay_position_offset | default: '-50' }}px;">
                <img src="{{ section.settings.overlay_image | image_picker_url: '800x450' }}" 
             alt="{{ section.settings.overlay_image_alt | default: 'Image' }}" 
             class="img-fluid"
             width="800" height="450"
             decoding="async"
             loading="lazy"
             style="object-fit: cover;">
                {% if section.settings.show_overlay_decoration %}
                  <div class="overlay-decoration">
                    <svg viewBox="0 0 200 50" xmlns="http://www.w3.org/2000/svg">
                      <text x="100" y="35" text-anchor="middle" fill="{{ section.settings.decoration_color | default: '#FF6B6B' }}" font-family="cursive" font-size="24" transform="rotate(-5 100 25)">
                        {{ section.settings.decoration_text | default: 'bestseller' }}
                      </text>
                    </svg>
                  </div>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      </div>

      <!-- Logo Bar -->
      {% if section.settings.show_logo_bar %}
        <div class="an-advanced-bio__logos">
          <div class="logos-wrapper">
            {% if section.settings.logo_label != blank %}
              <p class="logos-label">{{ section.settings.logo_label }}</p>
            {% endif %}
            
            <div class="logos-grid">
              {% for block in section.blocks %}
                {% if block.type == 'logo' %}
                  <div class="logo-item" {{ block.shopify_attributes }}>
                    {% if block.settings.logo_image %}
                      <img src="{{ block.settings.logo_image | image_picker_url: '240x80' }}" 
             alt="{{ block.settings.logo_alt | default: 'Logo' }}" 
             class="img-fluid"
             loading="lazy"
             style="object-fit: cover;">
                    {% elsif block.settings.logo_text %}
                      <span class="logo-text" style="font-size: {{ section.settings.logo_text_size | default: '18' }}px;">
                        {{ block.settings.logo_text }}
                      </span>
                    {% endif %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .an-advanced-bio {
    position: relative;
    overflow: hidden;
    min-height: 600px;
  }

  /* Background decoration */
  .an-advanced-bio::before {
    content: '';
    position: absolute;
    top: -300px;
    left: -300px;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(255, 232, 107, 0.1) 0%, transparent 70%);
    pointer-events: none;
  }

  .an-advanced-bio__wrapper {
    position: relative;
    z-index: 1;
  }

  /* Content Styles */
  .an-advanced-bio__content {
    padding: 2rem 0;
  }

  @media (min-width: 992px) {
    .an-advanced-bio__content {
      padding: 3rem 3rem 3rem 0;
    }
  }

  .bio-pretitle {
    font-size: 1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--c-ink-600);
    margin-bottom: 1rem;
  }

  .bio-heading {
    font-size: clamp(1.75rem, 4vw, var(--fs-display));
    font-family: var(--font-serif);
    font-weight: 400;
    line-height: 1.3;
    color: var(--c-ink-900);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .bio-intro {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--c-ink-700);
    margin-bottom: 1.5rem;
  }

  .bio-intro strong {
    font-weight: 600;
    color: var(--c-ink-900);
  }

  .bio-body {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--c-ink-600);
    margin-bottom: 1.5rem;
  }

  .bio-highlight {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--c-ink-700);
    margin-bottom: 2rem;
    padding-left: 1.5rem;
    border-left: 3px solid var(--c-brand-600);
    font-style: italic;
  }

  /* CTA Button - Using brand styles */
  .btn-primary-bio {
    display: inline-flex;
    align-items: center;
    padding: 14px 36px;
    background: var(--g-brand);
    color: var(--c-white) !important;
    border: none;
    border-radius: var(--radius-pill);
    font-weight: 600;
    font-size: var(--fs-body);
    text-decoration: none;
    box-shadow:
      0 0 0 2px rgba(255, 255, 255, 0.25) inset,
      0 4px 8px rgba(94, 59, 255, 0.35);
    transition:
      transform var(--motion-duration-fast) var(--motion-ease-standard),
      box-shadow var(--motion-duration-fast) var(--motion-ease-standard);
    position: relative;
    overflow: hidden;
  }

  .bio-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .btn-primary-bio::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
    transition: left 0.3s ease;
  }

  /* Secondary CTA (outline/ghost style) */
  .btn-secondary-bio {
    display: inline-flex;
    align-items: center;
    padding: 12px 32px;
    background: transparent;
    color: var(--c-brand-600) !important;
    border: 2px solid var(--c-brand-600);
    border-radius: var(--radius-pill);
    font-weight: 600;
    font-size: var(--fs-body);
    text-decoration: none;
    transition: transform var(--motion-duration-fast) var(--motion-ease-standard),
                box-shadow var(--motion-duration-fast) var(--motion-ease-standard),
                background-color var(--motion-duration-fast) var(--motion-ease-standard);
  }

  .btn-secondary-bio:hover {
    transform: translateY(-2px);
    background: rgba(105, 78, 255, 0.06);
  }

  .btn-primary-bio:hover {
    transform: translateY(-2px);
    box-shadow:
      0 0 0 2px rgba(255, 255, 255, 0.25) inset,
      0 8px 16px rgba(94, 59, 255, 0.4);
    color: var(--c-white) !important;
  }

  .btn-primary-bio:hover::before {
    left: 100%;
  }

  /* Image Container */
  .an-advanced-bio__image-container {
    position: relative;
    padding: 2rem 0;
  }

  .bio-main-image {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
  }

  .bio-main-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Overlay Image */
  .bio-overlay-image {
    position: absolute;
    z-index: 2;
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.2));
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(-2deg); }
    50% { transform: translateY(-10px) rotate(2deg); }
  }

  .bio-overlay-image img {
    max-width: 200px;
    height: auto;
    display: block;
  }

  .overlay-decoration {
    position: absolute;
    bottom: -20px;
    right: -30px;
    width: 150px;
    height: 50px;
    animation: wiggle 3s ease-in-out infinite;
  }

  @keyframes wiggle {
    0%, 100% { transform: rotate(-5deg); }
    50% { transform: rotate(5deg); }
  }

  /* Logo Bar */
  .an-advanced-bio__logos {
    margin-top: 4rem;
    padding: 3rem 0;
    background: rgba(255, 255, 255, 0.5);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .logos-wrapper {
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
  }

  .logos-label {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--c-ink-500);
    margin-bottom: 2rem;
  }

  .logos-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 3rem;
  }

  .logo-item {
    opacity: 0.7;
    transition: opacity 0.3s ease;
    filter: grayscale(100%);
  }

  .logo-item:hover {
    opacity: 1;
    filter: grayscale(0%);
  }

  .logo-item img {
    height: auto;
    width: auto;
    object-fit: contain;
  }

  .logo-text {
    font-weight: 700;
    color: var(--c-ink-600);
    white-space: nowrap;
  }

  /* Mobile Styles */
  @media (max-width: 991px) {
    .an-advanced-bio__content {
      text-align: center;
      padding: 2rem 0;
    }

    .bio-heading {
      font-size: 1.75rem;
    }

    .bio-intro {
      font-size: 1.125rem;
    }

    .bio-overlay-image {
      max-width: 150px;
    }

    .an-advanced-bio__logos {
      margin-top: 3rem;
      padding: 2rem 1rem;
    }

    .logos-grid {
      gap: 2rem;
    }
  }

  @media (max-width: 767px) {
    .bio-heading {
      font-size: 1.5rem;
    }

    .bio-intro,
    .bio-body {
      font-size: 1rem;
    }

    .btn-primary-bio {
      padding: 1rem 2rem;
      font-size: 0.875rem;
      width: 100%;
      justify-content: center;
    }

    .btn-secondary-bio {
      padding: 1rem 2rem;
      font-size: 0.875rem;
      width: 100%;
      justify-content: center;
    }

    .bio-cta {
      display: flex;
      flex-direction: column;
      align-items: stretch;
      gap: 0.75rem;
    }

    .bio-overlay-image {
      position: relative !important;
      bottom: auto !important;
      left: auto !important;
      right: auto !important;
      margin: -50px auto 0;
      width: 150px;
    }

    .logos-grid {
      gap: 1.5rem;
    }

    .logo-item img {
      max-height: 30px !important;
    }
  }
</style>

