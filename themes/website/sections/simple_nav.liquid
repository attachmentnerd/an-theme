{% comment %}
Simple Hardcoded Navigation - All settings in one place, just like the footer
{% endcomment %}
<!-- AN Simple Nav Section Loading -->

{% assign current_path = request.path | default: '/' | downcase | replace: '//','/' %}

<style>
  /* Reset any potential conflicts */
  #an-simple-nav-section {
    display: block !important;
    visibility: visible !important;
    opacity: 1 !important;
  }
  .simple-nav {
    position: sticky;
    top: 0;
    z-index: 9999;
    padding: 1rem 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .simple-nav__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  .simple-nav__logo {
    display: inline-flex;
    align-items: center;
    text-decoration: none;
  }

  .simple-nav__logo img {
    height: 36px;
    width: auto;
    display: block;
  }

  .simple-nav__menu {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex: 1;
    justify-content: center;
  }

  .simple-nav__link {
    color: #374151;
    text-decoration: none;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .simple-nav__link:hover {
    color: #5e3bff;
    background: rgba(94, 59, 255, 0.08);
  }

  .simple-nav__link.is-active {
    color: #5e3bff;
    font-weight: 600;
  }

  .simple-nav__actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .simple-nav__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.6rem 1.5rem;
    border-radius: 999px;
    background: linear-gradient(135deg, #5e3bff 0%, #7b66ff 100%);
    color: white;
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s ease;
  }

  .simple-nav__cta:hover {
    transform: translateY(-2px);
  }

  .simple-nav__mobile-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    padding: 8px;
    background: none;
    border: none;
    cursor: pointer;
  }

  .simple-nav__mobile-toggle span {
    display: block;
    width: 24px;
    height: 2px;
    background: #374151;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  .simple-nav__mobile-menu {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: white;
    z-index: 9998;
    flex-direction: column;
    padding: 2rem;
    gap: 1.5rem;
    padding-top: 80px;
  }

  .simple-nav__mobile-menu.is-open {
    display: flex;
  }

  .simple-nav__mobile-link {
    display: block;
    padding: 1rem;
    color: #374151;
    text-decoration: none;
    font-size: 1.125rem;
    font-weight: 500;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .simple-nav__mobile-link:hover {
    background: rgba(94, 59, 255, 0.08);
    color: #5e3bff;
  }

  @media (max-width: 991px) {
    .simple-nav__menu {
      display: none;
    }

    .simple-nav__actions .simple-nav__cta {
      display: none;
    }

    .simple-nav__mobile-toggle {
      display: flex;
    }
  }
</style>

<div id="an-simple-nav-section">
<nav class="simple-nav" role="navigation" aria-label="Main">
  <div class="container">
    <div class="simple-nav__container">
      <!-- Logo -->
      <a href="/" class="simple-nav__logo">
        <img src="https://kajabi-storefronts-production.kajabi-cdn.com/kajabi-storefronts-production/file-uploads/themes/2162370086/settings_images/708217-6dc8-6e80-0466-7b518dfb74c7_6a4860b8-00bb-47fd-8078-c7f4dd4e5385.png"
             alt="{{ current_site.name | default: 'Logo' }}">
      </a>

      <!-- Desktop Menu -->
      <div class="simple-nav__menu">
        <a href="/about" class="simple-nav__link {% if current_path == '/about' or current_path == '/about/' %}is-active{% endif %}">About</a>
        <a href="/books" class="simple-nav__link {% if current_path == '/books' or current_path == '/books/' %}is-active{% endif %}">Books</a>
        <a href="/podcast" class="simple-nav__link {% if current_path == '/podcast' or current_path == '/podcast/' %}is-active{% endif %}">Podcast</a>
        <a href="/speaking" class="simple-nav__link {% if current_path == '/speaking' or current_path == '/speaking/' %}is-active{% endif %}">Speaking</a>
        <a href="/program/secure-parenting" class="simple-nav__link {% if current_path contains '/program' %}is-active{% endif %}">Program</a>
        <a href="/downloads" class="simple-nav__link {% if current_path == '/downloads' or current_path == '/downloads/' %}is-active{% endif %}">Free Downloads</a>
      </div>

      <!-- Actions -->
      <div class="simple-nav__actions">
        <a href="/program/secure-parenting" class="simple-nav__cta">Get Started</a>
        <button class="simple-nav__mobile-toggle" aria-label="Toggle menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="simple-nav__mobile-menu" id="simple-mobile-menu">
    <a href="/about" class="simple-nav__mobile-link">About</a>
    <a href="/books" class="simple-nav__mobile-link">Books</a>
    <a href="/podcast" class="simple-nav__mobile-link">Podcast</a>
    <a href="/speaking" class="simple-nav__mobile-link">Speaking</a>
    <a href="/program/secure-parenting" class="simple-nav__mobile-link">Program</a>
    <a href="/downloads" class="simple-nav__mobile-link">Free Downloads</a>
    <a href="/program/secure-parenting" class="simple-nav__cta" style="margin-top: 1rem;">Get Started</a>
  </div>
</nav>
</div>

<script>
(function() {
  var toggle = document.querySelector('.simple-nav__mobile-toggle');
  var menu = document.getElementById('simple-mobile-menu');

  if (toggle && menu) {
    toggle.addEventListener('click', function() {
      menu.classList.toggle('is-open');
    });

    // Close menu when clicking a link
    var links = menu.querySelectorAll('a');
    links.forEach(function(link) {
      link.addEventListener('click', function() {
        menu.classList.remove('is-open');
      });
    });
  }
})();
</script>

