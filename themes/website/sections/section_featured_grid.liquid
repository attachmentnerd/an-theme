{% if section.settings.section_id != blank %}<a id="{{ section.settings.section_id | escape }}"></a>{% endif %}
<section id="{{ section.settings.section_id | default: 'featured-grid' }}-{{ section.id }}" class="featured-grid-section py-6" style="background: linear-gradient(180deg, #FFFFFF 0%, var(--c-brand-50, #F6F9FF) 100%);">
  <style>
    .featured-grid-section .eyebrow {
      display: inline-flex;
      align-items: center;
      padding: 6px 12px;
      border-radius: 999px;
      background: var(--c-accent-mint, #E6FFF4);
      color: var(--c-accent-emerald-900, #03543F);
      font-weight: 600;
      font-size: 12px;
      line-height: 1;
    }
    .featured-grid-section .grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
    }
    @media (min-width: 768px) {
      .featured-grid-section .grid {
        grid-template-columns: 1fr 1fr;
      }
    }
    .featured-grid-section .card {
      background: #fff;
      border-radius: 16px;
      box-shadow: 0 20px 50px rgba(0,0,0,0.08);
      padding: 20px;
      display: flex;
      gap: 14px;
      align-items: flex-start;
    }
    .featured-grid-section .icon {
      width: 40px; height: 40px;
      border-radius: 12px;
      display: inline-flex;
      align-items: center; justify-content: center;
      font-size: 20px; color: #fff;
      background: var(--c-brand-600, #3B82F6);
      overflow: hidden;
      flex: 0 0 40px;
    }
    .featured-grid-section .icon img { width: 100%; height: 100%; object-fit: cover; }
    .featured-grid-section .card h4 { margin: 0 0 6px; font-size: 16px; color: var(--c-ink-900); font-weight: 600; }
    .featured-grid-section .card p { margin: 0; color: var(--c-ink-600); }
    .featured-grid-section .media-wrap {
      position: relative;
      background: #fff;
      border-radius: 18px;
      overflow: hidden;
      box-shadow: 0 30px 80px rgba(0,0,0,0.12);
    }
    .featured-grid-section .media-wrap img { width: 100%; height: auto; display: block; }
    .featured-grid-section .chip {
      display: inline-flex; align-items: center; gap: 6px;
      padding: 6px 10px; border-radius: 999px; color: #fff; font-weight: 600; font-size: 12px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.12);
    }
    .featured-grid-section .chips { position: absolute; top: 12px; right: 12px; display: flex; flex-direction: column; gap: 8px; }
    .featured-grid-section .quote-card {
      position: absolute; bottom: 12px; left: 12px;
      background: #fff; border-radius: 14px; padding: 14px 16px; max-width: 320px;
      box-shadow: 0 20px 50px rgba(0,0,0,0.12);
      border-left: 4px solid var(--c-accent-emerald-500, #34D399);
    }
    .featured-grid-section .quote-card p { margin: 0; color: var(--c-ink-800); font-size: 14px; }
    .featured-grid-section .quote-card .by { margin-top: 6px; font-weight: 600; color: var(--c-accent-emerald-700, #059669); font-size: 12px; }
    .featured-grid-section .cta-wrap { text-align: center; margin-top: 24px; }
    .featured-grid-section .btn-brand {
      display: inline-block; padding: 12px 18px; border-radius: 999px; color: #fff; text-decoration: none; font-weight: 600;
      background: var(--g-brand, linear-gradient(90deg, #6366F1, #8B5CF6));
      box-shadow: 0 12px 30px rgba(99, 102, 241, 0.35);
    }
    .featured-grid-section .btn-outline { background: transparent; border: 2px solid var(--c-brand-700, #1D4ED8); color: var(--c-brand-800, #1E3A8A); }
  </style>

  <div class="container">
    <div class="row align-items-start g-5">
      <!-- Left: Headings + Feature grid -->
      <div class="col-lg-7">
        {% if section.settings.eyebrow != blank %}
          <div class="eyebrow mb-3" style="background: {{ section.settings.eyebrow_bg | default: 'var(--c-accent-mint, #E6FFF4)' }}; color: {{ section.settings.eyebrow_color | default: 'var(--c-ink-900)' }};" kjb-settings-id="{{ 'eyebrow' | settings_id: section: section }}">
            {{ section.settings.eyebrow }}
          </div>
        {% endif %}

        <h2 class="mb-3" style="font-size: var(--fs-h1); color: var(--c-ink-900); font-weight: 700; letter-spacing: -0.01em;" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">{{ section.settings.heading | default: 'Practical skills you can use tonight' }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="mb-4" style="font-size: var(--fs-body-lg); color: var(--c-ink-700); max-width: 680px;" kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">{{ section.settings.subheading }}</p>
        {% endif %}

        <div class="grid">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="card">
                <div class="icon" style="background: {{ block.settings.icon_bg | default: 'var(--c-brand-600, #3B82F6)' }};" kjb-settings-id="{{ 'icon_emoji' | settings_id: block: block }}">
                  {% if block.settings.icon_image != blank %}
                    <img src="{{ block.settings.icon_image | image_picker_url: '80x' }}" alt="" loading="lazy" decoding="async">
                  {% else %}
                    {{ block.settings.icon_emoji | default: '‚úÖ' }}
                  {% endif %}
                </div>
                <div>
                  <h4 kjb-settings-id="{{ 'title' | settings_id: block: block }}">{{ block.settings.title | default: 'Feature title' }}</h4>
                  <p kjb-settings-id="{{ 'description' | settings_id: block: block }}">{{ block.settings.description | default: 'Short supporting copy goes here.' }}</p>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>

        {% if section.settings.cta_label != blank and section.settings.cta_url != blank %}
          <div class="cta-wrap">
            <a href="{{ section.settings.cta_url }}" class="{% if section.settings.cta_style == 'outline' %}btn-outline{% else %}btn-brand{% endif %}" kjb-settings-id="{{ 'cta_label' | settings_id: section: section }}">{{ section.settings.cta_label }}</a>
          </div>
        {% endif %}
      </div>

      <!-- Right: Image + stacked chips + quote card -->
      <div class="col-lg-5">
        {% if section.settings.right_image != blank %}
          <div class="media-wrap">
            <img src="{{ section.settings.right_image | image_picker_url: '1200x' }}" alt="{{ section.settings.right_image_alt | escape }}" loading="lazy" decoding="async">
            
            <div class="chips">
              {% for block in section.blocks %}
                {% if block.type == 'badge' %}
                  <div class="chip" style="background: {{ block.settings.bg | default: 'var(--c-brand-600, #3B82F6)' }}" kjb-settings-id="{{ 'text' | settings_id: block: block }}">
                    <span>‚úî</span>
                    <span>{{ block.settings.text | default: 'Includes' }}</span>
                  </div>
                {% endif %}
              {% endfor %}
            </div>

            {% if section.settings.show_quote %}
              <div class="quote-card">
                <p kjb-settings-id="{{ 'quote_text' | settings_id: section: section }}">‚Äú{{ section.settings.quote_text | default: 'The scripts saved us! Now I actually know what to say instead of panicking.' }}‚Äù</p>
                {% if section.settings.quote_author != blank %}
                  <div class="by" kjb-settings-id="{{ 'quote_author' | settings_id: section: section }}">‚Äî {{ section.settings.quote_author }}{% if section.settings.quote_role != blank %}, {{ section.settings.quote_role }}{% endif %}</div>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

