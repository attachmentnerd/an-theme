          },
          {
            "type": "checkbox",
            "id": "link_target",
            "label": "Open In New Window",
            "default": "false"
          }
        ]
      },
      {
        "type": "coaching_scheduling_widget",
        "name": "Coaching Scheduling Widget",
        "elements": [
          {
            "type": "header",
            "content": "Coaching Scheduling Widget"
          },
          {
            "type": "coaching_program_for_scheduling_widget",
            "id": "coaching_program",
            "label": "Select Your Coaching Program",
            "preset": ""
          },
          {
            "type": "offer_for_productizable",
            "id": "offer",
