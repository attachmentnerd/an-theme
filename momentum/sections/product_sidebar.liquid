{% assign alignment = section.settings.alignment %}
{% assign show_dashboard = settings.show_dashboard %}

{% assign KJB-alignment = 'alignment' | settings_id: section: section %}
{% assign KJB_show_dashboard = 'show_dashboard' %}

{% if show_dashboard %}
  {% if section.blocks.size > 0 %}
    <div style="text-align: {{ alignment }}"  kjb-settings-id="{{ KJB-alignment }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'product_video' %}
            {% include "product_video" %}
          {% when 'product_text' %}
            {% include "product_text" %}
          {% when 'product_img' %}
            {% include "product_img" %}
          {% when 'product_card' %}
            {% include "product_card" %}
          {% when 'coaching_scheduling_widget' %}
            {% include "coaching_scheduling_widget", sectionType: 'sidebar' %}
        {% endcase %}
      {% endfor %}
    </div>
  {% endif %}
{% endif %}

{% schema %}
  {
    "name": "Dashboard Sidebar",
    "blocks": [
      {
        "type": "product_card",
        "name": "Card",
        "elements": [
