            "width": 1280,
            "height": 720,
            "hide_if": {
              "link_to_program_details": true
            }
          },
          {
            "type": "checkbox",
            "id": "show_thumbnail",
            "label": "Show thumbnail",
            "default": "true"
          },
          {
            "type": "checkbox",
            "id": "show_price",
            "label": "Show price",
            "default": "true"
          },
          {
