            }
          },
          {
            "type": "checkbox",
            "id": "link_to_program_details",
            "label": "Link to Program Details",
            "default": "true"
          },
          {
            "type": "text",
            "id": "title_text",
            "label": "Title text",
            "default": "Program Title",
            "hide_if": {
              "link_to_program_details": true
            }
          },
          {
            "type": "text",
            "id": "description_text",
            "label": "Description text",
            "default": "Program Description",
            "hide_if": {
              "link_to_program_details": true
            }
          },
          {
            "type": "image_picker",
            "id": "thumbnail_image",
            "label": "Thumbnail image",
            "info": "Image must be square, with a maximum size of 1280 x 720 pixels",
