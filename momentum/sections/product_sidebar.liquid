            "id": "background_color",
            "label": "Background Color Override",
            "default": "",
            "allow_blank": true
          },
          {
            "type": "color",
            "id": "cta_color",
            "label": "CTA Color Override",
            "default": "",
            "allow_blank": true
          },
          {
            "type": "color",
            "id": "cta_text_color",
            "label": "Text Color Override",
            "default": "",
            "allow_blank": true
          }
        ]
      }
    ],
    "elements": [
      {
        "type": "radio",
        "id": "alignment",
        "label": "Text Alignment",
        "default": "left",
        "options": [
          { "label": "Left", "value": "left" },
          { "label": "Center", "value": "center" },
          { "label": "Right", "value": "right" }
        ]
      }
    ]
  }
{% endschema %}
