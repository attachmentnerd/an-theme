{% comment %}
  AN Feature Two Column List Section
  - Two-column layout for feature lists
  - Customizable icons/emojis
  - Flexible heading and intro text
  - Mobile-responsive design
  - Brand-aligned styling
{% endcomment %}

<section class="an-feature-two-column-list py-5" style="background-color: {{ section.settings.background_color | default: '#FFF8F5' }};">
  <div class="container">
    <div class="an-feature-two-column-list__wrapper">
      <!-- Section Header -->
      <div class="an-feature-two-column-list__header text-center mb-5">
        <h2 class="feature-list-heading">
          {{ section.settings.heading | default: 'Are you tired of feeling...' }}
        </h2>

        {% if section.settings.subheading != blank %}
          <p class="feature-list-subheading">
            {{ section.settings.subheading }}
          </p>
        {% endif %}
      </div>

      <!-- Two Column Lists -->
      <div class="an-feature-two-column-list__content" style="background-color: {{ section.settings.content_bg_color | default: '#FFFFFF' }};">
        <div class="row">
          <!-- Left Column -->
          <div class="col-lg-6">
            <div class="feature-column feature-column--left">
              {% for block in section.blocks %}
                {% if block.type == 'left_feature' %}
                  <div class="feature-item animate-fade-up" style="animation-delay: {{ forloop.index | times: 0.1 }}s;" {{ block.shopify_attributes }}>
                    <div class="feature-icon">
                      {% if block.settings.use_emoji %}
                        <span class="feature-emoji">{{ block.settings.emoji | default: 'ðŸ‘‰' }}</span>
                      {% else %}
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                          <circle cx="12" cy="12" r="10" fill="{{ section.settings.icon_bg_color | default: '#FFE86B' }}" opacity="0.2"/>
                          <path d="M8 12L11 15L16 9" stroke="{{ section.settings.icon_color | default: '#5E3BFF' }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      {% endif %}
                    </div>
                    <div class="feature-text">
                      {{ block.settings.text }}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>

          <!-- Right Column -->
          <div class="col-lg-6">
            <div class="feature-column feature-column--right">
              {% for block in section.blocks %}
                {% if block.type == 'right_feature' %}
                  <div class="feature-item animate-fade-up" style="animation-delay: {{ forloop.index | times: 0.1 | plus: 0.05 }}s;" {{ block.shopify_attributes }}>
                    <div class="feature-icon">
                      {% if block.settings.use_emoji %}
                        <span class="feature-emoji">{{ block.settings.emoji | default: 'ðŸ‘‰' }}</span>
                      {% else %}
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                          <circle cx="12" cy="12" r="10" fill="{{ section.settings.icon_bg_color | default: '#FFE86B' }}" opacity="0.2"/>
                          <path d="M8 12L11 15L16 9" stroke="{{ section.settings.icon_color | default: '#5E3BFF' }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      {% endif %}
                    </div>
                    <div class="feature-text">
                      {{ block.settings.text }}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>

      <!-- Optional Footer Text -->
      {% if section.settings.footer_text != blank %}
        <div class="an-feature-two-column-list__footer text-center mt-5">
          <p class="footer-text">
            {{ section.settings.footer_text }}
          </p>
        </div>
      {% endif %}

      <!-- Optional CTA -->
      {% if section.settings.show_cta and section.settings.cta_text != blank %}
        <div class="an-feature-two-column-list__cta text-center mt-4">
          <a href="{{ section.settings.cta_url | default: '#' }}"
             class="btn btn-primary-modern"
             {% if section.settings.cta_new_tab %}target="_blank" rel="noopener"{% endif %}>
            {{ section.settings.cta_text }}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  .an-feature-two-column-list {
    position: relative;
    overflow: hidden;
  }

  /* Background decoration */
  .an-feature-two-column-list::before {
    content: '';
    position: absolute;
    top: -200px;
    right: -200px;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, {{ section.settings.accent_color | default: 'rgba(255, 139, 203, 0.1)' }} 0%, transparent 70%);
    pointer-events: none;
  }

  .an-feature-two-column-list__wrapper {
    position: relative;
    z-index: 1;
    max-width: 1100px;
    margin: 0 auto;
  }

  /* Header Styles */
  .feature-list-heading {
    font-size: clamp(2rem, 5vw, var(--fs-display));
    font-family: var(--font-serif);
    font-weight: 400;
    line-height: 1.2;
    color: var(--c-ink-900);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .feature-list-subheading {
    font-size: var(--fs-body-lg);
    line-height: 1.6;
    color: var(--c-ink-500);
    max-width: 700px;
    margin: 0 auto;
    font-weight: var(--fw-light);
  }

  /* Content Container */
  .an-feature-two-column-list__content {
    padding: 3rem;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(94, 59, 255, 0.08);
    position: relative;
    overflow: hidden;
  }

  /* Pink gradient border effect */
  .an-feature-two-column-list__content::after {
    content: '';
    position: absolute;
    inset: -2px;
    background: linear-gradient(135deg, #FF8BCB 0%, #FFE86B 50%, #18D5E4 100%);
    border-radius: 24px;
    z-index: -1;
    opacity: 0.15;
    transition: opacity 0.3s ease;
  }

  .an-feature-two-column-list__content:hover::after {
    opacity: 0.25;
  }

  /* Column Styles */
  .feature-column {
    padding: 0 1rem;
  }

  @media (min-width: 992px) {
    .feature-column--left {
      border-right: 1px solid rgba(0, 0, 0, 0.08);
      padding-right: 2.5rem;
    }

    .feature-column--right {
      padding-left: 2.5rem;
    }
  }

  /* Feature Items */
  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 1.75rem;
    opacity: 0;
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .feature-item:last-child {
    margin-bottom: 0;
  }

  /* Icons */
  .feature-icon {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .feature-emoji {
    font-size: 1.5rem;
    line-height: 1;
    filter: sepia(20%) saturate(2);
  }

  /* Pulse animation on hover */
  .feature-item:hover .feature-icon {
    animation: pulse 0.6s ease-out;
  }

  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); }
    100% { transform: scale(1); }
  }

  /* Text */
  .feature-text {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--c-ink-800);
    flex: 1;
  }

  .feature-text strong {
    font-weight: 600;
    color: var(--c-ink-900);
  }

  /* Footer */
  .footer-text {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--c-ink-700);
    max-width: 800px;
    margin: 0 auto;
  }

  /* CTA Button - Using brand styles */
  .btn-primary-modern {
    display: inline-flex;
    align-items: center;
    padding: 12px 32px;
    background: var(--g-brand);
    color: var(--c-white) !important;
    border: none;
    border-radius: var(--radius-pill);
    font-weight: 600;
    font-size: var(--fs-body);
    text-decoration: none;
    box-shadow:
      0 0 0 2px rgba(255, 255, 255, 0.25) inset,
      0 4px 8px rgba(94, 59, 255, 0.35);
    transition:
      transform var(--motion-duration-fast) var(--motion-ease-standard),
      box-shadow var(--motion-duration-fast) var(--motion-ease-standard);
  }

  .btn-primary-modern:hover {
    transform: translateY(-2px);
    box-shadow:
      0 0 0 2px rgba(255, 255, 255, 0.25) inset,
      0 8px 16px rgba(94, 59, 255, 0.4);
    color: var(--c-white) !important;
  }

  /* Mobile Styles */
  @media (max-width: 991px) {
    .an-feature-two-column-list__content {
      padding: 2rem;
    }

    .feature-column--left {
      border-right: none;
      border-bottom: 1px solid rgba(0, 0, 0, 0.08);
      padding-bottom: 2rem;
      margin-bottom: 2rem;
    }

    .feature-column {
      padding: 0;
    }

    .feature-text {
      font-size: 1rem;
    }
  }

  @media (max-width: 767px) {
    .feature-list-heading {
      font-size: 1.75rem;
    }

    .feature-list-subheading {
      font-size: 1.125rem;
    }

    .an-feature-two-column-list__content {
      padding: 1.5rem;
    }

    .feature-item {
      margin-bottom: 1.25rem;
    }

    .feature-icon {
      width: 28px;
      height: 28px;
    }

    .feature-emoji {
      font-size: 1.25rem;
    }

    .footer-text {
      font-size: 1rem;
    }
  }
</style>

