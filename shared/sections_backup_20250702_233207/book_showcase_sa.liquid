<!-- Securely Attached Book Showcase (Static) -->
<section class="py-5 bg-grey">
  <div class="container">
    <div class="row align-items-center flex-lg-row-reverse">
      <!-- Book Image Column -->
      <div class="col-lg-5 mb-4 mb-lg-0">
        <div class="position-relative">
          {% if section.settings.book_image != blank %}
            <div>
              <img src="{{ section.settings.book_image | image_picker_url: '400x600' }}" 
             alt="{{ Securely Attached }}" 
             class="img-fluid rounded-lg shadow-lg hover-lift"
             loading="lazy"
             style="object-fit: cover;">
            </div>
          {% else %}
            <div class="book-placeholder rounded-lg shadow-lg" style="width: 100%; height: 600px; background: linear-gradient(135deg, #FFE6F7 0%, #E9E6FF 100%); display: flex; align-items: center; justify-content: center;">
              <div style="text-align: center;">
                <svg width="100" height="120" viewBox="0 0 24 30" fill="var(--c-accent-peach)">
                  <path d="M6 2c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2H6zm0 2h12v16H6V4zm2 2v2h8V6H8zm0 4v2h8v-2H8zm0 4v2h5v-2H8z"/>
                </svg>
                <p style="margin-top: 20px; color: var(--c-accent-peach); font-weight: 600; font-size: 18px;">Securely Attached</p>
                <p style="color: var(--c-brand-600); font-size: 14px;">Book Cover</p>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
      
      <!-- Book Details Column -->
      <div class="col-lg-7 pe-lg-5">
        <h2 class="text-3xl font-bold text-navy mb-2">Securely Attached</h2>
        <p class="text-lg text-coral font-medium mb-3">Transform Your Attachment Patterns into Loving, Lasting Romantic Relationships</p>
        
        <p class="text-lg text-slate mb-4">
          {{ section.settings.book_description }}
        </p>
        
        <!-- Key Features -->
        <div class="row g-3 mb-4">
          <div class="col-md-6">
            <div class="d-flex align-items-start">
              <span class="text-teal me-2">✓</span>
              <span class="text-slate">140 prompts & activities</span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="d-flex align-items-start">
              <span class="text-teal me-2">✓</span>
              <span class="text-slate">Attachment style quizzes</span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="d-flex align-items-start">
              <span class="text-teal me-2">✓</span>
              <span class="text-slate">Journal-style format</span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="d-flex align-items-start">
              <span class="text-teal me-2">✓</span>
              <span class="text-slate">Transform insecure patterns</span>
            </div>
          </div>
        </div>
        
        <!-- Testimonial Quote -->
        {% if section.settings.show_testimonial %}
          <blockquote class="bg-lavender rounded-lg p-4 mb-4">
            <p class="text-lg text-navy font-medium mb-3">
              "{{ section.settings.testimonial_quote }}"
            </p>
            <div class="d-flex align-items-center">
              {% if section.settings.testimonial_author_image %}
                <div class="me-3" style="width: 48px; height: 48px;">
                  <img src="{{ section.settings.testimonial_author_image | image_picker_url: '120x120' }}" 
             alt="{{ section.settings.testimonial_author }}" 
             class="rounded-circle"
             loading="lazy"
             style="object-fit: cover;">
                </div>
              {% endif %}
              <cite class="text-sm text-slate">
                — {{ section.settings.testimonial_author }}
              </cite>
            </div>
          </blockquote>
        {% endif %}
        
        <!-- Buy Buttons -->
        <div class="d-flex flex-wrap gap-2">
          <a href="{{ section.settings.amazon_link }}" 
             class="btn btn-primary-modern"
             style="color: var(--c-white) !important;"
            >
            Buy on Amazon
          </a>
          <a href="{{ section.settings.learn_more_link }}" 
             class="btn btn-secondary-modern"
             style="color: var(--c-brand-600) !important;"
            >
            Learn More
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Book - Showcase SA",
  "elements": [
    {
      "type": "textarea",
      "id": "book_description",
      "label": "Book Description",
      "default": "A practical workbook featuring 140 insightful prompts, quizzes, and activities to help you understand your attachment history and transform your relationship patterns."
    },
    {
      "type": "image_picker",
      "id": "book_image",
      "label": "Book Cover Image"
    },
    {
      "type": "checkbox",
      "id": "show_testimonial",
      "label": "Show Testimonial Quote",
      "default": true
    },
    {
      "type": "textarea",
      "id": "testimonial_quote",
      "label": "Testimonial Quote",
      "default": "A resource that every therapist, client, and person needs in their life... engaging, concise, and hopeful towards healing attachment wounds."
    },
    {
      "type": "text",
      "id": "testimonial_author",
      "label": "Testimonial Author",
      "default": "Dr. Nicole LePera, NYT Bestselling Author"
    },
    {
      "type": "image_picker",
      "id": "testimonial_author_image",
      "label": "Testimonial Author Photo"
    },
    {
      "type": "action",
      "id": "amazon_link",
      "label": "Amazon Link",
      "default": "#"
    },
    {
      "type": "action",
      "id": "learn_more_link",
      "label": "Learn More Link",
      "default": "#"
    }
  ]
}
{% endschema %}