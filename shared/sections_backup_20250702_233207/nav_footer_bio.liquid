{%- comment -%}
  Attachment Nerd â€“ Brand-Aligned Footer with Bio
  Following the brand style guide with effortless power, human-first tech, and momentum
  Drop in any Kajabi page via "Add Section â€º Footer Bio"
{%- endcomment -%}

<section id="footer-bio-{{ section.id }}" class="an-footer" data-theme="{{ section.settings.theme_mode | default: 'light' }}">
  <!-- Momentum Background -->
  <div class="an-footer__background">
    <div class="an-footer__gradient-orb an-footer__gradient-orb--1"></div>
    <div class="an-footer__gradient-orb an-footer__gradient-orb--2"></div>
  </div>

  <div class="container">
    <!-- Brand Header -->
    <div class="an-footer__header">
      <div class="an-footer__brand-wrapper">
        {% if section.settings.logo_image != blank %}
          <div>
            <img src="{{ section.settings.logo_image | image_picker_url: '240x80' }}" 
             alt="{{ section.settings.logo_alt | default: 'Logo' }}" 
             class="an-footer__logo"
             loading="lazy"
             style="object-fit: cover;">
          </div>
        {% else %}
          <h2 class="an-footer__brand">
            <span class="an-footer__brand-icon">ðŸ”—</span>
            <span class="an-footer__brand-text">{{ section.settings.brand_text | default: 'Attachment Nerd' }}</span>
          </h2>
        {% endif %}

        {% if section.settings.tagline != blank %}
          <p class="an-footer__tagline">{{ section.settings.tagline }}</p>
        {% endif %}
      </div>
    </div>

    <div class="an-footer__content">
      <!-- Bio Section with Human-First Design -->
      <div class="an-footer__bio-section">
        <div class="an-footer__author">
          <!-- Avatar with Soft Glow -->
          <div class="an-footer__avatar-container">
            <div class="an-footer__avatar-glow"></div>
            <div class="an-footer__avatar-wrapper">
              {% if section.settings.avatar_image != blank %}
                <img src="{{ section.settings.avatar_image | image_picker_url: '120x120' }}" 
             alt="{{ section.settings.author_name | default: 'Avatar' }}" 
             class="an-footer__avatar"
             loading="lazy"
             style="object-fit: cover;">
              {% else %}
                <div class="an-footer__avatar-placeholder">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                  </svg>
                </div>
              {% endif %}
              {% if section.settings.show_status %}
                <div class="an-footer__status">
                  <span class="an-footer__status-dot"></span>
                </div>
              {% endif %}
            </div>
          </div>

          <!-- Bio Content -->
          <div class="an-footer__bio-content">
            {% if section.settings.author_name != blank %}
              <h3 class="an-footer__author-name">{{ section.settings.author_name }}</h3>
            {% endif %}

            {% if section.settings.author_title != blank %}
              <p class="an-footer__author-title">
                <span class="an-footer__title-accent">âœ¨</span>
                {{ section.settings.author_title }}
              </p>
            {% endif %}

            {% if section.settings.bio_text != blank %}
              <p class="an-footer__bio-text">{{ section.settings.bio_text }}</p>
            {% endif %}

            <!-- Social Pills -->
            <div class="an-footer__social">
              {% for block in section.blocks %}
                {% if block.type == 'social_link' %}
                  <a href="{{ block.settings.url }}"
                     class="an-footer__social-pill"
                     data-platform="{{ block.settings.platform }}"
                     target="_blank"
                     rel="noopener"
                     aria-label="{{ block.settings.label }}">
                    <span class="an-footer__social-icon">
