                          </svg>
                        {% when 'facebook' %}
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                          </svg>
                        {% when 'twitter' %}
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                          </svg>
                        {% when 'linkedin' %}
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                          </svg>
                        {% when 'podcast' %}
                          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                            <path d="M17 18.25v2.5a.75.75 0 01-.75.75h-8.5a.75.75 0 01-.75-.75v-2.5H17zM12 3a7 7 0 00-5 11.9v3.35h1.5V16.4l-.32-.13A5.5 5.5 0 1117.5 12a5.44 5.44 0 01-.82 2.87l-.32.13v1.85h1.5V14.9A7 7 0 0012 3zm0 9.5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z"/>
                          </svg>
                      {% endcase %}
                    </span>
                    <span class="an-footer__social-label">{{ block.settings.label }}</span>
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      </div>

      <!-- Navigation with Cards -->
      <div class="an-footer__nav-section">
        <h3 class="an-footer__nav-title">{{ section.settings.nav_title | default: 'Quick Links' }}</h3>

        <div class="an-footer__nav-grid">
          {% for block in section.blocks %}
            {% if block.type == 'nav_link' %}
              <a href="{{ block.settings.url }}"
                 class="an-footer__nav-card"
                 {% if block.settings.new_tab %}target="_blank" rel="noopener"{% endif %}>
                <span class="an-footer__nav-text">{{ block.settings.text }}</span>
                {% if block.settings.is_new %}
                  <span class="an-footer__nav-badge">New</span>
                {% endif %}
              </a>
            {% endif %}
          {% endfor %}
        </div>

        <!-- Primary CTA with Signature Gradient -->
        {% if section.settings.show_cta %}
          <div class="an-footer__cta-wrapper">
            <a href="{{ section.settings.cta_url | default: '/contact' }}"
               class="an-footer__cta-btn">
              <span>{{ section.settings.cta_text | default: 'Get Started' }}</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="an-footer__bottom">
      <div class="an-footer__bottom-content">
        {% if section.settings.show_copyright %}
          <p class="an-footer__copyright">
            Â© {{ 'now' | date: '%Y' }} {{ section.settings.copyright_name | default: 'Attachment Nerd' }}.
            {{ section.settings.copyright_text | default: 'All rights reserved.' }}
          </p>
        {% endif %}

        {% if section.settings.show_legal_links %}
          <nav class="an-footer__legal">
            <a href="{{ section.settings.privacy_url | default: '/privacy' }}">Privacy</a>
            <span class="an-footer__legal-dot">â€¢</span>
            <a href="{{ section.settings.terms_url | default: '/terms' }}">Terms</a>
          </nav>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  /* Brand Color Tokens */
  .an-footer {
    /* Core Palette */
    --c-brand-600: #5E3BFF;
    --c-brand-800: #4025E0;
    --c-brand-100: #E9E6FF;
    --c-accent-teal: #18D5E4;
    --c-accent-peach: #FF8BCB;
    --c-accent-lemon: #FFE86B;
    --c-ink-900: #1B1B29;
    --c-ink-700: #323346;
    --c-ink-500: #6E6F7B;
    --c-white: #FFFFFF;

    /* Signature Gradient */
    --g-brand: linear-gradient(135deg, #6757FF 0%, #7B4DFF 100%);

    /* Typography */
    --fs-display: 3rem;
    --fs-h1: 2.5rem;
    --fs-h2: 1.875rem;
    --fs-body-lg: 1.125rem;
    --fs-body: 1rem;
    --fs-caption: 0.875rem;

    /* Spacing (8pt grid) */
    --space-xs: 4px;
    --space-sm: 8px;
    --space-md: 16px;
    --space-lg: 24px;
    --space-xl: 32px;
    --space-2xl: 48px;
    --space-3xl: 64px;

    /* Radius */
    --radius-sm: 8px;
    --radius-md: 16px;
    --radius-lg: 24px;
    --radius-pill: 9999px;

    /* Shadows */
    --shadow-card: 0 4px 12px rgba(0, 0, 0, 0.05);
    --shadow-raised: 0 12px 24px rgba(0, 0, 0, 0.08);
    --shadow-glow: 0 0 12px rgba(105, 78, 255, 0.25);

    /* Transitions */
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Base Styles */
  .an-footer {
    position: relative;
    padding: var(--space-3xl) 0 0;
    background: var(--c-white);
    color: var(--c-ink-900);
    font-family: Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    overflow: hidden;
  }

  /* Dark Theme */
  .an-footer[data-theme="dark"] {
    background: var(--c-ink-900);
    color: var(--c-white);
  }

  .an-footer[data-theme="dark"] .an-footer__nav-card {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }

  /* Background Animation */
  .an-footer__background {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .an-footer__gradient-orb {
    position: absolute;
    width: 600px;
    height: 600px;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.15;
    animation: float 20s ease-in-out infinite;
  }

  .an-footer__gradient-orb--1 {
    background: var(--c-accent-teal);
    top: -300px;
    left: -300px;
  }

  .an-footer__gradient-orb--2 {
    background: var(--c-accent-peach);
    bottom: -300px;
    right: -300px;
    animation-delay: -10s;
  }

  /* Header */
  .an-footer__header {
    text-align: center;
    margin-bottom: var(--space-3xl);
    position: relative;
    z-index: 1;
  }

  .an-footer__brand {
    display: inline-flex;
    align-items: center;
    gap: var(--space-md);
    font-size: var(--fs-h1);
    font-weight: 500;
    margin: 0;
  }

  .an-footer__brand-icon {
    font-size: var(--fs-display);
    filter: grayscale(0);
  }

  .an-footer__tagline {
    margin-top: var(--space-sm);
    font-size: var(--fs-body-lg);
    color: var(--c-ink-500);
    font-weight: 400;
  }

  /* Content Grid */
  .an-footer__content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-3xl);
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
    position: relative;
    z-index: 1;
  }

  /* Bio Section */
  .an-footer__author {
    display: flex;
    gap: var(--space-xl);
    align-items: flex-start;
  }

  /* Avatar */
  .an-footer__avatar-container {
    position: relative;
    flex-shrink: 0;
  }

  .an-footer__avatar-glow {
    position: absolute;
    inset: -16px;
    background: radial-gradient(circle, var(--c-brand-600), transparent);
    opacity: 0.2;
    filter: blur(24px);
  }

  .an-footer__avatar-wrapper {
    position: relative;
    width: 160px;
    height: 160px;
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--c-brand-100);
    box-shadow: var(--shadow-raised);
  }

  .an-footer__avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .an-footer__avatar-placeholder {
    width: 100%;
    height: 100%;
    background: var(--g-brand);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--c-white);
  }

  .an-footer__status {
    position: absolute;
    bottom: var(--space-sm);
    right: var(--space-sm);
    width: 24px;
    height: 24px;
    background: var(--c-white);
    border: 3px solid var(--c-white);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-card);
  }

  .an-footer__status-dot {
    width: 12px;
    height: 12px;
    background: #22C55E;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  /* Bio Content */
  .an-footer__bio-content {
    flex: 1;
  }

  .an-footer__author-name {
    font-size: var(--fs-h2);
    font-weight: 500;
    margin: 0 0 var(--space-xs);
  }

  .an-footer__author-title {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--fs-body-lg);
    color: var(--c-ink-500);
    margin: 0 0 var(--space-lg);
  }

  .an-footer__title-accent {
    color: var(--c-accent-peach);
  }

  .an-footer__bio-text {
    font-size: var(--fs-body);
    line-height: 1.6;
    color: var(--c-ink-700);
    margin: 0 0 var(--space-xl);
  }

  /* Social Pills */
  .an-footer__social {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .an-footer__social-pill {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-sm) var(--space-md);
    background: var(--c-brand-100);
    color: var(--c-brand-600);
    text-decoration: none;
    font-size: var(--fs-caption);
    font-weight: 500;
    border-radius: var(--radius-pill);
    transition: var(--transition);
  }

  .an-footer__social-pill:hover {
    background: var(--c-brand-600);
    color: var(--c-white);
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
  }

  .an-footer__social-label {
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Navigation Section */
  .an-footer__nav-section {
    position: relative;
  }

  .an-footer__nav-title {
    font-size: var(--fs-h2);
    font-weight: 500;
    margin: 0 0 var(--space-xl);
  }

  .an-footer__nav-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }

  .an-footer__nav-card {
    position: relative;
    padding: var(--space-md) var(--space-lg);
    background: var(--c-brand-100);
    border: 2px solid transparent;
    border-radius: var(--radius-md);
    text-decoration: none;
    color: var(--c-ink-900);
    font-weight: 400;
    transition: var(--transition);
    box-shadow: var(--shadow-card);
  }

  .an-footer__nav-card:hover {
    background: var(--c-white);
    border-color: var(--c-brand-600);
    transform: translateY(-2px);
    box-shadow: var(--shadow-raised);
  }

  .an-footer__nav-badge {
    position: absolute;
    top: -8px;
    right: -8px;
    padding: 2px var(--space-sm);
    background: var(--c-accent-lemon);
    color: var(--c-ink-900);
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    border-radius: var(--radius-pill);
    letter-spacing: 0.05em;
  }

  /* CTA Button */
  .an-footer__cta-wrapper {
    display: flex;
    justify-content: flex-start;
  }

  .an-footer__cta-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    background: var(--g-brand);
    color: var(--c-white);
    text-decoration: none;
    font-weight: 500;
    font-size: var(--fs-body);
    border-radius: var(--radius-pill);
    transition: var(--transition);
    box-shadow: var(--shadow-card);
  }

  .an-footer__cta-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
  }

  .an-footer__cta-btn svg {
    transition: transform 0.3s ease;
  }

  .an-footer__cta-btn:hover svg {
    transform: translateX(4px);
  }

  /* Bottom Bar */
  .an-footer__bottom {
    margin-top: var(--space-3xl);
    padding: var(--space-xl) 0;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .an-footer__bottom-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
    display: flex;
    justify-content: space-between;
    align-items: center;
