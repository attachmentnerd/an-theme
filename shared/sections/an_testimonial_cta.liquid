{% comment %}
  Section: Testimonial with Call to Action
  Description: Displays a testimonial with a background image and a call to action button.
{% endcomment %}

<style>
  .testimonial-cta-section {
    position: relative;
    overflow: hidden;
    padding: 80px 0;
    color: #fff; /* Default text color for overlay */
    display: flex;
    align-items: center;
    min-height: 400px; /* Minimum height for the section */
  }

  .testimonial-cta-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    filter: brightness(0.5); /* Darken background image for text readability */
    z-index: 1;
  }

  .testimonial-cta-content {
    position: relative;
    z-index: 2;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: left;
  }

  .testimonial-cta-quote {
    font-size: 2.5em;
    line-height: 1.3;
    margin-bottom: 20px;
    font-weight: bold;
  }

  .testimonial-cta-author {
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 5px;
  }

  .testimonial-cta-title {
    font-size: 1em;
    margin-bottom: 30px;
  }

  .testimonial-cta-button {
    display: inline-block;
    background-color: #fff;
    color: #000;
    padding: 15px 30px;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: background-color 0.3s ease;
  }

  .testimonial-cta-button:hover {
    background-color: #eee;
  }

  .testimonial-cta-pause {
    position: absolute;
    bottom: 20px;
    right: 20px;
    color: #fff;
    font-size: 0.9em;
    opacity: 0.7;
    z-index: 2;
  }
</style>

<section class="testimonial-cta-section">
  {% if section.settings.background_image != blank %}
    <div class="testimonial-cta-background" style="background-image: url('{{ section.settings.background_image | img_url: 'master' }}');"></div>
  {% endif %}

  <div class="testimonial-cta-content">
    {% if section.settings.quote != blank %}
      <p class="testimonial-cta-quote">{{ section.settings.quote }}</p>
    {% endif %}
    {% if section.settings.author != blank %}
      <p class="testimonial-cta-author">{{ section.settings.author }}</p>
    {% endif %}
    {% if section.settings.author_title != blank %}
      <p class="testimonial-cta-title">{{ section.settings.author_title }}</p>
    {% endif %}
    {% if section.settings.button_text != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="testimonial-cta-button">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>

  <div class="testimonial-cta-pause">
    Pause &#9616;&#9616;
  </div>
</section>

{% schema %}
{
  "name": "CTA - Testimonial",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "textarea",
      "id": "quote",
      "label": "Testimonial Quote",
      "default": "Airtable, with AI, lets us move at the speed our brand needs. We finally have a system that keeps up with the business."
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author Name",
      "default": "SCHAEFFLER"
    },
    {
      "type": "text",
      "id": "author_title",
      "label": "Author Title/Company",
      "default": "Jan Sassmannshausen\nHead of Content Strategy"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore all customer stories"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Testimonial with CTA",
      "category": "Testimonials"
    }
  ]
}
{% endschema %}
