<section class="about-hero-section" style="{% if section.settings.background_image != blank %}
    background-image: url('{{ section.settings.background_image | image_picker_url: 'placeholder.png' }}');
  {% else %}
    background-color: var(--c-brand-100);
  {% endif %}">
  {% if section.settings.background_image != blank and section.settings.use_overlay %}
    <div class="about-hero-overlay"></div>
  {% endif %}
  <div class="container">
    <div class="about-hero-content animate-fade-up">
      {% if section.settings.tagline != blank %}
        <p class="about-hero-tagline" kjb-settings-id="{{ 'tagline' | settings_id: section: section }}">
          {{ section.settings.tagline }}
          {% if section.settings.cta_link != blank %}
            <a href="{{ section.settings.cta_link }}" class="about-hero-tagline-link">{{ section.settings.cta_text }}</a>
          {% endif %}
        </p>
      {% endif %}
      
      <h1 class="about-hero-title" kjb-settings-id="{{ 'title' | settings_id: section: section }}">
        {{ section.settings.title }}
      </h1>
      
      {% if section.settings.subtitle != blank %}
        <p class="about-hero-subtitle" kjb-settings-id="{{ 'subtitle' | settings_id: section: section }}">
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
      
      <div class="about-hero-buttons">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'button' %}
              <a href="{{ block.settings.button_link }}" 
                 class="btn {% if block.settings.button_style == 'primary' %}btn-primary-modern about-hero-btn{% else %}btn-secondary-modern about-hero-btn-secondary{% endif %}" 
                 kjb-settings-id="{{ 'button_text' | settings_id: section: section, block: block }}">
                {{ block.settings.button_text }}
              </a>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Hero",
  "elements": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "default": "background.jpg"
    },
    {
      "type": "divider"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "LICENSED THERAPIST + ATTACHMENT NERD"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Tagline Link Text",
      "default": "Learn my story →"
    },
    {
      "type": "action",
      "id": "cta_link",
      "label": "Tagline Link"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Hi, I'm Eli – Your Attachment Nerd"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "For 17 years, I've been helping families build the secure connections they crave. Now I'm here to share what actually works – backed by science, tested in real life, and delivered with the warmth of your favorite therapist-friend."
    },
    {
      "type": "checkbox",
      "id": "use_overlay",
      "label": "Use Dark Overlay",
      "default": true,
      "info": "Add overlay when using background image"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "elements": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Work With Me"
        },
        {
          "type": "action",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "radio",
          "id": "button_style",
          "label": "Button Style",
          "default": "primary",
          "options": [
            { "label": "Primary", "value": "primary" },
            { "label": "Secondary", "value": "secondary" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Hero",
      "category": "Hero",
      "settings": {
        "tagline": "LICENSED THERAPIST + ATTACHMENT NERD",
        "cta_text": "Learn my story →",
        "title": "Hi, I'm Eli – Your Attachment Nerd",
        "subtitle": "For 17 years, I've been helping families build the secure connections they crave. Now I'm here to share what actually works – backed by science, tested in real life, and delivered with the warmth of your favorite therapist-friend."
      },
      "blocks": [
        {
          "type": "button",
          "settings": {
            "button_text": "Work With Me",
            "button_style": "primary"
          }
        },
        {
          "type": "button",
          "settings": {
            "button_text": "Browse Resources",
            "button_style": "secondary"
          }
        }
      ]
    }
  ]
}
{% endschema %}