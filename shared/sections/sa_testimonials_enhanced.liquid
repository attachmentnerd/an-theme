<section class="sa-testimonials-enhanced py-5">
  <div class="container">
    <div class="text-center mb-5 animate-fade-up">
      <h2 class="mb-4" style="font-size: var(--fs-h1); color: var(--c-ink-900); font-weight: 500;" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">
        {{ section.settings.heading }}
      </h2>
      {% if section.settings.subheading != blank %}
        <p style="font-size: var(--fs-body-lg); color: var(--c-ink-700);" kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
    </div>
    
    <div class="row g-4">
      {% assign review_count = 0 %}
      {% for block in section.blocks %}
        {% if block.type == 'review' %}
          {% assign review_count = review_count | plus: 1 %}
          <div class="col-lg-4 animate-fade-up" style="animation-delay: {{ review_count | times: 0.1 }}s;">
            <div class="h-100" style="background: white; border-radius: 16px; padding: 32px; box-shadow: 0 4px 12px rgba(0,0,0,.05); transition: all 0.3s ease;">
              <!-- Stars -->
              <div class="mb-3" style="color: var(--c-accent-lemon); font-size: 18px;">
                {% for i in (1..5) %}★{% endfor %}
              </div>
              
              <!-- Review text -->
              <p class="mb-4" style="color: var(--c-ink-700); line-height: 1.6; font-style: italic;" kjb-settings-id="{{ 'review_text' | settings_id: section: section, block: block }}">
                "{{ block.settings.review_text }}"
              </p>
              
              <!-- Reviewer info -->
              <div class="d-flex align-items-center">
                <div style="width: 48px; height: 48px; background: var(--c-brand-600); color: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 600; margin-right: 12px;">
                  {{ block.settings.reviewer_initial }}
                </div>
                <div>
                  <div style="font-weight: 600; color: var(--c-ink-900);" kjb-settings-id="{{ 'reviewer_name' | settings_id: section: section, block: block }}">
                    {{ block.settings.reviewer_name }}
                  </div>
                  {% if block.settings.reviewer_badge != blank %}
                    <div style="font-size: 14px; color: var(--c-ink-600);" kjb-settings-id="{{ 'reviewer_badge' | settings_id: section: section, block: block }}">
                      {{ block.settings.reviewer_badge }}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <!-- Featured testimonial -->
    {% for block in section.blocks %}
      {% if block.type == 'featured' %}
        <div class="mt-5 animate-fade-up" style="animation-delay: 0.4s;">
          <div style="background: white; border-radius: 24px; padding: 48px; box-shadow: 0 8px 24px rgba(0,0,0,.06); border: 2px solid var(--c-brand-100); position: relative; overflow: hidden;">
            <!-- Quote icon -->
            <div style="position: absolute; top: -20px; right: 40px; font-size: 120px; color: var(--c-brand-100); opacity: 0.5; font-family: Georgia, serif;">"</div>
            
            <div class="row align-items-center">
              <div class="col-lg-8">
                <p class="mb-4" style="font-size: 20px; color: var(--c-ink-800); line-height: 1.7; font-style: italic; position: relative; z-index: 1;" kjb-settings-id="{{ 'featured_text' | settings_id: section: section, block: block }}">
                  {{ block.settings.featured_text }}
                </p>
                <div class="d-flex align-items-center">
                  {% if block.settings.featured_image != blank %}
                    <img src="{{ block.settings.featured_image | image_picker_url: '100x100' }}" 
                         alt="{{ block.settings.featured_name }}"
                         style="width: 60px; height: 60px; border-radius: 50%; margin-right: 16px;"
                         kjb-settings-id="{{ 'featured_image' | settings_id: section: section, block: block }}">
                  {% endif %}
                  <div>
                    <div style="font-weight: 600; font-size: 18px; color: var(--c-ink-900);" kjb-settings-id="{{ 'featured_name' | settings_id: section: section, block: block }}">
                      {{ block.settings.featured_name }}
                    </div>
                    <div style="color: var(--c-ink-600);" kjb-settings-id="{{ 'featured_title' | settings_id: section: section, block: block }}">
                      {{ block.settings.featured_title }}
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-4 text-center">
                <div style="font-size: 60px; font-weight: 700; color: var(--c-brand-600); line-height: 1;">★★★★★</div>
                <div style="font-size: 14px; color: var(--c-ink-600); margin-top: 8px;">5-Star Review</div>
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<style>
  .sa-testimonials-enhanced .col-lg-4:hover > div {
    transform: translateY(-5px);
    box-shadow: 0 12px 24px rgba(0,0,0,.08);
  }
</style>

