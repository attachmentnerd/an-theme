{% if section.settings.section_id != blank %}<a id="{{ section.settings.section_id | escape }}"></a>{% endif %}
<section id="{{ section.settings.section_id | default: 'spp-expert' }}-{{ section.id }}" class="spp-expert-section py-5">
  <style>
    .spp-expert-section .eyebrow { display:inline-flex; align-items:center; gap:8px; padding:6px 10px; border-radius:999px; font-weight:600; font-size:12px; line-height:1; }
    .spp-expert-section .lead { font-size: var(--fs-body-lg); color: var(--c-ink-700); }
    .spp-expert-section .micro-proof { background:#fff; border-radius:14px; padding:14px 16px; box-shadow:0 14px 40px rgba(0,0,0,0.08); border:1px solid rgba(0,0,0,0.05); }
    .spp-expert-section .press-grid { display:grid; grid-template-columns:1fr 1fr; gap:14px; }
    @media (min-width: 768px){ .spp-expert-section .press-grid{ grid-template-columns: repeat(4, 1fr);} }
    .spp-expert-section .press-item { display:flex; align-items:center; gap:10px; background:transparent; border-radius:0; padding:0; border:0; }
    .spp-expert-section .press-item.has-logo { display:block; }
    .spp-expert-section .press-icon { width:34px; height:34px; border-radius:50%; background:var(--c-brand-50, #F3F6FF); display:flex; align-items:center; justify-content:center; overflow:hidden; }
    .spp-expert-section .press-item.has-logo .press-icon { width:100%; height:auto; border-radius:0; background:transparent; display:block; overflow:visible; }
    .spp-expert-section .press-icon img{ width:100%; height:100%; object-fit:cover; }
    .spp-expert-section .press-item.has-logo .press-icon img{ width:100%; height:auto; object-fit:contain; }
    .spp-expert-section .cred-list { list-style:none; padding:0; margin:0; display:grid; gap:10px; }
    .spp-expert-section .cred-list li { display:flex; gap:10px; align-items:flex-start; }
    .spp-expert-section .dot { width:8px; height:8px; border-radius:50%; background: var(--c-accent-orange, #F59E0B); margin-top:8px; flex:0 0 8px; }

    .spp-expert-section .media-wrap { position:relative; }
    .spp-expert-section .frame { position:relative; display:block; border-radius:18px; overflow:hidden; box-shadow:0 30px 80px rgba(0,0,0,0.15); }
    .spp-expert-section .frame::before { content:""; position:absolute; inset:-14px -14px -16px -14px; background:var(--c-ink-900); border-radius:22px; transform: rotate(-3deg); z-index:-1; }
    .spp-expert-section .frame img{ width:100%; height:auto; display:block; }
    .spp-expert-section .badge-chip { position:absolute; top: -10px; right: -10px; background: var(--c-accent-orange, #F59E0B); color:#fff; font-weight:700; font-size:12px; padding:10px 12px; border-radius:999px; box-shadow:0 10px 30px rgba(0,0,0,0.15); }
    .spp-expert-section .quote { position:absolute; left: 10px; bottom: -10px; background:#fff; border-radius:14px; padding:14px 16px; max-width:320px; box-shadow:0 18px 50px rgba(0,0,0,0.12); border:1px solid rgba(0,0,0,0.05); }
    .spp-expert-section .quote p{ margin:0; color: var(--c-ink-800); font-style: italic; }
    .spp-expert-section .quote .by{ margin-top:6px; font-size:12px; color: var(--c-ink-700); }
  </style>

  <div class="container">
    <div class="row g-5 align-items-start">
      <!-- Left content -->
      <div class="col-lg-7">
        {% if section.settings.eyebrow != blank %}
          <div class="eyebrow mb-2" style="background: {{ section.settings.eyebrow_bg | default: 'var(--c-brand-100)' }}; color: {{ section.settings.eyebrow_color | default: 'var(--c-ink-900)' }};" kjb-settings-id="{{ 'eyebrow' | settings_id: section: section }}">
            {{ section.settings.eyebrow }}
          </div>
        {% endif %}

        <h2 class="mb-3" style="font-size: var(--fs-display, var(--fs-h1)); color: var(--c-ink-900); font-weight: 700; letter-spacing: -0.01em;" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">{{ section.settings.heading | default: 'Eli Harwood, LMFT' }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="lead mb-3" kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">{{ section.settings.subheading }}</p>
        {% endif %}

        {% if section.settings.microproof_text != blank %}
          <div class="micro-proof mb-4">
            <span style="font-weight:700; color: var(--c-ink-900);" kjb-settings-id="{{ 'microproof_label' | settings_id: section: section }}">{{ section.settings.microproof_label | default: 'Micro-proofs:' }}</span>
            <span style="color: var(--c-ink-700);" kjb-settings-id="{{ 'microproof_text' | settings_id: section: section }}"> {{ section.settings.microproof_text }}</span>
          </div>
        {% endif %}

        {% if section.settings.press_heading != blank %}
          <h4 class="mb-2" style="font-size: 16px; color: var(--c-ink-900); font-weight: 700;" kjb-settings-id="{{ 'press_heading' | settings_id: section: section }}">{{ section.settings.press_heading }}</h4>
        {% endif %}
        <div class="press-grid mb-4">
          {% for block in section.blocks %}
            {% if block.type == 'press' %}
              <div class="press-item{% if block.settings.logo != blank %} has-logo{% endif %}">
                <div class="press-icon"{% if block.settings.icon_bg != blank %} style="background: {{ block.settings.icon_bg }}"{% endif %}>
                  {% if block.settings.logo != blank %}
                    <img src="{{ block.settings.logo | image_picker_url: '80x' }}" alt="{{ block.settings.name | default: 'Publication' | escape }}" loading="lazy" decoding="async">
                  {% else %}üì∞{% endif %}
                </div>
                {% if block.settings.logo == blank %}
                  <div style="color: var(--c-ink-800); font-weight: 600;" kjb-settings-id="{{ 'name' | settings_id: block: block }}">{{ block.settings.name | default: 'Publication' }}</div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>

        {% if section.settings.cred_heading != blank %}
          <h4 class="mb-2" style="font-size: 16px; color: var(--c-ink-900); font-weight: 700;" kjb-settings-id="{{ 'cred_heading' | settings_id: section: section }}">{{ section.settings.cred_heading }}</h4>
        {% endif %}
        <ul class="cred-list">
          {% for block in section.blocks %}
            {% if block.type == 'credential' %}
              <li>
                <span class="dot"></span>
                <span style="color: var(--c-ink-800);" kjb-settings-id="{{ 'text' | settings_id: block: block }}">{{ block.settings.text | default: 'Credential or expertise bullet.' }}</span>
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      <!-- Right media -->
      <div class="col-lg-5">
        {% if section.settings.image != blank %}
          <div class="media-wrap">
            <div class="frame">
                            {% include 'responsive-image',
                image: section.settings.image,
                alt: '{{ section.settings.image_alt | escape }}',
                class: 'img-fluid',
                sizes: '(max-width: 767px) 100vw, (max-width: 991px) 50vw, 800px',
                aspect_ratio: '16/9',
                widths: '400,600,800,1200',
                placeholder_type: 'feature',
                blur_up: true
              %}
            </div>
            {% if section.settings.badge_text != blank %}
              <div class="badge-chip" style="background: {{ section.settings.badge_bg | default: 'var(--c-accent-orange, #F59E0B)' }};" kjb-settings-id="{{ 'badge_text' | settings_id: section: section }}">{{ section.settings.badge_text }}</div>
            {% endif %}

            {% if section.settings.show_quote %}
              <div class="quote">
                <p kjb-settings-id="{{ 'quote_text' | settings_id: section: section }}">‚Äú{{ section.settings.quote_text | default: "You're not late. Repair works. Start where you are." }}‚Äù</p>
                {% if section.settings.quote_author != blank %}
                  <div class="by" kjb-settings-id="{{ 'quote_author' | settings_id: section: section }}">‚Äî {{ section.settings.quote_author }}</div>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

