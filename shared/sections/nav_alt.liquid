<!-- Transparent Pill Navigation -->
<style>
  :root {
    --nav-pill-height: 80px;
    --nav-pill-height-mobile: 60px;
    --nav-pill-padding-y: 20px;
    --nav-pill-padding-y-scrolled: 12px;
    --nav-pill-transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .nav-transparent-pill {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: var(--nav-pill-padding-y) 0;
    transition: var(--nav-pill-transition);
  }

  /* Keep nav bar transparent when scrolled; only adjust padding */
  .nav-transparent-pill--scrolled {
    padding: var(--nav-pill-padding-y-scrolled) 0;
  }

  /* Sticky behavior removed */

  .nav-transparent-pill__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* Logo */
  .nav-transparent-pill__logo {
    flex-shrink: 0;
    z-index: 2;
  }

  .nav-transparent-pill__logo a {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .nav-transparent-pill__logo a:hover {
    transform: translateY(-2px);
  }

  .nav-transparent-pill__logo img {
    height: {{ section.settings.logo_height | default: 40 }}px;
    width: auto;
    transition: height 0.3s ease;
    display: block;
  }

  .nav-transparent-pill--scrolled .nav-transparent-pill__logo img {
    height: {{ section.settings.logo_height_scrolled | default: 32 }}px;
  }

  .nav-transparent-pill__logo-text {
    font-size: var(--fs-h3);
    font-weight: var(--fw-semibold);
    color: {{ section.settings.logo_text_color | default: '#333333' }};
    text-decoration: none;
    letter-spacing: -0.02em;
  }

  /* Pill Menu Container */
  .nav-transparent-pill__menu-wrapper {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    background: {{ section.settings.pill_background | default: '#FFFFFF' }};
    border-radius: 50px;
    padding: 8px 24px;
    box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
    transition: var(--nav-pill-transition);
  }

  .nav-transparent-pill__menu {
    display: flex;
    align-items: center;
    gap: {{ section.settings.menu_gap | default: 8 }}px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-transparent-pill__menu-item {
    position: relative;
  }

  .nav-transparent-pill__menu-link {
    display: inline-block;
    padding: 8px 16px;
    color: {{ section.settings.menu_text_color | default: '#333333' }};
    text-decoration: none;
    font-weight: var(--fw-medium);
    font-size: var(--fs-body);
    transition: all 0.2s ease;
    border-radius: 25px;
    position: relative;
  }

  .nav-transparent-pill__menu-link:hover {
    color: {{ section.settings.menu_text_hover | default: '#5E3BFF' }};
    background: {{ section.settings.menu_item_hover_bg | default: '#F5F5F5' }};
  }

  /* Active state */
  .nav-transparent-pill__menu-link--active {
    background: {{ section.settings.menu_item_active_bg | default: '#E9E6FF' }};
    color: {{ section.settings.menu_text_active | default: '#5E3BFF' }};
  }

  /* Dropdown Menu */
  .nav-transparent-pill__dropdown .nav-transparent-pill__menu-link::after {
    content: 'â–¾';
    margin-left: 4px;
    font-size: 12px;
    opacity: 0.7;
  }

  .nav-transparent-pill__dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    margin-top: 8px;
    background: {{ section.settings.pill_background | default: '#FFFFFF' }};
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12);
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: var(--nav-pill-transition);
    overflow: hidden;
  }

  .nav-transparent-pill__dropdown:hover .nav-transparent-pill__dropdown-menu {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .nav-transparent-pill__dropdown-menu a {
    display: block;
    padding: 12px 20px;
    color: {{ section.settings.menu_text_color | default: '#333333' }};
    text-decoration: none;
    font-size: var(--fs-body);
    transition: all 0.2s ease;
  }

  .nav-transparent-pill__dropdown-menu a:hover {
    background: {{ section.settings.menu_item_hover_bg | default: '#F5F5F5' }};
    color: {{ section.settings.menu_text_hover | default: '#5E3BFF' }};
  }

  /* Actions */
  .nav-transparent-pill__actions {
    display: flex;
    align-items: center;
    gap: 12px;
    flex-shrink: 0;
    z-index: 2;
  }

  .nav-transparent-pill__icon-btn,
  .nav-transparent-pill__mobile-toggle {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    /* Color will be set by inverse logic below */
    transition: all 0.2s ease;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  /* Mobile toggle color based on inverse mode */
  .nav-transparent-pill__mobile-toggle {
    {% assign logo_block = section.blocks | where: 'type', 'logo_image' | first %}
    {% assign is_inverse = false %}
    {% if section.settings.use_inverse_logo %}
      {% assign is_inverse = true %}
    {% elsif logo_block and logo_block.settings.use_block_inverse_logo %}
      {% assign is_inverse = true %}
    {% endif %}

    {% if is_inverse %}
      /* White/light style for dark backgrounds (inverted mode) */
      border: 2px solid rgba(255, 255, 255, 0.3);
      background: rgba(255, 255, 255, 0.12);
      color: #FFFFFF;
    {% else %}
      /* Dark style for light backgrounds (normal mode) */
      border: 2px solid rgba(0, 0, 0, 0.1);
      background: rgba(0, 0, 0, 0.03);
      color: #333333;
    {% endif %}
  }

  .nav-transparent-pill__mobile-toggle:hover {
    {% assign logo_block = section.blocks | where: 'type', 'logo_image' | first %}
    {% assign is_inverse = false %}
    {% if section.settings.use_inverse_logo %}
      {% assign is_inverse = true %}
    {% elsif logo_block and logo_block.settings.use_block_inverse_logo %}
      {% assign is_inverse = true %}
    {% endif %}

    {% if is_inverse %}
      background: rgba(255, 255, 255, 0.2);
      border-color: rgba(255, 255, 255, 0.5);
    {% else %}
      background: rgba(0, 0, 0, 0.08);
      border-color: rgba(0, 0, 0, 0.2);
    {% endif %}
  }

  .nav-transparent-pill__icon-btn:hover {
    background: {{ section.settings.icon_hover_bg | default: '#F5F5F5' }};
    color: {{ section.settings.icon_hover_color | default: '#5E3BFF' }};
  }

  .nav-transparent-pill__icon-btn svg,
  .nav-transparent-pill__mobile-toggle svg {
    width: 20px;
    height: 20px;
  }

  /* Cart Badge */
  .nav-transparent-pill__badge {
    position: absolute;
    top: 2px;
    right: 2px;
    background: {{ section.settings.badge_bg | default: '#FF3B3B' }};
    color: white;
    font-size: var(--fs-caption);
    font-weight: bold;
    min-width: 16px;
    height: 16px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 4px;
  }

  /* User Dropdown */
  .nav-transparent-pill__user {
    position: relative;
  }

  .nav-transparent-pill__user-toggle {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 4px;
    border-radius: 50px;
    transition: all 0.2s ease;
  }

  .nav-transparent-pill__user-toggle:hover {
    background: {{ section.settings.icon_hover_bg | default: '#F5F5F5' }};
  }

  .nav-transparent-pill__user-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid {{ section.settings.pill_background | default: '#FFFFFF' }};
  }

  .nav-transparent-pill__user-dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    margin-top: 8px;
    background: {{ section.settings.pill_background | default: '#FFFFFF' }};
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.12);
    min-width: 200px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: var(--nav-pill-transition);
    overflow: hidden;
  }

  .nav-transparent-pill__user.active .nav-transparent-pill__user-dropdown,
  .nav-transparent-pill__user:hover .nav-transparent-pill__user-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .nav-transparent-pill__user-dropdown a {
    display: block;
    padding: 12px 20px;
    color: {{ section.settings.menu_text_color | default: '#333333' }};
    text-decoration: none;
    font-size: 14px;
    transition: all 0.2s ease;
  }

  .nav-transparent-pill__user-dropdown a:hover {
    background: {{ section.settings.menu_item_hover_bg | default: '#F5F5F5' }};
    color: {{ section.settings.menu_text_hover | default: '#5E3BFF' }};
  }

  .nav-transparent-pill__user-dropdown hr {
    margin: 8px 0;
    border: none;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
  }

  /* Button Styles */
  .nav-transparent-pill__button {
    padding: {{ section.settings.button_padding_y | default: '10px' }} {{ section.settings.button_padding_x | default: '24px' }};
    {% if section.settings.button_style == 'gradient' %}
      background: linear-gradient({{ section.settings.button_gradient_angle | default: 135 }}deg, {{ section.settings.button_bg_color | default: "#5E3BFF" }}, {{ section.settings.button_gradient_end | default: section.settings.button_bg_color | default: "#5E3BFF" | color_modify: 'darken', 10 }});
    {% elsif section.settings.button_style == 'outline' %}
      background: transparent;
      border: {{ section.settings.button_border_width | default: '2px' }} solid {{ section.settings.button_bg_color | default: "#5E3BFF" }};
    {% elsif section.settings.button_style == 'ghost' %}
      background: transparent;
      border: none;
    {% else %}
      background: {{ section.settings.button_bg_color | default: "#5E3BFF" }};
    {% endif %}
    color: {% if section.settings.button_style == 'outline' or section.settings.button_style == 'ghost' %}{{ section.settings.button_bg_color | default: "#5E3BFF" }}{% else %}{{ section.settings.button_text_color | default: "#FFFFFF" }}{% endif %};
    border-radius: {{ section.settings.button_border_radius | default: '25px' }};
    text-decoration: none;
    font-weight: {{ section.settings.button_font_weight | default: '600' }};
    font-size: {{ section.settings.button_font_size | default: '14px' }};
    transition: var(--nav-pill-transition);
    display: inline-block;
    {% if section.settings.button_style != 'outline' %}
      border: 2px solid transparent;
    {% endif %}
    position: relative;
    overflow: hidden;
    {% if section.settings.button_shadow %}
      box-shadow: {{ section.settings.button_shadow_x | default: '0' }}px {{ section.settings.button_shadow_y | default: '2' }}px {{ section.settings.button_shadow_blur | default: '10' }}px {{ section.settings.button_shadow_spread | default: '0' }}px {{ section.settings.button_shadow_color | default: section.settings.button_bg_color | default: '#5E3BFF' | color_modify: 'alpha', 0.2 }};
    {% endif %}
    text-transform: {{ section.settings.button_text_transform | default: 'none' }};
    letter-spacing: {{ section.settings.button_letter_spacing | default: '0' }};
  }

  /* Button hover state */
  .nav-transparent-pill__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    {% if section.settings.button_style == 'gradient' %}
      background: linear-gradient({{ section.settings.button_gradient_angle | default: 135 }}deg, {{ section.settings.button_hover_bg_color | default: "#4025E0" }}, {{ section.settings.button_hover_gradient_end | default: section.settings.button_hover_bg_color | default: "#4025E0" | color_modify: 'darken', 5 }});
    {% elsif section.settings.button_style == 'outline' %}
      background: {{ section.settings.button_hover_bg_color | default: "#5E3BFF" }};
    {% elsif section.settings.button_style == 'ghost' %}
      background: {{ section.settings.button_hover_bg_color | default: "rgba(94, 59, 255, 0.1)" }};
    {% else %}
      background: {{ section.settings.button_hover_bg_color | default: "#4025E0" }};
    {% endif %}
    opacity: 0;
    transition: opacity var(--nav-pill-transition);
  }

  .nav-transparent-pill__button:hover {
    transform: translateY({{ section.settings.button_hover_lift | default: '-2' }}px);
    {% if section.settings.button_hover_shadow %}
      box-shadow: {{ section.settings.button_hover_shadow_x | default: '0' }}px {{ section.settings.button_hover_shadow_y | default: '4' }}px {{ section.settings.button_hover_shadow_blur | default: '20' }}px {{ section.settings.button_hover_shadow_spread | default: '0' }}px {{ section.settings.button_hover_shadow_color | default: section.settings.button_bg_color | default: '#5E3BFF' | color_modify: 'alpha', 0.3 }};
    {% endif %}
    {% if section.settings.button_style == 'outline' %}
      color: {{ section.settings.button_hover_text_color | default: "#FFFFFF" }} !important;
      border-color: {{ section.settings.button_hover_bg_color | default: "#4025E0" }};
    {% elsif section.settings.button_style == 'ghost' %}
      color: {{ section.settings.button_hover_text_color | default: section.settings.button_bg_color | default: "#5E3BFF" }} !important;
    {% else %}
      color: {{ section.settings.button_hover_text_color | default: "#FFFFFF" }} !important;
    {% endif %}
  }

  .nav-transparent-pill__button:hover::before {
    opacity: 1;
  }

  .nav-transparent-pill__button span {
    position: relative;
    z-index: 1;
  }

  /* Button icon support */
  .nav-transparent-pill__button-icon {
    margin-left: {{ section.settings.button_icon_spacing | default: '8px' }};
    font-size: {{ section.settings.button_icon_size | default: '1em' }};
    vertical-align: middle;
  }

  /* Legacy button styles for compatibility */
  .nav-transparent-pill__button--primary {
    /* Inherit from base button styles */
  }

  .nav-transparent-pill__button--outline {
    /* Inherit from base button styles */
  }

  /* Secondary CTA style (for Login) */
  .nav-transparent-pill__button--secondary {
    background: transparent;
    color: {{ section.settings.menu_text_color | default: '#333333' }};
    border: 2px solid {{ section.settings.menu_text_color | default: '#333333' }};
  }

  .nav-transparent-pill__button--secondary:hover {
    background: {{ section.settings.mobile_hover_bg | default: '#E9E6FF' }};
    color: {{ section.settings.menu_text_hover | default: '#5E3BFF' }} !important;
    border-color: {{ section.settings.menu_text_hover | default: '#5E3BFF' }};
  }

  /* Mobile Toggle */
  .nav-transparent-pill__mobile-toggle {
    display: none;
  }

  /* Responsive */
  @media (max-width: 991px) {
    .nav-transparent-pill__menu-wrapper {
      display: none;
    }

    .nav-transparent-pill__actions > *:not(.nav-transparent-pill__mobile-toggle) {
      display: none;
    }

    .nav-transparent-pill__mobile-toggle {
      display: flex;
    }
  }

  @media (max-width: 767px) {
    .nav-transparent-pill {
      padding: var(--nav-pill-padding-y-scrolled) 0;
    }

    .nav-transparent-pill__container {
      padding: 0 16px;
    }
  }

  /* Mobile Menu */
  .nav-transparent-pill__mobile-menu {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    max-width: {{ section.settings.mobile_menu_width | default: 360 }}px;
    height: 100vh;
    background: {{ section.settings.mobile_bg_color | default: '#FAFAFA' }};
    z-index: 1001;
    transition: right 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    overflow-y: auto;
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.1);
  }

  .nav-transparent-pill__mobile-menu--open {
    right: 0;
  }

  .nav-transparent-pill__mobile-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid {{ section.settings.mobile_border_color | default: '#EEEEEE' }};
    background: {{ section.settings.pill_background | default: '#FFFFFF' }};
  }

  .nav-transparent-pill__mobile-close {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: {{ section.settings.menu_text_color | default: '#333333' }};
    transition: all 0.2s ease;
    border-radius: 50%;
  }

  .nav-transparent-pill__mobile-close:hover {
    background: {{ section.settings.icon_hover_bg | default: '#F5F5F5' }};
  }

  .nav-transparent-pill__mobile-nav {
    padding: 20px 0;
  }

  .nav-transparent-pill__mobile-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-transparent-pill__mobile-nav li {
    margin-bottom: 4px;
  }

  .nav-transparent-pill__mobile-nav a {
    display: block;
    padding: 12px 20px;
    margin: 0 16px;
    color: {{ section.settings.menu_text_color | default: '#333333' }};
    text-decoration: none;
    font-weight: 500;
    font-size: 16px;
    border-radius: 12px;
    transition: all 0.2s ease;
  }

  .nav-transparent-pill__mobile-nav a:hover,
  .nav-transparent-pill__mobile-nav a.active {
    background: {{ section.settings.mobile_hover_bg | default: '#E9E6FF' }};
    color: {{ section.settings.menu_text_hover | default: '#5E3BFF' }};
    transform: translateX(4px);
  }

  .nav-transparent-pill__mobile-cta {
    margin: 20px 16px;
    display: block;
    text-align: center;
    background: linear-gradient(135deg, {{ section.settings.mobile_cta_bg | default: '#5E3BFF' }}, {{ section.settings.mobile_cta_bg | default: '#5E3BFF' | color_modify: 'darken', 10 }});
    color: {{ section.settings.mobile_cta_text_color | default: '#FFFFFF' }};
    padding: 14px 24px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 16px -4px rgba(94, 59, 255, 0.2);
  }

  .nav-transparent-pill__mobile-cta:hover {
    background: linear-gradient(135deg, {{ section.settings.mobile_cta_hover_bg | default: '#4025E0' }}, {{ section.settings.mobile_cta_hover_bg | default: '#4025E0' | color_modify: 'darken', 5 }});
    transform: translateY(-2px);
    box-shadow: 0 8px 24px -8px rgba(94, 59, 255, 0.3);
    color: #FFFFFF !important;
  }

  /* Mobile Dropdown */
  .nav-transparent-pill__mobile-dropdown {
    margin-bottom: 16px;
  }

  .nav-transparent-pill__mobile-dropdown-toggle {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: calc(100% - 32px);
    margin: 0 16px;
    padding: 12px 20px;
    background: none;
    border: none;
    text-align: left;
    font-size: 16px;
    font-weight: 600;
    color: {{ section.settings.menu_text_color | default: '#333333' }};
    cursor: pointer;
    transition: all 0.2s ease;
    border-radius: 12px;
  }

  .nav-transparent-pill__mobile-dropdown-toggle:hover {
    background: {{ section.settings.mobile_hover_bg | default: '#E9E6FF' }};
    color: {{ section.settings.menu_text_hover | default: '#5E3BFF' }};
  }

  .nav-transparent-pill__mobile-dropdown-toggle-icon {
    transition: transform 0.3s ease;
  }

  .nav-transparent-pill__mobile-dropdown.active .nav-transparent-pill__mobile-dropdown-toggle-icon {
    transform: rotate(180deg);
  }

  .nav-transparent-pill__mobile-dropdown-content {
    display: none;
    padding: 8px 0;
  }

  .nav-transparent-pill__mobile-dropdown.active .nav-transparent-pill__mobile-dropdown-content {
    display: block;
  }

  /* Mobile Cards */
  .nav-transparent-pill__mobile-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 12px;
    padding: 0 16px 16px;
  }

  .nav-transparent-pill__mobile-card {
    display: block;
    text-decoration: none;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.2s ease;
    position: relative;
    aspect-ratio: 1 / 1.3;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .nav-transparent-pill__mobile-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.12);
  }

  .nav-transparent-pill__mobile-card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .nav-transparent-pill__mobile-card-content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 12px;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white;
  }

  .nav-transparent-pill__mobile-card-title {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 4px;
    line-height: 1.2;
  }

  .nav-transparent-pill__mobile-card-description {
    font-size: 12px;
    opacity: 0.9;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Colored cards */
  .nav-transparent-pill__mobile-card--colored {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 12px;
  }

  .nav-transparent-pill__mobile-card--colored .nav-transparent-pill__mobile-card-content {
    position: static;
    background: none;
    color: inherit;
    padding: 0;
  }

  .nav-transparent-pill__mobile-card--colored .nav-transparent-pill__mobile-card-title {
    color: white;
  }

  .nav-transparent-pill__mobile-card--colored .nav-transparent-pill__mobile-card-description {
    color: rgba(255, 255, 255, 0.9);
  }

  /* Mobile Dropdown Links */
  .nav-transparent-pill__mobile-dropdown-links {
    list-style: none;
    padding: 0;
    margin: 0 16px;
  }

  .nav-transparent-pill__mobile-dropdown-links li {
    margin-bottom: 4px;
  }

  .nav-transparent-pill__mobile-dropdown-links a {
    display: block;
    padding: 10px 20px;
    text-decoration: none;
    color: {{ section.settings.menu_text_color | default: '#333333' }};
    font-size: 15px;
    border-radius: 10px;
