{%- comment -%}
  Attachment Nerd – Modern Footer with Bio
  A contemporary footer design with bio section and organized navigation
  Drop in any Kajabi page via "Add Section › Footer Bio"
{%- endcomment -%}

<section id="footer-bio-{{ section.id }}" class="footer-bio" style="background-color: {{ section.settings.background_color | default: '#FFF4F0' }};">
  <div class="container">
    <!-- Logo/Brand Name -->
    <div class="footer-bio__header text-center">
      {% if section.settings.logo_image != blank %}
        <img src="{{ section.settings.logo_image | image_picker_url: 'logo-placeholder.png' }}" 
             alt="{{ section.settings.logo_alt | default: 'Attachment Nerd' }}"
             class="footer-bio__logo"
             loading="lazy">
      {% elsif section.settings.brand_text != blank %}
        <h2 class="footer-bio__brand" style="font-family: var(--an-font-cursive, 'Georgia', serif); color: {{ section.settings.brand_color | default: '#F57C6F' }};">
          {{ section.settings.brand_text }}
        </h2>
      {% endif %}
    </div>

    <div class="footer-bio__content">
      <!-- Bio Section -->
      <div class="footer-bio__about">
        <div class="footer-bio__author">
          <div class="footer-bio__avatar-wrapper">
            {% if section.settings.avatar_image != blank %}
              <img src="{{ section.settings.avatar_image | image_picker_url: 'avatar-placeholder.png' }}" 
                   alt="{{ section.settings.author_name | default: 'Eli Harwood' }}"
                   class="footer-bio__avatar"
                   loading="lazy">
            {% else %}
              <div class="footer-bio__avatar-placeholder">
                <svg width="80" height="80" viewBox="0 0 24 24" fill="white">
                  <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
              </div>
            {% endif %}
          </div>
          
          <div class="footer-bio__bio-content">
            {% if section.settings.bio_text != blank %}
              <p class="footer-bio__bio-text">{{ section.settings.bio_text }}</p>
            {% endif %}
            
            <!-- Social Follow Buttons -->
            <div class="footer-bio__social">
              {% for block in section.blocks %}
                {% if block.type == 'social_link' %}
                  <a href="{{ block.settings.url }}" 
                     class="footer-bio__social-btn footer-bio__social-btn--{{ block.settings.platform }}"
                     target="_blank"
                     rel="noopener"
                     aria-label="Follow on {{ block.settings.platform }}">
                    {% case block.settings.platform %}
                      {% when 'instagram' %}
