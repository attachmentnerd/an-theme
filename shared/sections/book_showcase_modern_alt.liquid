<!-- Book Showcase Section Alt - Modern Z-Pattern Design -->
<section class="book-showcase-modern py-5 position-relative overflow-hidden bg-white">
  <div class="container">
    <div class="row align-items-center g-5 flex-lg-row-reverse">
      <!-- Book Visual Column -->
      <div class="col-lg-6">
        <div class="book-visual-wrapper position-relative animate-fade-in">
          <!-- Mock device frame with glow -->
          <div class="book-frame position-relative" style="border-radius: 16px; overflow: hidden; box-shadow: 0 12px 24px rgba(0,0,0,.08), 0 0 48px rgba(94,59,255,.15);">
            <img src="{{ section.settings.book_image | image_picker_url: 'sa-book-cover.png' }}" 
                 alt="Securely Attached" 
                 class="img-fluid book-cover"
                 style="width: 100%; height: auto; display: block;"
                 kjb-settings-id="{{ 'book_image' | settings_id: section: section }}">
          </div>
          
          <!-- Decorative accent -->
          <div class="accent-dot position-absolute" style="bottom: -20px; left: -20px; width: 100px; height: 100px; background: var(--c-accent-teal); opacity: 0.2; border-radius: 50%; filter: blur(40px);"></div>
        </div>
      </div>
      
      <!-- Book Content Column -->
      <div class="col-lg-6">
        <div class="book-content animate-fade-up" style="max-width: 560px;">
          <!-- Micro-label -->
          <div class="micro-label mb-3">
            <span style="color: var(--c-accent-teal); font-size: var(--fs-caption); font-weight: 500; text-transform: uppercase; letter-spacing: 0.05em;">
              ðŸ’™ FOR COUPLES
            </span>
          </div>
          
          <h2 class="mb-3" style="font-size: var(--fs-h1); font-weight: 500; color: var(--c-ink-900); line-height: 1.2;">
            Securely Attached
          </h2>
          
          <p class="mb-4" style="font-size: var(--fs-body-lg); color: var(--c-ink-700); line-height: 1.6;">
            Transform Your Attachment Patterns into Loving, Lasting Romantic Relationships
          </p>
          
          <div class="book-description mb-4" style="font-size: var(--fs-body); color: var(--c-ink-500);" kjb-settings-id="{{ 'book_description' | settings_id: section: section }}">
            {{ section.settings.book_description }}
          </div>
          
          <!-- Feature Pills -->
          <div class="feature-pills d-flex flex-wrap gap-2 mb-4">
            <span class="feature-pill" style="display: inline-block; padding: 8px 16px; background: var(--c-brand-100); color: var(--c-brand-600); border-radius: 9999px; font-size: var(--fs-caption); font-weight: 500;">
              140+ Activities
            </span>
            <span class="feature-pill" style="display: inline-block; padding: 8px 16px; background: var(--c-brand-100); color: var(--c-brand-600); border-radius: 9999px; font-size: var(--fs-caption); font-weight: 500;">
              Workbook Format
            </span>
            <span class="feature-pill" style="display: inline-block; padding: 8px 16px; background: var(--c-brand-100); color: var(--c-brand-600); border-radius: 9999px; font-size: var(--fs-caption); font-weight: 500;">
              Expert-Endorsed
            </span>
          </div>
          
          <!-- Testimonial Card -->
          {% if section.settings.show_testimonial %}
            <div class="testimonial-card mb-4" style="background: var(--c-brand-100); border-radius: 16px; padding: 24px;">
              <p class="mb-3" style="font-size: var(--fs-body); color: var(--c-ink-900); font-style: italic;" kjb-settings-id="{{ 'testimonial_quote' | settings_id: section: section }}">
                "{{ section.settings.testimonial_quote }}"
              </p>
              <div class="d-flex align-items-center">
                {% if section.settings.testimonial_author_image %}
                  <img src="{{ section.settings.testimonial_author_image | image_picker_url: 'avatar-placeholder.png' }}" 
                       alt="{{ section.settings.testimonial_author }}" 
                       class="rounded-circle me-3"
                       style="width: 48px; height: 48px; object-fit: cover;"
                       kjb-settings-id="{{ 'testimonial_author_image' | settings_id: section: section }}">
                {% endif %}
                <cite style="font-size: var(--fs-caption); color: var(--c-ink-700); font-style: normal;" kjb-settings-id="{{ 'testimonial_author' | settings_id: section: section }}">
                  â€” {{ section.settings.testimonial_author }}
                </cite>
              </div>
            </div>
          {% endif %}
          
          <!-- CTA Buttons -->
          <div class="cta-group d-flex flex-wrap gap-3">
            <a href="{{ section.settings.amazon_link }}" 
               class="btn btn-primary-modern"
               kjb-settings-id="{{ 'amazon_link' | settings_id: section: section }}">
              Buy on Amazon
            </a>
            <a href="{{ section.settings.preview_link }}" 
               class="btn btn-secondary-modern"
               kjb-settings-id="{{ 'preview_link' | settings_id: section: section }}">
              Preview Inside
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Book: Securely Attached - Modern",
  "elements": [
    {
      "type": "textarea",
      "id": "book_description",
      "label": "Book Description",
      "default": "A practical workbook featuring 140 insightful prompts, quizzes, and activities to help you understand your attachment history and transform your relationship patterns."
    },
    {
      "type": "image_picker",
      "id": "book_image",
      "label": "Book Cover Image"
    },
    {
      "type": "checkbox",
      "id": "show_testimonial",
      "label": "Show Testimonial",
      "default": true
    },
    {
      "type": "textarea",
      "id": "testimonial_quote",
      "label": "Testimonial Quote",
      "default": "A resource that every therapist, client, and person needs in their life... engaging, concise, and hopeful towards healing attachment wounds."
    },
    {
      "type": "text",
      "id": "testimonial_author",
      "label": "Testimonial Author",
      "default": "Dr. Nicole LePera, NYT Bestselling Author"
    },
    {
      "type": "image_picker",
      "id": "testimonial_author_image",
      "label": "Testimonial Author Photo"
    },
    {
      "type": "action",
      "id": "amazon_link",
      "label": "Amazon Link",
      "default": "#"
    },
    {
      "type": "action",
      "id": "preview_link",
      "label": "Preview Link",
      "default": "#"
    }
  ]
}
{% endschema %}