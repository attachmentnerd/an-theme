{%- comment -%}
  Attachment Nerd – Testimonials Section
  Modern card-based testimonials with photos, ratings, and categories
  Drop in any Kajabi page via "Add Section › Testimonials"
{%- endcomment -%}

<section id="testimonials-{{ section.id }}" class="testimonials-section {{ section.settings.background_style }}">
  <div class="container">
    <div class="testimonials__header text-center">
      {%- if section.settings.heading != blank -%}
        <h2 class="testimonials__heading">{{ section.settings.heading }}</h2>
      {%- endif -%}
      
      {%- if section.settings.subheading != blank -%}
        <p class="testimonials__subheading">{{ section.settings.subheading }}</p>
      {%- endif -%}
      
      {%- if section.settings.show_stats -%}
        <div class="testimonials__stats">
          <div class="stat-item">
            <span class="stat-number">{{ section.settings.families_helped }}</span>
            <span class="stat-label">Families Helped</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">{{ section.settings.success_rate }}</span>
            <span class="stat-label">Success Rate</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">{{ section.settings.years_experience }}</span>
            <span class="stat-label">Years Experience</span>
          </div>
        </div>
      {%- endif -%}
    </div>

    <div class="testimonials__grid testimonials__grid--{{ section.settings.columns }}">
      {%- for block in section.blocks -%}
        {%- if block.type == 'testimonial' -%}
          <div class="testimonial-card {% if block.settings.featured %}testimonial-card--featured{% endif %}"
               data-category="{{ block.settings.category }}">
            
            {%- if block.settings.rating > 0 -%}
              <div class="testimonial-card__rating" aria-label="{{ block.settings.rating }} out of 5 stars">
                {%- for i in (1..5) -%}
                  <span class="star {% if i <= block.settings.rating %}star--filled{% endif %}">★</span>
                {%- endfor -%}
              </div>
            {%- endif -%}
            
            <blockquote class="testimonial-card__quote">
              "{{ block.settings.quote }}"
            </blockquote>
            
            <div class="testimonial-card__author">
              {%- if block.settings.image != blank -%}
                <img src="{{ block.settings.image | image_picker_url: 'placeholder.png' }}" 
                     alt="{{ block.settings.name }}" 
                     class="testimonial-card__image"
                     loading="lazy">
              {%- else -%}
                <img src="https://picsum.photos/id/{{ forloop.index | plus: 330 }}/200/200" 
                     alt="{{ block.settings.name }}" 
                     class="testimonial-card__image"
                     loading="lazy">
              {%- endif -%}
              
              <div class="testimonial-card__info">
                <cite class="testimonial-card__name">{{ block.settings.name }}</cite>
                {%- if block.settings.details != blank -%}
                  <p class="testimonial-card__details">{{ block.settings.details }}</p>
                {%- endif -%}
              </div>
            </div>
            
            {%- if block.settings.category != blank -%}
              <span class="testimonial-card__category">{{ block.settings.category }}</span>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
    
    {%- if section.settings.show_cta -%}
      <div class="testimonials__cta text-center">
        <a href="{{ section.settings.cta_url }}" 
           class="btn btn-primary-modern btn-lg">
          {{ section.settings.cta_text }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  /* Testimonials Section - Using AN Design System */
  .testimonials-section {
    padding: var(--an-space-3xl) 0;
    background: var(--an-bg-light);
  }
  
  .testimonials-section.section-white {
    background: var(--an-white);
  }
  
  .testimonials-section.section-peach {
    background: var(--c-brand-100);
  }
  
  /* Header Styles */
  .testimonials__header {
    max-width: 800px;
    margin: 0 auto var(--an-space-3xl);
  }
  
  .testimonials__heading {
    font-size: var(--an-font-4xl);
    font-weight: 700;
    color: var(--an-text-dark);
    margin-bottom: var(--an-space-md);
  }
  
  .testimonials__subheading {
    font-size: var(--an-font-lg);
    color: var(--an-slate);
    margin-bottom: var(--an-space-xl);
  }
  
  /* Stats Bar */
  .testimonials__stats {
    display: flex;
    justify-content: center;
    gap: var(--an-space-3xl);
    padding: var(--an-space-xl) 0;
    border-top: 1px solid var(--an-border);
    border-bottom: 1px solid var(--an-border);
    margin-top: var(--an-space-2xl);
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-size: var(--an-font-3xl);
    font-weight: 700;
    color: var(--c-brand-600);
    margin-bottom: var(--an-space-xs);
  }
  
  .stat-label {
    font-size: var(--an-font-sm);
    color: var(--an-slate);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Testimonial Grid */
  .testimonials__grid {
    display: grid;
    gap: var(--an-space-xl);
    margin-bottom: var(--an-space-3xl);
  }
  
  .testimonials__grid--2 {
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  }
  
  .testimonials__grid--3 {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  
  @media (max-width: 767px) {
    .testimonials__grid {
      grid-template-columns: 1fr;
    }
    
    .testimonials__stats {
      flex-direction: column;
      gap: var(--an-space-lg);
    }
  }
  
  /* Testimonial Card */
  .testimonial-card {
    background: var(--an-white);
    border-radius: var(--an-radius-lg);
    padding: var(--an-space-2xl);
    box-shadow: var(--an-shadow-md);
    transition: all var(--an-transition-base);
    position: relative;
    display: flex;
    flex-direction: column;
  }
  
  .testimonial-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--an-shadow-lg);
  }
  
  .testimonial-card--featured {
    border: 2px solid var(--c-brand-600);
    transform: scale(1.02);
  }
  
  .testimonial-card--featured::before {
    content: 'FEATURED';
    position: absolute;
    top: -12px;
    right: 24px;
    background: var(--c-brand-600);
    color: white;
    font-size: var(--an-font-xs);
    font-weight: 700;
    padding: 4px 12px;
    border-radius: var(--an-radius-full);
    letter-spacing: 0.05em;
  }
  
  /* Rating Stars */
  .testimonial-card__rating {
    margin-bottom: var(--an-space-md);
  }
  
  .star {
    color: #ddd;
    font-size: 20px;
    transition: color var(--an-transition-fast);
  }
  
  .star--filled {
    color: var(--c-accent-lemon);
  }
  
  /* Quote */
  .testimonial-card__quote {
    font-size: var(--an-font-base);
    line-height: 1.6;
    color: var(--an-slate);
    margin: 0 0 var(--an-space-xl);
    flex-grow: 1;
    position: relative;
  }
  
  .testimonial-card__quote::before {
    content: '"';
    position: absolute;
    top: -10px;
    left: -10px;
    font-size: 60px;
    color: var(--c-brand-100);
    font-family: Georgia, serif;
    line-height: 1;
  }
  
  /* Author Info */
  .testimonial-card__author {
    display: flex;
    align-items: center;
    gap: var(--an-space-md);
    padding-top: var(--an-space-lg);
    border-top: 1px solid var(--an-border);
  }
  
  .testimonial-card__image {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  .testimonial-card__avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--c-brand-100);
    color: var(--c-brand-600);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: var(--an-font-xl);
  }
  
  .testimonial-card__info {
    flex-grow: 1;
  }
  
  .testimonial-card__name {
    display: block;
    font-weight: 600;
    color: var(--an-text-dark);
    font-style: normal;
  }
  
  .testimonial-card__details {
    font-size: var(--an-font-sm);
    color: var(--an-slate);
    margin: 0;
  }
  
  /* Category Badge */
  .testimonial-card__category {
    position: absolute;
    top: var(--an-space-md);
    right: var(--an-space-md);
    background: var(--c-accent-teal);
    color: var(--an-white);
    font-size: var(--an-font-xs);
    font-weight: 600;
    padding: 4px 12px;
    border-radius: var(--an-radius-full);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* CTA Section */
  .testimonials__cta {
    margin-top: var(--an-space-3xl);
  }
  
  /* Loading Animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .testimonial-card {
    animation: fadeInUp 0.6s ease-out backwards;
  }
  
  .testimonial-card:nth-child(1) { animation-delay: 0.1s; }
  .testimonial-card:nth-child(2) { animation-delay: 0.2s; }
  .testimonial-card:nth-child(3) { animation-delay: 0.3s; }
  .testimonial-card:nth-child(4) { animation-delay: 0.4s; }
  .testimonial-card:nth-child(5) { animation-delay: 0.5s; }
  .testimonial-card:nth-child(6) { animation-delay: 0.6s; }
</style>

