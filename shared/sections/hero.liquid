<section class="hero-section hero-section--{{ section.settings.layout_style }}" 
         style="{% if section.settings.background_image %}background-image: url('{{ section.settings.background_image | image_picker_url: 'hero-bg.jpg' }}');{% endif %}
                {% if section.settings.background_color %}background-color: {{ section.settings.background_color }};{% endif %}
                {% if section.settings.text_color %}color: {{ section.settings.text_color }};{% endif %}">
  
  {% if section.settings.background_overlay %}
    <div class="hero-overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
  {% endif %}
  
  <div class="container">
    <div class="hero-content hero-content--{{ section.settings.text_alignment }}">
      
      {% comment %} Optional badge/tagline {% endcomment %}
      {% if section.settings.badge_text != blank %}
        <div class="hero-badge">
          {{ section.settings.badge_text }}
        </div>
      {% endif %}
      
      {% comment %} Pre-heading {% endcomment %}
      {% if section.settings.pre_heading != blank %}
        <p class="hero-pre-heading" kjb-settings-id="{{ 'pre_heading' | settings_id: section: section }}">
          {{ section.settings.pre_heading }}
          {% if section.settings.pre_heading_link != blank %}
            <a href="{{ section.settings.pre_heading_link }}" class="hero-pre-heading-link">{{ section.settings.pre_heading_link_text }}</a>
          {% endif %}
        </p>
      {% endif %}
      
      {% comment %} Main heading {% endcomment %}
      <h1 class="hero-title hero-title--{{ section.settings.heading_size }}" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">
        {{ section.settings.heading }}
      </h1>
      
      {% comment %} Subheading {% endcomment %}
      {% if section.settings.subheading != blank %}
        <p class="hero-subtitle" kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">
          {{ section.settings.subheading }}
        </p>
      {% endif %}
      
      {% comment %} Buttons {% endcomment %}
      {% if section.blocks.size > 0 %}
        <div class="hero-buttons">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'button' %}
                <a href="{{ block.settings.button_link }}" 
                   class="btn btn--{{ block.settings.button_style }} hero-btn" 
                   kjb-settings-id="{{ 'button_text' | settings_id: section: section, block: block }}">
                  {{ block.settings.button_text }}
                </a>
              
              {% when 'form' %}
                <form action="{{ block.settings.form_action }}" method="post" class="hero-form">
                  <input type="email" 
                         name="email" 
                         placeholder="{{ block.settings.placeholder_text }}" 
                         class="hero-form-input" 
                         required>
                  <button type="submit" class="btn btn--primary hero-form-submit">
                    {{ block.settings.submit_text }}
                  </button>
                </form>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
      
      {% comment %} Optional image {% endcomment %}
      {% if section.settings.content_image %}
        <div class="hero-image">
          <img src="{{ section.settings.content_image | image_picker_url: 'hero-content.jpg' }}" 
               alt="{{ section.settings.content_image_alt }}"
               class="hero-image-img">
        </div>
      {% endif %}
    </div>
  </div>
</section>

<style>
  /* Hero Section Base Styles - New Brand Design */
  .hero-section {
    position: relative;
    padding: var(--space-2xl) 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
    background-color: var(--c-brand-100); /* Default lavender background */
  }
  
  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    z-index: 1;
  }
  
  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
  }
  
  /* Text Alignment Variations */
  .hero-content--left {
    text-align: left;
    margin-left: 0;
  }
  
  .hero-content--center {
    text-align: center;
  }
  
  .hero-content--right {
    text-align: right;
    margin-right: 0;
  }
  
  /* Badge */
  .hero-badge {
    display: inline-block;
    padding: 4px 12px;
    background-color: var(--c-accent-lemon);
    color: var(--c-ink-900);
    border-radius: var(--radius-pill);
    font-size: var(--fs-caption);
    font-weight: 500;
    margin-bottom: var(--space-md);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Pre-heading */
  .hero-pre-heading {
    font-size: 16px;
    margin-bottom: 16px;
    opacity: 0.9;
  }
  
  .hero-pre-heading-link {
    color: inherit;
    text-decoration: underline;
    margin-left: 8px;
  }
  
  /* Title Styles - Updated with new type scale */
  .hero-title {
    margin: 0 0 var(--space-md) 0;
    line-height: 1.2;
    font-weight: 500;
    color: var(--c-ink-900);
  }
  
  .hero-title--small {
    font-size: var(--fs-h2); /* 30px */
  }
  
  .hero-title--medium {
    font-size: var(--fs-h1); /* 40px */
  }
  
  .hero-title--large {
    font-size: var(--fs-display); /* 48px */
  }
  
  .hero-title--xlarge {
    font-size: 3.5rem; /* 56px */
  }
  
  /* Subtitle */
  .hero-subtitle {
    font-size: var(--fs-body-lg);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
    color: var(--c-ink-700);
    max-width: 560px;
    margin-left: auto;
    margin-right: auto;
  }
  
  /* Buttons */
  .hero-buttons {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
    margin-top: var(--space-lg);
  }
  
  .hero-content--center .hero-buttons {
    justify-content: center;
  }
  
  .hero-content--right .hero-buttons {
    justify-content: flex-end;
  }
  
  .hero-btn {
    padding: 14px 28px;
    font-size: 16px;
  }
  
  /* Form Styles */
  .hero-form {
    display: flex;
    gap: 12px;
    max-width: 480px;
  }
  
  .hero-content--center .hero-form {
    margin: 0 auto;
  }
  
  .hero-form-input {
    flex: 1;
    padding: 10px 16px;
    border: 1px solid var(--c-brand-100);
    border-radius: var(--radius-sm);
    background-color: var(--c-white);
    color: var(--c-ink-700);
    font-size: var(--fs-body);
    min-height: 44px;
  }
  
  .hero-form-input::placeholder {
    color: inherit;
    opacity: 0.7;
  }
  
  /* Hero Image */
  .hero-image {
    margin-top: var(--space-xl);
  }
  
  .hero-image-img {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-media);
  }
  
  /* Layout Styles */
  .hero-section--split {
    padding: 0;
  }
  
  .hero-section--split .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    min-height: 600px;
  }
  
  .hero-section--minimal {
    padding: 120px 0;
  }
  
  .hero-section--full-height {
    min-height: 100vh;
    display: flex;
    align-items: center;
  }
  
  /* Mobile Responsive */
  @media (max-width: 767px) {
    .hero-section {
      padding: 60px 0;
    }
    
    .hero-title--small {
      font-size: 28px;
    }
    
    .hero-title--medium {
      font-size: 32px;
    }
    
    .hero-title--large {
      font-size: 36px;
    }
    
    .hero-title--xlarge {
      font-size: 42px;
    }
    
    .hero-subtitle {
      font-size: 18px;
    }
    
    .hero-buttons {
      flex-direction: column;
    }
    
    .hero-btn {
      width: 100%;
    }
    
    .hero-form {
      flex-direction: column;
    }
    
    .hero-section--split .container {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }
</style>

