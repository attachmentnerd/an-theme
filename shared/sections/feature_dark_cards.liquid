{% comment %}
  AN Dark Featured Section
  - Dark background with gradient
  - Flexible 1-3 column layout
  - Icon or image support
  - Brand-aligned styling
  - Mobile-responsive design
{% endcomment %}

{% include 'site_url' %}
{% assign is_light_variant = false %}
{% if section.settings.style_variant == 'light' %}
  {% assign is_light_variant = true %}
{% endif %}
{% comment %}
  Compute light/dark-aware values: if the user hasn't changed the dark defaults,
  switch to light-friendly defaults when variant = light.
{% endcomment %}
{% assign bg_grad = section.settings.background_gradient | default: 'linear-gradient(135deg, #1B2937 0%, #0F1922 100%)' %}
{% if is_light_variant and bg_grad == 'linear-gradient(135deg, #1B2937 0%, #0F1922 100%)' %}
  {% assign bg_grad = 'linear-gradient(135deg, #F7FAFC 0%, #EDF2F7 100%)' %}
{% endif %}
{% assign bg_color = section.settings.background_color | default: '#1B2937' %}
{% if is_light_variant and bg_color == '#1B2937' %}
  {% assign bg_color = '#FFFFFF' %}
{% endif %}

{% assign heading_color_val = section.settings.heading_color | default: '#FFFFFF' %}
{% if is_light_variant and heading_color_val == '#FFFFFF' %}
  {% assign heading_color_val = '#0F1922' %}
{% endif %}

{% assign subheading_color_val = section.settings.subheading_color | default: 'rgba(255, 255, 255, 0.7)' %}
{% if is_light_variant and subheading_color_val == 'rgba(255, 255, 255, 0.7)' %}
  {% assign subheading_color_val = 'rgba(15, 25, 34, 0.7)' %}
{% endif %}

{% assign card_bg_val = section.settings.card_background | default: 'rgba(255, 255, 255, 0.05)' %}
{% if is_light_variant and card_bg_val == 'rgba(255, 255, 255, 0.05)' %}
  {% assign card_bg_val = '#FFFFFF' %}
{% endif %}

{% assign card_border_color_val = section.settings.card_border_color | default: 'rgba(255, 255, 255, 0.1)' %}
{% if is_light_variant and card_border_color_val == 'rgba(255, 255, 255, 0.1)' %}
  {% assign card_border_color_val = 'rgba(15, 25, 34, 0.12)' %}
{% endif %}

{% assign title_color_val = section.settings.title_color | default: '#FFFFFF' %}
{% if is_light_variant and title_color_val == '#FFFFFF' %}
  {% assign title_color_val = '#0F1922' %}
{% endif %}

{% assign description_color_val = section.settings.description_color | default: 'rgba(255, 255, 255, 0.8)' %}
{% if is_light_variant and description_color_val == 'rgba(255, 255, 255, 0.8)' %}
  {% assign description_color_val = 'rgba(15, 25, 34, 0.75)' %}
{% endif %}

{% assign link_color_val = section.settings.link_color | default: '#18D5E4' %}
{% if is_light_variant and link_color_val == '#18D5E4' %}
  {% assign link_color_val = '#0F6FFF' %}
{% endif %}

{% assign link_hover_color_val = section.settings.link_hover_color | default: '#FFFFFF' %}
{% if is_light_variant and link_hover_color_val == '#FFFFFF' %}
  {% assign link_hover_color_val = '#0B3AA4' %}
{% endif %}

{% assign cta_bg_color_val = section.settings.cta_bg_color | default: '#FFFFFF' %}
{% if is_light_variant and cta_bg_color_val == '#FFFFFF' %}
  {% assign cta_bg_color_val = '#0F6FFF' %}
{% endif %}

{% assign cta_text_color_val = section.settings.cta_text_color | default: '#0F1922' %}
{% if is_light_variant and cta_text_color_val == '#0F1922' %}
  {% assign cta_text_color_val = '#FFFFFF' %}
{% endif %}

<section id="{{ section.settings.section_id | default: 'feature-dark-cards' }}-{{ section.id }}" class="an-dark-featured {{ section.settings.section_padding }} variant-{{ section.settings.style_variant }}"
         style="background: {{ bg_grad }};
                background-color: {{ bg_color }};">
  <div class="container" style="max-width: {{ section.settings.max_width }}px;">
    <div class="an-dark-featured__wrapper">
      <!-- Section Header -->
      {% if section.settings.heading != blank or section.settings.subheading != blank %}
        <div class="an-dark-featured__header text-center mb-5">
          {% if section.settings.heading != blank %}
            <h2 class="featured-heading {% if section.settings.enable_animations %}animate-fade-up{% endif %}"
                style="font-size: {{ section.settings.heading_size }}px;
                       color: {{ heading_color_val }};">
              {{ section.settings.heading }}
            </h2>
          {% endif %}

          {% if section.settings.subheading != blank %}
            <p class="featured-subheading {% if section.settings.enable_animations %}animate-fade-up{% endif %}"
               style="{% if section.settings.enable_animations %}animation-delay: 0.1s;{% endif %}
                      font-size: {{ section.settings.subheading_size }}px;
                      color: {{ subheading_color_val }};">
              {{ section.settings.subheading }}
            </p>
          {% endif %}
        </div>
      {% endif %}

      <!-- Feature Grid (auto-fit any number of blocks) -->
      <div class="an-dark-featured__grid" style="gap: {{ section.settings.card_gap }}px; grid-template-columns: repeat(auto-fit, minmax({{ section.settings.card_min_width }}, 1fr));">
        {% for block in section.blocks %}
          <div class="featured-column {% if section.settings.enable_animations %}animate-fade-up{% endif %}"
               style="{% if section.settings.enable_animations %}animation-delay: {{ forloop.index | times: section.settings.animation_delay }}ms;{% endif %}"
               >
            {% assign block_icon_bg = block.settings.icon_bg_color | default: '#2D3E50' %}
            {% if is_light_variant and block_icon_bg == '#2D3E50' %}
              {% assign block_icon_bg = '#E6EEF5' %}
            {% endif %}
            <div class="featured-card"
                 style="background: {{ card_bg_val }};
                        border: {{ section.settings.card_border_width }}px solid {{ card_border_color_val }};
                        border-radius: {{ section.settings.card_border_radius }}px;
                        padding: {{ section.settings.card_padding }}px;
                        {% if section.settings.card_backdrop_blur %}backdrop-filter: blur(10px);{% endif %}">
              <!-- Icon/Image -->
              <div class="featured-visual">
                {% if block.settings.use_image and block.settings.image %}
                  <div class="featured-image" style="margin: -{{ section.settings.card_padding }}px -{{ section.settings.card_padding }}px {{ section.settings.card_padding }}px;">
                    <img
          src="{{ block.settings.image | image_picker_url: '400x' }}"
          srcset="{{ block.settings.image | image_picker_url: '400x' }} 400w,\n                  {{ block.settings.image | image_picker_url: '600x' }} 600w,\n                  {{ block.settings.image | image_picker_url: '800x' }} 800w,\n                  {{ block.settings.image | image_picker_url: '1200x' }} 1200w"
