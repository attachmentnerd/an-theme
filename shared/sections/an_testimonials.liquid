<style>
  /* ==========================================================================
     AN Testimonials - Unified Testimonial Section Styles
     ========================================================================== */

  .an-testimonials {
    padding: var(--space-2xl) 0;
    background: #FAFAFA;
    position: relative;
  }
  
  .an-testimonials.section-white {
    background: var(--c-white);
  }
  
  .an-testimonials.section-peach {
    background: var(--c-brand-100);
  }
  
  .an-testimonials.section-navy {
    background: var(--c-ink-900);
    color: var(--c-white);
  }

  /* Header Styles */
  .an-testimonials__header {
    max-width: 800px;
    margin: 0 auto var(--space-3xl);
  }
  
  .an-testimonials__heading {
    font-size: var(--fs-h1);
    font-weight: 500;
    color: var(--c-ink-900);
    margin-bottom: var(--space-md);
  }
  
  .an-testimonials__subheading {
    font-size: var(--fs-body-lg);
    color: var(--c-ink-700);
    margin-bottom: var(--space-xl);
    line-height: 1.6;
  }

  /* Navy theme adjustments */
  .an-testimonials.section-navy .an-testimonials__heading {
    color: var(--c-white);
  }
  
  .an-testimonials.section-navy .an-testimonials__subheading {
    color: rgba(255, 255, 255, 0.8);
  }

  /* Stats Bar */
  .an-testimonials__stats {
    display: flex;
    justify-content: center;
    gap: var(--space-3xl);
    padding: var(--space-xl) 0;
    border-top: 1px solid var(--c-ink-100);
    border-bottom: 1px solid var(--c-ink-100);
    margin-top: var(--space-2xl);
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-number {
    display: block;
    font-size: var(--fs-h1);
    font-weight: 700;
    color: var(--c-brand-600);
    margin-bottom: var(--space-xs);
  }
  
  .stat-label {
    font-size: var(--fs-sm);
    color: var(--c-ink-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Single Quote Layout */
  .an-testimonials__single-quote {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
    padding: var(--space-3xl);
    background: var(--c-white);
    border-radius: var(--radius-lg);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
    position: relative;
  }

  .quote-icon {
    margin-bottom: var(--space-lg);
  }

  .quote-text {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
