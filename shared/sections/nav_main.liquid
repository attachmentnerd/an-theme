<script>
// Unified Navigation JavaScript
(function() {
  const nav = document.getElementById('section-{{ section.id }}');
  const mobileMenu = document.getElementById('mobile-menu-{{ section.id }}');
  const backdrop = document.getElementById('mobile-menu-backdrop-{{ section.id }}');
  const hamburger = nav.querySelector('[data-mobile-menu-trigger]');
  const closeBtn = mobileMenu.querySelector('.unified-nav__mobile-close');
  const dropdowns = mobileMenu.querySelectorAll('.unified-nav__mobile-dropdown');
  const links = mobileMenu.querySelectorAll('a[href]');
  const body = document.body;
  
  let scrollPosition = 0;
  
  // Mobile menu functions
  function openMenu() {
    scrollPosition = window.pageYOffset;
    mobileMenu.classList.add('active');
    backdrop.classList.add('active');
    body.classList.add('mobile-menu-open');
    mobileMenu.setAttribute('aria-hidden', 'false');
    closeBtn.focus();
  }
  
  function closeMenu() {
    mobileMenu.classList.remove('active');
    backdrop.classList.remove('active');
    body.classList.remove('mobile-menu-open');
    mobileMenu.setAttribute('aria-hidden', 'true');
    window.scrollTo(0, scrollPosition);
  }
  
  // Event listeners
  if (hamburger) {
    hamburger.addEventListener('click', function(e) {
      e.preventDefault();
      e.stopPropagation();
      openMenu();
    });
  }
  
  closeBtn.addEventListener('click', closeMenu);
  backdrop.addEventListener('click', closeMenu);
  
  // Escape key
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape' && mobileMenu.classList.contains('active')) {
      closeMenu();
    }
  });
  
  // Dropdown toggles
  dropdowns.forEach(dropdown => {
    const toggle = dropdown.querySelector('.unified-nav__mobile-dropdown-toggle');
    const menu = dropdown.querySelector('.unified-nav__mobile-dropdown-menu');
    
    toggle.addEventListener('click', function(e) {
      e.preventDefault();
      
      const isOpen = dropdown.classList.contains('active');
      
      // Close all other dropdowns
      dropdowns.forEach(other => {
        if (other !== dropdown) {
          other.classList.remove('active');
          other.querySelector('.unified-nav__mobile-dropdown-toggle').setAttribute('aria-expanded', 'false');
        }
      });
      
      // Toggle current dropdown
      dropdown.classList.toggle('active');
      toggle.setAttribute('aria-expanded', !isOpen);
      
      // Smooth scroll to dropdown if opening
      if (!isOpen) {
        setTimeout(() => {
          const rect = dropdown.getBoundingClientRect();
          const menuRect = menu.getBoundingClientRect();
          const scrollContainer = mobileMenu;
          
          if (menuRect.bottom > window.innerHeight) {
            scrollContainer.scrollTop += menuRect.bottom - window.innerHeight + 20;
          }
        }, 100);
      }
    });
  });
  
  // Add active class to current page link
  const currentPath = window.location.pathname;
  links.forEach(link => {
    if (link.pathname === currentPath) {
      link.classList.add('active');
    }
  });
  
  // Swipe to close on mobile
  let touchStartX = 0;
  let touchEndX = 0;
  
  mobileMenu.addEventListener('touchstart', function(e) {
    touchStartX = e.changedTouches[0].screenX;
  }, { passive: true });
  
  mobileMenu.addEventListener('touchend', function(e) {
    touchEndX = e.changedTouches[0].screenX;
    if (touchEndX - touchStartX > 50) {
      closeMenu();
    }
  }, { passive: true });
})();
</script>

{% if section.settings.sticky %}
<script>
  // Sticky navigation functionality
  (function() {
    const nav = document.getElementById('section-{{ section.id }}');
    const navOffset = nav.offsetTop;
    let lastScrollTop = 0;
    
    function handleScroll() {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      
      if (scrollTop > navOffset + 100) {
        nav.classList.add('unified-nav--fixed');
        
        // Hide/show on scroll direction
        if (scrollTop > lastScrollTop && scrollTop > 200) {
          nav.classList.add('unified-nav--hidden');
        } else {
          nav.classList.remove('unified-nav--hidden');
        }
      } else {
        nav.classList.remove('unified-nav--fixed', 'unified-nav--hidden');
      }
      
      lastScrollTop = scrollTop;
    }
    
    window.addEventListener('scroll', handleScroll);
  })();
</script>

<style>
  .unified-nav--fixed {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    transform: translateY(0);
    transition: transform 0.3s ease;
