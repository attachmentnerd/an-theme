{% comment %} Feature Showcase Section - Modern gradient design with floating UI {% endcomment %}
<section class="feature-showcase" id="section-{{ section.id }}" 
         style="--gradient-start: {{ section.settings.gradient_start }}; 
                --gradient-end: {{ section.settings.gradient_end }};
                --gradient-angle: {{ section.settings.gradient_angle }}deg;">
  
  <div class="feature-showcase__background">
    {% comment %} Floating decorative elements {% endcomment %}
    <div class="feature-showcase__shapes">
      <div class="shape shape--1"></div>
      <div class="shape shape--2"></div>
      <div class="shape shape--3"></div>
      <div class="shape shape--4"></div>
    </div>
  </div>

  <div class="container">
    <div class="feature-showcase__content">
      
      {% comment %} Left content area {% endcomment %}
      <div class="feature-showcase__info">
        {% if section.settings.badge_text != blank %}
          <div class="feature-showcase__badge">
            {% if section.settings.badge_icon != blank %}
              <span class="badge-icon">{{ section.settings.badge_icon }}</span>
            {% endif %}
            {{ section.settings.badge_text }}
          </div>
        {% endif %}

        {% if section.settings.heading != blank %}
          <h2 class="feature-showcase__heading" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="feature-showcase__subheading" kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        {% if section.settings.description != blank %}
          <p class="feature-showcase__description" kjb-settings-id="{{ 'description' | settings_id: section: section }}">
            {{ section.settings.description }}
          </p>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <div class="feature-showcase__cta">
            <a href="{{ section.settings.button_link }}" 
               class="btn btn-primary-modern feature-showcase__button">
              {{ section.settings.button_text }}
            </a>
            {% if section.settings.secondary_text != blank %}
              <span class="feature-showcase__secondary">{{ section.settings.secondary_text }}</span>
            {% endif %}
          </div>
        {% endif %}

        {% comment %} Feature list {% endcomment %}
        {% if section.blocks.size > 0 %}
          <div class="feature-showcase__features">
            {% for block in section.blocks %}
              {% if block.type == 'feature_item' %}
                <div class="feature-item" {{ block.shopify_attributes }}>
                  {% if block.settings.icon != blank %}
                    <span class="feature-item__icon">{{ block.settings.icon }}</span>
                  {% endif %}
                  <span class="feature-item__text">{{ block.settings.text }}</span>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      {% comment %} Right UI showcase area {% endcomment %}
      <div class="feature-showcase__ui">
        <div class="ui-card">
          <div class="ui-card__inner">
            {% if section.settings.ui_image != blank %}
              <img src="{{ section.settings.ui_image | image_picker_url: 'placeholder.png' }}" 
                   alt="{{ section.settings.ui_image_alt }}"
                   class="ui-card__image"
                   width="600"
                   height="400"
                   loading="lazy">
            {% else %}
              {% comment %} On-brand placeholder instead of external image {% endcomment %}
              {% include 'svg_placeholders' %}
              <div class="ui-card__image" style="background: #FAFAFA;">
                {{ svg_placeholder_default }}
              </div>
            {% endif %}
              
              {% comment %} Floating UI elements {% endcomment %}
              {% for block in section.blocks %}
                {% if block.type == 'ui_element' %}
                  <div class="ui-element ui-element--{{ block.settings.position }}" 
                       style="--element-top: {{ block.settings.top }}%; 
                              --element-left: {{ block.settings.left }}%;"
                       {{ block.shopify_attributes }}>
                    {% if block.settings.element_image != blank %}
                      <img src="{{ block.settings.element_image | image_picker_url: 'placeholder.png' }}" 
                           alt="{{ block.settings.element_alt }}"
                           width="120"
                           height="120"
                           loading="lazy">
                    {% elsif block.settings.element_content != blank %}
                      <div class="ui-element__content">
                        {{ block.settings.element_content }}
                      </div>
                    {% else %}
                      {% comment %} Small feature placeholder {% endcomment %}
                      {% include 'svg_placeholders' %}
                      <div style="width: 100px; height: 100px;">
                        {{ svg_placeholder_feature }}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Feature Showcase Section Styles */
  .feature-showcase {
    position: relative;
    padding: var(--space-2xl) 0;
    background: linear-gradient(var(--gradient-angle), var(--gradient-start) 0%, var(--gradient-end) 100%);
    overflow: hidden;
    min-height: 600px;
  }

  /* Background decorative shapes */
  .feature-showcase__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
    filter: blur(60px);
  }

  .shape--1 {
    width: 300px;
    height: 300px;
    background: var(--c-white);
    top: -100px;
    left: -100px;
  }

  .shape--2 {
    width: 200px;
    height: 200px;
    background: var(--c-accent-teal);
    top: 20%;
    right: 10%;
  }

  .shape--3 {
    width: 400px;
    height: 400px;
    background: var(--c-accent-peach);
    bottom: -200px;
    right: -200px;
  }

  .shape--4 {
    width: 150px;
    height: 150px;
    background: var(--c-accent-lemon);
    top: 50%;
    left: 20%;
  }

  /* Content layout */
  .feature-showcase__content {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-2xl);
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Info section */
  .feature-showcase__info {
    color: var(--c-white);
  }

  .feature-showcase__badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    padding: 6px 16px;
    border-radius: var(--radius-pill);
    font-size: var(--fs-caption);
    font-weight: 500;
    margin-bottom: var(--space-lg);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .badge-icon {
    font-size: 16px;
  }

  .feature-showcase__heading {
    font-size: var(--fs-display);
    font-weight: 600;
    margin-bottom: var(--space-md);
    line-height: 1.1;
  }

  .feature-showcase__subheading {
    font-size: var(--fs-h2);
    font-weight: 300;
    margin-bottom: var(--space-lg);
    opacity: 0.9;
  }

  .feature-showcase__description {
    font-size: var(--fs-body-lg);
    line-height: 1.6;
    margin-bottom: var(--space-xl);
    opacity: 0.8;
    max-width: 500px;
  }

  /* CTA section */
  .feature-showcase__cta {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
    margin-bottom: var(--space-xl);
  }

  .feature-showcase__button {
    background: var(--c-white);
    color: var(--c-brand-600);
    padding: 14px 32px;
    font-size: var(--fs-body);
    font-weight: 500;
    border-radius: var(--radius-pill);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    transition: all 0.2s var(--ease-out);
  }

  .feature-showcase__button:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
    background: var(--c-white);
    color: var(--c-brand-800);
  }

  .feature-showcase__secondary {
    font-size: var(--fs-caption);
    opacity: 0.7;
  }

  /* Feature list */
  .feature-showcase__features {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--fs-body);
  }

  .feature-item__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    font-size: 14px;
  }

  /* UI showcase area */
  .feature-showcase__ui {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ui-card {
    position: relative;
    width: 100%;
    max-width: 500px;
  }

  .ui-card__inner {
    position: relative;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
  }

  .ui-card__image {
    width: 100%;
    height: auto;
    border-radius: var(--radius-md);
  }

  /* Floating UI elements */
  .ui-element {
    position: absolute;
    top: var(--element-top);
    left: var(--element-left);
    transform: translate(-50%, -50%);
    background: var(--c-white);
    border-radius: var(--radius-md);
    padding: var(--space-md);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    animation: float 6s ease-in-out infinite;
    z-index: 10;
  }

  .ui-element img {
    display: block;
    max-width: 100px;
    height: auto;
  }

  .ui-element__content {
    font-size: var(--fs-caption);
    color: var(--c-ink-700);
    white-space: nowrap;
  }

  @keyframes float {
    0%, 100% { transform: translate(-50%, -50%) translateY(0); }
    50% { transform: translate(-50%, -50%) translateY(-10px); }
  }

  /* Position variants */
  .ui-element--top-left { animation-delay: 0s; }
  .ui-element--top-right { animation-delay: 1s; }
  .ui-element--bottom-left { animation-delay: 2s; }
  .ui-element--bottom-right { animation-delay: 3s; }

  /* Responsive */
  @media (max-width: 991px) {
    .feature-showcase__content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .feature-showcase__info {
      order: 2;
    }

    .feature-showcase__ui {
      order: 1;
      margin-bottom: var(--space-xl);
    }

    .feature-showcase__description {
      margin-left: auto;
      margin-right: auto;
    }

    .feature-showcase__cta {
      justify-content: center;
    }

    .feature-showcase__features {
      align-items: center;
    }
  }

  @media (max-width: 767px) {
    .feature-showcase {
      padding: var(--space-xl) 0;
      min-height: auto;
    }

    .feature-showcase__heading {
      font-size: var(--fs-h1);
    }

    .feature-showcase__subheading {
      font-size: var(--fs-body-lg);
    }

    .ui-card {
      max-width: 300px;
    }

    .ui-element {
      display: none;
    }
  }
</style>

