{% comment %}
  Ultra Editable Speaking Page Section
  Every aspect is customizable - text, images, colors, fonts, spacing, and more
{% endcomment %}

<style>
.speaking-page-ultra {
  --hero-bg: {{ section.settings.hero_bg_color }};
  --hero-text: {{ section.settings.hero_text_color }};
  --content-bg: {{ section.settings.content_bg_color }};
  --event-gradient-start: {{ section.settings.event_gradient_start }};
  --event-gradient-end: {{ section.settings.event_gradient_end }};
  --why-bg: {{ section.settings.why_bg_color }};
  --btn-primary-bg: {{ section.settings.btn_primary_bg }};
  --btn-primary-text: {{ section.settings.btn_primary_text_color }};
  --btn-secondary-border: {{ section.settings.btn_secondary_border }};
  --btn-secondary-text: {{ section.settings.btn_secondary_text }};

  font-family: var(--font-sans);
}

.speaking-page-ultra h1,
.speaking-page-ultra h2,
.speaking-page-ultra h3 {
  font-family: var(--font-serif);
  font-weight: {{ section.settings.heading_weight }};
}

.speaking-page-ultra .container {
  max-width: {{ section.settings.container_width }}px;
  margin: 0 auto;
  padding: 0 {{ section.settings.container_padding }}px;
}

/* Hero Section */
.speaking-page-ultra .hero {
  background: var(--hero-bg);
  padding: {{ section.settings.hero_padding_top }}px 0 {{ section.settings.hero_padding_bottom }}px;
  text-align: {{ section.settings.hero_text_align }};
}

.speaking-page-ultra .hero h1 {
  font-size: {{ section.settings.hero_title_size }}px;
  color: var(--hero-text);
  margin-bottom: {{ section.settings.hero_title_margin }}px;
  max-width: {{ section.settings.hero_title_max_width }}px;
  margin-left: auto;
  margin-right: auto;
  line-height: {{ section.settings.hero_title_line_height }};
}

.speaking-page-ultra .hero-subtitle {
  font-size: {{ section.settings.hero_subtitle_size }}px;
  color: var(--hero-text);
  opacity: {{ section.settings.hero_subtitle_opacity }};
  max-width: {{ section.settings.hero_subtitle_max_width }}px;
  margin: 0 auto {{ section.settings.hero_subtitle_margin }}px;
}

.speaking-page-ultra .hero-subtitle .highlight {
  color: {{ section.settings.hero_highlight_color }};
  font-weight: {{ section.settings.hero_highlight_weight }};
}

/* Video Section */
.speaking-page-ultra .video-section {
  padding: {{ section.settings.video_padding_top }}px 0 {{ section.settings.video_padding_bottom }}px;
  background: {{ section.settings.video_bg_color }};
}

.speaking-page-ultra .video-wrapper {
  max-width: {{ section.settings.video_max_width }}px;
  margin: 0 auto;
  border-radius: {{ section.settings.video_border_radius }}px;
  overflow: hidden;
  box-shadow: 0 {{ section.settings.video_shadow_y }}px {{ section.settings.video_shadow_blur }}px rgba(0,0,0,{{ section.settings.video_shadow_opacity }});
}

.speaking-page-ultra .video-placeholder {
  position: relative;
  padding-bottom: 56.25%;
  background: {{ section.settings.video_placeholder_bg }};
  overflow: hidden;
}

.speaking-page-ultra .video-placeholder img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.speaking-page-ultra .play-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: {{ section.settings.play_button_size }}px;
  height: {{ section.settings.play_button_size }}px;
  background: {{ section.settings.play_button_bg }};
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 20px rgba(0,0,0,0.3);
}

.speaking-page-ultra .play-button:hover {
  transform: translate(-50%, -50%) scale({{ section.settings.play_button_hover_scale }});
}

.speaking-page-ultra .play-icon {
  width: 0;
  height: 0;
  border-left: {{ section.settings.play_icon_size }}px solid {{ section.settings.play_icon_color }};
  border-top: {{ section.settings.play_icon_size | divided_by: 1.67 }}px solid transparent;
  border-bottom: {{ section.settings.play_icon_size | divided_by: 1.67 }}px solid transparent;
  margin-left: {{ section.settings.play_icon_size | divided_by: 4 }}px;
}

/* Content Section */
.speaking-page-ultra .content-section {
  padding: {{ section.settings.content_padding_top }}px 0 {{ section.settings.content_padding_bottom }}px;
  background: var(--content-bg);
}

.speaking-page-ultra .content-grid {
  display: grid;
  grid-template-columns: {{ section.settings.content_image_width }}fr {{ section.settings.content_text_width }}fr;
  gap: {{ section.settings.content_gap }}px;
  align-items: {{ section.settings.content_vertical_align }};
}

.speaking-page-ultra .content-image {
  position: relative;
  border-radius: {{ section.settings.content_image_radius }}px;
  overflow: hidden;
  box-shadow: 0 {{ section.settings.content_image_shadow_y }}px {{ section.settings.content_image_shadow_blur }}px rgba(0,0,0,{{ section.settings.content_image_shadow_opacity }});
}

.speaking-page-ultra .content-image img {
  width: 100%;
  height: auto;
  display: block;
}

.speaking-page-ultra .content-text h2 {
  font-size: {{ section.settings.content_title_size }}px;
  color: {{ section.settings.content_title_color }};
  margin-bottom: {{ section.settings.content_title_margin }}px;
}

.speaking-page-ultra .content-text p {
  font-size: {{ section.settings.content_text_size }}px;
  margin-bottom: {{ section.settings.content_text_margin }}px;
  color: {{ section.settings.content_text_color }};
  line-height: {{ section.settings.content_text_line_height }};
}

.speaking-page-ultra .content-card {
  background: {{ section.settings.content_card_bg }};
  padding: {{ section.settings.content_card_padding }}px;
  border-radius: {{ section.settings.content_card_radius }}px;
  margin-top: {{ section.settings.content_card_margin }}px;
  border-left: {{ section.settings.content_card_border_width }}px solid {{ section.settings.content_card_border_color }};
}

.speaking-page-ultra .btn-primary {
  background: {% if section.settings.btn_primary_gradient %}linear-gradient(135deg, var(--btn-primary-bg) 0%, {{ section.settings.btn_primary_gradient_end }} 100%){% else %}var(--btn-primary-bg){% endif %};
  color: var(--btn-primary-text);
  padding: {{ section.settings.btn_padding_y }}px {{ section.settings.btn_padding_x }}px;
  border-radius: {{ section.settings.btn_radius }}px;
  font-size: {{ section.settings.btn_font_size }}px;
  font-weight: {{ section.settings.btn_font_weight }};
  text-decoration: none;
  display: inline-block;
  transition: all 0.3s ease;
  box-shadow: 0 {{ section.settings.btn_shadow_y }}px {{ section.settings.btn_shadow_blur }}px rgba(94, 59, 255, {{ section.settings.btn_shadow_opacity }});
  border: none;
  cursor: pointer;
}

.speaking-page-ultra .btn-primary:hover {
  transform: translateY(-{{ section.settings.btn_hover_lift }}px);
  box-shadow: 0 {{ section.settings.btn_shadow_y | plus: 4 }}px {{ section.settings.btn_shadow_blur | plus: 12 }}px rgba(94, 59, 255, {{ section.settings.btn_shadow_opacity | plus: 0.1 }});
}

/* Event Section */
.speaking-page-ultra .event-section {
  background: linear-gradient({{ section.settings.event_gradient_angle }}deg, var(--event-gradient-start) 0%, var(--event-gradient-end) 100%);
  color: {{ section.settings.event_text_color }};
  padding: {{ section.settings.event_padding_top }}px 0 {{ section.settings.event_padding_bottom }}px;
  text-align: center;
  position: relative;
  overflow: hidden;
}

{% if section.settings.event_show_pattern %}
.speaking-page-ultra .event-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg width="{{ section.settings.event_pattern_size }}" height="{{ section.settings.event_pattern_size }}" xmlns="http://www.w3.org/2000/svg"><circle cx="{{ section.settings.event_pattern_size | divided_by: 2 }}" cy="{{ section.settings.event_pattern_size | divided_by: 2 }}" r="{{ section.settings.event_pattern_size | divided_by: 2.5 }}" fill="{{ section.settings.event_pattern_color }}" fill-opacity="{{ section.settings.event_pattern_opacity }}"/></svg>');
  background-size: {{ section.settings.event_pattern_size }}px {{ section.settings.event_pattern_size }}px;
}
{% endif %}

.speaking-page-ultra .event-content {
  position: relative;
  z-index: 1;
}

.speaking-page-ultra .event-section h2 {
  font-size: {{ section.settings.event_title_size }}px;
  color: {{ section.settings.event_text_color }};
  margin-bottom: {{ section.settings.event_title_margin }}px;
  text-transform: {{ section.settings.event_title_transform }};
  letter-spacing: {{ section.settings.event_title_spacing }}px;
}

.speaking-page-ultra .event-subtitle {
  font-size: {{ section.settings.event_subtitle_size }}px;
  opacity: {{ section.settings.event_subtitle_opacity }};
}

/* Ready Section */
.speaking-page-ultra .ready-section {
  padding: {{ section.settings.ready_padding_top }}px 0 {{ section.settings.ready_padding_bottom }}px;
  background: {{ section.settings.ready_bg_color }};
}

.speaking-page-ultra .ready-header {
  text-align: {{ section.settings.ready_header_align }};
  margin-bottom: {{ section.settings.ready_header_margin }}px;
}

.speaking-page-ultra .ready-header h2 {
  font-size: {{ section.settings.ready_title_size }}px;
  color: {{ section.settings.ready_title_color }};
  margin-bottom: {{ section.settings.ready_title_margin }}px;
}

.speaking-page-ultra .ready-steps {
  display: grid;
  grid-template-columns: {{ section.settings.ready_content_width }}fr {{ section.settings.ready_image_width }}fr;
  gap: {{ section.settings.ready_gap }}px;
  align-items: {{ section.settings.ready_vertical_align }};
}

.speaking-page-ultra .ready-list {
  display: flex;
  flex-direction: column;
  gap: {{ section.settings.ready_items_gap }}px;
}

.speaking-page-ultra .ready-item {
  display: flex;
  gap: {{ section.settings.ready_item_gap }}px;
}

.speaking-page-ultra .ready-number {
  flex-shrink: 0;
  width: {{ section.settings.ready_number_size }}px;
  height: {{ section.settings.ready_number_size }}px;
  background: {{ section.settings.ready_number_bg }};
  color: {{ section.settings.ready_number_color }};
  border-radius: {% if section.settings.ready_number_circle %}50%{% else %}{{ section.settings.ready_number_radius }}px{% endif %};
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: {{ section.settings.ready_number_font_size }}px;
  font-weight: {{ section.settings.ready_number_font_weight }};
  font-family: var(--font-sans);
}

.speaking-page-ultra .ready-content h3 {
  font-size: {{ section.settings.ready_step_title_size }}px;
  color: {{ section.settings.ready_step_title_color }};
  text-transform: {{ section.settings.ready_step_title_transform }};
  letter-spacing: {{ section.settings.ready_step_title_spacing }}px;
  margin-bottom: {{ section.settings.ready_step_title_margin }}px;
}

.speaking-page-ultra .ready-content p {
  color: {{ section.settings.ready_step_text_color }};
  font-size: {{ section.settings.ready_step_text_size }}px;
  line-height: {{ section.settings.ready_step_text_line_height }};
}

.speaking-page-ultra .ready-image {
  position: relative;
  border-radius: {{ section.settings.ready_image_radius }}px;
  overflow: hidden;
  box-shadow: 0 {{ section.settings.ready_image_shadow_y }}px {{ section.settings.ready_image_shadow_blur }}px rgba(0,0,0,{{ section.settings.ready_image_shadow_opacity }});
}

.speaking-page-ultra .ready-image img {
  width: 100%;
  height: auto;
  display: block;
}

.speaking-page-ultra .ready-cta {
  margin-top: {{ section.settings.ready_cta_margin }}px;
  display: flex;
  gap: {{ section.settings.ready_cta_gap }}px;
}

.speaking-page-ultra .btn-secondary {
  background: {{ section.settings.btn_secondary_bg }};
  color: var(--btn-secondary-text);
  padding: {{ section.settings.btn_padding_y }}px {{ section.settings.btn_padding_x }}px;
  border-radius: {{ section.settings.btn_radius }}px;
  font-size: {{ section.settings.btn_font_size }}px;
  font-weight: {{ section.settings.btn_font_weight }};
  text-decoration: none;
  display: inline-block;
  transition: all 0.3s ease;
  border: {{ section.settings.btn_secondary_border_width }}px solid var(--btn-secondary-border);
}

.speaking-page-ultra .btn-secondary:hover {
  background: {{ section.settings.btn_secondary_hover_bg }};
  transform: translateY(-{{ section.settings.btn_hover_lift }}px);
}

/* Why Section */
.speaking-page-ultra .why-section {
  background: var(--why-bg);
  padding: {{ section.settings.why_padding_top }}px 0 {{ section.settings.why_padding_bottom }}px;
}

.speaking-page-ultra .why-grid {
  display: grid;
  grid-template-columns: {{ section.settings.why_image_width }}fr {{ section.settings.why_content_width }}fr;
  gap: {{ section.settings.why_gap }}px;
  align-items: {{ section.settings.why_vertical_align }};
}

{% if section.settings.why_reverse_order %}
.speaking-page-ultra .why-grid {
  direction: rtl;
}
.speaking-page-ultra .why-grid > * {
  direction: ltr;
}
{% endif %}

.speaking-page-ultra .why-image {
  position: relative;
  border-radius: {{ section.settings.why_image_radius }}px;
  overflow: hidden;
}

.speaking-page-ultra .why-image img {
  width: 100%;
  height: auto;
  display: block;
}

.speaking-page-ultra .why-content {
  background: {{ section.settings.why_content_bg }};
  padding: {{ section.settings.why_content_padding }}px;
  border-radius: {{ section.settings.why_content_radius }}px;
  box-shadow: 0 {{ section.settings.why_content_shadow_y }}px {{ section.settings.why_content_shadow_blur }}px rgba(0,0,0,{{ section.settings.why_content_shadow_opacity }});
}

.speaking-page-ultra .why-content h2 {
  font-size: {{ section.settings.why_title_size }}px;
  color: {{ section.settings.why_title_color }};
  margin-bottom: {{ section.settings.why_title_margin }}px;
}

.speaking-page-ultra .why-content h3 {
  font-size: {{ section.settings.why_subtitle_size }}px;
  color: {{ section.settings.why_subtitle_color }};
  margin-bottom: {{ section.settings.why_subtitle_margin }}px;
}

.speaking-page-ultra .why-content p {
  margin-bottom: {{ section.settings.why_text_margin }}px;
  color: {{ section.settings.why_text_color }};
  font-size: {{ section.settings.why_text_size }}px;
  line-height: {{ section.settings.why_text_line_height }};
}

.speaking-page-ultra .why-quote {
  padding: {{ section.settings.why_quote_padding }}px;
  background: {{ section.settings.why_quote_bg }};
  border-radius: {{ section.settings.why_quote_radius }}px;
  font-style: italic;
  font-size: {{ section.settings.why_quote_size }}px;
  color: {{ section.settings.why_quote_color }};
  border-left: {{ section.settings.why_quote_border_width }}px solid {{ section.settings.why_quote_border_color }};
  margin: {{ section.settings.why_quote_margin }}px 0;
}

/* Responsive */
@media (max-width: {{ section.settings.mobile_breakpoint }}px) {
  .speaking-page-ultra .content-grid,
  .speaking-page-ultra .ready-steps,
  .speaking-page-ultra .why-grid {
    grid-template-columns: 1fr;
    gap: {{ section.settings.mobile_gap }}px;
  }

  .speaking-page-ultra .ready-cta {
    flex-direction: column;
  }

  .speaking-page-ultra .btn-primary,
  .speaking-page-ultra .btn-secondary {
    width: 100%;
    text-align: center;
  }

  .speaking-page-ultra .hero h1 {
    font-size: {{ section.settings.hero_title_mobile_size }}px;
  }

  .speaking-page-ultra .ready-header h2 {
    font-size: {{ section.settings.ready_title_mobile_size }}px;
  }

  .speaking-page-ultra .why-content h2 {
    font-size: {{ section.settings.why_title_mobile_size }}px;
  }
}
</style>

<div class="speaking-page-ultra">
  <!-- Hero Section -->
  <section id="{{ section.settings.section_id | default: 'speaking-page-ultra-editable' }}-{{ section.id }}" class="hero">
    <div class="container">
      <h1>{{ section.settings.hero_title }}</h1>
      <p class="hero-subtitle">{{ section.settings.hero_subtitle_before }}<span class="highlight">{{ section.settings.hero_subtitle_highlight }}</span>{{ section.settings.hero_subtitle_after }}</p>
    </div>
  </section>

  <!-- Video Section -->
  {% if section.settings.show_video %}
  <section class="video-section">
    <div class="container">
      <div class="video-wrapper">
        <div class="video-placeholder">
          {% if section.settings.video_thumbnail %}
            <img
              src="{{ section.settings.video_thumbnail | image_picker_url: '800x' }}"
              srcset="{{ section.settings.video_thumbnail | image_picker_url: '400x' }} 400w,
                      {{ section.settings.video_thumbnail | image_picker_url: '600x' }} 600w,
                      {{ section.settings.video_thumbnail | image_picker_url: '800x' }} 800w,
                      {{ section.settings.video_thumbnail | image_picker_url: '1200x' }} 1200w"
              sizes="(max-width: 767px) 100vw, {{ section.settings.video_max_width }}px"
              alt="{{ section.settings.video_alt }}"
              class="img-fluid"
              loading="eager"
              fetchpriority="high"
            >
          {% endif %}
          {% if section.settings.video_url %}
          <a href="{{ section.settings.video_url }}" class="play-button" aria-label="{{ section.settings.play_button_aria }}">
            <div class="play-icon"></div>
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Content Section -->
  <section class="content-section">
    <div class="container">
      <div class="content-grid">
        <div class="content-image">
          {% if section.settings.content_image %}
            <img
              src="{{ section.settings.content_image | image_picker_url: '600x' }}"
              srcset="{{ section.settings.content_image | image_picker_url: '400x' }} 400w,
                      {{ section.settings.content_image | image_picker_url: '600x' }} 600w,
                      {{ section.settings.content_image | image_picker_url: '800x' }} 800w,
                      {{ section.settings.content_image | image_picker_url: '1200x' }} 1200w"
              sizes="(max-width: 767px) 100vw, 50vw"
              alt="{{ section.settings.content_image_alt }}"
              class="img-fluid"
              loading="lazy"
            >
          {% endif %}
        </div>
        <div class="content-text">
          <h2>{{ section.settings.content_title }}</h2>
          {% if section.settings.content_use_rich_text %}
            {{ section.settings.content_rich_text }}
          {% else %}
            <p>{{ section.settings.content_text_1 }}</p>
            <p>{{ section.settings.content_text_2 }}</p>
          {% endif %}
          {% if section.settings.content_highlight %}
          <div class="content-card">
            <p>{{ section.settings.content_highlight }}</p>
          </div>
          {% endif %}
          {% if section.settings.content_button_text %}
          <a href="{{ section.settings.content_button_url }}" class="btn-primary">
            {{ section.settings.content_button_text }}
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>

  <!-- Event Section -->
  {% if section.settings.show_event_banner %}
  <section class="event-section">
    <div class="container">
      <div class="event-content">
        <h2>{{ section.settings.event_title }}</h2>
        <p class="event-subtitle">{{ section.settings.event_subtitle }}</p>
      </div>
    </div>
  </section>
  {% endif %}

  <!-- Ready Section -->
  <section class="ready-section">
    <div class="container">
      <div class="ready-header">
        <h2>{{ section.settings.ready_title }}</h2>
      </div>
      <div class="ready-steps">
        <div class="ready-list">
          <!-- Step 1 -->
          <div class="ready-item">
            <div class="ready-number">{{ section.settings.step_1_number }}</div>
            <div class="ready-content">
              <h3>{{ section.settings.step_1_title }}</h3>
              <p>{{ section.settings.step_1_text }}</p>
            </div>
          </div>
          <!-- Step 2 -->
          <div class="ready-item">
            <div class="ready-number">{{ section.settings.step_2_number }}</div>
            <div class="ready-content">
              <h3>{{ section.settings.step_2_title }}</h3>
              <p>{{ section.settings.step_2_text }}</p>
            </div>
          </div>
          <!-- Step 3 -->
          <div class="ready-item">
            <div class="ready-number">{{ section.settings.step_3_number }}</div>
            <div class="ready-content">
              <h3>{{ section.settings.step_3_title }}</h3>
              <p>{{ section.settings.step_3_text }}</p>
            </div>
          </div>
          <div class="ready-cta">
            {% if section.settings.ready_button_1_text %}
            <a href="{{ section.settings.ready_button_1_url }}" class="btn-primary">
              {{ section.settings.ready_button_1_text }}
            </a>
            {% endif %}
            {% if section.settings.ready_button_2_text %}
            <a href="{{ section.settings.ready_button_2_url }}" class="btn-secondary">
              {{ section.settings.ready_button_2_text }}
            </a>
            {% endif %}
          </div>
        </div>
        <div class="ready-image">
          {% if section.settings.ready_image %}
            <img
              src="{{ section.settings.ready_image | image_picker_url: '600x' }}"
              srcset="{{ section.settings.ready_image | image_picker_url: '400x' }} 400w,
                      {{ section.settings.ready_image | image_picker_url: '600x' }} 600w,
                      {{ section.settings.ready_image | image_picker_url: '800x' }} 800w,
                      {{ section.settings.ready_image | image_picker_url: '1200x' }} 1200w"
              sizes="(max-width: 767px) 100vw, 50vw"
              alt="{{ section.settings.ready_image_alt }}"
              class="img-fluid"
              loading="lazy"
            >
          {% endif %}
        </div>
      </div>
    </div>
  </section>

  <!-- Why Section -->
  <section class="why-section">
    <div class="container">
      <div class="why-grid">
        <div class="why-image">
          {% if section.settings.why_image %}
            <img
              src="{{ section.settings.why_image | image_picker_url: '600x' }}"
              srcset="{{ section.settings.why_image | image_picker_url: '400x' }} 400w,
                      {{ section.settings.why_image | image_picker_url: '600x' }} 600w,
                      {{ section.settings.why_image | image_picker_url: '800x' }} 800w,
                      {{ section.settings.why_image | image_picker_url: '1200x' }} 1200w"
              sizes="(max-width: 767px) 100vw, 50vw"
              alt="{{ section.settings.why_image_alt }}"
              class="img-fluid"
              loading="lazy"
            >
          {% endif %}
        </div>
        <div class="why-content">
          <h2>{{ section.settings.why_title }}</h2>
          <h3>{{ section.settings.why_subtitle }}</h3>
          {% if section.settings.why_use_rich_text %}
            {{ section.settings.why_rich_text }}
          {% else %}
            <p>{{ section.settings.why_text_1 }}</p>
            <p>{{ section.settings.why_text_2 }}</p>
            <p>{{ section.settings.why_text_3 }}</p>
          {% endif %}
          {% if section.settings.why_quote %}
          <div class="why-quote">
            {{ section.settings.why_quote }}
          </div>
          {% endif %}
          {% if section.settings.why_button_text %}
          <a href="{{ section.settings.why_button_url }}" class="btn-primary">
            {{ section.settings.why_button_text }}
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
</div>

{% schema %}
