<section class="sa-hero position-relative overflow-hidden" style="background: linear-gradient(180deg, var(--c-brand-100) 0%, #FFFFFF 100%); padding: 100px 0 80px;">
  <!-- Decorative elements -->
  <div class="position-absolute" style="top: 10%; right: 5%; width: 150px; height: 150px; background: var(--c-accent-peach); border-radius: 50%; opacity: 0.15; filter: blur(60px);"></div>
  <div class="position-absolute" style="bottom: 20%; left: 3%; width: 200px; height: 200px; background: var(--c-accent-teal); border-radius: 50%; opacity: 0.1; filter: blur(80px);"></div>
  
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 mb-5 mb-lg-0">
        <div class="animate-fade-up">
          <!-- Badge -->
          <div class="d-inline-flex align-items-center mb-4" style="background: white; padding: 8px 16px; border-radius: 100px; box-shadow: 0 2px 8px rgba(0,0,0,0.08);">
            <span style="background: var(--g-brand); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-weight: 600; font-size: 14px; text-transform: uppercase; letter-spacing: 0.5px;">
              Transform Your Relationships
            </span>
          </div>
          
          <h1 class="mb-4" style="font-size: var(--fs-display); color: var(--c-ink-900); font-weight: 500; line-height: 1.1;" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">
            {{ section.settings.heading | default: 'Securely Attached' }}
          </h1>
          
          <p class="mb-4" style="font-size: var(--fs-body-lg); color: var(--c-ink-700); max-width: 480px;" kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">
            {{ section.settings.subheading | default: 'Transform Your Attachment Patterns into Loving, Lasting Romantic Relationships' }}
          </p>
          
          <p class="mb-5" style="font-size: var(--fs-body); color: var(--c-ink-600); max-width: 480px;" kjb-settings-id="{{ 'description' | settings_id: section: section }}">
            {{ section.settings.description | default: 'A practical workbook from Licensed Therapist and Attachment Expert Eli Harwood, with 140 insightful prompts to help you navigate the path to intimate, secure relationships.' }}
          </p>
          
          <!-- CTAs -->
          <div class="d-flex flex-wrap gap-3">
            {% if section.settings.primary_cta_text != blank %}
              <a href="{{ section.settings.primary_cta_url | default: '#purchase' }}" 
                 class="btn btn-primary-modern"
                 kjb-settings-id="{{ 'primary_cta_text' | settings_id: section: section }}">
                {{ section.settings.primary_cta_text | default: 'Get Your Copy' }}
              </a>
            {% endif %}
            
            {% if section.settings.secondary_cta_text != blank %}
              <a href="{{ section.settings.secondary_cta_url | default: '#free-chapter' }}" 
                 class="btn btn-secondary-modern"
                 kjb-settings-id="{{ 'secondary_cta_text' | settings_id: section: section }}">
                {{ section.settings.secondary_cta_text | default: 'Download Free Chapter' }}
              </a>
            {% endif %}
          </div>
          
          <!-- Trust badges -->
          <div class="mt-4 d-flex flex-wrap align-items-center gap-4">
            <div class="d-flex align-items-center gap-2">
              <div class="d-flex">
                {% for i in (1..5) %}
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="var(--c-accent-lemon)">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% endfor %}
              </div>
              <span style="font-size: 14px; color: var(--c-ink-600);">4.8/5 from readers</span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-6">
        <div class="position-relative animate-fade-up" style="animation-delay: 0.2s;">
          <!-- Book mockup with glow -->
          <div class="text-center">
            <div style="display: inline-block; position: relative;">
              <!-- Glow effect -->
              <div class="position-absolute" style="inset: -20px; background: var(--g-brand); opacity: 0.3; filter: blur(40px); border-radius: 16px;"></div>
              
              <!-- Book image -->
              <div kjb-settings-id="{{ 'book_image' | settings_id: section: section }}" style="max-width: 400px; width: 100%; height: auto; border-radius: 8px; box-shadow: 0 20px 40px rgba(0,0,0,0.15);">
                {% render 'responsive-image',
                  image: section.settings.book_image,
                  alt: 'Securely Attached Book Cover',
                  class: 'img-fluid position-relative',
                  sizes: '(max-width: 767px) 280px, 400px',
                  priority: true,
                  width: 400,
                  height: 600,
                  widths: '280,400,600,800',
                  aspect_ratio: '2/3'
                %}
              </div>
            </div>
          </div>
          
          <!-- Floating elements -->
          <div class="position-absolute animate-float" style="top: 10%; left: -5%; background: white; padding: 12px 20px; border-radius: 100px; box-shadow: 0 8px 24px rgba(0,0,0,0.1);">
            <span style="font-size: 14px; font-weight: 600; color: var(--c-ink-800);">140 Prompts</span>
          </div>
          
          <div class="position-absolute animate-float" style="bottom: 20%; right: -5%; background: white; padding: 12px 20px; border-radius: 100px; box-shadow: 0 8px 24px rgba(0,0,0,0.1); animation-delay: 1s;">
            <span style="font-size: 14px; font-weight: 600; color: var(--c-ink-800);">17+ Years Experience</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "SA Hero",
  "elements": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Securely Attached"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Transform Your Attachment Patterns into Loving, Lasting Romantic Relationships"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Unlock the key to deeply satisfying relationships and create the love you want with this fun and practical workbook from licensed therapist and viral TikTok star Eli Harwood, aka The Attachment Nerd."
    },
    {
      "type": "image_picker",
      "id": "book_image",
      "label": "Book Cover Image"
    },
    {
      "type": "text",
      "id": "primary_cta_text",
      "label": "Primary CTA Text",
      "default": "Get Your Copy"
    },
    {
      "type": "text",
      "id": "primary_cta_url",
      "label": "Primary CTA URL"
    },
    {
      "type": "text",
      "id": "secondary_cta_text",
      "label": "Secondary CTA Text",
      "default": "Download Free Chapter"
    },
    {
      "type": "text",
      "id": "secondary_cta_url",
      "label": "Secondary CTA URL"
    }
  ],
  "presets": [
    {
      "name": "SA Hero",
      "category": "Hero",
      "settings": {}
    }
  ]
}
{% endschema %}