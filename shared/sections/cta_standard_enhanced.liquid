<section id="{{ section.settings.section_id | default: 'cta' }}-{{ section.id }}"
         class="an-cta-section
           {% if section.settings.hide_on_mobile %}hidden--mobile{% endif %}
           {% if section.settings.hide_on_tablet %}hidden--tablet{% endif %}
           {% if section.settings.hide_on_desktop %}hidden--desktop{% endif %}
           shadow-{{ section.settings.section_shadow }}"
         style="
           --padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
           --padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
           --padding-top-tablet: {{ section.settings.padding_top_tablet }}px;
           --padding-bottom-tablet: {{ section.settings.padding_bottom_tablet }}px;
           --padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
           --padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;

           {% if section.settings.background_type == 'color' %}
             background-color: {{ section.settings.background_color }};
           {% elsif section.settings.background_type == 'gradient' %}
             background: linear-gradient({{ section.settings.gradient_angle }}deg, {{ section.settings.gradient_start }}, {{ section.settings.gradient_end }});
           {% elsif section.settings.background_type == 'image' and section.settings.background_image != blank %}
             background-image: url('{{ section.settings.background_image | image_picker_url: '1600x' }}');
             background-size: {{ section.settings.background_size }};
             background-position: {{ section.settings.background_position }};
             background-repeat: no-repeat;
             {% if section.settings.background_fixed %}background-attachment: fixed;{% endif %}
           {% endif %}

           {% if section.settings.border_width > 0 %}
             border: {{ section.settings.border_width }}px solid {{ section.settings.border_color }};
           {% endif %}
           border-radius: {{ section.settings.border_radius }}px;
         ">

  {% if section.settings.background_type == 'image' and section.settings.background_overlay_opacity > 0 %}
    <div class="bg-overlay" style="opacity: {{ section.settings.background_overlay_opacity | divided_by: 100.0 }};"></div>
  {% endif %}

  <div class="container position-relative" style="z-index: 1;">
    <div class="an-cta__wrapper
                layout-{{ section.settings.layout_style }}
                image-position-{{ section.settings.image_position }}
                align-{{ section.settings.content_alignment }}
                {% if section.settings.enable_animations %}animate-{{ section.settings.animation_type }}{% endif %}"
         style="
           {% if section.settings.enable_animations %}
             animation-duration: {{ section.settings.animation_duration }}ms;
             animation-delay: {{ section.settings.animation_delay }}ms;
           {% endif %}
           max-width: {{ section.settings.container_max_width }}px;
         ">

      {% if section.settings.show_image and section.settings.image != blank %}
        <div class="an-cta__image
                    {% if section.settings.image_position == 'top' %}order-1{% elsif section.settings.image_position == 'right' %}order-3{% else %}order-1{% endif %}">
          <div class="image-wrapper shadow-{{ section.settings.image_shadow }}"
               style="
                 {% if section.settings.image_container_width > 0 %}max-width: {{ section.settings.image_container_width }}px;{% endif %}
                 border-radius: {{ section.settings.image_radius }}px;
                 {% if section.settings.image_glow %}box-shadow: 0 0 48px {{ section.settings.gradient_start }}40;{% endif %}
               ">
            <img
              src="{{ section.settings.image | image_picker_url: section.settings.image_size }}"
              srcset="{{ section.settings.image | image_picker_url: '280x' }} 280w,
                      {{ section.settings.image | image_picker_url: '400x' }} 400w,
                      {{ section.settings.image | image_picker_url: '600x' }} 600w,
                      {{ section.settings.image | image_picker_url: '800x' }} 800w"
              sizes="(max-width: 767px) 280px, 400px"
              alt="{{ section.settings.image_alt }}"
              class="img-fluid"
              style="
                border-radius: {{ section.settings.image_radius }}px;
                object-fit: {{ section.settings.image_fit }};
              "
              loading="lazy"
            >
          </div>
        </div>
      {% endif %}

      <div class="an-cta__content order-2">
        {% if section.settings.show_eyebrow and section.settings.eyebrow_text != blank %}
          <span class="an-cta__eyebrow"
                style="
                  color: {{ section.settings.eyebrow_color }};
                  font-size: var(--fs-caption);
                  {% if section.settings.eyebrow_background %}
                    background: {{ section.settings.eyebrow_bg_color }};
                    padding: 6px 16px;
                    border-radius: 100px;
                  {% endif %}
                "
                kjb-settings-id="{{ 'eyebrow_text' | settings_id: section: section }}">
            {{ section.settings.eyebrow_text }}
          </span>
        {% endif %}

        {% if section.settings.show_heading %}
          <h2 class="an-cta__heading text-{{ section.settings.heading_alignment }}"
              style="
                font-size: var(--fs-{{ section.settings.heading_size }});
                color: {{ section.settings.heading_color }};
                font-weight: {{ section.settings.heading_weight }};
                line-height: {{ section.settings.line_height }};
                margin-bottom: {{ section.settings.heading_margin_bottom }}px;
              "
              kjb-settings-id="{{ 'heading' | settings_id: section: section }}">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.show_subheading and section.settings.subheading != blank %}
          <p class="an-cta__subheading text-{{ section.settings.subheading_alignment }}"
             style="
               font-size: var(--fs-body-{{ section.settings.subheading_size }});
               color: {{ section.settings.subheading_color }};
               line-height: {{ section.settings.line_height }};
               margin-bottom: {{ section.settings.subheading_margin_bottom }}px;
               {% if section.settings.subheading_max_width > 0 %}
                 max-width: {{ section.settings.subheading_max_width }}px;
                 {% if section.settings.subheading_alignment == 'center' %}margin-left: auto; margin-right: auto;{% endif %}
               {% endif %}
             "
             kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        <div class="an-cta__buttons justify-content-{{ section.settings.button_alignment }}"
             style="gap: {{ section.settings.button_gap }}px;">
          {% if section.blocks.size > 0 %}
            {% for block in section.blocks %}
              {% if block.type == 'button' %}
                <a href="{{ block.settings.button_link }}"
                   class="btn btn-{{ block.settings.button_style }} btn-{{ block.settings.button_size }}
                     {% if block.settings.button_full_width_mobile %}w-full--mobile{% endif %}"
                   style="
                     border-radius: {{ section.settings.button_radius }}px;
                     {% if block.settings.use_custom_colors %}
                       {% if block.settings.button_style == 'primary' %}
                         background: {{ block.settings.button_bg_color }};
                         color: {{ block.settings.button_text_color }} !important;
                         border: none;
                       {% elsif block.settings.button_style == 'secondary' %}
                         background: {{ block.settings.button_bg_color }};
                         color: {{ block.settings.button_text_color }} !important;
                         border: 2px solid {{ block.settings.button_outline_color }};
                       {% elsif block.settings.button_style == 'outline' %}
                         background: transparent;
                         color: {{ block.settings.button_text_color }} !important;
                         border: 2px solid {{ block.settings.button_outline_color }};
                       {% elsif block.settings.button_style == 'ghost' %}
                         background: transparent;
                         color: {{ block.settings.button_text_color }} !important;
                         border: none;
                         text-decoration: underline;
                       {% endif %}
                     {% endif %}
                   "
                   kjb-settings-id="{{ 'button_text' | settings_id: section: section, block: block }}">
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Responsive padding */
  .an-cta-section {
    padding-top: var(--padding-top-mobile);
    padding-bottom: var(--padding-bottom-mobile);
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .an-cta-section {
      padding-top: var(--padding-top-tablet);
      padding-bottom: var(--padding-bottom-tablet);
    }
  }

  @media (min-width: 992px) {
    .an-cta-section {
      padding-top: var(--padding-top-desktop);
      padding-bottom: var(--padding-bottom-desktop);
    }
  }

  /* Layout styles */
  .an-cta__wrapper {
    display: flex;
    align-items: center;
    gap: 48px;
    margin: 0 auto;
  }

  .an-cta__wrapper.layout-horizontal {
    flex-direction: row;
  }

  .an-cta__wrapper.layout-vertical {
    flex-direction: column;
  }

  .an-cta__wrapper.layout-stacked {
    flex-direction: column;
    gap: 24px;
  }

  /* Image positioning */
  .an-cta__wrapper.image-position-left .an-cta__image {
    order: 1;
  }

  .an-cta__wrapper.image-position-right .an-cta__image {
    order: 3;
  }

  .an-cta__wrapper.image-position-top .an-cta__image {
    order: 1;
  }

  .an-cta__wrapper.image-position-bottom .an-cta__image {
    order: 3;
  }

  /* Content alignment */
  .an-cta__content.align-left { text-align: left; }
  .an-cta__content.align-center { text-align: center; }
  .an-cta__content.align-right { text-align: right; }

  /* Image */
  .an-cta__image {
    flex: 0 0 auto;
  }

  .image-wrapper {
    display: inline-block;
  }

  .an-cta__img {
    width: 100%;
    height: auto;
  }

  /* Content */
  .an-cta__content {
    flex: 1;
  }

  .an-cta__eyebrow {
    display: inline-block;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 16px;
  }

  .an-cta__heading {
    margin-bottom: 16px;
  }

  .an-cta__subheading {
    margin-bottom: 24px;
  }

  /* Buttons */
  .an-cta__buttons {
    display: flex;
    flex-wrap: wrap;
  }

  /* Button base styles */
  .btn {
    display: inline-block;
    padding: 14px 36px;
    font-weight: 600;
    text-decoration: none;
    transition: all 200ms ease;
    cursor: pointer;
  }

  .btn-sm { padding: 10px 24px; font-size: 14px; }
  .btn-md { padding: 14px 36px; font-size: 16px; }
  .btn-lg { padding: 18px 48px; font-size: 18px; }

  /* Button styles */
  .btn-primary {
    background: var(--g-brand);
    color: var(--c-white) !important;
    border: none;
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.25) inset, 0 4px 8px rgba(94, 59, 255, 0.35);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.25) inset, 0 8px 16px rgba(94, 59, 255, 0.45);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.95) !important;
    color: var(--c-brand-600) !important;
    border: 2px solid var(--c-brand-600) !important;
  }

  .btn-secondary:hover {
    background: var(--c-brand-600) !important;
    color: var(--c-white) !important;
  }

  .btn-outline {
    background: transparent;
    color: var(--c-brand-600);
    border: 2px solid var(--c-brand-600);
  }

  .btn-outline:hover {
    background: var(--c-brand-600);
    color: var(--c-white);
  }

  .btn-ghost {
    background: transparent;
    border: none;
    text-decoration: underline;
  }

  .btn-ghost:hover {
    opacity: 0.8;
  }

  /* Responsive */
  .w-full--mobile { width: 100%; }

  @media (min-width: 768px) {
    .w-full--mobile { width: auto; }
  }

  @media (max-width: 767px) {
    .an-cta__wrapper {
      flex-direction: column !important;
      text-align: center;
      gap: 24px;
    }

    .an-cta__image {
      order: 1 !important;
    }

    .an-cta__content {
      order: 2 !important;
      text-align: center !important;
    }

    .an-cta__buttons {
      justify-content: center !important;
    }
  }

  /* Overlay */
  .bg-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: #000;
    pointer-events: none;
    z-index: 0;
  }

  /* Shadow utilities */
  .shadow-none { box-shadow: none; }
  .shadow-sm { box-shadow: 0 1px 2px 0 rgba(26, 45, 78, 0.05); }
  .shadow-md { box-shadow: 0 4px 6px -1px rgba(26, 45, 78, 0.1); }
  .shadow-lg { box-shadow: 0 10px 15px -3px rgba(26, 45, 78, 0.1); }
  .shadow-xl { box-shadow: 0 20px 25px -5px rgba(26, 45, 78, 0.1); }

  /* Animation classes */
  .animate-fade-up {
    animation: fadeUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .animate-fade-in {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }

  .animate-slide-up {
    animation: slideUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .animate-zoom-in {
    animation: zoomIn 0.6s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes zoomIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }
</style>

