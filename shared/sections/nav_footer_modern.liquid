{% comment %}
  Footer Modern - Fully editable through settings
  All content, links, and social media can be configured
{% endcomment %}

  <style>
    #an-footer-{{ section.id }} {
      position: relative;
      background: #0f172a;
      color: #e2e8f0;
      padding: 3.5rem 0 2.5rem;
      overflow: hidden;
    }

    #an-footer-{{ section.id }}::before {
      content: '';
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at top left, rgba(99, 102, 241, 0.18), transparent 55%);
      pointer-events: none;
    }

    #an-footer-{{ section.id }} .an-footer__grid {
      position: relative;
      display: grid;
      gap: 2.5rem;
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    #an-footer-{{ section.id }} .an-footer__column {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    #an-footer-{{ section.id }} .an-footer__logo {
      font-family: var(--font-heading, var(--font-sans));
      font-size: 1.6rem;
      font-weight: 600;
      letter-spacing: -0.02em;
      color: #ffffff;
    }

    #an-footer-{{ section.id }} .an-footer__description {
      margin-top: 1rem;
      max-width: 22rem;
      font-size: 0.95rem;
      line-height: 1.6;
      color: #cbd5f5;
    }

    #an-footer-{{ section.id }} .an-footer__social {
      margin-top: 1.5rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    #an-footer-{{ section.id }} .an-footer__social a {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 2.5rem;
      height: 2.5rem;
      border-radius: 50%;
      border: 1px solid rgba(148, 163, 184, 0.35);
      color: #f8fafc;
      text-decoration: none;
      font-size: 0.85rem;
      transition: background 0.2s ease, border-color 0.2s ease;
    }

    #an-footer-{{ section.id }} .an-footer__social a:hover,
    #an-footer-{{ section.id }} .an-footer__social a:focus {
      background: rgba(99, 102, 241, 0.18);
      border-color: rgba(99, 102, 241, 0.4);
      color: #ffffff;
    }

    #an-footer-{{ section.id }} .an-footer__heading {
      font-size: 1rem;
      font-weight: 600;
      letter-spacing: 0.01em;
      color: #f8fafc;
      margin-bottom: 0.25rem;
    }

    #an-footer-{{ section.id }} a.an-footer__link {
      color: #cbd5f5;
      text-decoration: none;
      font-size: 0.95rem;
      transition: color 0.2s ease;
    }

    #an-footer-{{ section.id }} a.an-footer__link:hover,
    #an-footer-{{ section.id }} a.an-footer__link:focus {
      color: #ffffff;
    }

    #an-footer-{{ section.id }} .an-footer__form {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      margin-top: 0.75rem;
    }

    #an-footer-{{ section.id }} .an-footer__form-input {
      width: 100%;
      padding: 0.75rem 1rem;
      border-radius: 0.75rem;
      border: 1px solid rgba(148, 163, 184, 0.4);
      background: rgba(148, 163, 184, 0.08);
      color: #f1f5f9;
      font-size: 0.95rem;
      transition: border-color 0.2s ease, background 0.2s ease;
    }

    #an-footer-{{ section.id }} .an-footer__form-input:focus {
      outline: none;
      border-color: rgba(99, 102, 241, 0.6);
      background: rgba(99, 102, 241, 0.12);
    }

    #an-footer-{{ section.id }} .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      border: 0;
    }

    #an-footer-{{ section.id }} .an-footer__form-button {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1.25rem;
      border-radius: 0.75rem;
      background: linear-gradient(135deg, #4338ca, #6366f1);
      color: #ffffff;
      font-weight: 600;
      font-size: 0.95rem;
      border: none;
      cursor: pointer;
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    #an-footer-{{ section.id }} .an-footer__form-button:hover,
    #an-footer-{{ section.id }} .an-footer__form-button:focus {
      transform: translateY(-1px);
      box-shadow: 0 12px 26px -12px rgba(79, 70, 229, 0.7);
    }

    #an-footer-{{ section.id }} .an-footer__disclaimer {
      font-size: 0.8rem;
      color: #94a3b8;
      line-height: 1.6;
    }

    #an-footer-{{ section.id }} .an-footer__divider {
      position: relative;
      margin: 3rem 0 2rem;
      border-top: 1px solid rgba(148, 163, 184, 0.25);
    }

    #an-footer-{{ section.id }} .an-footer__bottom {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
      font-size: 0.85rem;
      color: #94a3b8;
    }

    #an-footer-{{ section.id }} .an-footer__legal {
      display: inline-flex;
      flex-wrap: wrap;
      gap: 1.25rem;
    }

    #an-footer-{{ section.id }} .an-footer__legal a {
      color: #cbd5f5;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    #an-footer-{{ section.id }} .an-footer__legal a:hover,
    #an-footer-{{ section.id }} .an-footer__legal a:focus {
      color: #ffffff;
    }

    @media (max-width: 1024px) {
      #an-footer-{{ section.id }} .an-footer__grid {
        grid-template-columns: repeat(2, minmax(0, 1fr));
      }
    }

    @media (max-width: 640px) {
      #an-footer-{{ section.id }} {
        padding: 3rem 0 2rem;
      }

      #an-footer-{{ section.id }} .an-footer__grid {
        grid-template-columns: 1fr;
      }

      #an-footer-{{ section.id }} .an-footer__bottom {
        flex-direction: column;
        align-items: flex-start;
      }
    }
  </style>

  <footer id="an-footer-{{ section.id }}" class="an-footer">
    <div class="container">
      <div class="an-footer__grid">
        <div class="an-footer__column">
          {% if section.settings.logo_image %}
            <div class="an-footer__logo">
              {% render 'responsive-image',
                image: section.settings.logo_image,
                alt: section.settings.logo_alt | default: 'Site logo',
                sizes: '200px',
                widths: '200,400,600',
                placeholder_type: 'logo'
              %}
            </div>
          {% endif %}
          {% if section.settings.description %}
            <p class="an-footer__description">{{ section.settings.description }}</p>
          {% endif %}
          <div class="an-footer__social">
            {% for block in section.blocks %}
              {% if block.type == 'social_link' %}
                {% assign s = block.settings.platform | downcase %}
                <a href="{{ block.settings.url }}" target="_blank" rel="noopener" aria-label="{{ block.settings.platform }}" data-evt="footer_social_{{ block.settings.platform | handle }}">
                  {% if s == 'instagram' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M7 2h10a5 5 0 015 5v10a5 5 0 01-5 5H7a5 5 0 01-5-5V7a5 5 0 015-5z" stroke="currentColor" stroke-width="2"/><path d="M12 8a4 4 0 100 8 4 4 0 000-8z" stroke="currentColor" stroke-width="2"/><circle cx="17.5" cy="6.5" r="1.5" fill="currentColor"/></svg>
                  {% elsif s == 'tiktok' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M13.5 3h3.1c.3 2.1 1.7 3.7 4.4 3.9v3.1c-1.6.1-3-.4-4.4-1.2v6.7a7 7 0 11-7-7c.5 0 1 .1 1.5.2v3.2c-.5-.2-1-.3-1.5-.3a3 3 0 103 3V3z"/></svg>
                  {% elsif s == 'youtube' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M23.5 6.2a3 3 0 00-2.1-2.1C19.5 3.5 12 3.5 12 3.5s-7.5 0-9.4.6A3 3 0 00.5 6.2 31.5 31.5 0 000 12a31.5 31.5 0 00.5 5.8 3 3 0 002.1 2.1c1.9.6 9.4.6 9.4.6s7.5 0 9.4-.6a3 3 0 002.1-2.1A31.5 31.5 0 0024 12a31.5 31.5 0 00-.5-5.8zM9.8 15.5v-7L16 12l-6.2 3.5z"/></svg>
                  {% elsif s == 'facebook' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M13.5 22v-8h2.7l.4-3h-3.1V9.1c0-.9.3-1.5 1.6-1.5H17V5c-.3 0-1.3-.1-2.4-.1-2.4 0-4 1.5-4 4.2V11H7v3h3.6v8h2.9z"/></svg>
                  {% elsif s == 'linkedin' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M7 9v11H3V9h4zm.25-3a2.25 2.25 0 11-4.5 0 2.25 2.25 0 014.5 0zM21 20h-4v-6.5c0-1.5-.7-2.5-2-2.5s-2 1-2 2.5V20H9V9h4v1.5c.5-1 1.8-2 3.5-2 2.5 0 4.5 1.5 4.5 5V20z"/></svg>
                  {% elsif s == 'twitter' or s == 'x' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                  {% elsif s == 'pinterest' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg" aria-hidden="true"><path d="M12 2C6.5 2 2 6.5 2 12c0 4.3 2.7 7.9 6.4 9.3-.1-.8-.2-2.1 0-3 .2-.8 1.3-5.5 1.3-5.5s-.3-.7-.3-1.6c0-1.5.9-2.6 2-2.6.9 0 1.3.7 1.3 1.5 0 .9-.6 2.3-.9 3.5-.3 1.1.5 1.9 1.5 1.9 1.8 0 3.2-1.9 3.2-4.7 0-2.5-1.8-4.2-4.3-4.2-2.9 0-4.6 2.2-4.6 4.5 0 .9.3 1.8.7 2.3.1.1.1.2 0 .3-.1.3-.2.9-.3 1.1 0 .2-.1.2-.3.1-1.3-.6-2.1-2.5-2.1-4 0-3.3 2.4-6.3 6.8-6.3 3.6 0 6.4 2.6 6.4 6 0 3.6-2.3 6.4-5.4 6.4-1 0-2-.5-2.3-1.1l-.6 2.3c-.2.9-.9 2-1.3 2.7 1 .3 2 .5 3.1.5 5.5 0 10-4.5 10-10S17.5 2 12 2z"/></svg>
                  {% else %}
                    {{ block.settings.platform | slice: 0, 2 | upcase }}
                  {% endif %}
                </a>
              {% endif %}
            {% endfor %}
          </div>
        </div>

        <div class="an-footer__column">
          {% if section.settings.column2_heading1 %}
            <div class="an-footer__heading">{{ section.settings.column2_heading1 }}</div>
          {% endif %}
          {% if section.settings.column2_menu1 %}
            {% assign menu1 = current_site.link_lists[section.settings.column2_menu1] %}
            {% if menu1 %}
              {% for link in menu1.links %}
                <a href="{{ link.url }}" class="an-footer__link" data-evt="footer_link_{{ link.name | handle }}">{{ link.name }}</a>
              {% endfor %}
            {% endif %}
          {% else %}
            {% comment %} Fallback to legacy blocks if no menu {% endcomment %}
            {% for block in section.blocks %}
              {% if block.type == 'column2_link' and block.settings.section == '1' %}
                <a href="{{ block.settings.url }}" class="an-footer__link" data-evt="footer_link_{{ block.settings.label | handle }}">{{ block.settings.label }}</a>
              {% endif %}
            {% endfor %}
          {% endif %}

          {% if section.settings.column2_heading2 %}
            <div class="an-footer__heading" style="margin-top: 1.5rem;">{{ section.settings.column2_heading2 }}</div>
          {% endif %}
          {% if section.settings.column2_menu2 %}
            {% assign menu2 = current_site.link_lists[section.settings.column2_menu2] %}
            {% if menu2 %}
              {% for link in menu2.links %}
                <a href="{{ link.url }}" class="an-footer__link" data-evt="footer_link_{{ link.name | handle }}">{{ link.name }}</a>
              {% endfor %}
            {% endif %}
          {% else %}
            {% comment %} Fallback to legacy blocks if no menu {% endcomment %}
            {% for block in section.blocks %}
              {% if block.type == 'column2_link' and block.settings.section == '2' %}
                <a href="{{ block.settings.url }}" class="an-footer__link" data-evt="footer_link_{{ block.settings.label | handle }}">{{ block.settings.label }}</a>
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>

        <div class="an-footer__column">
          {% if section.settings.column3_heading1 %}
            <div class="an-footer__heading">{{ section.settings.column3_heading1 }}</div>
          {% endif %}
          {% if section.settings.column3_menu1 %}
            {% assign menu1 = current_site.link_lists[section.settings.column3_menu1] %}
            {% if menu1 %}
              {% for link in menu1.links %}
                <a href="{{ link.url }}" class="an-footer__link" data-evt="footer_link_{{ link.name | handle }}">{{ link.name }}</a>
              {% endfor %}
            {% endif %}
          {% else %}
            {% comment %} Fallback to legacy blocks if no menu {% endcomment %}
            {% for block in section.blocks %}
              {% if block.type == 'column3_link' and block.settings.section == '1' %}
                <a href="{{ block.settings.url }}" class="an-footer__link" data-evt="footer_link_{{ block.settings.label | handle }}">{{ block.settings.label }}</a>
              {% endif %}
            {% endfor %}
          {% endif %}

          {% if section.settings.column3_heading2 %}
            <div class="an-footer__heading" style="margin-top: 1.5rem;">{{ section.settings.column3_heading2 }}</div>
          {% endif %}
          {% if section.settings.column3_menu2 %}
            {% assign menu2 = current_site.link_lists[section.settings.column3_menu2] %}
            {% if menu2 %}
              {% for link in menu2.links %}
                <a href="{{ link.url }}" class="an-footer__link" data-evt="footer_link_{{ link.name | handle }}">{{ link.name }}</a>
              {% endfor %}
            {% endif %}
          {% else %}
            {% comment %} Fallback to legacy blocks if no menu {% endcomment %}
            {% for block in section.blocks %}
              {% if block.type == 'column3_link' and block.settings.section == '2' %}
                <a href="{{ block.settings.url }}" class="an-footer__link" data-evt="footer_link_{{ block.settings.label | handle }}">{{ block.settings.label }}</a>
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>

        <div class="an-footer__column">
          {% if section.settings.column4_heading1 %}
            <div class="an-footer__heading">{{ section.settings.column4_heading1 }}</div>
          {% endif %}
          {% if section.settings.column4_menu1 %}
            {% assign menu1 = current_site.link_lists[section.settings.column4_menu1] %}
            {% if menu1 %}
              {% for link in menu1.links %}
                <a href="{{ link.url }}" class="an-footer__link" data-evt="footer_link_{{ link.name | handle }}">{{ link.name }}</a>
              {% endfor %}
            {% endif %}
          {% else %}
            {% comment %} Fallback to legacy blocks if no menu {% endcomment %}
            {% for block in section.blocks %}
              {% if block.type == 'column4_link' and block.settings.section == '1' %}
                <a href="{{ block.settings.url }}" class="an-footer__link" data-evt="footer_link_{{ block.settings.label | handle }}">{{ block.settings.label }}</a>
              {% endif %}
            {% endfor %}
          {% endif %}

          {% if section.settings.newsletter_heading %}
            <div class="an-footer__heading" style="margin-top: 1.5rem;">{{ section.settings.newsletter_heading }}</div>
          {% endif %}
          {% assign footer_form_id = section.settings.form_id %}
          {% assign f = current_site.find_form[footer_form_id] %}
          {% if f %}
            {% form f %}
              <div class="an-footer__form">
                <label class="sr-only" for="an-footer-email-{{ section.id }}">Email address</label>
                {% for field in f.fields %}
                  {% assign input_class = 'an-footer__form-input' %}
                  {{ field | form_input: class: 'form-group', input_class: input_class, label: false, placeholder: true }}
                {% endfor %}
                <button type="submit" class="an-footer__form-button" data-evt="footer_newsletter_submit" aria-label="{{ section.settings.button_text }}">
                  <span>{{ section.settings.button_text }}</span>
                  <svg style="margin-left: 8px" width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path d="M5 12h14M13 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
              </div>
            {% endform %}
          {% else %}
            {% form 'optin', id: footer_form_id %}
              <div class="an-footer__form">
                {{ form | fields }}
                <button type="submit" class="an-footer__form-button" data-evt="footer_newsletter_submit" aria-label="{{ section.settings.button_text }}">
                  <span>{{ section.settings.button_text }}</span>
                  <svg style="margin-left: 8px" width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                    <path d="M5 12h14M13 5l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </button>
              </div>
            {% endform %}
          {% endif %}
          {% if section.settings.disclaimer_text %}
            <p class="an-footer__disclaimer">{{ section.settings.disclaimer_text }}</p>
          {% endif %}
        </div>
      </div>

      <div class="an-footer__divider"></div>

      <div class="an-footer__bottom">
        <p>Â© {{ 'now' | date: '%Y' }} {{ section.settings.copyright_text }}</p>
        <div class="an-footer__legal">
          {% if section.settings.legal_menu %}
            {% assign legal_menu = current_site.link_lists[section.settings.legal_menu] %}
            {% if legal_menu %}
              {% for link in legal_menu.links %}
                <a href="{{ link.url }}" data-evt="footer_{{ link.name | handle }}">{{ link.name }}</a>
              {% endfor %}
            {% endif %}
          {% else %}
            {% comment %} Fallback to manual links if no menu selected {% endcomment %}
            {% for block in section.blocks %}
              {% if block.type == 'legal_link' %}
                <a href="{{ block.settings.url }}" data-evt="footer_{{ block.settings.label | handle }}">{{ block.settings.label }}</a>
              {% endif %}
            {% endfor %}
          {% endif %}
        </div>
      </div>
    </div>
  </footer>

