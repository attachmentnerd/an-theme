                        </svg>
                      {% when 'tiktok' %}
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12.525.02c1.31-.02 2.61-.01 3.91-.02.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.77-.08 1.45-.54 2.89-1.42 4.05-.87 1.2-2.13 2.04-3.5 2.45-1.42.42-2.97.36-4.38-.18-1.59-.65-2.96-1.88-3.74-3.42-.6-1.18-.84-2.53-.68-3.85.18-1.52.88-2.98 1.98-4.02 1.03-.97 2.36-1.55 3.74-1.65.03 1.43-.02 2.85-.05 4.28-.61-.13-1.27-.08-1.85.24-.8.44-1.37 1.27-1.46 2.18-.07.73.14 1.49.61 2.05.57.69 1.46 1.05 2.34.94.92-.11 1.79-.66 2.25-1.46.41-.71.46-1.56.44-2.37-.01-5.2-.01-10.39 0-15.59z"/>
                        </svg>
                      {% else %}
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
                        </svg>
                    {% endcase %}
                  </span>
                </a>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Links Grid -->
      <div class="an-footer-modern__links-grid">
        {% for block in section.blocks %}
          {% if block.type == 'link_list' %}
            <div class="an-footer-modern__links-column" kjb-settings-id="{{ 'title' | settings_id: section: section, block: block }}">
              <h4 class="an-footer-modern__links-title">{{ block.settings.title }}</h4>
              {% if block.settings.menu %}
                <ul class="an-footer-modern__links-list">
                  {% for link in linklists[block.settings.menu].links %}
                    <li class="an-footer-modern__link-item">
                      <a href="{{ link.url }}" class="an-footer-modern__link">
                        <span class="an-footer-modern__link-text">{{ link.title }}</span>
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}

        <!-- Contact Info -->
        {% if section.settings.show_contact %}
          <div class="an-footer-modern__contact">
            <h4 class="an-footer-modern__links-title">{{ section.settings.contact_title | default: 'Get in Touch' }}</h4>
            <div class="an-footer-modern__contact-items">
              {% if section.settings.contact_email != blank %}
                <a href="mailto:{{ section.settings.contact_email }}" class="an-footer-modern__contact-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="4" width="20" height="16" rx="2"/>
                    <path d="m22 7-10 5L2 7"/>
                  </svg>
                  <span>{{ section.settings.contact_email }}</span>
                </a>
              {% endif %}
              {% if section.settings.contact_phone != blank %}
                <a href="tel:{{ section.settings.contact_phone | remove: ' ' | remove: '-' | remove: '(' | remove: ')' }}" class="an-footer-modern__contact-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                  </svg>
                  <span>{{ section.settings.contact_phone }}</span>
                </a>
              {% endif %}
              {% if section.settings.business_hours != blank %}
                <div class="an-footer-modern__contact-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
                  <span>{{ section.settings.business_hours }}</span>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Trust Badges -->
    {% if section.settings.show_trust_badges %}
      <div class="an-footer-modern__trust">
        <div class="an-footer-modern__trust-badges">
          {% for block in section.blocks %}
            {% if block.type == 'trust_badge' %}
              <div class="an-footer-modern__trust-badge" kjb-settings-id="{{ 'badge_image' | settings_id: section: section, block: block }}">
                {% if block.settings.badge_image != blank %}
                  {% render 'responsive-image',
  image: block.settings.badge_image,
  alt: '{{ block.settings.badge_alt }}',
  sizes: '(max-width: 767px) 100vw, (max-width: 991px) 50vw, 33vw',
  aspect_ratio: '16/9',
  widths: '400,600,800,1200,1600',
  placeholder_type: 'default',
  blur_up: true
%}
                {% else %}
                  <div class="an-footer-modern__trust-icon">{{ block.settings.badge_icon }}</div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <!-- Bottom Bar -->
    <div class="an-footer-modern__bottom">
      <div class="an-footer-modern__bottom-content">
        <p class="an-footer-modern__copyright">
          ¬© {{ 'now' | date: '%Y' }} {{ shop.name }}.
          {{ section.settings.copyright_text | default: 'All rights reserved.' }}
        </p>

        <nav class="an-footer-modern__legal-links">
          {% for link in linklists[section.settings.legal_menu].links %}
            <a href="{{ link.url }}" class="an-footer-modern__legal-link">{{ link.title }}</a>
          {% endfor %}
        </nav>
      </div>
    </div>
  </div>
</section>

<style>
  /* Brand Color System */
  .an-footer-modern {
    /* Core Palette */
    --c-brand-600: #5E3BFF;
    --c-brand-800: #4025E0;
    --c-brand-100: #E9E6FF;
    --c-accent-teal: #18D5E4;
    --c-accent-peach: #FF8BCB;
    --c-accent-lemon: #FFE86B;
    --c-ink-900: #1B1B29;
    --c-ink-700: #323346;
    --c-ink-500: #6E6F7B;
    --c-white: #FFFFFF;

    /* Signature Gradient */
    --g-brand: linear-gradient(135deg, #6757FF 0%, #7B4DFF 100%);

    /* Typography */
    --fs-display: 3rem;
    --fs-h1: 2.5rem;
    --fs-h2: 1.875rem;
    --fs-body-lg: 1.125rem;
    --fs-body: 1rem;
    --fs-caption: 0.875rem;

    /* Spacing (8pt grid) */
    --space-xs: 4px;
    --space-sm: 8px;
    --space-md: 16px;
    --space-lg: 24px;
    --space-xl: 32px;
    --space-2xl: 48px;
    --space-3xl: 64px;

    /* Radius */
    --radius-sm: 8px;
    --radius-md: 16px;
    --radius-lg: 24px;
    --radius-pill: 9999px;

    /* Shadows */
    --shadow-card: 0 4px 12px rgba(0, 0, 0, 0.05);
    --shadow-raised: 0 12px 24px rgba(0, 0, 0, 0.08);
    --shadow-glow: 0 0 12px rgba(105, 78, 255, 0.25);

    /* Transitions */
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Light Theme (Default) */
  .an-footer-modern {
    background: var(--c-white);
    color: var(--c-ink-900);
    position: relative;
    overflow: hidden;
    font-family: Inter, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  }

  /* Dark Theme */
  .an-footer-modern[data-theme="dark"] {
    background: var(--c-ink-900);
    color: var(--c-white);
  }

  .an-footer-modern[data-theme="dark"] .an-footer-modern__newsletter {
    background: rgba(255, 255, 255, 0.05);
  }

  .an-footer-modern[data-theme="dark"] .an-footer-modern__social-link {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.1);
  }

  .an-footer-modern[data-theme="dark"] .an-footer-modern__trust {
    border-color: rgba(255, 255, 255, 0.1);
  }

  .an-footer-modern[data-theme="dark"] .an-footer-modern__bottom {
    background: rgba(255, 255, 255, 0.03);
  }

  /* Background Effects */
  .an-footer-modern__background {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .an-footer-modern__gradient {
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at top left, var(--c-brand-100), transparent 40%),
                radial-gradient(ellipse at bottom right, var(--c-accent-teal), transparent 40%);
    opacity: 0.3;
  }

  .an-footer-modern__pattern {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 1px 1px, var(--c-brand-100) 1px, transparent 1px);
    background-size: 40px 40px;
    opacity: 0.5;
  }

  /* Newsletter Section */
  .an-footer-modern__newsletter {
    padding: var(--space-3xl) 0;
    text-align: center;
    background: var(--c-brand-100);
    margin: 0 calc(-50vw + 50%);
    position: relative;
  }

  .an-footer-modern__newsletter-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .an-footer-modern__newsletter-title {
    font-size: var(--fs-h2);
    font-weight: 500;
    margin: 0 0 var(--space-sm);
    color: var(--c-ink-900);
  }

  .an-footer-modern__newsletter-subtitle {
    font-size: var(--fs-body);
    color: var(--c-ink-700);
    margin: 0 0 var(--space-xl);
  }

  .an-footer-modern__newsletter-form form {
    display: flex;
    gap: var(--space-md);
    max-width: 450px;
    margin: 0 auto;
  }

  .an-footer-modern__newsletter-form input[type="email"] {
    flex: 1;
    padding: var(--space-md) var(--space-lg);
    border: 2px solid transparent;
    border-radius: var(--radius-pill);
    background: var(--c-white);
    font-size: var(--fs-body);
    transition: var(--transition);
  }

  .an-footer-modern__newsletter-form input[type="email"]:focus {
    outline: none;
    border-color: var(--c-brand-600);
    box-shadow: var(--shadow-glow);
  }

  .an-footer-modern__newsletter-button {
    padding: var(--space-md) var(--space-xl);
    background: var(--g-brand);
    color: var(--c-white);
    border: none;
    border-radius: var(--radius-pill);
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    transition: var(--transition);
    white-space: nowrap;
  }

  .an-footer-modern__newsletter-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-glow);
  }

  /* Main Footer */
  .an-footer-modern__main {
    padding: var(--space-3xl) 0;
  }

  /* Brand Section */
  .an-footer-modern__brand-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-2xl);
    padding-bottom: var(--space-2xl);
    border-bottom: 1px solid var(--c-brand-100);
    margin-bottom: var(--space-3xl);
  }

  .an-footer-modern__brand {
    max-width: 400px;
  }

  .an-footer-modern__logo {
    height: 48px;
    width: auto;
    margin-bottom: var(--space-md);
  }

  .an-footer-modern__logo-text {
    font-size: var(--fs-h1);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .an-footer-modern__logo-icon {
    font-size: var(--fs-display);
  }

  .an-footer-modern__tagline {
    font-size: var(--fs-body);
    color: var(--c-ink-500);
    line-height: 1.6;
    margin: 0;
  }

  /* Social Links */
  .an-footer-modern__social {
    display: flex;
    gap: var(--space-sm);
  }

  .an-footer-modern__social-link {
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--c-brand-100);
    border: 2px solid transparent;
    border-radius: var(--radius-sm);
    color: var(--c-brand-600);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
  }

  .an-footer-modern__social-link::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--c-brand-600);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .an-footer-modern__social-link:hover {
    color: var(--c-white);
    transform: translateY(-2px);
    box-shadow: var(--shadow-raised);
  }

  .an-footer-modern__social-link:hover::before {
    opacity: 1;
  }

  .an-footer-modern__social-icon {
    position: relative;
    z-index: 1;
  }

  /* Platform-specific hover colors */
  .an-footer-modern__social-link[data-platform="instagram"]:hover::before {
    background: linear-gradient(45deg, #F58529, #DD2A7B, #8134AF);
  }

  .an-footer-modern__social-link[data-platform="youtube"]:hover::before {
    background: #FF0000;
  }

  .an-footer-modern__social-link[data-platform="facebook"]:hover::before {
    background: #1877F2;
  }

  .an-footer-modern__social-link[data-platform="tiktok"]:hover::before {
    background: #000000;
  }

  /* Links Grid */
  .an-footer-modern__links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-2xl);
  }

  .an-footer-modern__links-title {
    font-size: var(--fs-body);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--c-brand-600);
    margin: 0 0 var(--space-lg);
  }

