{% comment %} Attachment Nerd Modern Footer - Kajabi Version {% endcomment %}
<section id="footer-modern-{{ section.id }}" class="an-footer-modern" data-theme="{{ section.settings.theme_style | default: 'light' }}">
  <!-- Animated Background -->
  <div class="an-footer-modern__background">
    <div class="an-footer-modern__gradient"></div>
    <div class="an-footer-modern__pattern"></div>
  </div>

  <div class="container">
    <!-- Newsletter Section -->
    {% if section.settings.show_newsletter %}
    <div class="an-footer-modern__newsletter">
      <div class="an-footer-modern__newsletter-content">
        <h3 class="an-footer-modern__newsletter-title" kjb-settings-id="{{ 'newsletter_title' | settings_id: section: section }}">
          {{ section.settings.newsletter_title | default: 'Stay Connected' }}
        </h3>
        <p class="an-footer-modern__newsletter-subtitle" kjb-settings-id="{{ 'newsletter_subtitle' | settings_id: section: section }}">
          {{ section.settings.newsletter_subtitle | default: 'Get attachment tips, product updates, and exclusive offers' }}
        </p>

        {% if section.settings.newsletter_form %}
          <div class="an-footer-modern__newsletter-form" kjb-settings-id="{{ 'newsletter_form' | settings_id: section: section }}">
            {% form 'form', form_id: section.settings.newsletter_form %}
              {{ form_fields }}
              <button type="submit" class="an-footer-modern__newsletter-button">
                <span>Subscribe</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </button>
            {% endform %}
          </div>
        {% endif %}
      </div>
    </div>
    {% endif %}

    <div class="an-footer-modern__main">
      <!-- Brand Section -->
      <div class="an-footer-modern__brand-section">
        <div class="an-footer-modern__brand">
          {% if section.settings.logo_image != blank %}
            <div kjb-settings-id="{{ '>
  {% render 'responsive-image',
    image: section.settings.logo_image,
    alt: '{{ shop.name }}',
    class: 'an-footer-modern__logo',
    sizes: '(max-width: 767px) 120px, 180px',
    widths: '120,180,240,360',
    placeholder_type: 'logo'
  %}
</div>
          {% else %}
            <div class="an-footer-modern__logo-text" kjb-settings-id="{{ 'logo_text' | settings_id: section: section }}">
              <span class="an-footer-modern__logo-icon">üîó</span>
              {{ section.settings.logo_text | default: 'Attachment Nerd' }}
            </div>
          {% endif %}
          <p class="an-footer-modern__tagline" kjb-settings-id="{{ 'brand_tagline' | settings_id: section: section }}">
            {{ section.settings.brand_tagline | default: 'Your trusted source for quality attachments and expert advice' }}
          </p>
        </div>

        <!-- Social Links -->
        {% if section.blocks.size > 0 %}
          <div class="an-footer-modern__social">
            {% for block in section.blocks %}
              {% if block.type == 'social_link' %}
                <a href="{{ block.settings.link }}"
                   class="an-footer-modern__social-link"
                   data-platform="{{ block.settings.platform }}"
                   target="_blank"
                   rel="noopener noreferrer"
                   aria-label="{{ block.settings.platform }}"
                   kjb-settings-id="{{ 'link' | settings_id: section: section, block: block }}">
                  <span class="an-footer-modern__social-icon">
                    {% case block.settings.platform %}
                      {% when 'instagram' %}
