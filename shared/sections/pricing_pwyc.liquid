<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.getElementById('an-pwyc-{{ section.id }}');
    if (!section) return;
    
    // Prevent double initialization on this specific section instance
    if (section.dataset.inited === '1') return;
    section.dataset.inited = '1';

    const tierCards = section.querySelectorAll('.an-pwyc-tier');
    const customAmountSection = section.querySelector('.an-pwyc-custom-amount');
    let currentIndex = 0;
    
    // Modal lock to prevent multiple opens (use window scope for cross-section coordination)
    if (typeof window.pwycModalLock === 'undefined') {
      window.pwycModalLock = false;
    }
    let pwycLastOpenTs = 0;
    
    // Throttled logging to reduce console spam
    let _pwycLastLog = 0;
    function pwycLogOncePer500ms(...args) {
      const now = Date.now();
      if (now - _pwycLastLog > 500) { console.log(...args); _pwycLastLog = now; }
    }

    // Heuristic: detect Kajabi modal presence (works across most themes)
    function isKajabiModalOpen() {
      return !!document.querySelector(
        '.modal.is-active, .kjb-modal.is-active, .checkout-modal.is-active, [data-behavior*="modal"].is-active'
      );
    }

    // Try to close any existing Kajabi modal pre-emptively (best effort)
    function tryCloseKajabiModal() {
      const closeBtn = document.querySelector(
        '.modal.is-active [data-behavior="modal-close"], .kjb-modal.is-active [data-behavior="modal-close"], .is-active .modal-close, .checkout-modal.is-active .modal-close'
      );
      if (closeBtn) closeBtn.click();
    }

    // Release the lock when modal disappears or after a safety timeout
    function armModalUnlock() {
      const SAFETY_MS = 12000; // don't leave the UI locked forever
      const unlock = () => { window.pwycModalLock = false; };

      // 1) Safety timer
      setTimeout(unlock, SAFETY_MS);

      // 2) Observe DOM for modal removal/state change
      const observer = new MutationObserver(() => {
        if (!isKajabiModalOpen()) {
          observer.disconnect();
          unlock();
        }
      });
      observer.observe(document.body, { childList: true, subtree: true });

      // 3) Also bind to common close targets immediately (if present later, #2 catches it)
      ['.modal-close', '[data-behavior="modal-close"]'].forEach(sel => {
        document.addEventListener('click', e => {
          if (e.target.matches(sel) || e.target.closest(sel)) {
            setTimeout(unlock, 0);
          }
        }, { capture: true, once: false });
      });
    }

    // Initialize
    function init() {
      // Set initial active card
      const activeCard = section.querySelector('.an-pwyc-tier--active');
      if (activeCard) {
        currentIndex = parseInt(activeCard.dataset.tierIndex);
      }

      // Add number counting animation on hover
      tierCards.forEach(card => {
        const numberElement = card.querySelector('.an-pwyc-tier__number');
        if (numberElement) {
          const finalAmount = parseInt(numberElement.dataset.amount);

          card.addEventListener('mouseenter', function() {
            animateNumber(numberElement, 0, finalAmount, 500);
            createParticles(card);
          });
        }
      });
    }

    // Animate number counting
    function animateNumber(element, start, end, duration) {
      const startTime = performance.now();
      const startValue = start;
      const endValue = end;

      function update(currentTime) {
        const elapsed = currentTime - startTime;
        const progress = Math.min(elapsed / duration, 1);

        // Easing function
        const easeOutQuart = 1 - Math.pow(1 - progress, 4);
        const current = Math.floor(startValue + (endValue - startValue) * easeOutQuart);

        element.textContent = current;

        if (progress < 1) {
          requestAnimationFrame(update);
        }
      }

      requestAnimationFrame(update);
    }

    // Create particle effects
    function createParticles(card) {
      const container = card.querySelector('.amount-particles');
      if (!container) return;

      // Clear existing particles
      container.innerHTML = '';

      // Create new particles
      for (let i = 0; i < 8; i++) {
        const particle = document.createElement('div');
        particle.className = 'amount-particle';
        particle.style.cssText = `
          position: absolute;
          width: 4px;
          height: 4px;
          background: #5E3BFF;
          border-radius: 50%;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          opacity: 0;
          animation: particleFloat ${0.8 + Math.random() * 0.4}s ease-out forwards;
          animation-delay: ${i * 0.05}s;
        `;
        container.appendChild(particle);
      }
    }

    // Set active card
    function setActiveCard(card, index) {
      // Remove active from all
      tierCards.forEach(c => c.classList.remove('an-pwyc-tier--active'));

      // Add active to selected
      card.classList.add('an-pwyc-tier--active');
      currentIndex = index;

      // Smooth scroll on mobile
      if (window.innerWidth < 768) {
        setTimeout(() => {
          card.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }, 300);
      }

      // Trigger haptic feedback if available
      if (navigator.vibrate) {
        navigator.vibrate(10);
      }
    }

    // Handle card selection
    tierCards.forEach((card, index) => {
      if (card.dataset.bound === '1') return; // prevent re-binding if Kajabi re-injects this section
      card.dataset.bound = '1';

      // Click handler (with modal lock check)
      card.addEventListener('click', function(e) {
        if (window.pwycModalLock || (typeof isKajabiModalOpen === 'function' && isKajabiModalOpen())) {
          e.preventDefault();
          return;
        }
        e.preventDefault();
        handleCardSelection(card, index);
      }, { passive: false });

      // Keyboard handler
      card.addEventListener('keydown', function(e) {
        if (window.pwycModalLock || (typeof isKajabiModalOpen === 'function' && isKajabiModalOpen())) return;
        switch(e.key) {
          case 'Enter':
          case ' ':
            e.preventDefault();
            handleCardSelection(card, index);
            break;
          case 'ArrowRight':
            e.preventDefault();
            navigateCards(1);
            break;
          case 'ArrowLeft':
            e.preventDefault();
            navigateCards(-1);
            break;
        }
      });
    });

    // Handle selection
    function handleCardSelection(card, index) {
      // If a modal is open or we're in-flight, ignore additional triggers
      if (window.pwycModalLock || isKajabiModalOpen()) return;
      
      setActiveCard(card, index);

      // Get checkout info
      const selectButton = card.querySelector('.an-pwyc-tier__select');
      const tierName = card.dataset.tierName;
      const tierAmount = card.dataset.tierAmount;
      const checkoutType = selectButton.dataset.checkoutType;
      const checkoutUrl = selectButton.dataset.checkoutUrl;
      const kajabiOffer = selectButton.dataset.kajabiOffer;
      const formId = selectButton.dataset.formId;

      // Visual feedback
      card.style.transform = 'scale(0.98)';
      setTimeout(() => {
        card.style.transform = '';

        // Track selection (defensive)
        try {
          if (window.gtag) {
            gtag('event', 'select_tier', {
              tier_name: tierName,
              tier_amount: parseFloat(tierAmount),
              currency: '{{ section.settings.currency_code | default: "USD" }}',
              checkout_type: checkoutType
            });
          }
        } catch(e) {
          console.log('Analytics not available');
        }

        // Debug logging (throttled)
        pwycLogOncePer500ms('PWYC Selection Debug:', {
          tierName,
          tierAmount,
          checkoutType,
          checkoutUrl,
          kajabiOffer,
          formId
        });

        // Handle checkout based on type
        switch (checkoutType) {
          case 'kajabi': {
            // prevent double-fires
            if (window.pwycModalLock) break;
            window.pwycModalLock = true;
            pwycLastOpenTs = Date.now();

            // Clean up any stale modal before opening a new one
            tryCloseKajabiModal();

            const openViaApi = () => {
              try {
                Kajabi.checkout.open({ offer_id: kajabiOffer });
                armModalUnlock(); // arm unlock watchers now that we asked to open
              } catch (e) {
                // If API throws, release lock and fall back to URL path
                window.pwycModalLock = false;
                console.error('Kajabi.checkout.open failed, falling back:', e);
                if (kajabiOffer) {
                  const candidates = [
                    `/checkout/offers/${kajabiOffer}`,
                    `/offers/${kajabiOffer}/checkout`
                  ];
                  window.location.assign(candidates[0]);
                } else {
                  console.error('Kajabi offer not configured');
                }
              }
            };

            if (kajabiOffer && window.Kajabi && Kajabi.checkout && typeof Kajabi.checkout.open === 'function') {
              openViaApi();
              break;
            }

            // Fallbacks if API isn't present:
            if (kajabiOffer && /^https?:\/\//i.test(kajabiOffer)) {
              window.location.assign(kajabiOffer);
              // no modal => unlock quickly
              setTimeout(() => { window.pwycModalLock = false; }, 500);
              break;
            }

            if (kajabiOffer) {
              const candidates = [
                `/checkout/offers/${kajabiOffer}`,
                `/offers/${kajabiOffer}/checkout`
              ];
              window.location.assign(candidates[0]);
              setTimeout(() => { window.pwycModalLock = false; }, 500);
              break;
            }

            console.error('Kajabi offer not configured');
            window.pwycModalLock = false;
            break;
          }

          case 'external': {
            if (!checkoutUrl) { console.error('External checkout URL not provided'); break; }

            const isUrl = /^(https?:\/\/|\/)/i.test(checkoutUrl);
            if (isUrl) {
              window.location.assign(checkoutUrl);
              break;
            }

            // Action token like "#popup_checkout_ABC..."
            const actionLink = card.querySelector('.an-pwyc-tier__link');
            if (actionLink && actionLink.getAttribute('href') && actionLink.getAttribute('href') !== '#') {
              // Optional: lock if your action opens a modal (prevents rapid re-fires)
              if (typeof tryCloseKajabiModal === 'function') tryCloseKajabiModal();
              if (typeof armModalUnlock === 'function') { window.pwycModalLock = true; armModalUnlock(); }

              actionLink.click(); // Let Kajabi runtime open the popup
            } else {
              console.error('Action link missing');
            }
            break;
          }

          case 'form': {
            // Prefer native action click if action token was chosen
            const actionLink = card.querySelector('.an-pwyc-tier__link');
            if (actionLink && actionLink.getAttribute('href') && actionLink.getAttribute('href') !== '#') {
              actionLink.click();
              break;
            }
            // Otherwise fall back to Kajabi Forms
            if (formId && window.Kajabi && Kajabi.forms) {
              const formElement = document.querySelector(`[data-form-id="${formId}"]`);
              if (formElement) formElement.click();
              else console.error('Form not found');
            } else {
              console.error('Form not configured');
            }
            break;
          }

          default:
            console.error('Unknown checkout type:', checkoutType);
        }
      }, 200);
    }

    // Keyboard navigation
    function navigateCards(direction) {
      const newIndex = Math.max(0, Math.min(tierCards.length - 1, currentIndex + direction));
      if (newIndex !== currentIndex) {
        tierCards[newIndex].focus();
        setActiveCard(tierCards[newIndex], newIndex);
      }
    }

    // Custom amount slider
    if (customAmountSection) {
      const slider = customAmountSection.querySelector('.amount-slider');
      const display = customAmountSection.querySelector('.amount-display');
      const selectBtn = customAmountSection.querySelector('.custom-select-btn');

      slider.addEventListener('input', function() {
        display.textContent = this.value;
      });

      selectBtn.addEventListener('click', function() {
        const amount = slider.value;
        // Handle custom amount checkout
        console.log('Custom amount selected:', amount);
      });
    }

    // Add CSS for particle animation
    const style = document.createElement('style');
    style.textContent = `
      @keyframes particleFloat {
        0% {
          opacity: 0;
          transform: translate(-50%, -50%) scale(0);
        }
        20% {
          opacity: 1;
          transform: translate(-50%, -50%) scale(1);
        }
        100% {
          opacity: 0;
          transform: translate(calc(-50% + ${Math.random() * 60 - 30}px), calc(-50% - 40px)) scale(0.5);
        }
      }
    `;
    document.head.appendChild(style);

    // Initialize
    init();
  });
</script>

