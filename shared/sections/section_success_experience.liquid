        </div>

      </div>
    </div>
  </div>
</section>

<style>
  /* Background */
  #shopify-section-{{ section.id }}.success-experience { background: linear-gradient(180deg, #FFFFFF 0%, #F8F6FF 50%, #E9E6FF 100%); }

  /* Headings & text helpers aligned to tokens */
  #shopify-section-{{ section.id }} .headline { font-size: var(--fs-h2); font-weight: 700; color: var(--c-ink-900); }
  #shopify-section-{{ section.id }} .subheadline { font-size: var(--fs-h4); font-weight: 700; color: var(--c-ink-900); }
  #shopify-section-{{ section.id }} .subheadline-sm { font-size: var(--fs-h5); font-weight: 700; color: var(--c-ink-900); }
  #shopify-section-{{ section.id }} .eyebrow { color: var(--c-ink-500); font-size: var(--fs-caption); }
  #shopify-section-{{ section.id }} .eyebrow-strong { color: var(--c-brand-600); font-weight: 700; font-size: var(--fs-body-lg); }
  #shopify-section-{{ section.id }} .body { color: var(--c-ink-700); }
  #shopify-section-{{ section.id }} .body-muted { color: var(--c-ink-500); }
  #shopify-section-{{ section.id }} .link-brand { color: var(--c-brand-600); text-decoration: none; font-weight: 500; }
  #shopify-section-{{ section.id }} .link-brand:hover { text-decoration: underline; }

  /* Icon & badge */
  #shopify-section-{{ section.id }} .success-icon { width: 96px; height: 96px; margin: 0 auto 16px; border-radius: 50%; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, var(--c-brand-600), var(--c-accent-teal)); box-shadow: 0 10px 30px rgba(94,59,255,0.15); }
  #shopify-section-{{ section.id }} .success-badge { background: var(--c-brand-50); color: var(--c-ink-800); }

  /* Soft card styles */
  #shopify-section-{{ section.id }} .card-soft {
    background: var(--c-white);
    border-radius: 24px;
    padding: 24px;
    box-shadow: 0 0 0 1px rgba(0,0,0,.04) inset, 0 8px 32px rgba(0,0,0,.04);
  }
  #shopify-section-{{ section.id }} .card-soft.alt {
    background: linear-gradient(135deg, var(--c-white) 0%, var(--c-brand-50) 100%);
  }

  /* Progress */
  #shopify-section-{{ section.id }} .progress-thin { height: 8px; background: var(--c-brand-100); }
  #shopify-section-{{ section.id }} .progress-thin .progress-bar { width: 0%; background: linear-gradient(90deg, var(--c-brand-600), var(--c-accent-teal)); transition: width .4s ease; }

  /* Setup chips */
  #shopify-section-{{ section.id }} .setup-chip {
    border: 1px solid var(--c-brand-200);
    background: var(--c-white);
    color: var(--c-ink-900);
    padding: 8px 14px;
    border-radius: 999px;
    font-size: var(--fs-body-sm);
    transition: all .2s ease;
  }
  #shopify-section-{{ section.id }} .setup-chip:hover { border-color: var(--c-brand-400); transform: translateY(-1px); }
  #shopify-section-{{ section.id }} .setup-chip.selected { background: var(--c-brand-600); color: #fff; border-color: var(--c-brand-600); }

  /* Emoji options */
  #shopify-section-{{ section.id }} .emoji-scale { font-size: 24px; line-height: 1; background: var(--c-white); border: 1px solid var(--c-brand-200); border-radius: 12px; padding: 8px 10px; transition: transform .15s ease, border-color .2s; }
  #shopify-section-{{ section.id }} .emoji-scale:hover { transform: scale(1.05); border-color: var(--c-brand-400); }
  #shopify-section-{{ section.id }} .emoji-scale.selected { border-color: var(--c-brand-600); box-shadow: 0 0 0 2px rgba(94,59,255,.15); }

  /* Questions */
  #shopify-section-{{ section.id }} .question-title { font-weight: 600; font-size: var(--fs-body-lg); color: var(--c-ink-900); }
  #shopify-section-{{ section.id }} .setup-question[data-disabled="true"] { opacity: .4; pointer-events: none; }

  /* Confetti */
  #shopify-section-{{ section.id }} .confetti-piece { position: absolute; top: -10px; width: 8px; height: 14px; opacity: 0.85; border-radius: 2px; animation: confetti-fall 3s ease-in forwards; }
  @keyframes confetti-fall {
    0% { transform: translateY(-20px) rotate(0deg); }
    100% { transform: translateY(110vh) rotate(720deg); }
  }

  /* Inputs */
  #shopify-section-{{ section.id }} .sms-optin { border-color: var(--c-border, #E5E7EB) !important; }
  #shopify-section-{{ section.id }} .phone-input { max-width: 280px; }
  #shopify-section-{{ section.id }} .phone-input:disabled { background: var(--c-ink-50, #f9fafb); cursor: not-allowed; }

  /* Icon tile */
  #shopify-section-{{ section.id }} .icon-tile { width: 48px; height: 48px; border-radius: 12px; display: flex; align-items: center; justify-content: center; background: var(--c-accent-lemon); color: var(--c-ink-900); }

  /* QA icon */
  #shopify-section-{{ section.id }} .qa-icon { width: 40px; height: 40px; border-radius: 50%; background: rgba(24, 213, 228, 0.2); color: var(--c-accent-teal); display: flex; align-items: center; justify-content: center; }

  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} .card-soft { padding: 18px; border-radius: 20px; }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const root = document.querySelector('#shopify-section-{{ section.id }}');
    if (!root) return;

    // Confetti
    const confettiContainer = document.getElementById('confetti-container-{{ section.id }}');
    if (confettiContainer) {
      const colors = ['#5E3BFF', '#18D5E4', '#FFB3C7', '#FFD66B', '#B8F5D0'];
      const spawn = () => {
        for (let i = 0; i < 50; i++) {
          const div = document.createElement('div');
          div.className = 'confetti-piece';
          div.style.left = Math.random() * 100 + '%';
          div.style.background = colors[Math.floor(Math.random() * colors.length)];
          div.style.animationDelay = (Math.random() * 0.8) + 's';
          confettiContainer.appendChild(div);
          setTimeout(() => div.remove(), 3200);
        }
      };
      spawn();
      setTimeout(() => { /* one-shot confetti */ }, 3000);
    }

    // Setup questions logic
    const questions = Array.from(root.querySelectorAll('.setup-question'));
    const progressEl = root.querySelector('.progress-bar');
    const smsCheckbox = root.querySelector('.sms-checkbox');
    const phoneInput = root.querySelector('.phone-input');
    const total = questions.length;
    let current = 1;
    const answers = {};

    const updateProgress = () => {
      const answered = Object.keys(answers).length;
      const pct = total ? Math.round((answered / total) * 100) : 0;
      if (progressEl) {
        progressEl.style.width = pct + '%';
        progressEl.setAttribute('aria-valuenow', String(pct));
      }
    };

    const setActive = (qNum) => {
      questions.forEach((q) => {
        const id = Number(q.getAttribute('data-question-id'));
        if (id <= qNum) { q.removeAttribute('data-disabled'); } else { q.setAttribute('data-disabled', 'true'); }
      });
    };

    questions.forEach((q) => {
      q.addEventListener('click', (e) => {
        const target = e.target;
        if (!(target instanceof HTMLElement)) return;
        if (!target.matches('.setup-chip, .emoji-scale')) return;

        const qId = Number(q.getAttribute('data-question-id'));
        const type = q.getAttribute('data-type');
        const option = target.getAttribute('data-option');
        if (!option) return;

        // Toggle selected in this question
        q.querySelectorAll('.setup-chip, .emoji-scale').forEach(btn => btn.classList.remove('selected'));
        target.classList.add('selected');
        answers[qId] = option;
        updateProgress();

        if (qId < total) {
          setTimeout(() => { current = qId + 1; setActive(current); }, 250);
        }
      });
    });

    setActive(current);
    updateProgress();

    if (smsCheckbox && phoneInput) {
      smsCheckbox.addEventListener('change', () => {
        const on = smsCheckbox.checked;
        phoneInput.disabled = !on;
        if (on) phoneInput.focus();
      });
    }
  });
</script>

