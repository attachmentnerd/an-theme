<!-- Success Experience Section -->
<section id="{{ section.settings.section_id | default: 'success-experience' }}-{{ section.id }}" class="success-experience position-relative">
  <!-- Confetti Container -->
  <div id="confetti-container-{{ section.id }}" class="confetti-container position-fixed w-100 h-100" style="inset: 0; pointer-events: none; z-index: 50;"></div>

  <div class="container py-6 py-md-7 py-lg-8">
    <div class="row justify-content-center">
      <div class="col-lg-10 col-xl-9">

        <!-- Success Header -->
        <div class="text-center section-head mb-5" data-testid="success-header">
          <div class="success-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M20 6L9 17L4 12" stroke="#fff" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>

          <h1 class="headline mb-2" kjb-settings-id="{{ 'headline' | settings_id: section: section }}" data-testid="success-headline">
            {{ section.settings.headline }}
          </h1>

          <div class="success-badge mx-auto d-inline-flex align-items-center gap-2 px-3 py-2 rounded-pill mb-2">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path d="M20 6L9 17L4 12" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <span kjb-settings-id="{{ 'purchase_tier' | settings_id: section: section }}" data-testid="purchase-tier">{{ section.settings.purchase_tier }}</span>
            <span aria-hidden="true">‚Ä¢</span>
            <span kjb-settings-id="{{ 'purchase_price' | settings_id: section: section }}" data-testid="purchase-price">{{ section.settings.purchase_price }}</span>
          </div>

          <p class="eyebrow mb-0" kjb-settings-id="{{ 'access_details' | settings_id: section: section }}" data-testid="access-details">
            {{ section.settings.access_details }}
          </p>
        </div>

        <!-- 60-Second Setup -->
        <div class="card-soft mb-4" data-testid="setup-section">
          <div class="d-flex align-items-center justify-content-between mb-3 flex-wrap gap-2">
            <div>
              <h2 class="subheadline mb-1" kjb-settings-id="{{ 'setup_headline' | settings_id: section: section }}" data-testid="setup-headline">{{ section.settings.setup_headline }}</h2>
              <p class="body-muted mb-0" kjb-settings-id="{{ 'setup_subtext' | settings_id: section: section }}">{{ section.settings.setup_subtext }}</p>
            </div>
            <a href="{{ section.settings.skip_link | default: '/' }}" class="link-brand" data-testid="skip-link">{{ section.settings.skip_text }}</a>
          </div>

          <!-- Progress Bar -->
          <div class="progress progress-thin rounded-pill mb-4">
            <div class="progress-bar rounded-pill" role="progressbar" aria-valuemin="0" aria-valuemax="100" data-testid="progress-bar"></div>
          </div>

          <!-- Questions (configured via blocks) -->
          <div class="setup-questions">
            {% assign q_index = 0 %}
            {% for block in section.blocks %}
              {% if block.type == 'question' %}
                {% assign q_index = q_index | plus: 1 %}
                {% assign type = block.settings.type %}
                {% assign raw_options = block.settings.options | default: '' %}
                {% assign options = raw_options | split: '|' %}

                <div class="setup-question mb-4" data-question-id="{{ q_index }}" data-type="{{ type }}" data-testid="question-{{ q_index }}" {% if q_index > 1 %}data-disabled="true"{% endif %}>
                  <h3 class="question-title mb-2">
                    {{ q_index }}. <span kjb-settings-id="{{ 'question_text' | settings_id: section: section, block: block }}">{{ block.settings.question_text }}</span>
                  </h3>

                  {% if type == 'emoji' %}
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                      {% for opt in options %}
                        {% assign opt_trim = opt | strip %}
                        {% if opt_trim != '' %}
                          <button type="button" class="emoji-scale" data-option="{{ opt_trim }}" data-testid="emoji-option-{{ forloop.index0 }}">{{ opt_trim }}</button>
                        {% endif %}
                      {% endfor %}
                    </div>
                  {% else %}
                    <div class="d-flex gap-2 flex-wrap">
                      {% for opt in options %}
                        {% assign opt_trim = opt | strip %}
                        {% if opt_trim != '' %}
                          <button type="button" class="setup-chip" data-option="{{ opt_trim }}" data-testid="chip-option-{{ forloop.index0 }}">{{ opt_trim }}</button>
                        {% endif %}
                      {% endfor %}
                    </div>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}

            <!-- SMS Opt-in -->
            <div class="sms-optin border-top pt-3 mt-4">
              <label class="d-flex align-items-start gap-3" style="cursor: pointer;">
                <input type="checkbox" class="form-check-input mt-1 sms-checkbox" data-testid="sms-checkbox"/>
                <div class="flex-1">
                  <span class="d-block fw-semibold" style="color: var(--c-ink-900);" kjb-settings-id="{{ 'sms_headline' | settings_id: section: section }}">{{ section.settings.sms_headline }}</span>
                  <p class="mb-2 body-muted" kjb-settings-id="{{ 'sms_subtext' | settings_id: section: section }}">{{ section.settings.sms_subtext }}</p>
                  <input type="tel" class="form-control phone-input" placeholder="{{ section.settings.sms_placeholder }}" data-testid="phone-input" disabled />
                </div>
              </label>
            </div>
          </div>
        </div>

        <!-- Quick-Win Pack -->
        <div class="card-soft alt mb-4" data-testid="quick-win-section">
          <div class="d-flex align-items-center gap-3 mb-3">
            <div class="icon-tile">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path d="M20 12c0 4.418-3.582 8-8 8s-8-3.582-8-8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="M4 12c0-4.418 3.582-8 8-8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
            </div>
            <div>
              <h2 class="subheadline mb-0" kjb-settings-id="{{ 'quickwin_headline' | settings_id: section: section }}" data-testid="quick-win-headline">{{ section.settings.quickwin_headline }}</h2>
              <p class="mb-0 body-muted" kjb-settings-id="{{ 'quickwin_subtext' | settings_id: section: section }}">{{ section.settings.quickwin_subtext }}</p>
            </div>
          </div>

          <!-- C.A.L.M. Scripts Preview -->
          <div class="rounded-3 p-3 mb-3 bg-white" data-testid="calm-preview">
            <h3 class="eyebrow-strong mb-3">{{ section.settings.calm_title }}</h3>
            <div class="row g-3">
              {% assign calm_index = 0 %}
              {% for block in section.blocks %}
                {% if block.type == 'calm_step' %}
                  <div class="col-md-6" data-testid="calm-step-preview-{{ calm_index }}">
                    <div class="p-3 border-start" style="border-left: 4px solid {{ block.settings.color | default: 'var(--c-accent-teal)' }};">
                      <h4 class="mb-1" style="color: var(--c-ink-900);">
                        <span kjb-settings-id="{{ 'letter' | settings_id: section: section, block: block }}">{{ block.settings.letter }}</span>
                        ‚Äî
                        <span kjb-settings-id="{{ 'word' | settings_id: section: section, block: block }}">{{ block.settings.word }}</span>
                      </h4>
                      <p class="mb-0 fst-italic body-muted" kjb-settings-id="{{ 'script' | settings_id: section: section, block: block }}">{{ block.settings.script }}</p>
                    </div>
                  </div>
                  {% assign calm_index = calm_index | plus: 1 %}
                {% endif %}
              {% endfor %}
            </div>
          </div>

          <div class="d-flex flex-wrap gap-2">
            <a href="{{ section.settings.download_link }}" class="btn btn-primary-modern d-inline-flex align-items-center gap-2" data-testid="download-pdf-button">
              <span class="icon" aria-hidden="true">‚¨áÔ∏è</span>
              <span kjb-settings-id="{{ 'download_text' | settings_id: section: section }}">{{ section.settings.download_text }}</span>
            </a>
            <a href="{{ section.settings.text_me_link }}" class="btn btn-secondary-modern d-inline-flex align-items-center gap-2" data-testid="text-scripts-button">
              <span class="icon" aria-hidden="true">üí¨</span>
              <span kjb-settings-id="{{ 'textme_text' | settings_id: section: section }}">{{ section.settings.textme_text }}</span>
            </a>
          </div>
        </div>

        <!-- Live Q&A -->
        <div class="card-soft mb-4" data-testid="live-qa-section">
          <div class="d-flex align-items-start gap-3">
            <div class="qa-icon">üë•</div>
            <div class="flex-1">
              <h2 class="subheadline-sm mb-1">{{ section.settings.qa_title }}</h2>
              <p class="mb-2 eyebrow">{{ section.settings.qa_subtitle }}</p>
              <p class="mb-3 body">{{ section.settings.qa_description }}</p>
              <a href="{{ section.settings.qa_calendar_link }}" class="btn btn-secondary-modern d-inline-flex align-items-center gap-2" data-testid="add-calendar-button">
                <span class="icon" aria-hidden="true">üìÖ</span>
                {{ section.settings.qa_button_text }}
              </a>
            </div>
          </div>
        </div>

        <!-- Get Started CTA -->
        <div class="text-center" data-testid="get-started-cta">
          <a href="{{ section.settings.start_link }}" class="btn btn-primary-modern btn-lg d-inline-flex align-items-center gap-2 px-5 py-3" data-testid="start-learning-button">
            <span class="icon" aria-hidden="true">‚ñ∂Ô∏è</span>
            <span kjb-settings-id="{{ 'start_text' | settings_id: section: section }}">{{ section.settings.start_text }}</span>
