<!-- Author Bio Section -->
<section class="section-{{ section.settings.background_color }} py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-4 mb-4 mb-lg-0 text-center">
        {% if section.settings.author_image != blank %}
          <img src="{{ section.settings.author_image | image_picker_url: 'placeholder.png' }}" 
               alt="{{ section.settings.author_name }}" 
               class="rounded-circle shadow-lg mb-3" 
               width="250" 
               height="250"
               kjb-settings-id="{{ 'author_image' | settings_id: section: section }}">
        {% else %}
          <img src="https://picsum.photos/id/64/300/300" 
               alt="{{ section.settings.author_name }}" 
               class="rounded-circle shadow-lg mb-3" 
               width="250" 
               height="250">
        {% endif %}
        
        <!-- Social Links -->
        <div class="d-flex justify-content-center gap-3">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'social_link' %}
                <a href="{{ block.settings.link }}" 
                   class="text-{{ section.settings.icon_color }} hover-text-{{ section.settings.icon_hover_color }}"
                   kjb-settings-id="{{ 'link' | settings_id: section: section, block: block }}">
                  <i class="fab fa-{{ block.settings.platform }} fa-lg"></i>
                </a>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
      
      <div class="col-lg-8 ps-lg-5">
        <h3 class="text-2xl font-bold text-{{ section.settings.heading_color }} mb-3" kjb-settings-id="{{ 'heading' | settings_id: section: section }}">
          {{ section.settings.heading }}
        </h3>
        
        <p class="text-lg text-{{ section.settings.subheading_color }} mb-3" kjb-settings-id="{{ 'subheading' | settings_id: section: section }}">
          {{ section.settings.subheading }}
        </p>
        
        <!-- Stats -->
        <div class="row g-3 mb-4">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'stat' %}
                <div class="col-md-6">
                  <div class="d-flex align-items-center">
                    <span class="text-3xl text-{{ section.settings.stat_color }} me-3" kjb-settings-id="{{ 'number' | settings_id: section: section, block: block }}">
                      {{ block.settings.number }}
                    </span>
                    <span class="text-{{ section.settings.text_color }}" kjb-settings-id="{{ 'label' | settings_id: section: section, block: block }}">
                      {{ block.settings.label }}
                    </span>
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
        
        <div kjb-settings-id="{{ 'bio_text' | settings_id: section: section }}">
          {{ section.settings.bio_text }}
        </div>
        
        {% if section.settings.button_text %}
          <a href="{{ section.settings.button_link }}" 
             class="btn btn-primary-modern hover-lift mt-3"
             kjb-settings-id="{{ 'button_text' | settings_id: section: section }}">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

