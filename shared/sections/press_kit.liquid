                  <h3 class="h5 text-brand-600 mb-2">Primary Media Contact</h3>
                  <p class="mb-2">
                    <strong>üìß</strong>
                    <a href="mailto:{{ block.settings.media_email }}" class="text-ink-800">
                      {{ block.settings.media_email }}
                    </a>
                  </p>
                  {% if block.settings.response_time %}
                    <p class="text-ink-600 small mb-0">
                      <strong>‚è±</strong> {{ block.settings.response_time }}
                    </p>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.show_speaking_contact %}
                <div class="col-md-6">
                  <h3 class="h5 text-brand-600 mb-2">Speaking Requests</h3>
                  <p class="mb-2">
                    <strong>üìß</strong>
                    <a href="mailto:{{ block.settings.speaking_email }}" class="text-ink-800">
                      {{ block.settings.speaking_email }}
                    </a>
                  </p>
                  {% if block.settings.speaking_url %}
                    <p class="mb-0">
                      <strong>üåê</strong>
                      <a href="{{ block.settings.speaking_url }}" class="text-ink-800">
                        {{ block.settings.speaking_url_text }}
