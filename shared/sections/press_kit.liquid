<!-- Press Kit Section -->
<section class="press-kit-section py-5 {% if section.settings.background_style == 'lavender' %}bg-lavender{% elsif section.settings.background_style == 'grey' %}bg-grey{% endif %}">
  <div class="container" style="max-width: {{ section.settings.max_width }}px;">

    {% if section.settings.show_header %}
    <!-- Header -->
    <div class="text-center mb-5 animate-fade-up">
      {% if section.settings.header_label %}
        <div class="text-uppercase text-brand-600 fw-medium mb-2" style="font-size: 14px; letter-spacing: 1px;">
          {{ section.settings.header_label }}
        </div>
      {% endif %}

      {% if section.settings.header_title %}
        <h1 class="text-ink-900 mb-3" style="font-size: var(--fs-h1);">
          {{ section.settings.header_title }}
        </h1>
      {% endif %}

      {% if section.settings.header_description %}
        <p class="text-ink-700" style="font-size: var(--fs-body-lg); max-width: 700px; margin: 0 auto;">
          {{ section.settings.header_description }}
        </p>
      {% endif %}
    </div>
    {% endif %}

    <!-- Blocks -->
    {% for block in section.blocks %}

      {% case block.type %}

      <!-- Quick Access Links -->
      {% when 'quick_access' %}
        <div class="press-kit-block mb-5 animate-fade-up" {{ block.shopify_attributes }}>
          <div class="card-modern p-4">
