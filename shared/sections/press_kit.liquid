<!-- Press Kit Section - Modern Design -->
<section class="press-kit-section py-5 position-relative overflow-hidden {% if section.settings.background_style == 'lavender' %}bg-lavender{% elsif section.settings.background_style == 'grey' %}bg-grey{% elsif section.settings.background_style == 'white' %}bg-white{% endif %} bg-texture bg-texture--dots bg-texture--subtle">
  <div class="container" style="max-width: {{ section.settings.max_width }}px;">

    {% if section.settings.show_header %}
    <!-- Header -->
    <div class="text-center mb-5 animate-fade-up">
      {% if section.settings.header_label %}
        <div class="badge badge-brand-outline mb-3" style="font-size: 14px; letter-spacing: 1.5px;">
          {{ section.settings.header_label }}
        </div>
      {% endif %}

      {% if section.settings.header_title %}
        <h1 class="mb-3" style="font-size: var(--fs-display); color: var(--c-ink-900); font-weight: 600;">
          {{ section.settings.header_title }}
        </h1>
      {% endif %}

      {% if section.settings.header_description %}
        <p class="text-ink-700" style="font-size: var(--fs-body-lg); max-width: 700px; margin: 0 auto; line-height: 1.6;">
          {{ section.settings.header_description }}
        </p>
      {% endif %}
    </div>
    {% endif %}

    <!-- Blocks -->
    {% for block in section.blocks %}

      {% case block.type %}

      <!-- Quick Access Links -->
      {% when 'quick_access' %}
        <div class="press-kit-block mb-5 animate-fade-up" {{ block.shopify_attributes }}>
          <div class="card-modern p-4 p-lg-5 position-relative" style="background: linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 100%); overflow: hidden;">

            <!-- Decorative Element -->
            <div class="position-absolute top-0 end-0" style="width: 200px; height: 200px; background: radial-gradient(circle, rgba(94, 59, 255, 0.05) 0%, transparent 70%); border-radius: 50%; transform: translate(30%, -30%);"></div>

            <div class="row align-items-center">
              {% if block.settings.show_image and block.settings.profile_image %}
                <div class="col-lg-3 mb-4 mb-lg-0 text-center">
                  <div class="press-kit-image-card" style="max-width: 200px; margin: 0 auto;">
                    <img
                      src="{{ block.settings.profile_image | image_picker_url: '400x' }}"
                      srcset="{{ block.settings.profile_image | image_picker_url: '200x' }} 200w,
                              {{ block.settings.profile_image | image_picker_url: '400x' }} 400w,
                              {{ block.settings.profile_image | image_picker_url: '600x' }} 600w"
                      sizes="200px"
                      alt="{{ block.settings.title }}"
                      class="img-fluid"
                      style="border-radius: 16px; box-shadow: 0 8px 32px rgba(94, 59, 255, 0.15);"
                      loading="lazy">
                  </div>
                </div>
              {% endif %}

              <div class="{% if block.settings.show_image and block.settings.profile_image %}col-lg-9{% else %}col-12{% endif %}">
                {% if block.settings.title %}
                  <h2 class="h3 mb-4" style="color: var(--c-ink-900); font-weight: 600;">
                    <span class="text-brand-600 me-2">üìé</span>{{ block.settings.title }}
                  </h2>
                {% endif %}

                <div class="row g-4 mb-4">
                  {% if block.settings.show_media_contact %}
                    <div class="col-md-6">
                      <div class="p-3" style="background: var(--c-brand-100); border-radius: 12px; border-left: 3px solid var(--c-brand-600);">
                        <h3 class="h6 mb-3" style="color: var(--c-brand-600); font-weight: 600;">
                          Primary Media Contact
                        </h3>
                        <p class="mb-2">
                          <strong style="color: var(--c-brand-600);">üìß</strong>
                          <a href="mailto:{{ block.settings.media_email }}" class="text-ink-800 text-decoration-none" style="font-weight: 500;">
                            {{ block.settings.media_email }}
                          </a>
                        </p>
                        {% if block.settings.response_time %}
                          <p class="text-ink-600 small mb-0">
                            <strong>‚è±</strong> {{ block.settings.response_time }}
                          </p>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}

                  {% if block.settings.show_speaking_contact %}
                    <div class="col-md-6">
                      <div class="p-3" style="background: var(--c-accent-teal); background: linear-gradient(135deg, rgba(24, 213, 228, 0.1) 0%, rgba(24, 213, 228, 0.05) 100%); border-radius: 12px; border-left: 3px solid var(--c-accent-teal);">
                        <h3 class="h6 mb-3" style="color: var(--c-accent-teal); font-weight: 600;">
                          Speaking Requests
                        </h3>
                        <p class="mb-2">
                          <strong style="color: var(--c-accent-teal);">üìß</strong>
                          <a href="mailto:{{ block.settings.speaking_email }}" class="text-ink-800 text-decoration-none" style="font-weight: 500;">
                            {{ block.settings.speaking_email }}
                          </a>
                        </p>
                        {% if block.settings.speaking_url %}
                          <p class="mb-0">
                            <strong>üåê</strong>
                            <a href="{{ block.settings.speaking_url }}" class="text-ink-800 text-decoration-none" style="font-weight: 500;">
                              {{ block.settings.speaking_url_text }}
                            </a>
                          </p>
                        {% endif %}
                      </div>
                    </div>
                  {% endif %}
                </div>

                {% if block.settings.show_assets %}
                  <div class="pt-4" style="border-top: 1px solid rgba(26, 45, 78, 0.1);">
                    <h3 class="h6 mb-3" style="color: var(--c-brand-600); font-weight: 600;">
                      <span class="me-2">üì¶</span>Downloadable Assets
                    </h3>
                    <div class="d-flex flex-wrap gap-2">
                      {% if block.settings.asset_1_text %}
                        <a href="{{ block.settings.asset_1_url }}" class="btn btn-sm btn-outline-primary hover-lift" style="transition: all 0.2s ease;">
                          {{ block.settings.asset_1_icon }} {{ block.settings.asset_1_text }}
                        </a>
                      {% endif %}
                      {% if block.settings.asset_2_text %}
                        <a href="{{ block.settings.asset_2_url }}" class="btn btn-sm btn-outline-primary hover-lift">
                          {{ block.settings.asset_2_icon }} {{ block.settings.asset_2_text }}
                        </a>
                      {% endif %}
                      {% if block.settings.asset_3_text %}
                        <a href="{{ block.settings.asset_3_url }}" class="btn btn-sm btn-outline-primary hover-lift">
                          {{ block.settings.asset_3_icon }} {{ block.settings.asset_3_text }}
                        </a>
                      {% endif %}
                      {% if block.settings.asset_4_text %}
                        <a href="{{ block.settings.asset_4_url }}" class="btn btn-sm btn-outline-primary hover-lift">
                          {{ block.settings.asset_4_icon }} {{ block.settings.asset_4_text }}
                        </a>
                      {% endif %}
                      {% if block.settings.asset_5_text %}
                        <a href="{{ block.settings.asset_5_url }}" class="btn btn-sm btn-outline-primary hover-lift">
                          {{ block.settings.asset_5_icon }} {{ block.settings.asset_5_text }}
                        </a>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>

      <!-- Pronunciation Guide -->
      {% when 'pronunciation' %}
        <div class="press-kit-block mb-5 animate-fade-up" {{ block.shopify_attributes }}>
          <div class="card-modern p-4 p-lg-5">
            <div class="row align-items-center">
              {% if block.settings.show_headshot and block.settings.headshot_image %}
                <div class="col-lg-3 mb-4 mb-lg-0 text-center">
                  <div class="press-kit-image-card" style="max-width: 180px; margin: 0 auto;">
                    <img
                      src="{{ block.settings.headshot_image | image_picker_url: '360x' }}"
                      srcset="{{ block.settings.headshot_image | image_picker_url: '180x' }} 180w,
                              {{ block.settings.headshot_image | image_picker_url: '360x' }} 360w,
                              {{ block.settings.headshot_image | image_picker_url: '540x' }} 540w"
                      sizes="180px"
                      alt="{{ block.settings.name }}"
                      class="img-fluid rounded-circle"
                      style="box-shadow: 0 8px 32px rgba(94, 59, 255, 0.2); border: 4px solid var(--c-brand-100);"
                      loading="lazy">
                  </div>
                </div>
              {% endif %}

              <div class="{% if block.settings.show_headshot and block.settings.headshot_image %}col-lg-9{% else %}col-12{% endif %}">
                {% if block.settings.title %}
                  <h2 class="h3 mb-4" style="color: var(--c-ink-900); font-weight: 600;">
                    <span class="text-brand-600 me-2">üéôÔ∏è</span>{{ block.settings.title }}
                  </h2>
                {% endif %}

                <div class="mb-4 p-4" style="background: linear-gradient(135deg, var(--c-brand-100) 0%, transparent 100%); border-radius: 12px;">
                  <h3 class="h5 mb-2" style="color: var(--c-brand-600); font-weight: 600;">Name</h3>
                  <p class="mb-1" style="font-size: var(--fs-h2); font-weight: 600; color: var(--c-ink-900);">{{ block.settings.name }}</p>
                  <p class="text-ink-600 mb-0" style="font-size: var(--fs-body-lg);">{{ block.settings.pronunciation }}</p>
                </div>

                {% if block.settings.show_preferred_reference %}
                  <div class="mb-4">
                    <h3 class="h6 mb-3" style="color: var(--c-accent-teal); font-weight: 600;">‚úì Preferred Reference</h3>
                    <div class="text-ink-700" style="line-height: 1.8;">{{ block.settings.preferred_reference }}</div>
                  </div>
                {% endif %}

                {% if block.settings.show_do_not_use %}
                  <div class="p-3" style="background: rgba(255, 139, 203, 0.1); border-radius: 12px; border-left: 3px solid var(--c-accent-peach);">
                    <h3 class="h6 mb-2" style="color: var(--c-accent-peach); font-weight: 600;">‚úó Do NOT Use</h3>
                    <div class="text-ink-700" style="line-height: 1.8;">{{ block.settings.do_not_use }}</div>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>

      <!-- Biography -->
      {% when 'biography' %}
        <div class="press-kit-block mb-5 animate-fade-up" {{ block.shopify_attributes }}>
          <div class="card-modern p-4 p-lg-5 position-relative overflow-hidden" style="background: linear-gradient(135deg, #FFFFFF 0%, var(--c-brand-100) 100%);">

            <!-- Background Pattern -->
            <div class="position-absolute top-0 start-0 w-100 h-100" style="opacity: 0.03; background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%235E3BFF\" fill-opacity=\"1\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E'); pointer-events: none;"></div>

            <div class="row align-items-start position-relative">
              {% if block.settings.show_photo and block.settings.bio_photo %}
                <div class="col-lg-3 mb-4 mb-lg-0">
                  <div class="press-kit-image-card">
                    <div style="position: relative; display: inline-block;">
                      <img
                        src="{{ block.settings.bio_photo | image_picker_url: '400x' }}"
                        srcset="{{ block.settings.bio_photo | image_picker_url: '200x' }} 200w,
                                {{ block.settings.bio_photo | image_picker_url: '400x' }} 400w,
                                {{ block.settings.bio_photo | image_picker_url: '600x' }} 600w"
                        sizes="(max-width: 767px) 200px, 300px"
                        alt="{{ block.settings.title }}"
                        class="img-fluid"
                        style="border-radius: 16px; box-shadow: 0 12px 40px rgba(94, 59, 255, 0.2);"
                        loading="lazy">

                      <!-- Glow Effect -->
                      <div class="position-absolute top-0 start-0 w-100 h-100" style="background: radial-gradient(circle at 30% 30%, rgba(94, 59, 255, 0.15), transparent 60%); border-radius: 16px; pointer-events: none;"></div>
                    </div>
                  </div>
                </div>
              {% endif %}

              <div class="{% if block.settings.show_photo and block.settings.bio_photo %}col-lg-9{% else %}col-12{% endif %}">
                <div class="d-flex align-items-start justify-content-between mb-3 flex-wrap gap-3">
                  <div>
                    {% if block.settings.title %}
                      <h2 class="h3 mb-1" style="color: var(--c-ink-900); font-weight: 600;">
                        {{ block.settings.title }}
                      </h2>
                    {% endif %}
                    {% if block.settings.word_count %}
                      <span class="badge" style="background: var(--c-brand-600); color: white; font-size: 12px;">
                        {{ block.settings.word_count }}
                      </span>
                    {% endif %}
                  </div>
                  {% if block.settings.show_copy_button %}
                    <button
                      class="btn btn-sm btn-primary-modern copy-bio-btn"
                      data-bio-id="bio-{{ block.id }}"
                      onclick="copyBioToClipboard('bio-{{ block.id }}')">
                      <span class="me-1">üìã</span> Copy Bio
                    </button>
                  {% endif %}
                </div>

                <div id="bio-{{ block.id }}" class="bio-content text-ink-700" style="line-height: 1.8; font-size: 17px;">
                  {{ block.settings.bio_text }}
                </div>
              </div>
            </div>
          </div>
        </div>

      <!-- On-Air Intro Script -->
      {% when 'intro_script' %}
        <div class="press-kit-block mb-5 animate-fade-up" {{ block.shopify_attributes }}>
          <div class="card-modern p-4 p-lg-5 position-relative overflow-hidden" style="background: linear-gradient(135deg, var(--c-brand-100) 0%, #FFFFFF 50%, var(--c-accent-teal); background: linear-gradient(135deg, rgba(94,59,255,0.08) 0%, rgba(24,213,228,0.05) 100%);">

            <!-- Microphone Icon Decoration -->
            <div class="position-absolute" style="top: 20px; right: 20px; font-size: 80px; opacity: 0.1;">üéôÔ∏è</div>

            <div class="position-relative">
              <div class="d-flex align-items-start justify-content-between mb-4 flex-wrap gap-3">
                <div>
                  {% if block.settings.title %}
                    <h2 class="h3 mb-2" style="color: var(--c-ink-900); font-weight: 600;">
                      <span class="text-brand-600 me-2">üé¨</span>{{ block.settings.title }}
                    </h2>
                  {% endif %}
                  {% if block.settings.duration %}
                    <p class="mb-0">
                      <span class="badge" style="background: linear-gradient(135deg, var(--c-brand-600), var(--c-brand-800)); color: white;">
                        ‚è± {{ block.settings.duration }}
                      </span>
                    </p>
                  {% endif %}
                </div>
                {% if block.settings.show_copy_button %}
                  <button
                    class="btn btn-primary-modern copy-script-btn"
                    data-script-id="script-{{ block.id }}"
                    onclick="copyScriptToClipboard('script-{{ block.id }}')">
                    <span class="me-1">üìã</span> Copy Script
                  </button>
                {% endif %}
              </div>

              <div class="p-4" style="background: white; border-radius: 12px; box-shadow: 0 4px 20px rgba(0,0,0,0.06);">
                <div id="script-{{ block.id }}" class="script-content text-ink-800" style="line-height: 1.9; font-size: 18px; font-style: italic;">
                  {{ block.settings.script_text }}
                </div>
              </div>
            </div>
          </div>
        </div>

      <!-- Key Facts -->
      {% when 'key_facts' %}
        <div class="press-kit-block mb-5 animate-fade-up" {{ block.shopify_attributes }}>
          <div class="card-modern p-4 p-lg-5">
            {% if block.settings.title %}
              <h2 class="h3 mb-4" style="color: var(--c-ink-900); font-weight: 600;">
                <span class="text-brand-600 me-2">üìä</span>{{ block.settings.title }}
              </h2>
            {% endif %}

            <div class="row g-4">
              {% if block.settings.section_1_title %}
                <div class="col-md-6">
                  <div class="p-4 h-100" style="background: linear-gradient(135deg, var(--c-brand-100) 0%, transparent 100%); border-radius: 12px; border-left: 4px solid var(--c-brand-600);">
                    <h3 class="h5 mb-3" style="color: var(--c-brand-600); font-weight: 600;">
                      {{ block.settings.section_1_title }}
                    </h3>
                    <div class="text-ink-700" style="line-height: 1.8;">
                      {{ block.settings.section_1_content }}
                    </div>
                  </div>
                </div>
              {% endif %}

              {% if block.settings.section_2_title %}
                <div class="col-md-6">
                  <div class="p-4 h-100" style="background: linear-gradient(135deg, rgba(24,213,228,0.1) 0%, transparent 100%); border-radius: 12px; border-left: 4px solid var(--c-accent-teal);">
                    <h3 class="h5 mb-3" style="color: var(--c-accent-teal); font-weight: 600;">
                      {{ block.settings.section_2_title }}
                    </h3>
                    <div class="text-ink-700" style="line-height: 1.8;">
                      {{ block.settings.section_2_content }}
                    </div>
                  </div>
                </div>
              {% endif %}

              {% if block.settings.section_3_title %}
                <div class="col-md-6">
                  <div class="p-4 h-100" style="background: linear-gradient(135deg, rgba(255,139,203,0.1) 0%, transparent 100%); border-radius: 12px; border-left: 4px solid var(--c-accent-peach);">
                    <h3 class="h5 mb-3" style="color: var(--c-accent-peach); font-weight: 600;">
                      {{ block.settings.section_3_title }}
                    </h3>
                    <div class="text-ink-700" style="line-height: 1.8;">
                      {{ block.settings.section_3_content }}
                    </div>
                  </div>
                </div>
              {% endif %}

              {% if block.settings.section_4_title %}
                <div class="col-md-6">
                  <div class="p-4 h-100" style="background: linear-gradient(135deg, rgba(255,230,107,0.15) 0%, transparent 100%); border-radius: 12px; border-left: 4px solid var(--c-accent-lemon);">
                    <h3 class="h5 mb-3" style="color: #D4A50A; font-weight: 600;">
                      {{ block.settings.section_4_title }}
                    </h3>
                    <div class="text-ink-700" style="line-height: 1.8;">
                      {{ block.settings.section_4_content }}
                    </div>
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        </div>

      <!-- Media Appearances -->
      {% when 'media_appearances' %}
        <div class="press-kit-block mb-5 animate-fade-up" {{ block.shopify_attributes }}>
          <div class="card-modern p-4 p-lg-5">
            <div class="row">
              {% if block.settings.show_logos and block.settings.media_logo %}
                <div class="col-lg-3 mb-4 mb-lg-0">
                  <div class="press-kit-logo-grid">
                    <img
                      src="{{ block.settings.media_logo | image_picker_url: '300x' }}"
                      srcset="{{ block.settings.media_logo | image_picker_url: '150x' }} 150w,
                              {{ block.settings.media_logo | image_picker_url: '300x' }} 300w"
                      sizes="150px"
                      alt="Media logo"
                      class="img-fluid mb-3"
                      style="max-height: 60px; object-fit: contain; filter: grayscale(100%); opacity: 0.7; transition: all 0.3s ease;"
                      loading="lazy"
                      onmouseover="this.style.filter='grayscale(0%)'; this.style.opacity='1';"
                      onmouseout="this.style.filter='grayscale(100%)'; this.style.opacity='0.7';">
                  </div>
                </div>
              {% endif %}

              <div class="{% if block.settings.show_logos and block.settings.media_logo %}col-lg-9{% else %}col-12{% endif %}">
                {% if block.settings.title %}
                  <h2 class="h3 mb-4" style="color: var(--c-ink-900); font-weight: 600;">
                    <span class="text-brand-600 me-2">üì∫</span>{{ block.settings.title }}
                  </h2>
                {% endif %}

                {% if block.settings.category_title %}
                  <h3 class="h5 mb-3" style="color: var(--c-brand-600); font-weight: 600;">
                    {{ block.settings.category_title }}
                  </h3>
                {% endif %}

                <div class="media-list">
                  {{ block.settings.media_content }}
                </div>
              </div>
            </div>
          </div>
        </div>

      <!-- Quotes & Messages -->
      {% when 'quotes' %}
        <div class="press-kit-block mb-5 animate-fade-up" {{ block.shopify_attributes }}>
          <div class="card-modern p-4 p-lg-5" style="background: linear-gradient(135deg, #FFFFFF 0%, var(--c-brand-100) 100%);">
            {% if block.settings.title %}
              <h2 class="h3 mb-2" style="color: var(--c-ink-900); font-weight: 600;">
                <span class="text-brand-600 me-2">üí¨</span>{{ block.settings.title }}
              </h2>
            {% endif %}

            {% if block.settings.subtitle %}
              <p class="text-ink-600 mb-4">{{ block.settings.subtitle }}</p>
            {% endif %}

            <div class="quotes-grid row g-3">
              {% if block.settings.quote_1 %}
                <div class="col-12">
                  <div class="quote-card p-4" style="background: white; border-left: 4px solid var(--c-brand-600); border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.05); transition: all 0.3s ease;" onmouseover="this.style.transform='translateX(8px)'; this.style.boxShadow='0 4px 20px rgba(94,59,255,0.15)';" onmouseout="this.style.transform='translateX(0)'; this.style.boxShadow='0 2px 12px rgba(0,0,0,0.05)';">
                    <div class="d-flex">
                      <span class="text-brand-600 me-3" style="font-size: 40px; line-height: 1; opacity: 0.3;">"</span>
                      <p class="mb-0 text-ink-800" style="font-size: 18px; font-style: italic; line-height: 1.7;">
                        {{ block.settings.quote_1 }}
                      </p>
                    </div>
                  </div>
                </div>
              {% endif %}

              {% if block.settings.quote_2 %}
                <div class="col-12">
                  <div class="quote-card p-4" style="background: white; border-left: 4px solid var(--c-accent-teal); border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.05); transition: all 0.3s ease;" onmouseover="this.style.transform='translateX(8px)'; this.style.boxShadow='0 4px 20px rgba(24,213,228,0.15)';" onmouseout="this.style.transform='translateX(0)'; this.style.boxShadow='0 2px 12px rgba(0,0,0,0.05)';">
                    <div class="d-flex">
                      <span class="text-accent-teal me-3" style="font-size: 40px; line-height: 1; opacity: 0.3;">"</span>
                      <p class="mb-0 text-ink-800" style="font-size: 18px; font-style: italic; line-height: 1.7;">
                        {{ block.settings.quote_2 }}
                      </p>
                    </div>
                  </div>
                </div>
              {% endif %}

              {% if block.settings.quote_3 %}
                <div class="col-12">
                  <div class="quote-card p-4" style="background: white; border-left: 4px solid var(--c-accent-peach); border-radius: 12px; box-shadow: 0 2px 12px rgba(0,0,0,0.05); transition: all 0.3s ease;" onmouseover="this.style.transform='translateX(8px)'; this.style.boxShadow='0 4px 20px rgba(255,139,203,0.15)';" onmouseout="this.style.transform='translateX(0)'; this.style.boxShadow='0 2px 12px rgba(0,0,0,0.05)';">
                    <div class="d-flex">
                      <span class="me-3" style="font-size: 40px; line-height: 1; opacity: 0.3; color: var(--c-accent-peach);">"</span>
                      <p class="mb-0 text-ink-800" style="font-size: 18px; font-style: italic; line-height: 1.7;">
                        {{ block.settings.quote_3 }}
                      </p>
                    </div>
                  </div>
