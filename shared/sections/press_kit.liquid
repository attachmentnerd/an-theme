<!-- Copy to Clipboard Script -->
<script>
function copyBioToClipboard(bioId) {
  const bioElement = document.getElementById(bioId);
  const text = bioElement.innerText || bioElement.textContent;

  navigator.clipboard.writeText(text).then(function() {
    // Show success feedback
    const btn = document.querySelector(`[data-bio-id="${bioId}"]`);
    const originalText = btn.innerText;
    btn.innerText = 'Copied!';
    btn.classList.add('btn-success');

    setTimeout(function() {
      btn.innerText = originalText;
      btn.classList.remove('btn-success');
    }, 2000);
  }, function(err) {
    console.error('Could not copy text: ', err);
  });
}

function copyScriptToClipboard(scriptId) {
  const scriptElement = document.getElementById(scriptId);
  const text = scriptElement.innerText || scriptElement.textContent;

  navigator.clipboard.writeText(text).then(function() {
    // Show success feedback
    const btn = document.querySelector(`[data-script-id="${scriptId}"]`);
    const originalText = btn.innerText;
    btn.innerText = 'Copied!';
    btn.classList.add('btn-success');

    setTimeout(function() {
      btn.innerText = originalText;
      btn.classList.remove('btn-success');
    }, 2000);
  }, function(err) {
    console.error('Could not copy text: ', err);
  });
}
</script>

