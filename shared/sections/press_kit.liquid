            </div>

            {% if block.settings.show_assets %}
              <div class="mt-4 pt-4" style="border-top: 1px solid rgba(26, 45, 78, 0.1);">
                <h3 class="h5 text-brand-600 mb-3">Downloadable Assets</h3>
                <div class="d-flex flex-wrap gap-3">
                  {% if block.settings.asset_1_text %}
                    <a href="{{ block.settings.asset_1_url }}" class="btn btn-sm btn-outline-primary">
                      {{ block.settings.asset_1_icon }} {{ block.settings.asset_1_text }}
                    </a>
                  {% endif %}
                  {% if block.settings.asset_2_text %}
                    <a href="{{ block.settings.asset_2_url }}" class="btn btn-sm btn-outline-primary">
                      {{ block.settings.asset_2_icon }} {{ block.settings.asset_2_text }}
                    </a>
                  {% endif %}
                  {% if block.settings.asset_3_text %}
                    <a href="{{ block.settings.asset_3_url }}" class="btn btn-sm btn-outline-primary">
                      {{ block.settings.asset_3_icon }} {{ block.settings.asset_3_text }}
                    </a>
                  {% endif %}
                  {% if block.settings.asset_4_text %}
                    <a href="{{ block.settings.asset_4_url }}" class="btn btn-sm btn-outline-primary">
                      {{ block.settings.asset_4_icon }} {{ block.settings.asset_4_text }}
                    </a>
