{% assign section_dom_id = section.settings.section_id | default: 'feature-tabs-scroll' %}
{% assign section_dom_id = section_dom_id | replace: ' ', '-' %}
{% assign first_block = section.blocks | first %}

<section id="{{ section_dom_id | escape }}-{{ section.id }}" class="agents-showcase-section py-5" style="background-color: {{ section.settings.bg_color | default: '#f8f8f8' | escape }};">
  <div class="container">
    <!-- Header -->
    <div class="text-center mb-5">
      <h2 class="agents-showcase__title" style="font-size: var(--fs-display); color: var(--c-ink-900); font-weight: 500;">
        {{ section.settings.title | default: 'Agents that scale across every workflow' | escape }}
      </h2>
      {% if section.settings.subtitle %}
        <p class="agents-showcase__subtitle" style="font-size: var(--fs-body-lg); color: var(--c-ink-700); margin-top: 1rem; max-width: 800px; margin-left: auto; margin-right: auto;">
          {{ section.settings.subtitle | escape }}
        </p>
      {% endif %}
      {% if section.settings.enable_scroll_trigger %}
        <div class="agents-showcase__progress" aria-hidden="true">
          <div class="progress-dots">
            {% for block in section.blocks %}
              <span class="progress-dot {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}"></span>
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>

    <!-- Tabs and Content Container -->
    <div class="agents-showcase__container">
      <div class="row">
        <!-- Sticky Tabs Column -->
        <div class="col-lg-4">
          <div class="agents-showcase__tabs-column">
            <div class="agents-showcase__tabs-placeholder"></div>
            <div class="agents-showcase__tabs-wrapper">
              <div class="agents-showcase__tabs" role="tablist">
                {% for block in section.blocks %}
                  {% assign tab_id = 'agent-tab-' | append: section.id | append: '-' | append: forloop.index0 %}
                  {% assign panel_id = 'agent-panel-' | append: section.id | append: '-' | append: forloop.index0 %}
                  <a id="{{ tab_id | escape }}"
                     href="#{{ panel_id | escape }}"
                     class="agents-showcase__tab {% if forloop.first %}active{% endif %}"
                     data-tab-index="{{ forloop.index0 }}"
                     role="tab"
                     aria-controls="{{ panel_id | escape }}"
                     aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                     tabindex="{% if forloop.first %}0{% else %}-1{% endif %}">
                    <div class="tab-number">{{ block.settings.tab_number | default: forloop.index | prepend: '0' | escape }}</div>
                    <div class="tab-title">{{ block.settings.tab_title | escape }}</div>
                  </a>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>

        <!-- Scrollable Content Column -->
        <div class="col-lg-8">
          <div class="agents-showcase__content" id="agents-content-{{ section.id }}"{% if first_block %} style="--agents-active-bg: {{ first_block.settings.panel_bg_color | default: '#ffffff' | escape }};"{% endif %}>
            {% for block in section.blocks %}
              {% assign tab_id = 'agent-tab-' | append: section.id | append: '-' | append: forloop.index0 %}
              {% assign panel_id = 'agent-panel-' | append: section.id | append: '-' | append: forloop.index0 %}
              <div class="agents-showcase__panel {% if forloop.first %}in-view{% endif %}"
                   id="{{ panel_id | escape }}"
                   data-panel-index="{{ forloop.index0 }}"
                   role="tabpanel"
                   aria-labelledby="{{ tab_id | escape }}"
                   aria-hidden="{% if forloop.first %}false{% else %}true{% endif %}"
                   tabindex="{% if forloop.first %}0{% else %}-1{% endif %}"
                   data-panel-bg="{{ block.settings.panel_bg_color | default: '#ffffff' | escape }}"
                   style="--panel-active-bg: {{ block.settings.panel_bg_color | default: '#ffffff' | escape }}; --panel-card-bg: {{ block.settings.card_bg_color | default: '#e8f5e8' | escape }};">
                <div class="panel-card" style="background-color: var(--panel-card-bg, {{ block.settings.card_bg_color | default: '#e8f5e8' | escape }});">
                  <!-- Panel Header -->
                  <div class="panel-header">
                    <h3 class="panel-title">{{ block.settings.panel_title | escape }}</h3>
                    {% if block.settings.show_cta %}
                      <a href="{{ block.settings.cta_url | default: '#' | escape }}"
                         class="btn btn-dark panel-cta"
                         {% if block.settings.cta_new_tab %}target="_blank" rel="noopener"{% endif %}>
                        {{ block.settings.cta_text | default: 'Try it now' | escape }}
                      </a>
                    {% endif %}
                  </div>

                  <!-- Panel Description -->
                  <div class="panel-description">
                    {{ block.settings.description }}
                  </div>

                  <!-- Panel Image/Content -->
                  {% if block.settings.content_image %}
                    <div class="panel-image-container mt-4">
                      <img src="{{ block.settings.content_image | image_picker_url: '800x450' }}"
             alt="{{ block.settings.image_alt | default: 'Agent showcase image' | escape }}"
             class="panel-image img-fluid"
             loading="lazy"
             style="object-fit: cover;">
                    </div>
                  {% endif %}

                  <!-- Optional Additional Content -->
                  {% if block.settings.additional_content %}
                    <div class="panel-additional-content mt-3">
                      {{ block.settings.additional_content }}
                    </div>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>

    {% if section.settings.enable_scroll_trigger %}
      <div class="agents-showcase__scroll-hint">
        <span>Scroll to explore</span>
        <svg class="scroll-arrow" viewBox="0 0 24 24" fill="none">
          <path d="M12 5v14M12 19l-7-7M12 19l7-7" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .agents-showcase-section {
    overflow: hidden;
    --agents-active-bg: transparent;
  }

  .agents-showcase__title {
    margin-bottom: 0;
    line-height: 1.2;
  }

  .agents-showcase__subtitle {
    line-height: 1.6;
    opacity: 0.9;
  }

  /* Container needs relative positioning */
  .agents-showcase__container {
    position: relative;
    min-height: 100vh; /* Ensure container is tall enough */
  }

  /* Tabs column for absolute positioning context */
  .agents-showcase__tabs-column {
    position: relative;
  }

  /* Placeholder to prevent layout jump */
  .agents-showcase__tabs-placeholder {
    display: none;
  }

  /* Sticky Tabs Container - Will be made sticky via JS */
  .agents-showcase__tabs-wrapper {
    position: relative;
    transition: none; /* Disable transition during position changes */
  }

  .agents-showcase__tabs-wrapper.is-sticky {
    position: fixed !important;
    z-index: 100;
  }

  /* When sticky, show placeholder */
  .agents-showcase__tabs-column.has-sticky-tabs .agents-showcase__tabs-placeholder,
  .agents-showcase__tabs-column:has(.is-sticky) .agents-showcase__tabs-placeholder {
    display: block;
  }

  /* Tabs Styling */
  .agents-showcase__tabs {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  @supports not ((-webkit-backdrop-filter: blur(10px)) or (backdrop-filter: blur(10px))) {
    .agents-showcase__tabs {
      background: #ffffff;
    }
  }

  .agents-showcase__tab {
    display: flex;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1.25rem;
    padding: 1.25rem 1.75rem;
    background: transparent;
    border: 2px solid transparent;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
    overflow: hidden;
    transform: translateX(0);
    text-decoration: none;
    color: inherit;
    white-space: normal;
  }

  .agents-showcase__tab::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 0;
    background: var(--c-brand-600);
    transition: height 0.3s ease;
    border-radius: 2px;
  }

  .agents-showcase__tab:hover {
    background: rgba(94, 59, 255, 0.04);
    border-color: rgba(94, 59, 255, 0.15);
    transform: translateX(4px);
  }

  .agents-showcase__tab.active {
    background: var(--c-brand-100);
    border-color: var(--c-brand-600);
    transform: translateX(8px);
    box-shadow: 0 4px 16px rgba(94, 59, 255, 0.1);
  }

  .agents-showcase__tab.active::before {
    height: 70%;
  }

  .tab-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--c-ink-400);
    min-width: 3rem;
    transition: all 0.2s ease;
    font-family: var(--font-mono);
    flex-shrink: 0;
  }

  .agents-showcase__tab:hover .tab-number {
    color: var(--c-brand-600);
  }

  .agents-showcase__tab.active .tab-number {
    color: var(--c-brand-600);
    transform: scale(1.05);
  }

  .tab-title {
    font-size: 1.125rem;
    color: var(--c-ink-600);
    font-weight: 500;
    transition: all 0.2s ease;
    line-height: 1.4;
    word-wrap: break-word;
    overflow-wrap: break-word;
    flex: 1 1 auto;
    min-width: 0;
  }

  .agents-showcase__tab:hover .tab-title {
    color: var(--c-ink-800);
  }

  .agents-showcase__tab.active .tab-title {
    color: var(--c-ink-900);
    font-weight: 600;
  }

  /* Content Panels - Now scrollable */
  .agents-showcase__content {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    padding: 2rem;
    border-radius: 24px;
    background-color: var(--agents-active-bg, transparent);
    transition: background-color 0.3s ease;
  }

  .agents-showcase__panel {
    scroll-margin-top: 120px; /* Account for sticky header + padding */
    min-height: 700px; /* Ensure panels are tall enough to scroll */
    opacity: 0.4;
    transition: opacity 0.3s ease, background-color 0.3s ease;
    border-radius: 24px;
    padding: 1rem;
    background-color: transparent;
  }

  .agents-showcase__panel.in-view {
    opacity: 1;
    background-color: var(--panel-active-bg, transparent);
  }

  .panel-card {
    padding: 3rem;
    border-radius: 20px;
    height: 100%;
    min-height: 500px;
    display: flex;
    flex-direction: column;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    overflow: hidden;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .agents-showcase__panel.in-view .panel-card {
    transform: translateY(-4px);
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.12);
  }

  .panel-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 2rem;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .panel-title {
    font-size: var(--fs-h1);
    font-family: var(--font-serif);
    font-weight: 400;
    color: var(--c-ink-900);
    margin: 0;
    line-height: 1.2;
    flex: 1;
    letter-spacing: -0.02em;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  .panel-cta {
    background: var(--g-brand);
    color: var(--c-white) !important;
    padding: 12px 32px;
    border: none;
    border-radius: var(--radius-pill);
    font-weight: 600;
    font-size: var(--fs-body);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    box-shadow:
      0 0 0 2px rgba(255, 255, 255, 0.25) inset,
      0 4px 8px rgba(94, 59, 255, 0.35);
    transition:
      transform var(--motion-duration-fast) var(--motion-ease-standard),
      box-shadow var(--motion-duration-fast) var(--motion-ease-standard);
    white-space: nowrap;
  }

  .panel-cta:hover {
    transform: translateY(-2px);
    box-shadow:
      0 0 0 2px rgba(255, 255, 255, 0.25) inset,
      0 8px 16px rgba(94, 59, 255, 0.4);
    color: var(--c-white) !important;
  }

  .panel-description {
    font-size: 1.25rem;
    line-height: 1.7;
    color: var(--c-ink-600);
    margin-bottom: 2.5rem;
    max-width: 100%;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Support for HTML formatting in descriptions */
  .panel-description strong {
    font-weight: 700;
    color: var(--c-ink-800);
  }

  .panel-description em {
    font-style: italic;
  }

  .panel-description ul,
  .panel-description ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .panel-description li {
    margin-bottom: 0.5rem;
  }

  .panel-description a {
    color: var(--c-brand-600);
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .panel-description a:hover {
    color: var(--c-brand-800);
  }

  .panel-image-container {
    margin-top: auto;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    max-width: 100%;
  }

  .panel-image {
    width: 100%;
    height: auto;
    display: block;
    max-width: 100%;
    object-fit: contain;
  }

  .panel-additional-content {
    font-size: 0.9rem;
    color: var(--c-ink-600);
    line-height: 1.5;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  /* Scroll progress indicator */
  .agents-showcase__tab::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 3px;
    background: var(--c-brand-600);
    transition: width 0.3s ease;
    opacity: 0;
    transform-origin: left center;
  }

  .agents-showcase__tab.active::after {
    opacity: 1;
    width: 100%;
  }

  /* Progress dots */
  .agents-showcase__progress {
    margin-top: 1.5rem;
  }

  .progress-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  .progress-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .progress-dot.active {
    width: 24px;
    border-radius: 4px;
    background: var(--c-brand-600);
  }

  /* Scroll hint */
  .agents-showcase__scroll-hint {
    text-align: center;
    margin-top: 3rem;
    font-size: 0.9375rem;
    color: var(--c-ink-500);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    animation: bounce 3s ease-in-out infinite;
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-8px);
    }
    60% {
      transform: translateY(-4px);
    }
  }

  .scroll-arrow {
    width: 24px;
    height: 24px;
    stroke: var(--c-brand-600);
    stroke-width: 2.5;
  }

  /* Scroll-snap for mobile */
  @media (max-width: 991px) {
    .agents-showcase__tabs {
      scroll-snap-type: x mandatory;
      scroll-behavior: smooth;
    }

    .agents-showcase__tab {
      scroll-snap-align: start;
    }
  }

  /* Tablet Responsive */
  @media (max-width: 991px) {
    .agents-showcase__container {
      min-height: auto;
    }

    /* On tablet/mobile, tabs are at the top, not sticky */
    .agents-showcase__tabs-wrapper {
      position: relative;
      top: auto;
      margin-bottom: 2rem;
    }

    .agents-showcase__tabs {
      flex-direction: column;
      overflow-x: visible;
      padding: 1rem;
      gap: 0.75rem;
    }

    .agents-showcase__tab {
      flex: 1 1 auto;
      width: 100%;
      padding: 1rem 1.5rem;
    }

    .agents-showcase__tab::before {
      display: none;
    }

    .agents-showcase__tab.active {
      background: var(--c-brand-100);
      transform: translateX(0);
    }

    .agents-showcase__content {
      padding: 1.5rem;
      gap: 2rem;
    }

    .agents-showcase__panel {
      min-height: auto;
      scroll-margin-top: 20px;
      padding: 0.75rem;
    }

    .panel-card {
      padding: 2rem;
      min-height: 400px;
    }

    .panel-title {
      font-size: 1.75rem;
    }

    .panel-description {
      font-size: 1.125rem;
      max-width: 100%;
    }

    .tab-number {
      font-size: 1.25rem;
      min-width: 2.5rem;
    }

    .tab-title {
      font-size: 1rem;
    }
  }

  /* Mobile Responsive */
  @media (max-width: 767px) {
    .agents-showcase__title {
      font-size: clamp(1.5rem, 5vw, 2rem) !important;
      line-height: 1.2;
      word-wrap: break-word;
      overflow-wrap: break-word;
      hyphens: auto;
    }

    .agents-showcase__subtitle {
      font-size: clamp(0.875rem, 3vw, 1rem) !important;
      line-height: 1.5;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .agents-showcase__tabs {
      padding: 0.75rem;
      gap: 0.5rem;
    }

    .agents-showcase__tab {
      padding: 0.75rem 1rem;
      width: 100%;
      gap: 0.75rem;
    }

    .panel-card {
      padding: 1.5rem;
      min-height: 300px;
    }

    .agents-showcase__panel {
      padding: 0.5rem;
    }

    .panel-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }

    .panel-title {
      font-size: clamp(1.25rem, 4vw, 1.5rem);
      line-height: 1.3;
      word-wrap: break-word;
      overflow-wrap: break-word;
      hyphens: auto;
    }

    .panel-description {
      font-size: clamp(0.875rem, 2.5vw, 1rem);
      line-height: 1.6;
      margin-bottom: 1.5rem;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .panel-cta {
      width: 100%;
      text-align: center;
      justify-content: center;
      padding: 10px 24px;
      font-size: clamp(0.875rem, 2.5vw, 0.9rem);
      word-wrap: normal;
    }

    .panel-image-container {
      margin-left: -1.5rem;
      margin-right: -1.5rem;
      margin-bottom: -1.5rem;
      border-radius: 0 0 20px 20px;
      overflow: hidden;
    }

    .tab-number {
      font-size: clamp(0.875rem, 2.5vw, 1rem);
      min-width: auto;
    }

    .tab-title {
      font-size: clamp(0.75rem, 2.5vw, 0.875rem);
      line-height: 1.3;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    /* Hide progress dots on mobile */
    .agents-showcase__progress {
      display: none;
    }
  }

  /* Extra small mobile */
  @media (max-width: 480px) {
    .agents-showcase__title {
      font-size: clamp(1.25rem, 5vw, 1.75rem) !important;
    }

    .panel-title {
      font-size: clamp(1.125rem, 4vw, 1.25rem);
    }

    .panel-description {
      font-size: clamp(0.8125rem, 3vw, 0.9375rem);
    }

    .agents-showcase__tab {
      width: 100%;
    }

    .tab-number {
      font-size: clamp(0.75rem, 2.5vw, 0.875rem);
    }

    .tab-title {
      font-size: clamp(0.6875rem, 2.5vw, 0.8125rem);
    }
  }
</style>

<script data-section-id="{{ section_dom_id | escape }}-{{ section.id }}">
  (function() {
    const script = document.currentScript;
    if (!script) return;

    const sectionId = script.dataset.sectionId;
    if (!sectionId) return;

    const section = document.getElementById(sectionId);
    if (!section) return;

    const tabs = Array.from(section.querySelectorAll('.agents-showcase__tab'));
    const panels = Array.from(section.querySelectorAll('.agents-showcase__panel'));

    if (!tabs.length || !panels.length) return;

    const progressDots = Array.from(section.querySelectorAll('.progress-dot'));
    const tabsWrapper = section.querySelector('.agents-showcase__tabs-wrapper');
    const tabsColumn = section.querySelector('.agents-showcase__tabs-column');
    const placeholder = section.querySelector('.agents-showcase__tabs-placeholder');
    const container = section.querySelector('.agents-showcase__container');
    const content = section.querySelector('.agents-showcase__content');
    const tabsContainer = section.querySelector('.agents-showcase__tabs');

    const enableScrollSpy = {{ section.settings.enable_scroll_trigger | default: true | json }};

    const cleanupFns = [];
    let destroyed = false;
    let isScrolling = false;
    let scrollScheduled = false;
    let scrollUnlockTimeoutId = null;
    let stickyOffset = getStickyOffset();
    let currentIndex = -1;

    const SCROLL_LOCK_TIMEOUT = 700;

    function cleanup() {
      if (destroyed) return;
      destroyed = true;
      cleanupFns.forEach((fn) => {
        try {
          fn();
        } catch (err) {
          /* no-op */
        }
      });
    }

    window.addEventListener('beforeunload', cleanup);
    cleanupFns.push(() => window.removeEventListener('beforeunload', cleanup));

    const removalObserver = new MutationObserver(() => {
      if (!document.body.contains(section)) {
        cleanup();
      }
    });
    removalObserver.observe(document.body, { childList: true, subtree: true });
    cleanupFns.push(() => removalObserver.disconnect());

    cleanupFns.push(() => {
      if (scrollUnlockTimeoutId) {
        window.clearTimeout(scrollUnlockTimeoutId);
        scrollUnlockTimeoutId = null;
      }
    });

    function getStickyOffset() {
      const header = document.querySelector('.header, .navigation, header, [class*="header"]');
      if (header && header.offsetHeight > 0) {
        return header.offsetHeight + 20;
      }
      return 80;
    }

    function resetStickyStyles() {
      if (!tabsWrapper) return;
      tabsWrapper.classList.remove('is-sticky');
      tabsWrapper.style.position = '';
      tabsWrapper.style.top = '';
      tabsWrapper.style.left = '';
      tabsWrapper.style.width = '';
      tabsWrapper.style.bottom = '';
      if (tabsColumn) {
        tabsColumn.classList.remove('has-sticky-tabs');
      }
      if (placeholder) {
        placeholder.style.height = '';
      }
    }

    function updateStickyState() {
      if (!tabsWrapper || !tabsColumn || !container) {
        return;
      }

      if (window.innerWidth <= 991) {
        resetStickyStyles();
        return;
      }

      const wrapperHeight = tabsWrapper.offsetHeight;
      const containerRect = container.getBoundingClientRect();
      const columnRect = tabsColumn.getBoundingClientRect();

      if (placeholder) {
        placeholder.style.height = wrapperHeight + 'px';
      }

      const shouldFix = containerRect.top <= stickyOffset && containerRect.bottom > stickyOffset + wrapperHeight;
      const stickToBottom = containerRect.bottom <= stickyOffset + wrapperHeight && containerRect.bottom > containerRect.top;

      if (shouldFix) {
        if (!tabsWrapper.classList.contains('is-sticky')) {
          tabsWrapper.classList.add('is-sticky');
        }
        tabsColumn.classList.add('has-sticky-tabs');
        tabsWrapper.style.position = 'fixed';
        tabsWrapper.style.top = stickyOffset + 'px';
        tabsWrapper.style.left = columnRect.left + 'px';
        tabsWrapper.style.width = columnRect.width + 'px';
        tabsWrapper.style.bottom = '';
      } else if (stickToBottom) {
        tabsWrapper.classList.remove('is-sticky');
        tabsWrapper.style.position = 'absolute';
        tabsWrapper.style.top = 'auto';
        tabsWrapper.style.bottom = '0';
        tabsWrapper.style.left = '0';
        tabsWrapper.style.width = '100%';
        tabsColumn.classList.add('has-sticky-tabs');
      } else {
        resetStickyStyles();
      }
    }

    function updateActiveBackground(index) {
      if (!content) return;
      const panel = panels[index];
      if (!panel) return;
      const color = panel.dataset.panelBg;
      if (color) {
        content.style.setProperty('--agents-active-bg', color);
      }
    }

    function setActiveTab(index, options = {}) {
      const { focus = false, force = false } = options;
      if (index < 0 || index >= tabs.length) {
        return;
      }

      if (index === currentIndex && !force) {
        if (focus && tabs[index]) {
          tabs[index].focus();
        }
        return;
      }

      tabs.forEach((tab, tabIndex) => {
        const isActive = tabIndex === index;
        tab.classList.toggle('active', isActive);
        tab.setAttribute('aria-selected', isActive ? 'true' : 'false');
        tab.setAttribute('tabindex', isActive ? '0' : '-1');
        if (isActive && focus) {
          tab.focus();
        }
      });

      panels.forEach((panel, panelIndex) => {
        const isActive = panelIndex === index;
        panel.classList.toggle('in-view', isActive);
        panel.setAttribute('aria-hidden', isActive ? 'false' : 'true');
        panel.setAttribute('tabindex', isActive ? '0' : '-1');
      });

      progressDots.forEach((dot, dotIndex) => {
        dot.classList.toggle('active', dotIndex === index);
      });

      if (tabsContainer && window.innerWidth <= 991) {
        const activeTab = tabs[index];
        if (activeTab && tabsContainer.scrollWidth > tabsContainer.clientWidth) {
          const scrollLeft = activeTab.offsetLeft - (tabsContainer.offsetWidth / 2) + (activeTab.offsetWidth / 2);
          const targetLeft = Math.max(0, scrollLeft);
          if (typeof tabsContainer.scrollTo === 'function') {
            tabsContainer.scrollTo({
              left: targetLeft,
              behavior: 'smooth'
            });
          } else {
            tabsContainer.scrollLeft = targetLeft;
          }
        }
      }

      updateActiveBackground(index);
      currentIndex = index;
    }

    function scrollToPanel(index) {
      const panel = panels[index];
      if (!panel) return;

      if (scrollUnlockTimeoutId) {
        window.clearTimeout(scrollUnlockTimeoutId);
      }

      isScrolling = true;
      panel.scrollIntoView({ behavior: 'smooth', block: 'start', inline: 'nearest' });

      scrollUnlockTimeoutId = window.setTimeout(() => {
        isScrolling = false;
        if (enableScrollSpy) {
          updateActivePanel();
        }
      }, SCROLL_LOCK_TIMEOUT);
    }

    function handleTabSelection(index, options = {}) {
      const { focus = false, scroll = true, force = false } = options;
      setActiveTab(index, { focus, force });
      if (scroll) {
        scrollToPanel(index);
      }
    }

    function updateActivePanel() {
      if (!enableScrollSpy || !panels.length) {
        return;
      }

      const viewportHeight = window.innerHeight || document.documentElement.clientHeight || 0;
      let activeIndex = currentIndex >= 0 ? currentIndex : 0;
      let maxVisibility = -1;

      panels.forEach((panel, index) => {
        const rect = panel.getBoundingClientRect();
        const visibleHeight = Math.max(0, Math.min(rect.bottom, viewportHeight) - Math.max(rect.top, 0));
        const ratio = rect.height > 0 ? visibleHeight / rect.height : 0;

        if (ratio > maxVisibility) {
          maxVisibility = ratio;
          activeIndex = index;
        }
      });

      if (activeIndex !== currentIndex) {
        setActiveTab(activeIndex);
      }
    }

    function handleWindowScroll() {
      updateStickyState();
      if (!enableScrollSpy || isScrolling) {
        return;
      }
      if (scrollScheduled) {
        return;
      }
      scrollScheduled = true;
      window.requestAnimationFrame(() => {
        scrollScheduled = false;
        updateActivePanel();
      });
    }

    function handleResize() {
      stickyOffset = getStickyOffset();
      updateStickyState();
      if (enableScrollSpy && !isScrolling) {
        updateActivePanel();
      }
    }

    window.addEventListener('scroll', handleWindowScroll, { passive: true });
    window.addEventListener('resize', handleResize);

    cleanupFns.push(() => window.removeEventListener('scroll', handleWindowScroll));
    cleanupFns.push(() => window.removeEventListener('resize', handleResize));

    tabs.forEach((tab, index) => {
      tab.addEventListener('click', (event) => {
        event.preventDefault();
        handleTabSelection(index, { focus: true });
      });

      tab.addEventListener('keydown', (event) => {
        let targetIndex = null;
        switch (event.key) {
          case 'ArrowRight':
          case 'ArrowDown':
            targetIndex = (index + 1) % tabs.length;
            break;
          case 'ArrowLeft':
          case 'ArrowUp':
            targetIndex = (index - 1 + tabs.length) % tabs.length;
            break;
          case 'Home':
            targetIndex = 0;
            break;
          case 'End':
            targetIndex = tabs.length - 1;
            break;
          case 'Enter':
          case ' ': // Space
          case 'Spacebar':
            event.preventDefault();
            handleTabSelection(index, { focus: true });
            return;
          default:
            return;
        }

        if (targetIndex !== null) {
          event.preventDefault();
          handleTabSelection(targetIndex, { focus: true });
        }
      });
    });

    progressDots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        handleTabSelection(index);
      });
    });

    const initialIndex = Math.max(0, tabs.findIndex((tab) => tab.classList.contains('active')));
    handleTabSelection(initialIndex, { scroll: false, force: true });

    updateStickyState();
    if (enableScrollSpy) {
      updateActivePanel();
    }
  })();
</script>

