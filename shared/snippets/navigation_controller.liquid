{% comment %}
Navigation Controller - Respects global show_navigation setting
- Optional parameters: force_show, force_hide, nav_section
- The global setting is overridden by force_show/force_hide
{% endcomment %}

{% assign should_show_nav = settings.show_navigation %}
{% assign resolved_nav_section = nav_section %}
{% if resolved_nav_section == blank %}
  {% assign resolved_nav_section = 'nav_main' %}
{% endif %}

{% comment %} Force parameters override the global setting {% endcomment %}
{% if force_hide %}
  {% assign should_show_nav = false %}
{% elsif force_show %}
  {% assign should_show_nav = true %}
{% endif %}

{% if should_show_nav %}
  {% case resolved_nav_section %}
    {% when 'hardcoded_nav_minimal' %}
      {% section 'hardcoded_nav_minimal' %}
    {% when 'hardcoded_nav' %}
      {% section 'hardcoded_nav' %}
    {% when 'simple_nav' %}
      {% section 'simple_nav' %}
    {% when 'nav_hardcoded' %}
      {% include 'nav_hardcoded' %}
    {% when 'nav_alt' %}
      {% section 'nav_alt' %}
    {% when 'nav_header_static' %}
      {% section 'nav_header_static' %}
    {% when 'nav_header' %}
      {% section 'nav_header' %}
    {% when 'nav_static' %}
      {% section 'nav_static' %}
    {% when 'nav_mobile_sticky_bar' %}
      {% section 'nav_mobile_sticky_bar' %}
    {% when 'nav_main' %}
      {% section 'nav_main' %}
    {% else %}
      {% section 'nav_main' %}
  {% endcase %}
{% endif %}
