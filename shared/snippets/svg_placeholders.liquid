{% endcapture %}

{% comment %} Hero Background Placeholder {% endcomment %}
{% capture svg_placeholder_hero %}
<svg viewBox="0 0 1920 600" xmlns="http://www.w3.org/2000/svg" style="width: 100%; height: 100%;">
  <rect width="1920" height="600" fill="#E9E6FF"/>
  <!-- Organic shapes -->
  <circle cx="1800" cy="100" r="200" fill="#5E3BFF" opacity="0.1"/>
  <circle cx="120" cy="500" r="150" fill="#18D5E4" opacity="0.1"/>
  <ellipse cx="960" cy="300" rx="400" ry="200" fill="#FF8BCB" opacity="0.05"/>
  <!-- Pattern dots -->
  <pattern id="dots" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
    <circle cx="20" cy="20" r="2" fill="#5E3BFF" opacity="0.2"/>
  </pattern>
  <rect width="1920" height="600" fill="url(#dots)" opacity="0.3"/>
</svg>
{% endcapture %}