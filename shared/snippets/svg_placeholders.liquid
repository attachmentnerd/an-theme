    <circle cx="-30" cy="0" r="20" fill="#5E3BFF" opacity="0.4"/>
    <circle cx="0" cy="0" r="20" fill="#18D5E4" opacity="0.4"/>
    <circle cx="30" cy="0" r="20" fill="#FF8BCB" opacity="0.4"/>
