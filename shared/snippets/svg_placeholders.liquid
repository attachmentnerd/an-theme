{% comment %}
  On-brand SVG placeholders for Attachment Nerd themes
  Prevents dev placeholders from leaking to production
  Uses brand colors and meaningful imagery
{% endcomment %}

{% comment %} Default Image Placeholder - Heart Connection {% endcomment %}
{% capture svg_placeholder_default %}
<svg viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg" style="width: 100%; height: 100%;">
  <rect width="800" height="600" fill="#E9E6FF"/>
  <g transform="translate(400, 300)">
    <!-- Gradient definition -->
    <defs>
      <linearGradient id="heartGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:#5E3BFF;stop-opacity:0.8" />
        <stop offset="100%" style="stop-color:#18D5E4;stop-opacity:0.8" />
      </linearGradient>
    </defs>
    <!-- Heart shape -->
    <path d="M0,-40 C-20,-60 -60,-60 -60,-30 C-60,-10 -40,10 0,40 C40,10 60,-10 60,-30 C60,-60 20,-60 0,-40z" 
          fill="url(#heartGradient)" opacity="0.3"/>
    <!-- Connection dots -->
    <circle cx="-80" cy="0" r="8" fill="#FF8BCB" opacity="0.5"/>
    <circle cx="80" cy="0" r="8" fill="#FFE86B" opacity="0.5"/>
    <line x1="-72" y1="0" x2="-8" y2="0" stroke="#5E3BFF" stroke-width="2" opacity="0.3" stroke-dasharray="4,4"/>
    <line x1="8" y1="0" x2="72" y2="0" stroke="#5E3BFF" stroke-width="2" opacity="0.3" stroke-dasharray="4,4"/>
  </g>
</svg>
{% endcapture %}

{% comment %} Profile/Avatar Placeholder {% endcomment %}
{% capture svg_placeholder_avatar %}
<svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" style="width: 100%; height: 100%;">
  <rect width="200" height="200" fill="#FAFAFA"/>
  <circle cx="100" cy="100" r="90" fill="#E9E6FF"/>
  <g transform="translate(100, 100)">
    <!-- Parent figure -->
    <circle cx="0" cy="-20" r="25" fill="#5E3BFF" opacity="0.6"/>
    <!-- Child figure -->
    <circle cx="20" cy="10" r="18" fill="#18D5E4" opacity="0.6"/>
    <!-- Connection -->
    <path d="M 5,-5 Q 15,0 20,0" stroke="#FF8BCB" stroke-width="3" fill="none" opacity="0.5"/>
  </g>
</svg>
{% endcapture %}

{% comment %} Book/Resource Placeholder {% endcomment %}
{% capture svg_placeholder_book %}
<svg viewBox="0 0 400 600" xmlns="http://www.w3.org/2000/svg" style="width: 100%; height: 100%;">
  <rect width="400" height="600" fill="#FAFAFA"/>
  <!-- Book shape -->
  <rect x="50" y="50" width="300" height="500" rx="8" fill="#5E3BFF" opacity="0.1"/>
  <rect x="50" y="50" width="300" height="500" rx="8" fill="none" stroke="#5E3BFF" stroke-width="2" opacity="0.3"/>
  <!-- Heart on cover -->
  <g transform="translate(200, 200)">
    <path d="M0,-30 C-15,-45 -45,-45 -45,-22.5 C-45,-7.5 -30,7.5 0,30 C30,7.5 45,-7.5 45,-22.5 C45,-45 15,-45 0,-30z" 
          fill="#FF8BCB" opacity="0.4"/>
  </g>
  <!-- Lines representing text -->
  <line x1="100" y1="350" x2="300" y2="350" stroke="#5E3BFF" stroke-width="2" opacity="0.2"/>
  <line x1="100" y1="380" x2="280" y2="380" stroke="#5E3BFF" stroke-width="2" opacity="0.2"/>
  <line x1="100" y1="410" x2="250" y2="410" stroke="#5E3BFF" stroke-width="2" opacity="0.2"/>
</svg>
{% endcapture %}

{% comment %} Feature/Icon Placeholder {% endcomment %}
{% capture svg_placeholder_feature %}
<svg viewBox="0 0 400 400" xmlns="http://www.w3.org/2000/svg" style="width: 100%; height: 100%;">
  <rect width="400" height="400" fill="#FAFAFA"/>
  <circle cx="200" cy="200" r="150" fill="#E9E6FF" opacity="0.5"/>
  <g transform="translate(200, 200)">
    <!-- Star shape for feature -->
    <path d="M0,-60 L15,-20 L60,-20 L20,10 L35,50 L0,20 L-35,50 L-20,10 L-60,-20 L-15,-20 Z" 
