<div class="pag">
  {% if paginate.previous %}
    <a class="pag__link pag__link--prev" href="{{ paginate.previous.url }}">
      {% render 'icon', icon: 'arrow-left', size: 16 %}
    </a>
  {% else %}
    <p class="pag__link pagination__link--prev pag__link--disabled">
      {% render 'icon', icon: 'arrow-left', size: 16 %}
    </p>
  {% endif %}
  {% unless simple == true %}
    {% for i in (1..paginate.pages) %}
      {% if i == paginate.current_page %}
        <a class="pag__link pag__link--current" href="?page={{ i }}{% if tags.current %}&amp;tag={{ tags.current }}{% endif %}">{{ i }}</a>
      {% else %}
        <a class="pag__link" href="?page={{ i }}{% if tags.current %}&amp;tag={{ tags.current }}{% endif %}">{{ i }}</a>
      {% endif %}
    {% endfor %}
  {% endunless %}
  {% if paginate.next %}
    <a class="pag__link pag__link--next" href="{{ paginate.next.url }}">
      {% render 'icon', icon: 'arrow-right', size: 16 %}
    </a>
  {% else %}
    <p class="pag__link pag__link--next pag__link--disabled">
      {% render 'icon', icon: 'arrow-right', size: 16 %}
    </p>
  {% endif %}
</div>
